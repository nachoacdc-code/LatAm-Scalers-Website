---
export type Props = {
	variant?: 'default' | 'elevated' | 'bordered';
	class?: string;
};

const { variant = 'default', class: className = '' } = Astro.props;

const variants: Record<string, string> = {
	default: 'rounded-2xl border border-border bg-white shadow-sm p-6',
	elevated: 'rounded-2xl border border-border bg-white shadow-sm p-6 shadow-md hover:shadow-lg transition-shadow',
	bordered: 'rounded-2xl border-2 border-border bg-white shadow-sm p-6',
};

const classes = `${variants[variant]} ${className}`.trim();
---

<div class={classes}>
	<slot />
</div>
