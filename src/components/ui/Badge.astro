---
export type Props = {
	variant?: 'default' | 'aec' | 'design' | 'marketing' | 'success' | 'amber';
	class?: string;
};

const { variant = 'default', class: className = '' } = Astro.props;

const variants: Record<string, string> = {
	default: 'bg-slate-800/60 text-slate-200 border-slate-700/60',
	aec: 'bg-aec/10 text-aec border-aec/20',
	design: 'bg-design/10 text-design border-design/20',
	marketing: 'bg-marketing/10 text-marketing border-marketing/20',
	success: 'bg-success/10 text-success border-success/20',
	amber: 'bg-amber/10 text-amber border-amber/20',
};

const classes = `inline-flex items-center rounded-full border px-2.5 py-0.5 text-xs font-medium ${variants[variant]} ${className}`.trim();
---

<span class={classes}>
	<slot />
</span>
