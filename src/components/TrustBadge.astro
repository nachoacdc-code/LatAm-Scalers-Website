---
export type Props = {
	icon: string;
	label: string;
	sublabel?: string;
	color?: string;
	class?: string;
};

const { icon, label, sublabel, color = 'text-sky-300', class: className = '' } = Astro.props;
---

<div class={`flex items-center gap-3 ${className}`.trim()}>
	<div class={`flex h-10 w-10 shrink-0 items-center justify-center rounded-lg bg-slate-900/40 border border-slate-800 ${color}`}>
		<Fragment set:html={icon} />
	</div>
	<div>
		<p class="text-sm font-semibold text-slate-100">{label}</p>
		{sublabel && <p class="text-xs text-slate-400">{sublabel}</p>}
	</div>
</div>
