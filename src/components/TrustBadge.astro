---
export type Props = {
	icon: string;
	label: string;
	sublabel?: string;
	color?: string;
	class?: string;
};

const { icon, label, sublabel, color = 'text-accent', class: className = '' } = Astro.props;
---

<div class={`flex items-center gap-3 ${className}`.trim()}>
	<div class={`flex h-10 w-10 shrink-0 items-center justify-center rounded-lg bg-bg-alt ${color}`}>
		<Fragment set:html={icon} />
	</div>
	<div>
		<p class="text-sm font-semibold text-text-primary">{label}</p>
		{sublabel && <p class="text-xs text-text-secondary">{sublabel}</p>}
	</div>
</div>
