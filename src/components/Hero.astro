---
export type Props = {
	kicker?: string;
	title: string;
	subtitle?: string;
	primaryCta?: { label: string; href: string };
	secondaryCta?: { label: string; href: string };
};

const {
	kicker = 'LatAm Scalers',
	title,
	subtitle,
	primaryCta = { label: 'View services', href: '/#services' },
	secondaryCta = { label: 'Contact', href: '/#contact' },
} = Astro.props;
---

<section class="relative overflow-hidden">
	<div class="mx-auto max-w-6xl px-6 py-16 sm:py-20">
		<div class="grid items-center gap-10 lg:grid-cols-2">
			<div>
				<p class="text-sm font-semibold tracking-wide text-accent">{kicker}</p>
				<h1 class="mt-4 text-4xl font-semibold tracking-tight text-white sm:text-5xl">
					{title}
				</h1>
				{subtitle ? (
					<p class="mt-4 max-w-prose text-base leading-relaxed text-slate-300 sm:text-lg">
						{subtitle}
					</p>
				) : null}

				<div class="mt-8 flex flex-wrap gap-3">
					<a
						class="inline-flex items-center justify-center rounded bg-accent px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-accent focus:outline-none focus-visible:ring-2 focus-visible:ring-accent focus-visible:ring-offset-2 focus-visible:"
						href={primaryCta.href}
					>
						{primaryCta.label}
					</a>
					<a
						class="inline-flex items-center justify-center rounded-xl border border-white/20 bg-white/5 px-4 py-2 text-sm font-semibold text-slate-100 transition hover:bg-bg-alt focus:outline-none focus-visible:ring-2 focus-visible:ring-slate-400 focus-visible:ring-offset-2 focus-visible:"
						href={secondaryCta.href}
					>
						{secondaryCta.label}
					</a>
				</div>
			</div>

			<div class="relative">
				<div class="rounded-2xl border border-white/10 bg-white/5 backdrop-blur-sm p-6 shadow-sm">
					<div class="grid gap-4 sm:grid-cols-2">
						<div class="rounded-xl border border-white/10 bg-white/5 p-4">
							<p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Delivery</p>
							<p class="mt-2 text-sm text-slate-200">Fast, iterative, and measurable.</p>
						</div>
						<div class="rounded-xl border border-white/10 bg-white/5 p-4">
							<p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Quality</p>
							<p class="mt-2 text-sm text-slate-200">Design-led, performance minded.</p>
						</div>
						<div class="rounded-xl border border-white/10 bg-white/5 p-4">
							<p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Partners</p>
							<p class="mt-2 text-sm text-slate-200">We collaborate like an in-house team.</p>
						</div>
						<div class="rounded-xl border border-white/10 bg-white/5 p-4">
							<p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Outcomes</p>
							<p class="mt-2 text-sm text-slate-200">Clear scope, clear milestones.</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

