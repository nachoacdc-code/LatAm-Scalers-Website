---
import ContactForm from './ContactForm.astro';
import CalendlyEmbed from './CalendlyEmbed.astro';

export type Props = {
	title?: string;
	description?: string;
	subject?: string;
	calendlyUrl?: string;
};

const {
	title = 'Contact',
	description = "Tell us what you need and we'll suggest the best engagement model.",
	subject = 'LatAm Scalers â€” new inquiry',
	calendlyUrl = import.meta.env.PUBLIC_CALENDLY_URL ?? 'https://calendly.com/your-org/15min',
} = Astro.props;
---

<section id="contact" class="pb-16 pt-10 sm:pb-20 sm:pt-14" aria-labelledby="contact-title">
	<div class="flex flex-col gap-2">
		<h2 id="contact-title" class="text-2xl font-semibold tracking-tight sm:text-3xl">{title}</h2>
		<p class="max-w-prose text-sm leading-relaxed text-text-secondary sm:text-base">{description}</p>
	</div>

	<div class="mt-8 grid gap-6 lg:grid-cols-2">
		<ContactForm subject={subject} />
		<CalendlyEmbed url={calendlyUrl} />
	</div>
</section>
