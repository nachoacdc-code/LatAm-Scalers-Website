---
import ContactHub from './ContactHub.astro';

export type Props = {
	title?: string;
	description?: string;
	subject?: string;
	calendlyUrl?: string;
	defaultCategory?: 'aec' | 'design' | 'marketing' | '';
	defaultInterest?: string;
};

const {
	title = 'Get in Touch',
	description = 'Send us a message with your requirements, or book a quick scoping call — whatever works best for you.',
	subject = 'LatAm Scalers — new inquiry',
	calendlyUrl = import.meta.env.PUBLIC_CALENDLY_URL ?? 'https://calendly.com/alejandra-latamscalers/30min',
	defaultCategory = '',
	defaultInterest = '',
} = Astro.props;

const category = (defaultCategory || defaultInterest || '') as 'aec' | 'design' | 'marketing' | '';
---

<section id="contact" class="pb-16 pt-10 sm:pb-20 sm:pt-14" aria-labelledby="contact-title">
	<h2 id="contact-title" class="sr-only">{title}</h2>
	<ContactHub
		heading={title}
		subheading={description}
		subject={subject}
		calendlyUrl={calendlyUrl}
		defaultCategory={category}
	/>
</section>
