---
import Layout from '../layouts/Layout.astro';
import MetaHead from '../components/MetaHead.astro';
import ContactForm from '../components/ContactForm.astro';
import CalendlyEmbed from '../components/CalendlyEmbed.astro';
import { BOOKING_URL, isExternalUrl } from '../lib/cta';

const meta = {
	title: 'LatAm Scalers | Dedicated LATAM Talent for US Teams — AEC, Design, Marketing',
	description:
		'Pre-vetted AEC, design, and marketing specialists from Latin America — dedicated to your US team. 50–70% cost savings, matched in under one week, month-to-month flexibility.',
};

const baseUrl = Astro.site ?? 'https://latam-scalers-website.vercel.app';
const canonical = new URL('/', baseUrl).toString();

const orgJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'Organization',
	name: 'LatAm Scalers',
	url: baseUrl,
	description: meta.description,
	sameAs: [],
};

const bookingUrl = BOOKING_URL;
const bookingExternal = isExternalUrl(bookingUrl);
---

<Layout>
	<MetaHead
		slot="head"
		title={meta.title}
		description={meta.description}
		canonical={canonical}
		jsonLd={orgJsonLd}
	/>

	<main>

		<!-- SECTION 1 — HERO (dark bg-primary) -->
		<section class="relative overflow-hidden bg-primary py-16 sm:py-24" aria-labelledby="hero-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="grid items-center gap-12 lg:grid-cols-2">
					<div class="js-fade-in">
						<p class="text-sm font-semibold uppercase tracking-widest text-accent">Dedicated LATAM Specialists</p>
						<h1 id="hero-heading" class="mt-4 text-4xl font-semibold leading-tight tracking-tight text-white sm:text-5xl lg:text-[3.25rem]">
							Scale Your US Team with Dedicated LATAM Specialists — Matched in Under One Week
						</h1>
						<p class="mt-5 max-w-xl text-base leading-relaxed text-white/70 sm:text-lg">
							Pre-vetted AEC, design, and marketing professionals. 50–70% cost savings. Month-to-month flexibility. Free replacement guarantee.
						</p>

						<div class="mt-8 flex flex-wrap gap-3">
							<a
								href={bookingUrl}
								{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
								class="inline-flex min-h-[48px] items-center justify-center rounded bg-accent px-6 py-3 text-sm font-semibold text-white transition hover:bg-accent/90 focus:outline-none focus-visible:ring-2 focus-visible:ring-white"
								data-book-call
							>
								Book a 15-Minute Scoping Call
							</a>
							<a
								href="/#contact"
								class="inline-flex min-h-[48px] items-center justify-center rounded border border-white/20 bg-white/5 px-6 py-3 text-sm font-semibold text-white transition hover:bg-white/10 focus:outline-none focus-visible:ring-2 focus-visible:ring-white"
								data-open-tell-us="home-hero"
							>
								Tell Us What You Need
							</a>
						</div>
					</div>

					<div class="js-fade-in relative">
						<div class="rounded-2xl border border-white/10 bg-white/5 p-6 shadow-xl backdrop-blur-sm">
							<p class="text-xs font-semibold uppercase tracking-wide text-white/50">Why teams choose LatAm Scalers</p>
							<div class="mt-4 grid grid-cols-2 gap-3">
								<div class="rounded-xl border border-white/10 bg-white/5 p-4">
									<p class="text-xs font-semibold uppercase tracking-wide text-accent">Speed</p>
									<p class="mt-2 text-sm font-semibold text-white">Shortlist in 48 hrs</p>
									<p class="mt-1 text-xs text-white/50">Vetted, ready to start</p>
								</div>
								<div class="rounded-xl border border-white/10 bg-white/5 p-4">
									<p class="text-xs font-semibold uppercase tracking-wide text-accent">Alignment</p>
									<p class="mt-2 text-sm font-semibold text-white">US time zones</p>
									<p class="mt-1 text-xs text-white/50">0–3 hr overlap, fluent English</p>
								</div>
								<div class="rounded-xl border border-white/10 bg-white/5 p-4">
									<p class="text-xs font-semibold uppercase tracking-wide text-accent">Flexibility</p>
									<p class="mt-2 text-sm font-semibold text-white">Month-to-month</p>
									<p class="mt-1 text-xs text-white/50">Scale up or down anytime</p>
								</div>
								<div class="rounded-xl border border-white/10 bg-white/5 p-4">
									<p class="text-xs font-semibold uppercase tracking-wide text-accent">Guarantee</p>
									<p class="mt-2 text-sm font-semibold text-white">Free replacement</p>
									<p class="mt-1 text-xs text-white/50">If the fit isn't right</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- SECTION 2 — TRUST BAR (dark strip) -->
		<section class="bg-bg-dark py-6" aria-label="Trust indicators">
			<div class="mx-auto max-w-6xl px-6">
				<div class="flex flex-wrap items-center justify-center gap-6 sm:gap-10 lg:justify-between">

					<div class="js-fade-in flex items-center gap-3">
						<div class="flex h-9 w-9 shrink-0 items-center justify-center rounded-lg border border-accent/30 bg-accent/10">
							<svg class="h-4 w-4 text-accent" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true"><circle cx="12" cy="12" r="10"/><path stroke-linecap="round" d="M12 6v6l4 2"/></svg>
						</div>
						<div>
							<p class="text-sm font-semibold text-white">Matched in 48 hrs</p>
							<p class="text-xs text-white/50">Shortlist delivered fast</p>
						</div>
					</div>

					<div class="js-fade-in flex items-center gap-3">
						<div class="flex h-9 w-9 shrink-0 items-center justify-center rounded-lg border border-accent/30 bg-accent/10">
							<svg class="h-4 w-4 text-accent" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75m-3-7.036A11.959 11.959 0 0 1 3.598 6 11.99 11.99 0 0 0 3 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285Z"/></svg>
						</div>
						<div>
							<p class="text-sm font-semibold text-white">
								<a href="/about/how-we-vet/" class="transition hover:text-accent focus:outline-none focus-visible:underline">5-Stage Vetted</a>
							</p>
							<p class="text-xs text-white/50">Top 1% of applicants</p>
						</div>
					</div>

					<div class="js-fade-in flex items-center gap-3">
						<div class="flex h-9 w-9 shrink-0 items-center justify-center rounded-lg border border-accent/30 bg-accent/10">
							<svg class="h-4 w-4 text-accent" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33"/></svg>
						</div>
						<div>
							<p class="text-sm font-semibold text-white">50–70% cost savings</p>
							<p class="text-xs text-white/50">vs. US equivalent hire</p>
						</div>
					</div>

					<div class="js-fade-in flex items-center gap-3">
						<div class="flex h-9 w-9 shrink-0 items-center justify-center rounded-lg border border-accent/30 bg-accent/10">
							<svg class="h-4 w-4 text-accent" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0 3.181 3.183a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.182m0-4.991v4.99"/></svg>
						</div>
						<div>
							<p class="text-sm font-semibold text-white">Free replacement</p>
							<p class="text-xs text-white/50">If the fit isn't right</p>
						</div>
					</div>

					<div class="js-fade-in hidden items-center gap-3 lg:flex">
						<div class="flex h-9 w-9 shrink-0 items-center justify-center rounded-lg border border-accent/30 bg-accent/10">
							<svg class="h-4 w-4 text-accent" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true"><circle cx="12" cy="12" r="10"/><path stroke-linecap="round" d="M2 12h20M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/></svg>
						</div>
						<div>
							<p class="text-sm font-semibold text-white">US timezone overlap</p>
							<p class="text-xs text-white/50">Real-time collaboration</p>
						</div>
					</div>

				</div>
			</div>
		</section>

		<!-- SECTION 3 — PROBLEM STATEMENT (light) -->
		<section class="bg-bg-light py-16 sm:py-20" aria-labelledby="problem-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<p class="text-sm font-semibold uppercase tracking-widest text-accent">The talent gap is real</p>
					<h2 id="problem-heading" class="mt-3 text-3xl font-semibold tracking-tight text-text-primary sm:text-4xl">
						US Companies Face a Structural Talent Crisis
					</h2>
					<p class="mt-4 text-base leading-relaxed text-text-secondary">
						Hiring pipelines are broken, timelines are slipping, and costs keep climbing. The problem isn't effort — it's supply.
					</p>
				</div>

				<div class="mt-10 grid gap-4 sm:grid-cols-3">
					<div class="js-fade-in rounded-2xl border border-white/10 bg-white/5 p-6">
						<p class="text-xs font-semibold uppercase tracking-wide text-aec">AEC</p>
						<p class="mt-3 text-3xl font-semibold text-white">94%</p>
						<p class="mt-2 text-sm font-semibold text-white">of firms report workforce shortages</p>
						<p class="mt-2 text-sm leading-relaxed text-text-secondary">
							AEC firms are turning down projects they can't staff. Demand is growing; the local talent pipeline isn't keeping up.
						</p>
					</div>
					<div class="js-fade-in rounded-2xl border border-white/10 bg-white/5 p-6">
						<p class="text-xs font-semibold uppercase tracking-wide text-design">Design</p>
						<p class="mt-3 text-3xl font-semibold text-white">45%</p>
						<p class="mt-2 text-sm font-semibold text-white">longer hiring cycles for design roles</p>
						<p class="mt-2 text-sm leading-relaxed text-text-secondary">
							Creative capacity bottlenecks stall launches and campaigns. Finding reliable design talent takes months, not days.
						</p>
					</div>
					<div class="js-fade-in rounded-2xl border border-white/10 bg-white/5 p-6">
						<p class="text-xs font-semibold uppercase tracking-wide text-marketing">Marketing</p>
						<p class="mt-3 text-3xl font-semibold text-white">3.8%</p>
						<p class="mt-2 text-sm font-semibold text-white">unemployment in marketing roles</p>
						<p class="mt-2 text-sm leading-relaxed text-text-secondary">
							Experienced channel operators are rare and expensive. Teams run understaffed while pipelines stall.
						</p>
					</div>
				</div>
			</div>
		</section>

		<!-- SECTION 4 — SOLUTION CARDS (alt bg) -->
		<section class="bg-bg-alt py-16 sm:py-20" aria-labelledby="solutions-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<p class="text-sm font-semibold uppercase tracking-widest text-accent">Choose your solution</p>
					<h2 id="solutions-heading" class="mt-3 text-3xl font-semibold tracking-tight text-text-primary sm:text-4xl">
						Dedicated Specialists in Three Core Verticals
					</h2>
					<p class="mt-4 text-base leading-relaxed text-text-secondary">
						Each engagement is dedicated — not a marketplace listing, not a subscription box. A specialist working exclusively for your team.
					</p>
				</div>

				<div class="mt-10 grid gap-5 lg:grid-cols-3">

					<article class="js-fade-in rounded-2xl border border-aec/20 bg-white/5 p-6 transition-all duration-200 hover:-translate-y-1 hover:border-aec/40 hover:bg-white/10">
						<div class="flex items-center justify-between">
							<p class="text-xs font-semibold uppercase tracking-wide text-aec">AEC Talent</p>
							<span class="rounded-full border border-aec/20 bg-aec/10 px-2.5 py-0.5 text-xs font-semibold text-aec">From ~$3,500/mo</span>
						</div>
						<h3 class="mt-3 text-lg font-semibold text-white">Architecture, Engineering & Construction</h3>
						<p class="mt-3 text-sm leading-relaxed text-text-secondary">
							Revit modelers, BIM coordinators, CAD drafters, and MEP specialists who integrate into your firm's workflow and standards.
						</p>
						<ul class="mt-4 grid gap-2 text-sm text-text-secondary">
							<li class="flex items-center gap-2"><span class="text-aec" aria-hidden="true">→</span> BIM coordination &amp; Revit modeling</li>
							<li class="flex items-center gap-2"><span class="text-aec" aria-hidden="true">→</span> CAD drafting &amp; construction documents</li>
							<li class="flex items-center gap-2"><span class="text-aec" aria-hidden="true">→</span> MEP engineering support</li>
						</ul>
						<a href="/solutions/aec-talent/" class="mt-5 inline-flex items-center gap-1.5 text-sm font-semibold text-aec transition hover:text-aec/80 focus:outline-none focus-visible:underline">
							Explore AEC talent <span aria-hidden="true">&rarr;</span>
						</a>
					</article>

					<article class="js-fade-in rounded-2xl border border-design/20 bg-white/5 p-6 transition-all duration-200 hover:-translate-y-1 hover:border-design/40 hover:bg-white/10">
						<div class="flex items-center justify-between">
							<p class="text-xs font-semibold uppercase tracking-wide text-design">Creative & Design</p>
							<span class="rounded-full border border-design/20 bg-design/10 px-2.5 py-0.5 text-xs font-semibold text-design">From ~$2,800/mo</span>
						</div>
						<h3 class="mt-3 text-lg font-semibold text-white">Dedicated Designers & Managed Creative Teams</h3>
						<p class="mt-3 text-sm leading-relaxed text-text-secondary">
							Brand, product, and performance designers. Or a PM-led managed creative team for predictable output without agency markup.
						</p>
						<ul class="mt-4 grid gap-2 text-sm text-text-secondary">
							<li class="flex items-center gap-2"><span class="text-design" aria-hidden="true">→</span> UI/UX, brand &amp; visual design</li>
							<li class="flex items-center gap-2"><span class="text-design" aria-hidden="true">→</span> Motion, web &amp; performance creative</li>
							<li class="flex items-center gap-2"><span class="text-design" aria-hidden="true">→</span> Managed creative teams with PM</li>
						</ul>
						<a href="/solutions/creatives-design/" class="mt-5 inline-flex items-center gap-1.5 text-sm font-semibold text-design transition hover:text-design/80 focus:outline-none focus-visible:underline">
							Explore design talent <span aria-hidden="true">&rarr;</span>
						</a>
					</article>

					<article class="js-fade-in rounded-2xl border border-marketing/20 bg-white/5 p-6 transition-all duration-200 hover:-translate-y-1 hover:border-marketing/40 hover:bg-white/10">
						<div class="flex items-center justify-between">
							<p class="text-xs font-semibold uppercase tracking-wide text-marketing">Marketing Talent</p>
							<span class="rounded-full border border-marketing/20 bg-marketing/10 px-2.5 py-0.5 text-xs font-semibold text-marketing">From ~$2,500/mo</span>
						</div>
						<h3 class="mt-3 text-lg font-semibold text-white">SEO, Paid Media, Lifecycle & Marketing Ops</h3>
						<p class="mt-3 text-sm leading-relaxed text-text-secondary">
							Channel owners who embed into your stack — HubSpot-certified operators, SEO specialists, PPC managers, lifecycle strategists.
						</p>
						<ul class="mt-4 grid gap-2 text-sm text-text-secondary">
							<li class="flex items-center gap-2"><span class="text-marketing" aria-hidden="true">→</span> SEO, content &amp; paid media</li>
							<li class="flex items-center gap-2"><span class="text-marketing" aria-hidden="true">→</span> Lifecycle &amp; email marketing</li>
							<li class="flex items-center gap-2"><span class="text-marketing" aria-hidden="true">→</span> MarOps, RevOps &amp; HubSpot</li>
						</ul>
						<a href="/solutions/marketing-talent/" class="mt-5 inline-flex items-center gap-1.5 text-sm font-semibold text-marketing transition hover:text-marketing/80 focus:outline-none focus-visible:underline">
							Explore marketing talent <span aria-hidden="true">&rarr;</span>
						</a>
					</article>

				</div>
			</div>
		</section>

		<!-- SECTION 5 — HOW IT WORKS (light) -->
		<section class="bg-bg-light py-16 sm:py-20" aria-labelledby="how-it-works-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<p class="text-sm font-semibold uppercase tracking-widest text-accent">Simple process</p>
					<h2 id="how-it-works-heading" class="mt-3 text-3xl font-semibold tracking-tight text-text-primary sm:text-4xl">
						How It Works
					</h2>
					<p class="mt-4 text-base leading-relaxed text-text-secondary">
						Designed for speed, quality, and low risk — from scoping call to productive specialist in days, not months.
					</p>
				</div>

				<ol class="mt-10 grid gap-4 lg:grid-cols-5">
					{[
						{ n: '01', title: 'Tell us your needs', body: 'Roles, tools, timeline, and what "good" looks like — so we match accurately.' },
						{ n: '02', title: 'Get a shortlist in 48 hrs', body: 'We deliver vetted specialists aligned to your workflow and standards.' },
						{ n: '03', title: 'Interview (optional)', body: 'Meet top matches — or skip it and start faster. Your call.' },
						{ n: '04', title: 'Start month-to-month', body: 'Fast onboarding. No long-term contracts. Month-to-month flexibility.' },
						{ n: '05', title: 'Scale or replace freely', body: 'Add capacity for peak loads — and get a free replacement guarantee.' },
					].map((step) => (
						<li class="js-fade-in rounded-2xl border border-white/10 bg-white/5 p-6">
							<div class="flex items-center gap-3">
								<div class="flex h-10 w-10 shrink-0 items-center justify-center rounded-xl border border-white/10 bg-white/5">
									<span class="text-sm font-bold text-accent">{step.n}</span>
								</div>
								<p class="text-sm font-semibold text-white">{step.title}</p>
							</div>
							<p class="mt-3 text-sm leading-relaxed text-text-secondary">{step.body}</p>
						</li>
					))}
				</ol>

				<div class="mt-8 text-center">
					<a href="/how-it-works/" class="inline-flex items-center gap-1.5 text-sm font-semibold text-accent transition hover:text-accent/80 focus:outline-none focus-visible:underline">
						See the full process with branching paths <span aria-hidden="true">&rarr;</span>
					</a>
				</div>
			</div>
		</section>

		<!-- SECTION 6 — WHY LATAM (dark, with animated counters) -->
		<section class="bg-primary py-16 sm:py-20" aria-labelledby="why-latam-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<p class="text-sm font-semibold uppercase tracking-widest text-accent">The LATAM advantage</p>
					<h2 id="why-latam-heading" class="mt-3 text-3xl font-semibold tracking-tight text-white sm:text-4xl">
						Why LATAM Specialists Work for US Teams
					</h2>
				</div>

				<div class="mt-10 grid gap-5 sm:grid-cols-3">
					<div class="js-fade-in rounded-2xl border border-white/10 bg-white/5 p-8 text-center backdrop-blur-sm">
						<p class="js-counter text-5xl font-bold text-white" data-target="70" data-suffix="%" data-final="50–70%">50–70%</p>
						<p class="mt-2 text-sm font-semibold text-accent">Cost Savings</p>
						<p class="mt-3 text-sm leading-relaxed text-white/60">
							50–70% lower than a comparable US hire — without sacrificing quality or commitment.
						</p>
					</div>
					<div class="js-fade-in rounded-2xl border border-white/10 bg-white/5 p-8 text-center backdrop-blur-sm">
						<p class="js-counter text-5xl font-bold text-white" data-target="3" data-prefix="0–" data-suffix=" hrs" data-final="0–3 hrs">0–3 hrs</p>
						<p class="mt-2 text-sm font-semibold text-accent">Timezone Overlap</p>
						<p class="mt-3 text-sm leading-relaxed text-white/60">
							LATAM time zones align with the US — real-time collaboration, same-day feedback loops.
						</p>
					</div>
					<div class="js-fade-in rounded-2xl border border-white/10 bg-white/5 p-8 text-center backdrop-blur-sm">
						<p class="js-counter text-5xl font-bold text-white" data-target="7" data-prefix="&lt;" data-suffix=" days" data-final="&lt;7 days">&lt;7 days</p>
						<p class="mt-2 text-sm font-semibold text-accent">Time to Match</p>
						<p class="mt-3 text-sm leading-relaxed text-white/60">
							Shortlist in 48 hours. Onboard in under a week. Start shipping work within days.
						</p>
					</div>
				</div>
			</div>
		</section>

		<!-- SECTION 7 — FLEXIBLE OPTIONS (alt bg) -->
		<section class="bg-bg-alt py-16 sm:py-20" aria-labelledby="options-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in flex flex-col gap-4 sm:flex-row sm:items-end sm:justify-between">
					<div>
						<p class="text-sm font-semibold uppercase tracking-widest text-accent">Engagement models</p>
						<h2 id="options-heading" class="mt-3 text-3xl font-semibold tracking-tight text-text-primary sm:text-4xl">
							Flexible Options for Every Stage
						</h2>
					</div>
					<a href="/how-pricing-works/" class="shrink-0 text-sm font-semibold text-accent transition hover:text-accent/80 focus:outline-none focus-visible:underline">
						How pricing works &rarr;
					</a>
				</div>

				<div class="mt-10 grid gap-5 lg:grid-cols-3">
