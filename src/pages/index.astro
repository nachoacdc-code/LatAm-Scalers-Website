---
import Layout from '../layouts/Layout.astro';
import MetaHead from '../components/MetaHead.astro';
import Section from '../components/Section.astro';
import ContactForm from '../components/ContactForm.astro';
import CalendlyEmbed from '../components/CalendlyEmbed.astro';
import Footer from '../components/Footer.astro';
import { BOOKING_URL, isExternalUrl } from '../lib/cta';

const meta = {
	title: 'Scale Your US Team with Top Vetted Remote Talent from Latin America | LatAm Scalers',
	description:
		'Scale your US team with vetted remote talent across AEC, marketing, and creative & design. Full-time, part-time, hourly packages, or custom teams — presented in 48 hours.',
};

const baseUrl = Astro.site ?? 'https://latam-scalers-website.vercel.app';
const canonical = new URL('/', baseUrl).toString();

const orgJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'Organization',
	name: 'LatAm Scalers',
	url: baseUrl,
	sameAs: [],
};

const bookingUrl = BOOKING_URL;
const bookingExternal = isExternalUrl(bookingUrl);
---

<Layout>
	<MetaHead
		slot="head"
		title={meta.title}
		description={meta.description}
		canonical={canonical}
		jsonLd={orgJsonLd}
	/>

	<main>
		{/* ─── HERO ─── */}
		<section class="relative overflow-hidden bg-primary">
			<div class="mx-auto max-w-6xl px-6 py-20 sm:py-28">
				<div class="grid items-center gap-12 lg:grid-cols-2">
					<div>
						<p class="inline-flex items-center rounded-full border border-white/20 bg-white/10 px-3 py-1 text-xs font-medium tracking-wide text-white/90">
							Dedicated LATAM talent for US teams
						</p>
						<h1 class="mt-6 text-4xl font-bold tracking-tight text-white sm:text-5xl lg:text-[3.25rem] lg:leading-[1.15]">
							Scale Your US Team with Top Vetted Remote Talent
						</h1>
						<p class="mt-5 max-w-lg text-base leading-relaxed text-slate-300 sm:text-lg">
							Specialists in AEC, marketing, and creative &amp; design. Presented in 48&nbsp;hours, optional interviews, month-to-month flexibility.
						</p>

						<div class="mt-8 flex flex-wrap gap-3">
							<a
								class="inline-flex items-center justify-center rounded-lg bg-accent px-5 py-3 text-sm font-semibold text-white shadow-lg shadow-accent/25 transition hover:bg-accent/90 focus:outline-none focus-visible:ring-2 focus-visible:ring-white"
								href={bookingUrl}
								{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
								data-book-call
							>
								Get Started
							</a>
							<a
								class="inline-flex items-center justify-center rounded-lg border border-white/20 bg-white/5 px-5 py-3 text-sm font-semibold text-white transition hover:bg-white/10 focus:outline-none focus-visible:ring-2 focus-visible:ring-white"
								href="/#contact"
								data-open-tell-us="home-hero"
							>
								Tell Us Your Needs
							</a>
						</div>

						<p class="mt-5 text-sm text-slate-400">
							50%+ cost savings · Timezone-aligned · Free replacement guarantee
						</p>
					</div>

					<div class="relative hidden lg:block">
						<div class="grid gap-3 sm:grid-cols-2">
							<div class="rounded-xl border border-white/10 bg-white/5 p-5 backdrop-blur-sm">
								<div class="flex h-10 w-10 items-center justify-center rounded-lg bg-accent/20">
									<svg class="h-5 w-5 text-accent" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/></svg>
								</div>
								<p class="mt-3 text-sm font-semibold text-white">48-Hour Shortlist</p>
								<p class="mt-1 text-xs text-slate-400">Vetted candidates, fast.</p>
							</div>
							<div class="rounded-xl border border-white/10 bg-white/5 p-5 backdrop-blur-sm">
								<div class="flex h-10 w-10 items-center justify-center rounded-lg bg-success/20">
									<svg class="h-5 w-5 text-success" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 0 0 8.716-6.747M12 21a9.004 9.004 0 0 1-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 0 1 7.843 4.582M12 3a8.997 8.997 0 0 0-7.843 4.582m15.686 0A11.953 11.953 0 0 1 12 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0 1 21 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0 1 12 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 0 1 3 12c0-1.605.42-3.113 1.157-4.418"/></svg>
								</div>
								<p class="mt-3 text-sm font-semibold text-white">US Timezone Aligned</p>
								<p class="mt-1 text-xs text-slate-400">Same hours, real overlap.</p>
							</div>
							<div class="rounded-xl border border-white/10 bg-white/5 p-5 backdrop-blur-sm">
								<div class="flex h-10 w-10 items-center justify-center rounded-lg bg-amber/20">
									<svg class="h-5 w-5 text-amber" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M3 7.5 7.5 3m0 0L12 7.5M7.5 3v13.5m13.5-6L16.5 16.5m0 0L12 10.5m4.5 6V3"/></svg>
								</div>
								<p class="mt-3 text-sm font-semibold text-white">Month-to-Month</p>
								<p class="mt-1 text-xs text-slate-400">Scale up or down anytime.</p>
							</div>
							<div class="rounded-xl border border-white/10 bg-white/5 p-5 backdrop-blur-sm">
								<div class="flex h-10 w-10 items-center justify-center rounded-lg bg-accent/20">
									<svg class="h-5 w-5 text-accent" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75m-3-7.036A11.959 11.959 0 0 1 3.598 6 11.99 11.99 0 0 0 3 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285Z"/></svg>
								</div>
								<p class="mt-3 text-sm font-semibold text-white">Replacement Guarantee</p>
								<p class="mt-1 text-xs text-slate-400">Free if not the right fit.</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		{/* ─── SOLUTIONS ─── */}
		<Section variant="light">
			<div class="flex flex-col gap-2">
				<h2 class="text-2xl font-bold tracking-tight text-text-primary sm:text-3xl">Choose your solution</h2>
				<p class="max-w-prose text-base leading-relaxed text-text-secondary">
					Pick a lane — we'll match specialists who plug into your workflow quickly.
				</p>
			</div>

			<div class="mt-10 grid gap-6 lg:grid-cols-3">
				<a href="/solutions/aec-talent/" class="group block rounded-2xl border border-border border-l-4 border-l-aec bg-white p-6 shadow-sm transition hover:shadow-md hover:-translate-y-0.5">
					<span class="inline-flex items-center rounded-full bg-aec/10 px-2.5 py-0.5 text-xs font-medium text-aec">AEC</span>
					<h3 class="mt-3 text-lg font-semibold text-text-primary group-hover:text-aec transition-colors">AEC Talent</h3>
					<p class="mt-2 text-sm leading-relaxed text-text-secondary">
						Revit modelers, BIM coordination, drafting support, and production-ready specialists aligned to US firm standards.
					</p>
					<ul class="mt-4 space-y-2">
						<li class="flex items-center gap-2 text-sm text-text-secondary">
							<span class="h-1.5 w-1.5 rounded-full bg-aec shrink-0"></span> Concept + schematic support
						</li>
						<li class="flex items-center gap-2 text-sm text-text-secondary">
							<span class="h-1.5 w-1.5 rounded-full bg-aec shrink-0"></span> Construction documents
						</li>
						<li class="flex items-center gap-2 text-sm text-text-secondary">
							<span class="h-1.5 w-1.5 rounded-full bg-aec shrink-0"></span> Revit/BIM workflows
						</li>
					</ul>
					<span class="mt-4 inline-flex items-center text-sm font-medium text-aec">
						Explore AEC <span class="ml-1 transition-transform group-hover:translate-x-0.5" aria-hidden="true">&rarr;</span>
					</span>
				</a>

				<a href="/solutions/creatives-design/" class="group block rounded-2xl border border-border border-l-4 border-l-design bg-white p-6 shadow-sm transition hover:shadow-md hover:-translate-y-0.5">
					<span class="inline-flex items-center rounded-full bg-design/10 px-2.5 py-0.5 text-xs font-medium text-design">Design</span>
					<h3 class="mt-3 text-lg font-semibold text-text-primary group-hover:text-design transition-colors">Creative &amp; Design Talent</h3>
					<p class="mt-2 text-sm leading-relaxed text-text-secondary">
						Brand, marketing, and product design capacity — dedicated designers or PM-led delivery for predictable output.
					</p>
					<ul class="mt-4 space-y-2">
						<li class="flex items-center gap-2 text-sm text-text-secondary">
							<span class="h-1.5 w-1.5 rounded-full bg-design shrink-0"></span> Brand + marketing design
						</li>
						<li class="flex items-center gap-2 text-sm text-text-secondary">
							<span class="h-1.5 w-1.5 rounded-full bg-design shrink-0"></span> Decks + presentations
						</li>
						<li class="flex items-center gap-2 text-sm text-text-secondary">
							<span class="h-1.5 w-1.5 rounded-full bg-design shrink-0"></span> Web + UI support
						</li>
					</ul>
					<span class="mt-4 inline-flex items-center text-sm font-medium text-design">
						Explore design <span class="ml-1 transition-transform group-hover:translate-x-0.5" aria-hidden="true">&rarr;</span>
					</span>
				</a>

				<a href="/solutions/marketing-talent/" class="group block rounded-2xl border border-border border-l-4 border-l-marketing bg-white p-6 shadow-sm transition hover:shadow-md hover:-translate-y-0.5">
					<span class="inline-flex items-center rounded-full bg-marketing/10 px-2.5 py-0.5 text-xs font-medium text-marketing">Marketing</span>
					<h3 class="mt-3 text-lg font-semibold text-text-primary group-hover:text-marketing transition-colors">Marketing Talent</h3>
					<p class="mt-2 text-sm leading-relaxed text-text-secondary">
						SEO, paid media, lifecycle, content, and analytics specialists who can own channels and ship improvements fast.
					</p>
					<ul class="mt-4 space-y-2">
						<li class="flex items-center gap-2 text-sm text-text-secondary">
							<span class="h-1.5 w-1.5 rounded-full bg-marketing shrink-0"></span> SEO + content systems
						</li>
						<li class="flex items-center gap-2 text-sm text-text-secondary">
							<span class="h-1.5 w-1.5 rounded-full bg-marketing shrink-0"></span> PPC + paid social
						</li>
						<li class="flex items-center gap-2 text-sm text-text-secondary">
							<span class="h-1.5 w-1.5 rounded-full bg-marketing shrink-0"></span> GA4 + performance reporting
						</li>
					</ul>
					<span class="mt-4 inline-flex items-center text-sm font-medium text-marketing">
						Explore marketing <span class="ml-1 transition-transform group-hover:translate-x-0.5" aria-hidden="true">&rarr;</span>
					</span>
				</a>
			</div>
		</Section>

		{/* ─── HOW IT WORKS ─── */}
		<Section variant="alt" id="how-it-works">
			<div class="flex flex-col gap-2">
				<h2 class="text-2xl font-bold tracking-tight text-text-primary sm:text-3xl">How it works</h2>
				<p class="max-w-prose text-base leading-relaxed text-text-secondary">
					A simple process designed for speed, quality, and low risk.
				</p>
			</div>

			<ol class="mt-10 grid gap-5 sm:grid-cols-2 lg:grid-cols-5">
				{[
					{ num: '1', title: 'Tell us your needs', body: 'Roles, tools, availability, and outcomes — so we match accurately.' },
					{ num: '2', title: 'Get candidates in 48h', body: 'We deliver a short list of vetted specialists aligned to your workflow.' },
					{ num: '3', title: 'Interview (optional)', body: 'Meet top matches, or skip interviews if you want to start faster.' },
					{ num: '4', title: 'Start month-to-month', body: 'Onboard quickly and keep engagements flexible as priorities change.' },
					{ num: '5', title: 'Scale as needed', body: 'Add capacity for peak loads — and get a free replacement guarantee.' },
				].map((step) => (
					<li class="relative rounded-2xl border border-border bg-white p-6 shadow-sm">
						<div class="flex h-10 w-10 items-center justify-center rounded-lg bg-accent/10 text-sm font-bold text-accent">
							{step.num}
						</div>
						<h3 class="mt-4 text-sm font-semibold text-text-primary">{step.title}</h3>
						<p class="mt-2 text-sm leading-relaxed text-text-secondary">{step.body}</p>
					</li>
				))}
			</ol>
		</Section>

		{/* ─── FLEXIBLE OPTIONS ─── */}
		<Section variant="light">
			<div class="flex flex-col gap-2">
				<h2 class="text-2xl font-bold tracking-tight text-text-primary sm:text-3xl">Flexible engagement options</h2>
				<p class="max-w-prose text-base leading-relaxed text-text-secondary">
					Designed to fit your budget, timelines, and workflow.
				</p>
			</div>

			<div class="mt-10 grid gap-6 lg:grid-cols-3">
				<div class="rounded-2xl border border-border bg-white p-6 shadow-sm">
					<div class="flex h-10 w-10 items-center justify-center rounded-lg bg-accent/10">
						<svg class="h-5 w-5 text-accent" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z"/></svg>
					</div>
					<h3 class="mt-4 text-base font-semibold text-text-primary">Individual Specialists</h3>
					<p class="mt-2 text-sm leading-relaxed text-text-secondary">
						Dedicated full-time or part-time specialists embedded into your team and tools.
					</p>
				</div>
				<div class="rounded-2xl border border-border bg-white p-6 shadow-sm">
					<div class="flex h-10 w-10 items-center justify-center rounded-lg bg-amber/10">
						<svg class="h-5 w-5 text-amber" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/></svg>
					</div>
					<h3 class="mt-4 text-base font-semibold text-text-primary">Hourly Packages</h3>
					<p class="mt-2 text-sm leading-relaxed text-text-secondary">
						Blocks of hours for fast execution, overflow support, audits, or urgent deliverables.
					</p>
				</div>
				<div class="rounded-2xl border border-border bg-white p-6 shadow-sm">
					<div class="flex h-10 w-10 items-center justify-center rounded-lg bg-success/10">
						<svg class="h-5 w-5 text-success" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M18 18.72a9.094 9.094 0 0 0 3.741-.479 3 3 0 0 0-4.682-2.72m.94 3.198.001.031c0 .225-.012.447-.037.666A11.944 11.944 0 0 1 12 21c-2.17 0-4.207-.576-5.963-1.584A6.062 6.062 0 0 1 6 18.719m12 0a5.971 5.971 0 0 0-.941-3.197m0 0A5.995 5.995 0 0 0 12 12.75a5.995 5.995 0 0 0-5.058 2.772m0 0a3 3 0 0 0-4.681 2.72 8.986 8.986 0 0 0 3.74.477m.94-3.197a5.971 5.971 0 0 0-.94 3.197M15 6.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm6 3a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Zm-13.5 0a2.25 2.25 0 1 1-4.5 0 2.25 2.25 0 0 1 4.5 0Z"/></svg>
					</div>
					<h3 class="mt-4 text-base font-semibold text-text-primary">Team Scaling</h3>
					<p class="mt-2 text-sm leading-relaxed text-text-secondary">
						Build a pod with complementary roles and optional PM to increase throughput end-to-end.
					</p>
				</div>
			</div>
		</Section>

		{/* ─── PROOF / TESTIMONIALS ─── */}
		<Section variant="alt">
			<div class="flex flex-col gap-2">
				<h2 class="text-2xl font-bold tracking-tight text-text-primary sm:text-3xl">What clients are saying</h2>
				<p class="max-w-prose text-base leading-relaxed text-text-secondary">
					Real feedback from teams working with LatAm Scalers specialists.
				</p>
			</div>

			<div class="mt-10 grid gap-6 md:grid-cols-3">
				{[
					{ quote: 'Placeholder testimonial — real quote coming soon.', name: 'Client Name', role: 'VP of Engineering', company: 'AEC Firm' },
					{ quote: 'Placeholder testimonial — real quote coming soon.', name: 'Client Name', role: 'Creative Director', company: 'Design Agency' },
					{ quote: 'Placeholder testimonial — real quote coming soon.', name: 'Client Name', role: 'Head of Marketing', company: 'SaaS Company' },
				].map((t) => (
					<figure class="rounded-2xl border border-border bg-white p-6 shadow-sm">
						<blockquote class="text-sm leading-relaxed text-text-secondary italic">"{t.quote}"</blockquote>
						<figcaption class="mt-4 flex items-center gap-3">
							<div class="h-10 w-10 rounded-full bg-bg-alt"></div>
							<div>
								<p class="text-sm font-semibold text-text-primary">{t.name}</p>
								<p class="text-xs text-text-secondary">{t.role}, {t.company}</p>
							</div>
						</figcaption>
					</figure>
				))}
			</div>
		</Section>

		{/* ─── POPULAR ROLES ─── */}
		<Section variant="light">
			<div class="flex flex-col gap-2">
				<h2 class="text-2xl font-bold tracking-tight text-text-primary sm:text-3xl">Popular roles</h2>
				<p class="max-w-prose text-base leading-relaxed text-text-secondary">
					Browse role templates and common placements across our three verticals.
				</p>
			</div>

			<div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
				<a href="/roles/architectural-designer/" class="group rounded-2xl border border-border bg-white p-5 shadow-sm transition hover:shadow-md hover:-translate-y-0.5">
					<span class="inline-flex items-center rounded-full bg-aec/10 px-2 py-0.5 text-xs font-medium text-aec">AEC</span>
					<p class="mt-3 text-sm font-semibold text-text-primary group-hover:text-aec transition-colors">Architectural Designer</p>
				</a>
				<a href="/roles/seo-specialist/" class="group rounded-2xl border border-border bg-white p-5 shadow-sm transition hover:shadow-md hover:-translate-y-0.5">
					<span class="inline-flex items-center rounded-full bg-marketing/10 px-2 py-0.5 text-xs font-medium text-marketing">Marketing</span>
					<p class="mt-3 text-sm font-semibold text-text-primary group-hover:text-marketing transition-colors">SEO Specialist</p>
				</a>
				<a href="/roles/brand-visual-designer/" class="group rounded-2xl border border-border bg-white p-5 shadow-sm transition hover:shadow-md hover:-translate-y-0.5">
					<span class="inline-flex items-center rounded-full bg-design/10 px-2 py-0.5 text-xs font-medium text-design">Design</span>
					<p class="mt-3 text-sm font-semibold text-text-primary group-hover:text-design transition-colors">Brand / Visual Designer</p>
				</a>
				<a href="/roles/" class="group flex items-center justify-center rounded-2xl border-2 border-dashed border-border bg-white p-5 transition hover:border-accent hover:bg-bg-alt">
					<span class="text-sm font-semibold text-text-secondary group-hover:text-accent transition-colors">View all roles &rarr;</span>
				</a>
			</div>
		</Section>

		{/* ─── FINAL CTA ─── */}
		<section class="bg-primary">
			<div class="mx-auto max-w-6xl px-6 py-16 sm:py-20">
				<div class="flex flex-col items-start justify-between gap-8 md:flex-row md:items-center">
					<div>
						<h2 class="text-2xl font-bold tracking-tight text-white sm:text-3xl">Ready to add reliable capacity?</h2>
						<p class="mt-3 max-w-lg text-base leading-relaxed text-slate-300">
							Tell us what you need — we'll present vetted options within 48&nbsp;hours.
						</p>
					</div>
					<div class="flex flex-wrap gap-3">
						<a
							href={bookingUrl}
							{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
							class="inline-flex items-center justify-center rounded-lg bg-accent px-6 py-3 text-sm font-semibold text-white shadow-lg shadow-accent/25 transition hover:bg-accent/90 focus:outline-none focus-visible:ring-2 focus-visible:ring-white"
							data-book-call
						>
							Get Started
						</a>
						<a
							href="/#contact"
							class="inline-flex items-center justify-center rounded-lg border border-white/20 bg-white/5 px-6 py-3 text-sm font-semibold text-white transition hover:bg-white/10 focus:outline-none focus-visible:ring-2 focus-visible:ring-white"
							data-open-tell-us="home-final-cta"
						>
							Tell Us Your Needs
						</a>
					</div>
				</div>
			</div>
		</section>

		{/* ─── CONTACT ─── */}
		<Section variant="alt" id="contact">
			<div class="flex flex-col gap-2">
				<h2 class="text-2xl font-bold tracking-tight text-text-primary sm:text-3xl">Contact</h2>
				<p class="max-w-prose text-base leading-relaxed text-text-secondary">
					Tell us what you need and we'll suggest the best engagement model.
				</p>
			</div>

			<div class="mt-10 grid gap-6 lg:grid-cols-2">
				<ContactForm subject="LatAm Scalers — new inquiry (homepage)" />
				<CalendlyEmbed url={import.meta.env.PUBLIC_CALENDLY_URL ?? 'https://calendly.com/your-org/15min'} />
			</div>
		</Section>
	</main>

	<Footer />
</Layout>
