---
import Layout from '../layouts/Layout.astro';
import MetaHead from '../components/MetaHead.astro';
import ContactHub from '../components/ContactHub.astro';
import { BOOKING_URL, isExternalUrl } from '../lib/cta';

const meta = {
	title: 'LatAm Scalers | Dedicated LATAM Talent for US Teams – AEC, Design, Marketing',
	description:
		'LatAm Scalers is the dedicated talent partner for US companies hiring pre-vetted LATAM specialists in AEC, design, and marketing. Matched in under one week. 50–70% cost savings vs. US hires. Month-to-month. Free replacement guarantee.',
};

const baseUrl = Astro.site ?? 'https://latamscalers.com';
const canonical = new URL('/', baseUrl).toString();

const orgJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'Organization',
	name: 'LatAm Scalers',
	url: baseUrl.toString(),
	description: 'LatAm Scalers is a dedicated talent partner that helps US companies scale AEC, design, and marketing teams with rigorously pre-vetted LATAM professionals — matched in under one week, month-to-month.',
	contactPoint: {
		'@type': 'ContactPoint',
		contactType: 'sales',
		availableLanguage: ['English', 'Spanish'],
	},
};

const websiteJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'WebSite',
	name: 'LatAm Scalers',
	url: baseUrl.toString(),
};

const bookingUrl = BOOKING_URL;
const bookingExternal = isExternalUrl(bookingUrl);

const trustBadges = [
	{ icon: 'clock', label: 'Matched in < 1 Week', sub: 'Shortlist in 48 hours' },
	{ icon: 'shield', label: '5-Stage Vetted', sub: 'Less than 3% pass', link: '/about/how-we-vet/' },
	{ icon: 'savings', label: '50–70% Cost Savings', sub: 'vs. US-based hires' },
	{ icon: 'guarantee', label: 'Free Replacement', sub: 'Guaranteed satisfaction' },
];

const problems = [
	{ stat: '94%', label: 'of AEC firms have unfilled positions. 51% are turning down profitable work.', category: 'AEC', color: 'text-aec' },
	{ stat: '45%', label: 'longer hiring cycles for design roles. Subscription queues can\'t deliver brand consistency.', category: 'Design', color: 'text-design' },
	{ stat: '3.8%', label: 'unemployment in marketing. Your HubSpot, Klaviyo, and GA4 need full-time operators.', category: 'Marketing', color: 'text-marketing' },
];

const steps = [
	{ title: 'Tell us what you need', body: 'Roles, tools, availability, and outcomes – so we match accurately.' },
	{ title: 'Get vetted candidates in 48 hours', body: 'A short list of pre-vetted specialists aligned to your workflow and tools.' },
	{ title: 'Interview (optional)', body: 'Meet top matches live, or skip interviews to start faster.' },
	{ title: 'Start month-to-month', body: 'Onboard quickly with flexible engagements – scale up or down anytime.' },
	{ title: 'Scale + replace free', body: 'Add capacity for peak loads with a free replacement guarantee.' },
];

const roles = [
	{ title: 'BIM Coordinator', cat: 'AEC', href: '/roles/bim-coordinator/', badge: 'bg-aec/10 text-aec' },
	{ title: 'Revit Drafter', cat: 'AEC', href: '/roles/revit-drafter/', badge: 'bg-aec/10 text-aec' },
	{ title: 'UI/UX Designer', cat: 'Design', href: '/roles/ui-ux-designer/', badge: 'bg-design/10 text-design' },
	{ title: 'Brand Designer', cat: 'Design', href: '/roles/brand-visual-designer/', badge: 'bg-design/10 text-design' },
	{ title: 'SEO Specialist', cat: 'Marketing', href: '/roles/seo-specialist/', badge: 'bg-marketing/10 text-marketing' },
	{ title: 'PPC Manager', cat: 'Marketing', href: '/roles/ppc-manager/', badge: 'bg-marketing/10 text-marketing' },
];
---

<Layout>
	<MetaHead
		slot="head"
		title={meta.title}
		description={meta.description}
		canonical={canonical}
		jsonLd={[orgJsonLd, websiteJsonLd]}
	/>

	<main>
		{/* --- SECTION 1 – HERO --- */}
		<section class="relative overflow-hidden">
			<div class="mx-auto max-w-6xl px-6 py-16 sm:py-24">
				<div class="grid items-center gap-12 lg:grid-cols-2">
					<div class="fade-in">
						<h1 class="text-4xl font-bold tracking-tight text-white sm:text-5xl lg:text-[3.25rem] lg:leading-[1.15]">
							Scale Your US Team with Dedicated LATAM Specialists – Matched in Under One Week
						</h1>
						<p class="mt-5 max-w-xl text-base leading-relaxed text-slate-300 sm:text-lg">
							Pre-vetted AEC, Design, and Marketing professionals. 50–70% cost savings. Month-to-month flexibility. Free replacement guarantee.
						</p>

						<div class="mt-8 flex flex-wrap gap-3">
							<a
								class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-6 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950"
								href={bookingUrl}
								{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
								data-book-call
							>
								Book a 30-Minute Scoping Call
							</a>
							<a
								class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-800 bg-slate-900/60 px-6 py-3 text-sm font-semibold text-slate-100 transition hover:bg-slate-900 focus:outline-none focus-visible:ring-2 focus-visible:ring-slate-400 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-950"
								href="#contact"
								data-open-tell-us="home-hero"
							>
								Tell Us What You Need
							</a>
						</div>
					</div>

					<div class="relative fade-in" style="--delay:0.15s">
						<div class="rounded-2xl border border-slate-800 bg-gradient-to-br from-slate-900/60 to-slate-950 p-6 shadow-lg shadow-black/20">
							<div class="grid gap-3 sm:grid-cols-2">
								<div class="rounded-xl border border-slate-800 bg-slate-900/40 p-4">
									<p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Speed</p>
									<p class="mt-2 text-2xl font-bold text-white">48h</p>
									<p class="mt-1 text-sm text-slate-300">Shortlist delivered</p>
								</div>
								<div class="rounded-xl border border-slate-800 bg-slate-900/40 p-4">
									<p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Savings</p>
									<p class="mt-2 text-2xl font-bold text-white">50–70%</p>
									<p class="mt-1 text-sm text-slate-300">vs. US-based hires</p>
								</div>
								<div class="rounded-xl border border-slate-800 bg-slate-900/40 p-4">
									<p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Timezone</p>
									<p class="mt-2 text-2xl font-bold text-white">0–3 hrs</p>
									<p class="mt-1 text-sm text-slate-300">Overlap with US</p>
								</div>
								<div class="rounded-xl border border-slate-800 bg-slate-900/40 p-4">
									<p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Guarantee</p>
									<p class="mt-2 text-2xl font-bold text-white">Free</p>
									<p class="mt-1 text-sm text-slate-300">Replacement included</p>
								</div>
							</div>
						</div>
						<div class="pointer-events-none absolute -right-20 -top-20 h-64 w-64 rounded-full bg-sky-500/10 blur-3xl" aria-hidden="true" />
						<div class="pointer-events-none absolute -bottom-24 -left-24 h-72 w-72 rounded-full bg-indigo-500/10 blur-3xl" aria-hidden="true" />
					</div>
				</div>
			</div>
		</section>

		{/* --- SECTION 2 – TRUST BAR --- */}
		<section class="border-y border-slate-800 bg-slate-900/30">
			<div class="mx-auto max-w-6xl px-6 py-8">
				<div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
					{trustBadges.map((b) => {
						const inner = (
							<div class="flex items-center gap-3">
								<div class="flex h-10 w-10 shrink-0 items-center justify-center rounded-lg border border-slate-800 bg-slate-900/40 text-sky-300">
									{b.icon === 'clock' && (
										<svg class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" /></svg>
									)}
									{b.icon === 'shield' && (
										<svg class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75m-3-7.036A11.959 11.959 0 0 1 3.598 6 11.99 11.99 0 0 0 3 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285Z" /></svg>
									)}
									{b.icon === 'savings' && (
										<svg class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18.75a60.07 60.07 0 0 1 15.797 2.101c.727.198 1.453-.342 1.453-1.096V18.75M3.75 4.5v.75A.75.75 0 0 1 3 6h-.75m0 0v-.375c0-.621.504-1.125 1.125-1.125H20.25M2.25 6v9m18-10.5v.75c0 .414.336.75.75.75h.75m-1.5-1.5h.375c.621 0 1.125.504 1.125 1.125v9.75c0 .621-.504 1.125-1.125 1.125h-.375m1.5-1.5H21a.75.75 0 0 0-.75.75v.75m0 0H3.75m0 0h-.375a1.125 1.125 0 0 1-1.125-1.125V15m1.5 1.5v-.75A.75.75 0 0 0 3 15h-.75M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm3 0h.008v.008H18V10.5Zm-12 0h.008v.008H6V10.5Z" /></svg>
									)}
									{b.icon === 'guarantee' && (
										<svg class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0 3.181 3.183a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.182" /></svg>
									)}
								</div>
								<div>
									<p class="text-sm font-semibold text-slate-100">{b.label}</p>
									<p class="text-xs text-slate-400">{b.sub}</p>
								</div>
							</div>
						);
						return b.link ? (
							<a href={b.link} class="group rounded-xl p-2 transition hover:bg-slate-800/50 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300">
								{inner}
							</a>
						) : (
							<div class="p-2">{inner}</div>
						);
					})}
				</div>
				<p class="mt-6 text-center text-xs text-slate-500">Your dedicated LATAM talent partner — trusted by US firms across AEC, design, and marketing</p>
			</div>
		</section>

		{/* --- SECTION 3 – PROBLEM STATEMENT --- */}
		<section class="fade-in">
			<div class="mx-auto max-w-6xl px-6 py-16 sm:py-20">
				<div class="mx-auto max-w-2xl text-center">
					<h2 class="text-2xl font-bold tracking-tight text-white sm:text-3xl">
						US Companies Face a Structural Talent Crisis
					</h2>
					<p class="mt-3 text-sm leading-relaxed text-slate-300 sm:text-base">
						Hiring is slow, expensive, and increasingly difficult across high-demand disciplines.
					</p>
				</div>

				<div class="mt-10 grid gap-6 sm:grid-cols-3">
					{problems.map((p) => (
						<div class="fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 text-center">
							<p class={`text-4xl font-bold ${p.color}`}>{p.stat}</p>
							<p class="mt-2 text-sm leading-relaxed text-slate-300">{p.label}</p>
							<p class="mt-3 inline-flex items-center rounded-full bg-slate-800/60 px-3 py-1 text-xs font-medium text-slate-300">{p.category}</p>
						</div>
					))}
				</div>
			</div>
		</section>

		{/* --- SECTION 4 – SOLUTION CARDS --- */}
		<section class="border-y border-slate-800 bg-slate-900/20">
			<div class="mx-auto max-w-6xl px-6 py-16 sm:py-20">
				<div class="flex flex-col gap-2">
					<h2 class="text-2xl font-bold tracking-tight text-white sm:text-3xl">Choose Your Solution</h2>
					<p class="max-w-prose text-sm leading-relaxed text-slate-300 sm:text-base">
						Choose your category — we match you with dedicated specialists who integrate into your workflow from day one.
					</p>
				</div>

				<div class="mt-10 grid gap-6 lg:grid-cols-3">
					<a href="/aec/" class="group fade-in block rounded-2xl border border-l-4 border-slate-800 border-l-aec bg-slate-900/40 p-6 transition hover:-translate-y-1 hover:bg-slate-900 hover:shadow-lg hover:shadow-black/20">
						<span class="inline-flex items-center rounded-full bg-aec/10 px-2.5 py-0.5 text-xs font-medium text-aec">AEC</span>
						<h3 class="mt-3 text-lg font-semibold text-white">AEC Talent</h3>
						<p class="mt-2 text-sm leading-relaxed text-slate-300">
							BIM coordination, Revit modeling, CAD drafting, and MEP engineering — production capacity aligned to US codes and standards, starting in days.
						</p>
						<p class="mt-3 text-xs font-medium text-slate-400">Starting at ~$3,500/mo</p>
						<span class="mt-4 inline-flex items-center text-sm font-medium text-sky-300 group-hover:text-sky-200">
							Explore AEC <span class="ml-1 transition-transform group-hover:translate-x-0.5" aria-hidden="true">&rarr;</span>
						</span>
					</a>

					<a href="/design/" class="group fade-in block rounded-2xl border border-l-4 border-slate-800 border-l-design bg-slate-900/40 p-6 transition hover:-translate-y-1 hover:bg-slate-900 hover:shadow-lg hover:shadow-black/20" style="--delay:0.1s">
						<span class="inline-flex items-center rounded-full bg-design/10 px-2.5 py-0.5 text-xs font-medium text-design">Design</span>
						<h3 class="mt-3 text-lg font-semibold text-white">Creative & Design</h3>
						<p class="mt-2 text-sm leading-relaxed text-slate-300">
							Managed Creative Teams with PM coordination, dedicated individual designers, or flexible hourly blocks — predictable, brand-consistent output.
						</p>
						<p class="mt-3 text-xs font-medium text-slate-400">Managed teams from $2,800/mo</p>
						<span class="mt-4 inline-flex items-center text-sm font-medium text-sky-300 group-hover:text-sky-200">
							Explore Design <span class="ml-1 transition-transform group-hover:translate-x-0.5" aria-hidden="true">&rarr;</span>
						</span>
					</a>

					<a href="/marketing/" class="group fade-in block rounded-2xl border border-l-4 border-slate-800 border-l-marketing bg-slate-900/40 p-6 transition hover:-translate-y-1 hover:bg-slate-900 hover:shadow-lg hover:shadow-black/20" style="--delay:0.2s">
						<span class="inline-flex items-center rounded-full bg-marketing/10 px-2.5 py-0.5 text-xs font-medium text-marketing">Marketing</span>
						<h3 class="mt-3 text-lg font-semibold text-white">Marketing Talent</h3>
						<p class="mt-2 text-sm leading-relaxed text-slate-300">
							Dedicated SEO, paid media, lifecycle, HubSpot, and analytics specialists — embedded in your tools, owning your channels and metrics.
						</p>
						<p class="mt-3 text-xs font-medium text-slate-400">Starting at ~$2,500/mo</p>
						<span class="mt-4 inline-flex items-center text-sm font-medium text-sky-300 group-hover:text-sky-200">
							Explore Marketing <span class="ml-1 transition-transform group-hover:translate-x-0.5" aria-hidden="true">&rarr;</span>
						</span>
					</a>
				</div>
			</div>
		</section>

		{/* --- SECTION 5 – HOW IT WORKS --- */}
		<section id="how-it-works">
			<div class="mx-auto max-w-6xl px-6 py-16 sm:py-20">
				<div class="mx-auto max-w-2xl text-center">
					<h2 class="text-2xl font-bold tracking-tight text-white sm:text-3xl">How It Works</h2>
					<p class="mt-3 text-sm leading-relaxed text-slate-300 sm:text-base">
						A simple process designed for speed, quality, and low risk.
					</p>
				</div>

				<ol class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-5">
					{steps.map((step, idx) => (
						<li class="fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6" style={`--delay:${idx * 0.07}s`}>
							<div class="flex h-10 w-10 items-center justify-center rounded-xl border border-slate-800 bg-slate-950/40">
								<span class="text-sm font-bold text-sky-300">{idx + 1}</span>
							</div>
							<p class="mt-4 text-sm font-semibold text-slate-100">{step.title}</p>
							<p class="mt-2 text-sm leading-relaxed text-slate-300">{step.body}</p>
						</li>
					))}
				</ol>

				<div class="mt-8 text-center">
					<a href="/how-it-works/" class="inline-flex min-h-[44px] items-center gap-2 text-sm font-medium text-sky-300 transition hover:text-sky-200">
						Learn more about our process <span aria-hidden="true">&rarr;</span>
					</a>
				</div>
			</div>
		</section>

		{/* --- SECTION 6 – WHY LATAM --- */}
		<section class="border-y border-slate-800 bg-slate-900/30">
			<div class="mx-auto max-w-6xl px-6 py-16 sm:py-20">
				<div class="mx-auto max-w-2xl text-center">
					<h2 class="text-2xl font-bold tracking-tight text-white sm:text-3xl">Why US Companies Choose Nearshore LATAM Talent</h2>
					<p class="mt-3 text-sm leading-relaxed text-slate-300 sm:text-base">
						Nearshore LATAM professionals work in your timezone, bring verified expertise in your tools, and cost 50–70% less than US hires.
					</p>
				</div>

				<div class="mt-10 grid gap-6 sm:grid-cols-3">
					<div class="fade-in rounded-2xl border border-slate-800 bg-slate-950/60 p-8 text-center">
						<p class="text-5xl font-bold text-sky-300" data-counter="50">50–70%</p>
						<p class="mt-3 text-base font-semibold text-white">Cost Savings</p>
						<p class="mt-2 text-sm leading-relaxed text-slate-400">
							Rigorously vetted specialists at 50–70% less than US market rates — same expertise, same tools, same standards.
						</p>
					</div>
					<div class="fade-in rounded-2xl border border-slate-800 bg-slate-950/60 p-8 text-center" style="--delay:0.1s">
						<p class="text-5xl font-bold text-sky-300" data-counter="0">0–3 hrs</p>
						<p class="mt-3 text-base font-semibold text-white">Timezone Overlap</p>
						<p class="mt-2 text-sm leading-relaxed text-slate-400">
							Maximum synchronous overlap with US business hours. Real-time collaboration, no overnight handoffs.
						</p>
					</div>
					<div class="fade-in rounded-2xl border border-slate-800 bg-slate-950/60 p-8 text-center" style="--delay:0.2s">
						<p class="text-5xl font-bold text-sky-300" data-counter="1">&lt; 1 week</p>
						<p class="mt-3 text-base font-semibold text-white">Time to Placement</p>
						<p class="mt-2 text-sm leading-relaxed text-slate-400">
							Vetted shortlist in 48 hours. Your new team member starts within days, not months.
						</p>
					</div>
				</div>
			</div>
		</section>

		{/* --- SECTION 7 – FLEXIBLE OPTIONS --- */}
		<section>
			<div class="mx-auto max-w-6xl px-6 py-16 sm:py-20">
				<div class="flex flex-col gap-2">
					<h2 class="text-2xl font-bold tracking-tight text-white sm:text-3xl">Flexible Engagement Options</h2>
					<p class="max-w-prose text-sm leading-relaxed text-slate-300 sm:text-base">
						Engagements designed to fit your budget, timelines, and workflow.
					</p>
				</div>

				<div class="mt-10 grid gap-6 lg:grid-cols-3">
					<div class="fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 transition hover:-translate-y-1 hover:shadow-lg hover:shadow-black/20">
						<div class="flex h-10 w-10 items-center justify-center rounded-xl border border-slate-800 bg-slate-950/40">
							<svg class="h-5 w-5 text-sky-300" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" /></svg>
						</div>
						<h3 class="mt-4 text-base font-semibold text-slate-100">Individual Specialists</h3>
						<p class="mt-2 text-sm leading-relaxed text-slate-300">
							Dedicated full-time or part-time specialists embedded into your team and tools.
						</p>
						<p class="mt-3 text-xs font-medium text-slate-400">Starting at ~$2,500/mo</p>
					</div>

					<div class="fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 transition hover:-translate-y-1 hover:shadow-lg hover:shadow-black/20" style="--delay:0.1s">
						<div class="flex h-10 w-10 items-center justify-center rounded-xl border border-slate-800 bg-slate-950/40">
							<svg class="h-5 w-5 text-sky-300" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" /></svg>
						</div>
						<h3 class="mt-4 text-base font-semibold text-slate-100">Hourly Packages</h3>
						<p class="mt-2 text-sm leading-relaxed text-slate-300">
							Blocks of hours for overflow support, audits, one-off deliverables, or urgent needs.
						</p>
						<p class="mt-3 text-xs font-medium text-slate-400">Flexible hour blocks</p>
					</div>

