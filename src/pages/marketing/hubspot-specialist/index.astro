---
import Layout from '../../../layouts/Layout.astro';
import MetaHead from '../../../components/MetaHead.astro';
import ContactHub from '../../../components/ContactHub.astro';
import { BOOKING_URL, isExternalUrl } from '../../../lib/cta';

const brand = 'LatAm Scalers';

const meta = {
	title: 'Hire a HubSpot Specialist – Dedicated LATAM HubSpot Experts for US Teams | LatAm Scalers',
	description:
		'Dedicated HubSpot specialists for US companies. CRM setup, marketing automation, Sales Hub, Operations Hub. HubSpot-certified, full-time from ~$2,500/mo. Month-to-month flexibility.',
};

const baseUrl = Astro.site ?? 'https://latam-scalers-website.vercel.app';
const canonical = new URL('/marketing/hubspot-specialist/', baseUrl).toString();

const bookingUrl = BOOKING_URL;
const bookingExternal = isExternalUrl(bookingUrl);

const hubAreas = [
	{
		name: 'Marketing Hub',
		desc: 'Email campaigns, landing pages, forms, lead scoring, workflows, A/B testing, attribution reporting, and list segmentation.',
		scope: 'Campaign execution, automation, lead nurturing',
	},
	{
		name: 'Sales Hub',
		desc: 'Pipeline management, deal stages, sequences, meeting scheduling, quotes, forecasting, and sales automation.',
		scope: 'CRM hygiene, pipeline velocity, sales enablement',
	},
	{
		name: 'Operations Hub',
		desc: 'Data sync, programmable automation, data quality management, custom-coded workflows, and third-party integrations.',
		scope: 'Data integrity, system integration, process automation',
	},
	{
		name: 'Service Hub',
		desc: 'Ticketing, knowledge base, customer feedback, SLAs, and customer success workflows.',
		scope: 'Post-sale automation, retention workflows',
	},
	{
		name: 'CMS Hub',
		desc: 'Website pages, blog management, smart content, SEO recommendations, and custom modules.',
		scope: 'Content management, landing page production',
	},
];

const deliverables = [
	'Full HubSpot portal audit and optimization',
	'Marketing automation workflows and sequences',
	'Lead scoring models and lifecycle stage mapping',
	'Custom reporting dashboards and attribution',
	'CRM data cleanup and migration',
	'Third-party integrations (Salesforce, Slack, Zapier)',
	'Landing page and email template production',
	'Sales pipeline configuration and deal automation',
];

const tools = [
	{ name: 'HubSpot (All Hubs)', desc: 'Marketing, Sales, Service, Operations, CMS — full platform management.' },
	{ name: 'Salesforce', desc: 'HubSpot–Salesforce sync, bi-directional data flow, field mapping, and deduplication.' },
	{ name: 'Zapier / Make', desc: 'Custom integrations connecting HubSpot to your broader tech stack.' },
	{ name: 'Google Analytics 4', desc: 'Attribution modeling, UTM tracking, and cross-platform reporting.' },
	{ name: 'Databox / Looker Studio', desc: 'Custom dashboards pulling HubSpot data for stakeholder reporting.' },
	{ name: 'Clearbit / ZoomInfo', desc: 'Data enrichment integrations for lead scoring and ABM targeting.' },
];

const demandStats = [
	{ value: '$89', label: 'CPC for "HubSpot consultant" — highest commercial intent in marketing' },
	{ value: '720/mo', label: 'Monthly searches for HubSpot specialist and consultant roles' },
	{ value: '194K+', label: 'Companies using HubSpot globally — demand for certified operators is constant' },
];

const faqs = [
	{
		q: 'What HubSpot certifications do your specialists hold?',
		a: 'Our HubSpot specialists hold certifications across Marketing Hub, Sales Hub, and Operations Hub. We also place specialists with HubSpot Solutions Partner experience and custom API integration expertise. We verify certifications during our vetting process.',
	},
	{
		q: 'Can they handle HubSpot-to-Salesforce integration?',
		a: 'Yes. Many of our HubSpot specialists have experience managing the HubSpot–Salesforce sync, including bi-directional data flow, field mapping, lifecycle stage syncing, and deduplication. If your stack includes both platforms, we screen specifically for dual-platform expertise.',
	},
	{
		q: 'We have a messy HubSpot portal — can they clean it up?',
		a: 'Absolutely. Portal audits and cleanup are one of the most common starting points. Your specialist will audit workflows, lists, properties, and data quality — then build a remediation plan. Most portals see measurable improvement within the first 30 days.',
	},
	{
		q: 'Do they build custom HubSpot reports and dashboards?',
		a: 'Yes. Custom reporting dashboards, attribution models, and executive-level reporting are core deliverables. Your specialist can build in HubSpot native reporting, Looker Studio, or Databox — depending on your stakeholder needs.',
	},
	{
		q: 'How quickly can we get a HubSpot specialist?',
		a: 'We typically present vetted HubSpot specialists within 48 hours after the scoping call. Once portal access and goals are confirmed, onboarding is designed for fast ramp-up — most specialists are productive within the first week.',
	},
	{
		q: 'What does pricing look like?',
		a: 'Dedicated HubSpot specialists start at approximately $2,500/month for full-time (40h/week). Specialists with advanced certifications (Operations Hub, custom API work, Salesforce integration) or senior experience may be higher. Part-time options are available.',
	},
];

const serviceJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'Service',
	name: 'Dedicated HubSpot Specialist',
	description: meta.description,
	provider: { '@type': 'Organization', name: brand, url: baseUrl },
};

const faqJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'FAQPage',
	mainEntity: faqs.map((f) => ({
		'@type': 'Question',
		name: f.q,
		acceptedAnswer: { '@type': 'Answer', text: f.a },
	})),
};
---

<Layout>
	<MetaHead slot="head" title={meta.title} description={meta.description} canonical={canonical} jsonLd={[serviceJsonLd, faqJsonLd]} />

	<main>

	<!-- Hero -->
	<section class="relative overflow-hidden bg-slate-950 py-16 sm:py-24" aria-labelledby="hero-heading">
		<div class="mx-auto max-w-6xl px-6">
		<div class="js-fade-in">
		<p class="text-sm font-semibold uppercase tracking-widest text-marketing">HubSpot Specialist</p>
	<h1 id="hero-heading" class="mt-4 text-4xl font-semibold leading-tight tracking-tight text-white sm:text-5xl lg:text-[3.25rem]">
		Dedicated HubSpot Specialists for US Teams
	</h1>
	<p class="mt-5 max-w-xl text-base leading-relaxed text-slate-300 sm:text-lg">
		HubSpot-certified operators who own your portal — Marketing Hub, Sales Hub, Operations Hub, integrations. Not a shared freelancer checking in twice a week. Dedicated, full-time, embedded in your stack.
	</p>

	<div class="mt-8 flex flex-wrap gap-3">
	<a
		href={bookingUrl}
		{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
		class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-6 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
		data-book-call
	>
		Book a HubSpot Specialist Call
	</a>
	<a
		href="#contact"
		class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/40 px-6 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
		data-open-tell-us="hubspot-hero"
	>
		Tell Us What You Need
	</a>
	</div>
	</div>
	</div>
	</section>

	<!-- Service overview -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="overview-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="overview-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Your HubSpot Portal Needs a Full-Time Operator
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		HubSpot is only as powerful as the person running it. Stale workflows, broken automations, dirty data, and underused features cost you pipeline every day. Agencies charge retainers for project-based work. Freelancers split time across clients. Neither owns your portal.
	</p>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		A dedicated HubSpot specialist works exclusively for your team — maintaining your CRM, building your automation, owning your reporting — 40 hours a week, in your timezone. They learn your business, your pipeline stages, and your stakeholders.
	</p>
	<ul class="mt-6 grid gap-3 sm:grid-cols-2">
	<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
		<span class="text-marketing" aria-hidden="true">✓</span>
		<span class="text-sm text-slate-400"><strong class="text-slate-100">HubSpot-certified</strong> — verified credentials</span>
	</li>
	<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
		<span class="text-marketing" aria-hidden="true">✓</span>
		<span class="text-sm text-slate-400"><strong class="text-slate-100">Full-time dedicated</strong> — not shared across clients</span>
	</li>
	<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
		<span class="text-marketing" aria-hidden="true">✓</span>
		<span class="text-sm text-slate-400"><strong class="text-slate-100">US timezone</strong> — real-time collaboration</span>
	</li>
	<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
		<span class="text-marketing" aria-hidden="true">✓</span>
		<span class="text-sm text-slate-400"><strong class="text-slate-100">Month-to-month</strong> — scale up or down anytime</span>
	</li>
	</ul>
	</div>
	</div>
	</section>

	<!-- HubSpot Hub areas -->
	<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="hubs-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="hubs-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Every Hub. Every Workflow. One Specialist.
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		Your dedicated HubSpot specialist covers the full platform — not just one hub. Share which hubs and integrations matter most and we'll match accordingly during scoping.
	</p>
	</div>

	<div class="mt-10 grid gap-5 lg:grid-cols-3">
	{hubAreas.map((hub) => (
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<p class="text-xs font-semibold uppercase tracking-wide text-marketing">{hub.name}</p>
		<p class="mt-3 text-sm leading-relaxed text-slate-400">{hub.desc}</p>
		<p class="mt-4 text-xs text-slate-500"><strong class="text-slate-400">Scope:</strong> {hub.scope}</p>
	</div>
	))}
	</div>
	</div>
	</section>

	<!-- Deliverables -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="deliverables-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="deliverables-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Common Deliverable Examples
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		You define the scope and deliverables — your dedicated HubSpot specialist executes. Here are examples of what specialists in this role typically own:
	</p>
	</div>

	<div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
	{deliverables.map((item) => (
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<p class="text-sm font-semibold text-slate-100">{item}</p>
	</div>
	))}
	</div>
	</div>
	</section>

	<!-- Tools & integrations -->
	<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="tools-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="tools-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Tools &amp; Integration Ecosystem
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		HubSpot is the core — but your specialist manages the surrounding integrations and reporting tools that make your stack work.
	</p>
	</div>

	<div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
	{tools.map((tool) => (
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<p class="text-sm font-semibold text-slate-100">{tool.name}</p>
		<p class="mt-2 text-sm leading-relaxed text-slate-400">{tool.desc}</p>
	</div>
	))}
	</div>
	</div>
	</section>

	<!-- Demand stats -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="demand-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in">
	<h2 id="demand-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		HubSpot Talent Demand
	</h2>
	<p class="mt-4 max-w-2xl text-base leading-relaxed text-slate-400">
		HubSpot consultant is the highest commercial-intent tool-expert keyword in marketing. The demand for certified operators far outpaces US supply.
	</p>
	</div>
	<div class="mt-10 grid gap-6 sm:grid-cols-3">
	{demandStats.map((stat) => (
		<div class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
			<p class="text-2xl font-bold text-marketing">{stat.value}</p>
			<p class="mt-2 text-sm font-medium text-slate-100">{stat.label}</p>
		</div>
	))}
	</div>
	</div>
	</section>

	<!-- Engagement options -->
	<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="engagement-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="engagement-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Engagement Options
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		Dedicated HubSpot specialists on a full-time or part-time basis — or as part of a broader marketing ops team.
	</p>
	</div>

	<div class="mt-10 grid gap-5 md:grid-cols-2">
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<p class="text-xs font-semibold uppercase tracking-wide text-marketing">Individual Specialist</p>
		<h3 class="mt-3 text-lg font-semibold text-slate-100">Dedicated HubSpot Specialist</h3>
		<p class="mt-3 text-sm leading-relaxed text-slate-400">
		Full-time (40h/week) or part-time (20h/week) HubSpot specialist — certified, embedded in your portal, owning your automation and reporting.
		</p>
		<p class="mt-4 text-sm font-semibold text-marketing">From ~$2,500/mo</p>
	</div>
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<p class="text-xs font-semibold uppercase tracking-wide text-marketing">Marketing Ops Pod</p>
		<h3 class="mt-3 text-lg font-semibold text-slate-100">HubSpot + Channel Specialists</h3>
		<p class="mt-3 text-sm leading-relaxed text-slate-400">
		HubSpot specialist paired with SEO, paid media, or lifecycle specialists — a coordinated marketing ops team with your portal as the hub.
		</p>
		<p class="mt-4 text-sm font-semibold text-marketing">Custom pricing</p>
	</div>
	</div>
	</div>
	</section>

	<!-- Pricing guidance -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="pricing-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="pricing-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Pricing Guidance
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		Dedicated HubSpot specialists start at approximately <strong class="text-slate-100">$2,500/month</strong> for full-time engagement. Specialists with advanced certifications (Operations Hub, custom API, Salesforce integration) or senior experience may be higher. Part-time and pod options are available.
	</p>
	<a
		href="/how-pricing-works/"
		class="mt-4 inline-flex items-center gap-1.5 text-sm font-semibold text-sky-300 transition hover:text-sky-200/80 focus:outline-none focus-visible:underline"
	>
		See how pricing works <span aria-hidden="true">&rarr;</span>
	</a>
	</div>
	</div>
	</section>

	<!-- FAQ -->
	<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="faq-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="faq-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Frequently Asked Questions
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		Common questions about dedicated HubSpot specialists for US teams.
	</p>
	</div>

	<div class="mt-10 grid gap-3">
	{faqs.map((item) => (
	<details class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<summary class="cursor-pointer list-none text-sm font-semibold text-slate-100 [&::-webkit-details-marker]:hidden">
		{item.q}
		</summary>
		<p class="mt-4 pt-4 text-sm leading-relaxed text-slate-400 border-t border-slate-800">{item.a}</p>
	</details>
	))}
	</div>
	</div>
	</section>

	<!-- CTA -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="cta-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-8 text-center shadow-xl sm:p-12">
	<h2 id="cta-heading" class="text-3xl font-semibold tracking-tight text-white sm:text-4xl">
		Ready for a Dedicated HubSpot Specialist?
	</h2>
	<p class="mx-auto mt-4 max-w-xl text-base leading-relaxed text-slate-300">
		Tell us your HubSpot hubs, integrations, and goals — we'll match you with a certified specialist within 48 hours.
	</p>
	<div class="mt-8 flex flex-wrap items-center justify-center gap-4">
	<a
		href={bookingUrl}
		{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
		class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-8 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
		data-book-call
	>
		Book a HubSpot Specialist Call
	</a>
	<a
		href="#contact"
		class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/40 px-8 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
		data-open-tell-us="hubspot-cta"
	>
		Tell Us What You Need
	</a>
	</div>
	<p class="mt-5 text-xs text-slate-400">Month-to-month · Free replacement guarantee · HubSpot-certified</p>
	</div>
	</div>
	</section>

	<!-- Contact -->
	<section id="contact" class="bg-slate-950 pb-20 pt-16 sm:pb-24 sm:pt-20" aria-labelledby="contact-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
		<p class="text-sm font-semibold uppercase tracking-widest text-sky-300">Get in touch</p>
		<h2 id="contact-heading" class="mt-3 text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Let's Talk HubSpot
		</h2>
		<p class="mt-4 text-base leading-relaxed text-slate-400">
		Share your HubSpot hubs, current pain points, and goals — we'll match you with a certified specialist.
		</p>
	</div>

	<ContactHub subject={`${brand} – HubSpot specialist inquiry`} defaultCategory="marketing" defaultMessage="I'm interested in a dedicated HubSpot specialist." />
	</div>
	</section>

	</main>

	<style>
	.js-fade-in {
		opacity: 0;
		transform: translateY(20px);
		transition: opacity 0.35s ease-out, transform 0.35s ease-out;
	}
	.js-fade-in.is-visible {
		opacity: 1;
		transform: translateY(0);
	}
	</style>

	<script is:inline>
	(function () {
		var els = document.querySelectorAll('.js-fade-in');
		if (!els.length) return;
		var io = new IntersectionObserver(function (entries) {
		entries.forEach(function (e) {
			if (e.isIntersecting) {
			e.target.classList.add('is-visible');
			io.unobserve(e.target);
			}
		});
		}, { threshold: 0.1, rootMargin: '0px 0px -40px 0px' });
		els.forEach(function (el) { io.observe(el); });
	})();
	</script>
</Layout>
