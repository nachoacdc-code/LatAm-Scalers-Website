---
import Layout from '../../../layouts/Layout.astro';
import MetaHead from '../../../components/MetaHead.astro';
import ContactHub from '../../../components/ContactHub.astro';
import { BOOKING_URL, isExternalUrl } from '../../../lib/cta';

const brand = 'LatAm Scalers';

const meta = {
	title: 'Hire an SEO Specialist – Dedicated LATAM SEO Experts for US Teams | LatAm Scalers',
	description:
		'Dedicated SEO specialists for US companies. Technical SEO, content strategy, link building, analytics. Full-time from ~$2,500/mo. Month-to-month flexibility, no agency retainers.',
};

const baseUrl = Astro.site ?? 'https://latam-scalers-website.vercel.app';
const canonical = new URL('/marketing/hire-seo-specialist/', baseUrl).toString();

const bookingUrl = BOOKING_URL;
const bookingExternal = isExternalUrl(bookingUrl);

const seoDisciplines = [
	{
		name: 'Technical SEO',
		desc: 'Site audits, crawl optimization, Core Web Vitals, schema markup, indexation management, site architecture, and international SEO.',
		focus: 'Infrastructure that search engines can crawl, index, and rank',
	},
	{
		name: 'On-Page & Content SEO',
		desc: 'Keyword research, content briefs, on-page optimization, internal linking strategy, topic clusters, and content gap analysis.',
		focus: 'Content that matches search intent and earns rankings',
	},
	{
		name: 'Off-Page & Link Building',
		desc: 'Link prospecting, digital PR outreach, competitor backlink analysis, broken link building, and authority development.',
		focus: 'Domain authority and topical relevance signals',
	},
	{
		name: 'Analytics & Reporting',
		desc: 'GA4 setup, Search Console monitoring, rank tracking, conversion attribution, and executive-level SEO reporting.',
		focus: 'Data-driven decisions and ROI visibility',
	},
	{
		name: 'Local & E-commerce SEO',
		desc: 'Google Business Profile optimization, local pack strategy, product schema, category page optimization, and faceted navigation SEO.',
		focus: 'Vertical-specific SEO for local businesses and online stores',
	},
];

const deliverables = [
	'Comprehensive technical SEO audit and remediation',
	'Keyword research and content strategy roadmap',
	'Monthly on-page optimization and content briefs',
	'Internal linking and site architecture improvements',
	'Schema markup implementation',
	'GA4 and Search Console reporting dashboards',
	'Competitor analysis and gap identification',
	'Link building outreach and digital PR',
];

const tools = [
	{ name: 'Ahrefs', desc: 'Backlink analysis, keyword research, site audits, rank tracking, and content gap analysis.' },
	{ name: 'SEMrush', desc: 'Competitive intelligence, position tracking, on-page SEO checker, and keyword difficulty analysis.' },
	{ name: 'Google Search Console', desc: 'Indexation monitoring, query performance, Core Web Vitals, and crawl diagnostics.' },
	{ name: 'Google Analytics 4', desc: 'Organic traffic analysis, conversion tracking, user behavior, and attribution modeling.' },
	{ name: 'Screaming Frog', desc: 'Technical crawling, redirect chains, broken links, duplicate content, and metadata auditing.' },
	{ name: 'Surfer SEO / Clearscope', desc: 'Content optimization scoring, SERP analysis, and on-page content recommendations.' },
];

const demandStats = [
	{ value: '12,100/mo', label: 'Monthly searches for SEO consultant and specialist roles' },
	{ value: '$42', label: 'CPC for "hire SEO specialist" — high commercial intent' },
	{ value: '68%', label: 'Of online experiences begin with a search engine' },
];

const faqs = [
	{
		q: 'What kind of SEO experience do your specialists have?',
		a: 'Our SEO specialists typically have 3–7+ years of hands-on experience across technical SEO, content strategy, and link building. We vet for US market experience — understanding of US search behavior, local SEO patterns, and English-language content optimization. Many have worked with US-based SaaS companies, DTC brands, and agencies.',
	},
	{
		q: 'Can they handle both technical SEO and content strategy?',
		a: 'Many of our SEO specialists are full-stack — technical audits, content briefs, on-page optimization, and reporting. If your needs lean heavily in one direction (e.g., enterprise technical SEO or content-first SEO), we match for that specific strength.',
	},
	{
		q: 'Do they work with our existing content team?',
		a: 'Yes. Your SEO specialist collaborates with your writers, editors, and marketing team. They provide keyword research, content briefs, on-page recommendations, and internal linking strategy — your team executes the content, and the specialist ensures it ranks.',
	},
	{
		q: 'How do they report on SEO performance?',
		a: 'Weekly or monthly reporting cadence with dashboards in your preferred tool — Google Looker Studio, Ahrefs, or custom dashboards. Core metrics include organic traffic, keyword rankings, conversion from organic, technical health score, and backlink growth.',
	},
	{
		q: 'How quickly can we get an SEO specialist?',
		a: 'We typically present vetted SEO specialists within 48 hours after the scoping call. Once access to Search Console, analytics, and CMS is confirmed, onboarding is fast — most specialists deliver their first audit within the first two weeks.',
	},
	{
		q: 'What does pricing look like?',
		a: 'Dedicated SEO specialists start at approximately $2,500/month for full-time (40h/week). Specialists with enterprise-level technical SEO experience, programmatic SEO skills, or international SEO expertise may be higher. Part-time options are available.',
	},
];

const serviceJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'Service',
	name: 'Hire an SEO Specialist',
	description: meta.description,
	provider: { '@type': 'Organization', name: brand, url: baseUrl },
};

const faqJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'FAQPage',
	mainEntity: faqs.map((f) => ({
		'@type': 'Question',
		name: f.q,
		acceptedAnswer: { '@type': 'Answer', text: f.a },
	})),
};
---

<Layout>
	<MetaHead slot="head" title={meta.title} description={meta.description} canonical={canonical} jsonLd={[serviceJsonLd, faqJsonLd]} />

	<main>

	<!-- Hero -->
	<section class="relative overflow-hidden bg-slate-950 py-16 sm:py-24" aria-labelledby="hero-heading">
		<div class="mx-auto max-w-6xl px-6">
		<div class="js-fade-in">
		<p class="text-sm font-semibold uppercase tracking-widest text-marketing">SEO Specialist</p>
	<h1 id="hero-heading" class="mt-4 text-4xl font-semibold leading-tight tracking-tight text-white sm:text-5xl lg:text-[3.25rem]">
		Hire a Dedicated SEO Specialist for Your US Team
	</h1>
	<p class="mt-5 max-w-xl text-base leading-relaxed text-slate-300 sm:text-lg">
		Technical SEO, content strategy, link building, analytics — one dedicated specialist owning your entire organic growth channel. Not an agency deliverable. Not a shared freelancer. Yours.
	</p>

	<div class="mt-8 flex flex-wrap gap-3">
	<a
		href={bookingUrl}
		{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
		class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-6 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
		data-book-call
	>
		Book an SEO Specialist Call
	</a>
	<a
		href="#contact"
		class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/40 px-6 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
		data-open-tell-us="seo-hero"
	>
		Tell Us What You Need
	</a>
	</div>
	</div>
	</div>
	</section>

	<!-- Service overview -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="overview-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="overview-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Organic Growth Needs a Dedicated Owner
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		SEO is a compounding channel — but only when someone owns it full-time. Agencies deliver audits and reports. Freelancers check in a few hours a week. Neither builds the sustained momentum that drives rankings, traffic, and pipeline.
	</p>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		A dedicated SEO specialist works exclusively for your team — running technical audits, building content strategy, managing link acquisition, and reporting on results. 40 hours a week, in your timezone, learning your market and competitors.
	</p>
	<ul class="mt-6 grid gap-3 sm:grid-cols-2">
	<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
		<span class="text-marketing" aria-hidden="true">✓</span>
		<span class="text-sm text-slate-400"><strong class="text-slate-100">Full-stack SEO</strong> — technical, content, off-page</span>
	</li>
	<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
		<span class="text-marketing" aria-hidden="true">✓</span>
		<span class="text-sm text-slate-400"><strong class="text-slate-100">US market experience</strong> — search behavior, compliance</span>
	</li>
	<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
		<span class="text-marketing" aria-hidden="true">✓</span>
		<span class="text-sm text-slate-400"><strong class="text-slate-100">US timezone</strong> — real-time collaboration</span>
	</li>
	<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
		<span class="text-marketing" aria-hidden="true">✓</span>
		<span class="text-sm text-slate-400"><strong class="text-slate-100">Month-to-month</strong> — no long-term contracts</span>
	</li>
	</ul>
	</div>
	</div>
	</section>

	<!-- SEO Disciplines -->
	<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="disciplines-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="disciplines-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		SEO Disciplines We Cover
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		We match SEO specialists by strength — not generic "digital marketing" experience. Tell us your biggest gap and we'll find the right fit.
	</p>
	</div>

	<div class="mt-10 grid gap-5 lg:grid-cols-3">
	{seoDisciplines.map((disc) => (
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<p class="text-xs font-semibold uppercase tracking-wide text-marketing">{disc.name}</p>
		<p class="mt-3 text-sm leading-relaxed text-slate-400">{disc.desc}</p>
		<p class="mt-4 text-xs text-slate-500"><strong class="text-slate-400">Focus:</strong> {disc.focus}</p>
	</div>
	))}
	</div>
	</div>
	</section>

	<!-- Deliverables -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="deliverables-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="deliverables-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Deliverables
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		Ongoing SEO ownership — not a one-time audit that sits in a drawer.
	</p>
	</div>

	<div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
	{deliverables.map((item) => (
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<p class="text-sm font-semibold text-slate-100">{item}</p>
	</div>
	))}
	</div>
	</div>
	</section>

	<!-- Tools -->
	<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="tools-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="tools-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Tools &amp; Platform Ecosystem
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		Your SEO specialist works with the industry-standard tools you already use — or sets them up if you don't.
	</p>
	</div>

	<div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
	{tools.map((tool) => (
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<p class="text-sm font-semibold text-slate-100">{tool.name}</p>
		<p class="mt-2 text-sm leading-relaxed text-slate-400">{tool.desc}</p>
	</div>
	))}
	</div>
	</div>
	</section>

	<!-- Demand stats -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="demand-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in">
	<h2 id="demand-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		SEO Talent Demand
	</h2>
	<p class="mt-4 max-w-2xl text-base leading-relaxed text-slate-400">
		SEO specialist is one of the highest-volume marketing keywords — and the demand for experienced operators continues to grow as organic becomes the most cost-efficient growth channel.
	</p>
	</div>
	<div class="mt-10 grid gap-6 sm:grid-cols-3">
	{demandStats.map((stat) => (
		<div class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
			<p class="text-2xl font-bold text-marketing">{stat.value}</p>
			<p class="mt-2 text-sm font-medium text-slate-100">{stat.label}</p>
		</div>
	))}
	</div>
	</div>
	</section>

	<!-- Engagement options -->
	<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="engagement-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="engagement-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Engagement Options
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		Dedicated SEO specialists on a full-time or part-time basis — or paired with content and lifecycle specialists for a full organic growth team.
	</p>
	</div>

	<div class="mt-10 grid gap-5 md:grid-cols-2">
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<p class="text-xs font-semibold uppercase tracking-wide text-marketing">Individual Specialist</p>
		<h3 class="mt-3 text-lg font-semibold text-slate-100">Dedicated SEO Specialist</h3>
		<p class="mt-3 text-sm leading-relaxed text-slate-400">
		Full-time (40h/week) or part-time (20h/week) SEO specialist — technical, content, off-page — owning your organic growth channel end to end.
		</p>
		<p class="mt-4 text-sm font-semibold text-marketing">From ~$2,500/mo</p>
	</div>
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<p class="text-xs font-semibold uppercase tracking-wide text-marketing">SEO + Content Pod</p>
		<h3 class="mt-3 text-lg font-semibold text-slate-100">Organic Growth Team</h3>
		<p class="mt-3 text-sm leading-relaxed text-slate-400">
		SEO specialist paired with a content writer and/or lifecycle specialist — a coordinated team that executes from keyword research through published, optimized content.
		</p>
		<p class="mt-4 text-sm font-semibold text-marketing">Custom pricing</p>
	</div>
	</div>
	</div>
	</section>

	<!-- Pricing guidance -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="pricing-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="pricing-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Pricing Guidance
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		Dedicated SEO specialists start at approximately <strong class="text-slate-100">$2,500/month</strong> for full-time engagement. Specialists with enterprise technical SEO expertise, programmatic SEO skills, or international SEO experience may be higher. Part-time and pod options are available.
	</p>
	<a
		href="/how-pricing-works/"
		class="mt-4 inline-flex items-center gap-1.5 text-sm font-semibold text-sky-300 transition hover:text-sky-200/80 focus:outline-none focus-visible:underline"
	>
		See how pricing works <span aria-hidden="true">&rarr;</span>
	</a>
	</div>
	</div>
	</section>

	<!-- FAQ -->
	<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="faq-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="faq-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Frequently Asked Questions
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		Common questions about dedicated SEO specialists for US teams.
	</p>
	</div>

	<div class="mt-10 grid gap-3">
	{faqs.map((item) => (
	<details class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<summary class="cursor-pointer list-none text-sm font-semibold text-slate-100 [&::-webkit-details-marker]:hidden">
		{item.q}
		</summary>
		<p class="mt-4 pt-4 text-sm leading-relaxed text-slate-400 border-t border-slate-800">{item.a}</p>
	</details>
	))}
	</div>
	</div>
	</section>

	<!-- CTA -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="cta-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-8 text-center shadow-xl sm:p-12">
	<h2 id="cta-heading" class="text-3xl font-semibold tracking-tight text-white sm:text-4xl">
		Ready for a Dedicated SEO Specialist?
	</h2>
	<p class="mx-auto mt-4 max-w-xl text-base leading-relaxed text-slate-300">
		Book a call to discuss your organic growth goals, current SEO gaps, and tech stack — or share your requirements and we'll propose the best-fit specialist.
	</p>
	<div class="mt-8 flex flex-wrap items-center justify-center gap-4">
	<a
		href={bookingUrl}
		{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
		class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-8 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
		data-book-call
	>
		Book an SEO Specialist Call
	</a>
	<a
		href="#contact"
		class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/40 px-8 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
		data-open-tell-us="seo-cta"
	>
		Tell Us What You Need
	</a>
	</div>
	<p class="mt-5 text-xs text-slate-400">Month-to-month · Free replacement guarantee · No long-term contracts</p>
	</div>
	</div>
	</section>

	<!-- Contact -->
	<section id="contact" class="bg-slate-950 pb-20 pt-16 sm:pb-24 sm:pt-20" aria-labelledby="contact-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
		<p class="text-sm font-semibold uppercase tracking-widest text-sky-300">Get in touch</p>
		<h2 id="contact-heading" class="mt-3 text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Let's Talk SEO
		</h2>
		<p class="mt-4 text-base leading-relaxed text-slate-400">
		Share your SEO goals, current tools, and biggest gaps — we'll match you with a vetted SEO specialist.
		</p>
	</div>

	<ContactHub subject={`${brand} – SEO specialist inquiry`} defaultCategory="marketing" defaultMessage="I'm interested in a dedicated SEO specialist." />
	</div>
	</section>

	</main>

	<style>
	.js-fade-in {
		opacity: 0;
		transform: translateY(20px);
		transition: opacity 0.35s ease-out, transform 0.35s ease-out;
	}
	.js-fade-in.is-visible {
		opacity: 1;
		transform: translateY(0);
	}
	</style>

	<script is:inline>
	(function () {
		var els = document.querySelectorAll('.js-fade-in');
		if (!els.length) return;
		var io = new IntersectionObserver(function (entries) {
		entries.forEach(function (e) {
			if (e.isIntersecting) {
			e.target.classList.add('is-visible');
			io.unobserve(e.target);
			}
		});
		}, { threshold: 0.1, rootMargin: '0px 0px -40px 0px' });
		els.forEach(function (el) { io.observe(el); });
	})();
	</script>
</Layout>
