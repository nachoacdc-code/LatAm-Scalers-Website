---
import Layout from '../../../layouts/Layout.astro';
import MetaHead from '../../../components/MetaHead.astro';
import ContactHub from '../../../components/ContactHub.astro';
import { BOOKING_URL, isExternalUrl } from '../../../lib/cta';

const brand = 'LatAm Scalers';

const meta = {
	title: 'Hire a Klaviyo Expert – Dedicated LATAM Klaviyo Specialists for DTC & E-commerce | LatAm Scalers',
	description:
		'Dedicated Klaviyo experts for DTC and e-commerce brands. Email and SMS flows, list segmentation, lifecycle automation, and retention revenue. Full-time from ~$2,500/mo. Month-to-month.',
};

const baseUrl = Astro.site ?? 'https://latam-scalers-website.vercel.app';
const canonical = new URL('/marketing/klaviyo-expert/', baseUrl).toString();

const bookingUrl = BOOKING_URL;
const bookingExternal = isExternalUrl(bookingUrl);

const klaviyoAreas = [
	{
		name: 'Email Flows',
		desc: 'Welcome series, abandoned cart, post-purchase, win-back, browse abandonment, and replenishment flows — built and optimized continuously.',
		focus: 'Revenue-generating automation that runs on its own',
	},
	{
		name: 'SMS Flows & Campaigns',
		desc: 'SMS list growth, compliance (TCPA/CTIA), transactional SMS, promotional campaigns, and SMS-specific segmentation.',
		focus: 'High-open-rate channel for DTC brands',
	},
	{
		name: 'List Segmentation',
		desc: 'RFM segmentation, behavioral triggers, predictive analytics, VIP tiers, at-risk cohorts, and suppression management.',
		focus: 'Send the right message to the right segment',
	},
	{
		name: 'Campaign Management',
		desc: 'Promotional campaign calendars, A/B testing, subject line optimization, send-time optimization, and performance analysis.',
		focus: 'Consistent campaign execution with measurable lift',
	},
	{
		name: 'Analytics & Reporting',
		desc: 'Revenue attribution, flow performance dashboards, deliverability monitoring, list health, and LTV analysis by segment.',
		focus: 'Clarity on what email and SMS actually drive',
	},
	{
		name: 'Tech Stack Integrations',
		desc: 'Shopify, Shopify Plus, WooCommerce, Recharge, Postscript, Attentive, Gorgias, and custom API integrations.',
		focus: 'Klaviyo connected across your DTC stack',
	},
];

const deliverables = [
	'Full Klaviyo account audit and flow optimization',
	'Core flow builds: welcome, abandoned cart, post-purchase',
	'Win-back and replenishment flow development',
	'SMS list growth and compliance setup',
	'RFM and behavioral segmentation models',
	'Campaign calendar execution and A/B testing',
	'Deliverability monitoring and list hygiene',
	'Revenue attribution dashboards',
];

const retentionStats = [
	{ value: '+20%', label: 'YoY demand growth for lifecycle and email retention specialists' },
	{ value: '20–30%', label: 'Of DTC revenue typically generated by email and SMS channels' },
	{ value: '5%', label: 'Reduction in churn can increase profit by 25–95%' },
];

const faqs = [
	{
		q: 'What experience do your Klaviyo specialists have?',
		a: 'Our Klaviyo specialists typically have 3–6+ years of hands-on experience with DTC and e-commerce brands. We vet for flow architecture, segmentation strategy, deliverability management, and revenue attribution — not just template-level familiarity. Many have managed accounts generating $500K–$5M+ in email/SMS revenue annually.',
	},
	{
		q: 'Can they build all the core DTC flows?',
		a: 'Yes. Welcome series, abandoned cart (browse, cart, checkout), post-purchase upsell, win-back, replenishment, and VIP flows are standard deliverables. Your specialist audits existing flows first, then rebuilds or optimizes based on performance data.',
	},
	{
		q: 'Do they handle SMS as well as email?',
		a: 'Yes. Our Klaviyo specialists manage both email and SMS within Klaviyo — list growth, TCPA/CTIA compliance, SMS-specific flows, and integrated email+SMS sequences. If your brand is SMS-heavy, we can also work with Attentive or Postscript alongside Klaviyo.',
	},
	{
		q: 'Can they integrate Klaviyo with our Shopify store?',
		a: 'Yes. Shopify and Shopify Plus integration is the most common setup — syncing product catalog, order data, customer properties, and behavioral events. We also integrate with Recharge for subscriptions, Gorgias for support, and other DTC tools in your stack.',
	},
	{
		q: 'How do they report on Klaviyo performance?',
		a: 'Weekly reporting cadence covering revenue attributed to email/SMS, flow performance by type, campaign results, deliverability metrics, and list health. Dashboards built in Klaviyo native analytics or Looker Studio depending on your preference.',
	},
	{
		q: 'What does pricing look like?',
		a: 'Dedicated Klaviyo experts start at approximately $2,500/month for full-time (40h/week). Specialists with advanced segmentation experience, high-revenue account history, or multi-brand management expertise may be higher. Part-time options are available.',
	},
];

const serviceJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'Service',
	name: 'Dedicated Klaviyo Expert',
	description: meta.description,
	provider: { '@type': 'Organization', name: brand, url: baseUrl },
};

const faqJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'FAQPage',
	mainEntity: faqs.map((f) => ({
		'@type': 'Question',
		name: f.q,
		acceptedAnswer: { '@type': 'Answer', text: f.a },
	})),
};
---

<Layout>
	<MetaHead slot="head" title={meta.title} description={meta.description} canonical={canonical} jsonLd={[serviceJsonLd, faqJsonLd]} />

	<main>

	<!-- Hero -->
	<section class="relative overflow-hidden bg-slate-950 py-16 sm:py-24" aria-labelledby="hero-heading">
		<div class="mx-auto max-w-6xl px-6">
		<div class="js-fade-in">
		<p class="text-sm font-semibold uppercase tracking-widest text-marketing">Klaviyo Expert</p>
	<h1 id="hero-heading" class="mt-4 text-4xl font-semibold leading-tight tracking-tight text-white sm:text-5xl lg:text-[3.25rem]">
		Dedicated Klaviyo Experts for DTC &amp; E-commerce Brands
	</h1>
	<p class="mt-5 max-w-xl text-base leading-relaxed text-slate-300 sm:text-lg">
		Email and SMS lifecycle specialists who own your retention channel — flows, campaigns, segmentation, deliverability. Not an agency managing 40 accounts. One dedicated Klaviyo expert, fully embedded in your brand.
	</p>

	<div class="mt-8 flex flex-wrap gap-3">
	<a
		href={bookingUrl}
		{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
		class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-6 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
		data-book-call
	>
		Book a Klaviyo Expert Call
	</a>
	<a
		href="#contact"
		class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/40 px-6 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
		data-open-tell-us="klaviyo-hero"
	>
		Tell Us What You Need
	</a>
	</div>
	</div>
	</div>
	</section>

	<!-- Service overview -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="overview-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="overview-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Retention Is Your Most Profitable Revenue Channel
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		Email and SMS typically drive 20–30% of DTC revenue — at near-zero incremental CAC. A 5% reduction in churn increases profit by 25–95%. The brands that win retention win on unit economics.
	</p>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		Most Klaviyo accounts are under-built. Flows triggered by shallow events, segments too broad to convert, campaigns sent on intuition rather than data. A dedicated Klaviyo expert fixes the infrastructure and keeps improving it — full-time, in your account, learning your customer base.
	</p>
	<ul class="mt-6 grid gap-3 sm:grid-cols-2">
	<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
		<span class="text-marketing" aria-hidden="true">✓</span>
		<span class="text-sm text-slate-400"><strong class="text-slate-100">DTC-native</strong> — Shopify, flows, retention economics</span>
	</li>
	<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
		<span class="text-marketing" aria-hidden="true">✓</span>
		<span class="text-sm text-slate-400"><strong class="text-slate-100">Full-time dedicated</strong> — not shared across accounts</span>
	</li>
	<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
		<span class="text-marketing" aria-hidden="true">✓</span>
		<span class="text-sm text-slate-400"><strong class="text-slate-100">Email + SMS</strong> — both channels, one specialist</span>
	</li>
	<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
		<span class="text-marketing" aria-hidden="true">✓</span>
		<span class="text-sm text-slate-400"><strong class="text-slate-100">Month-to-month</strong> — scale up or pause anytime</span>
	</li>
	</ul>
	</div>
	</div>
	</section>

	<!-- Klaviyo areas -->
	<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="areas-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="areas-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		What Your Klaviyo Expert Owns
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		From flow architecture to campaign execution to deliverability — end-to-end ownership of your retention channel.
	</p>
	</div>

	<div class="mt-10 grid gap-5 lg:grid-cols-3">
	{klaviyoAreas.map((area) => (
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<p class="text-xs font-semibold uppercase tracking-wide text-marketing">{area.name}</p>
		<p class="mt-3 text-sm leading-relaxed text-slate-400">{area.desc}</p>
		<p class="mt-4 text-xs text-slate-500"><strong class="text-slate-400">Focus:</strong> {area.focus}</p>
	</div>
	))}
	</div>
	</div>
	</section>

	<!-- Deliverables -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="deliverables-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="deliverables-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Deliverables
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		Ongoing Klaviyo management — not a one-time flow build handed over and forgotten.
	</p>
	</div>

	<div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
	{deliverables.map((item) => (
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<p class="text-sm font-semibold text-slate-100">{item}</p>
	</div>
	))}
	</div>
	</div>
	</section>

	<!-- Retention stats -->
	<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="retention-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in">
	<h2 id="retention-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		The Retention Economics Case
	</h2>
	<p class="mt-4 max-w-2xl text-base leading-relaxed text-slate-400">
		Email and SMS are the highest-ROI channels in DTC. Demand for experienced Klaviyo operators has grown +20% YoY as brands shift from acquisition-only to retention-first growth strategies.
	</p>
	</div>
	<div class="mt-10 grid gap-6 sm:grid-cols-3">
	{retentionStats.map((stat) => (
		<div class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
			<p class="text-2xl font-bold text-marketing">{stat.value}</p>
			<p class="mt-2 text-sm font-medium text-slate-100">{stat.label}</p>
		</div>
	))}
	</div>
	</div>
	</section>

	<!-- Engagement options -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="engagement-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="engagement-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Engagement Options
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		Dedicated Klaviyo experts on a full-time or part-time basis — or as part of a broader DTC marketing pod.
	</p>
	</div>

	<div class="mt-10 grid gap-5 md:grid-cols-2">
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<p class="text-xs font-semibold uppercase tracking-wide text-marketing">Individual Specialist</p>
		<h3 class="mt-3 text-lg font-semibold text-slate-100">Dedicated Klaviyo Expert</h3>
		<p class="mt-3 text-sm leading-relaxed text-slate-400">
		Full-time (40h/week) or part-time (20h/week) Klaviyo expert — email flows, SMS, segmentation, and campaign management — fully embedded in your brand.
		</p>
		<p class="mt-4 text-sm font-semibold text-marketing">From ~$2,500/mo</p>
	</div>
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<p class="text-xs font-semibold uppercase tracking-wide text-marketing">DTC Lifecycle Pod</p>
		<h3 class="mt-3 text-lg font-semibold text-slate-100">Klaviyo + Paid Media</h3>
		<p class="mt-3 text-sm leading-relaxed text-slate-400">
		Klaviyo expert paired with a paid media specialist — a coordinated retention + acquisition team that optimizes both channels around shared LTV and ROAS goals.
		</p>
		<p class="mt-4 text-sm font-semibold text-marketing">Custom pricing</p>
	</div>
	</div>
	</div>
	</section>

	<!-- Pricing guidance -->
	<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="pricing-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="pricing-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Pricing Guidance
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		Dedicated Klaviyo experts start at approximately <strong class="text-slate-100">$2,500/month</strong> for full-time engagement. Specialists with advanced segmentation experience, high-revenue account history, or multi-brand management expertise may be higher. Part-time and pod options are available.
	</p>
	<a
		href="/how-pricing-works/"
		class="mt-4 inline-flex items-center gap-1.5 text-sm font-semibold text-sky-300 transition hover:text-sky-200/80 focus:outline-none focus-visible:underline"
	>
		See how pricing works <span aria-hidden="true">&rarr;</span>
	</a>
	</div>
	</div>
	</section>

	<!-- FAQ -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="faq-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="faq-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Frequently Asked Questions
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		Common questions about dedicated Klaviyo experts for DTC and e-commerce brands.
	</p>
	</div>

	<div class="mt-10 grid gap-3">
	{faqs.map((item) => (
	<details class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<summary class="cursor-pointer list-none text-sm font-semibold text-slate-100 [&::-webkit-details-marker]:hidden">
		{item.q}
		</summary>
		<p class="mt-4 pt-4 text-sm leading-relaxed text-slate-400 border-t border-slate-800">{item.a}</p>
	</details>
	))}
	</div>
	</div>
	</section>

	<!-- CTA -->
	<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="cta-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-8 text-center shadow-xl sm:p-12">
	<h2 id="cta-heading" class="text-3xl font-semibold tracking-tight text-white sm:text-4xl">
		Ready for a Dedicated Klaviyo Expert?
	</h2>
	<p class="mx-auto mt-4 max-w-xl text-base leading-relaxed text-slate-300">
		Tell us your Shopify setup, current Klaviyo usage, and retention goals — we'll match you with a specialist within 48 hours.
	</p>
	<div class="mt-8 flex flex-wrap items-center justify-center gap-4">
	<a
		href={bookingUrl}
		{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
		class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-8 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
		data-book-call
	>
		Book a Klaviyo Expert Call
	</a>
	<a
		href="#contact"
		class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/40 px-8 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
		data-open-tell-us="klaviyo-cta"
	>
		Tell Us What You Need
	</a>
	</div>
	<p class="mt-5 text-xs text-slate-400">Month-to-month · Free replacement guarantee · DTC-native Klaviyo specialists</p>
	</div>
	</div>
	</section>

	<!-- Contact -->
	<section id="contact" class="bg-slate-950 pb-20 pt-16 sm:pb-24 sm:pt-20" aria-labelledby="contact-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
		<p class="text-sm font-semibold uppercase tracking-widest text-sky-300">Get in touch</p>
		<h2 id="contact-heading" class="mt-3 text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Let's Talk Klaviyo
		</h2>
		<p class="mt-4 text-base leading-relaxed text-slate-400">
		Share your Shopify setup, retention goals, and current Klaviyo situation — we'll match you with a vetted Klaviyo expert.
		</p>
	</div>

	<ContactHub subject={`${brand} – Klaviyo expert inquiry`} defaultCategory="marketing" defaultMessage="I'm interested in a dedicated Klaviyo expert." />
	</div>
	</section>

	</main>

	<style>
	.js-fade-in {
		opacity: 0;
		transform: translateY(20px);
		transition: opacity 0.35s ease-out, transform 0.35s ease-out;
	}
	.js-fade-in.is-visible {
		opacity: 1;
		transform: translateY(0);
	}
	</style>

	<script is:inline>
	(function () {
		var els = document.querySelectorAll('.js-fade-in');
		if (!els.length) return;
		var io = new IntersectionObserver(function (entries) {
		entries.forEach(function (e) {
			if (e.isIntersecting) {
			e.target.classList.add('is-visible');
			io.unobserve(e.target);
			}
		});
		}, { threshold: 0.1, rootMargin: '0px 0px -40px 0px' });
		els.forEach(function (el) { io.observe(el); });
	})();
	</script>
</Layout>
