---
import Layout from '../../layouts/Layout.astro';
import MetaHead from '../../components/MetaHead.astro';
import ContactHub from '../../components/ContactHub.astro';
import { BOOKING_URL, isExternalUrl } from '../../lib/cta';

const meta = {
	title: 'Marketing Talent Solutions | Dedicated SEO, PPC, MarOps Specialists | LatAm Scalers',
	description:
		'Revenue-focused marketing operators embedded in your team – not fractional CMO, not agency project work. HubSpot, Salesforce, Klaviyo certified specialists. Dedicated full-time from ~$2,500/mo.',
};

const baseUrl = Astro.site ?? 'https://latam-scalers-website.vercel.app';
const canonical = new URL('/marketing/', baseUrl).toString();

const faqs = [
	{
		q: 'Are these dedicated specialists or fractional/part-time consultants?',
		a: 'These are full-time dedicated specialists embedded in your team – not fractional CMO, not agency project work. One person, your channels, your goals. Month-to-month flexibility with a free replacement guarantee.',
	},
	{
		q: 'Can we start with MarOps or RevOps before hiring channel specialists?',
		a: 'Yes. Many teams start with HubSpot, Salesforce, or Klaviyo certified operators to clean up infrastructure, reporting, and lifecycle – then add SEO, PPC, or content specialists once the foundation is solid.',
	},
	{
		q: 'How do Marketing Pods differ from individual specialists?',
		a: 'Individual specialists are single-channel owners (e.g. one SEO, one PPC). Marketing Pods are custom teams of complementary specialists – e.g. SEO + Content + Lifecycle – with optional PM coordination for end-to-end execution.',
	},
	{
		q: 'What tools and platforms do your specialists support?',
		a: 'HubSpot, Salesforce, Klaviyo, GA4, Marketo, Meta Ads, Google Ads – and similar stacks. We match specialists to your tools and workflows. Tell us your stack in the scoping call.',
	},
	{
		q: 'How fast can we receive candidates?',
		a: 'Shortlist typically within 48 hours after the scoping call. Once goals and access are confirmed, onboarding is designed to be fast – productive within days, not months.',
	},
];

const faqJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'FAQPage',
	mainEntity: faqs.map((f) => ({
		'@type': 'Question',
		name: f.q,
		acceptedAnswer: { '@type': 'Answer', text: f.a },
	})),
};

const serviceJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'Service',
	name: 'Marketing Talent Solutions',
	description: meta.description,
	provider: { '@type': 'Organization', name: 'LatAm Scalers', url: baseUrl },
};

const roles = [
	{ label: 'SEO Specialist', href: '/roles/seo-specialist/' },
	{ label: 'PPC Manager', href: '/roles/ppc-manager/' },
	{ label: 'HubSpot Specialist', href: '/roles/' },
	{ label: 'Content Marketer', href: '/roles/content-marketer/' },
	{ label: 'Lifecycle Email Specialist', href: '/roles/' },
	{ label: 'Growth Marketer', href: '/roles/' },
];

const tools = [
	{ name: 'HubSpot', slug: 'hubspot' },
	{ name: 'Salesforce', slug: 'salesforce' },
	{ name: 'Klaviyo', slug: 'klaviyo' },
	{ name: 'GA4', slug: 'ga4' },
	{ name: 'Marketo', slug: 'marketo' },
	{ name: 'Meta Ads', slug: 'meta-ads' },
	{ name: 'Google Ads', slug: 'google-ads' },
];

const bookingUrl = BOOKING_URL;
const bookingExternal = isExternalUrl(bookingUrl);
const calendlyUrl = import.meta.env.PUBLIC_CALENDLY_URL ?? 'https://calendly.com/your-org/15min';
---

<Layout>
	<MetaHead
		slot="head"
		title={meta.title}
		description={meta.description}
		canonical={canonical}
		jsonLd={[serviceJsonLd, faqJsonLd]}
	/>

	<main>
		<!-- SECTION 1 – HERO (bg-slate-950) -->
		<section class="relative overflow-hidden bg-slate-950 py-16 sm:py-24" aria-labelledby="hero-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in">
					<p class="text-sm font-semibold uppercase tracking-widest text-sky-300">Marketing Talent Solutions</p>
					<h1 id="hero-heading" class="mt-4 text-4xl font-semibold leading-tight tracking-tight text-white sm:text-5xl lg:text-[3.25rem]">
						Dedicated Marketing Specialists Who Own Your Channels
					</h1>
					<p class="mt-5 max-w-xl text-base leading-relaxed text-slate-300 sm:text-lg">
						Not shared freelancers. Not generic marketing support. Dedicated channel owners. Revenue-focused operators embedded in your team – SEO, PPC, lifecycle, content. HubSpot, Salesforce, Klaviyo certified. Matched in under one week, month-to-month flexibility.
					</p>
					<div class="mt-8 flex flex-wrap gap-3">
						<a
							href={bookingUrl}
							{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
							class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-6 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
							data-book-call
						>
							Book a Marketing Scoping Call
						</a>
						<a
							href="/#contact"
							class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/60 px-6 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
							data-open-tell-us="marketing-hero"
						>
							Tell Us What You Need
						</a>
					</div>
				</div>
			</div>
		</section>

		<!-- SECTION 2 – MARKETING MICRO-CLARIFIER (bg-slate-950) -->
