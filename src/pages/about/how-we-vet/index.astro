---
import Layout from '../../../layouts/Layout.astro';
import MetaHead from '../../../components/MetaHead.astro';
import ContactHub from '../../../components/ContactHub.astro';
import { BOOKING_URL, isExternalUrl } from '../../../lib/cta';

const brand = 'LatAm Scalers';

const meta = {
	title: 'How We Vet – Our 5-Stage Screening Process | LatAm Scalers',
	description:
		'LatAm Scalers uses a rigorous 5-stage vetting process for US companies: application screening, language and culture assessment, technical evaluation, portfolio review, and final interview. Less than 3% of applicants are placed.',
};

const baseUrl = Astro.site ?? 'https://latam-scalers-website.vercel.app';
const canonical = new URL('/about/how-we-vet/', baseUrl).toString();

const bookingUrl = BOOKING_URL;
const bookingExternal = isExternalUrl(bookingUrl);
const calendlyUrl = import.meta.env.PUBLIC_CALENDLY_URL ?? import.meta.env.PUBLIC_BOOKING_URL ?? 'https://calendly.com/your-org/15min';

const stages = [
	{
		num: '1',
		title: 'Application Screening',
		passRate: '~40% pass',
		desc: 'We review every application for relevant experience, education, and professional background. Only candidates with demonstrated domain expertise in AEC, design, or marketing move forward.',
		criteria: ['3+ years of relevant experience', 'Professional portfolio or work samples', 'Appropriate educational background', 'Alignment with US market standards'],
	},
	{
		num: '2',
		title: 'Language & Culture Assessment',
		passRate: '~60% pass',
		desc: 'Live assessment of English proficiency (C1+ required), communication clarity, and cultural compatibility with US business environments. We evaluate how candidates collaborate, not just how they speak.',
		criteria: ['C1+ English proficiency (CEFR)', 'Clear written and verbal communication', 'US business culture understanding', 'Professional demeanor and responsiveness'],
	},
	{
		num: '3',
		title: 'Technical Evaluation',
		passRate: '~50% pass',
		desc: 'Role-specific technical assessments tailored to each discipline. AEC candidates complete BIM/CAD challenges. Designers submit Figma exercises. Marketers demonstrate platform proficiency.',
		criteria: ['Tool-specific proficiency tests', 'Problem-solving exercises', 'Deliverable quality evaluation', 'Speed and accuracy benchmarks'],
	},
	{
		num: '4',
		title: 'Portfolio & Reference Review',
		passRate: '~70% pass',
		desc: 'Deep review of past work, client outcomes, and professional references. We verify not just what candidates can do, but what they have done – and how their clients and managers evaluated the results.',
		criteria: ['Work sample quality assessment', 'Client or employer references', 'Project outcome verification', 'Consistency across multiple projects'],
	},
	{
		num: '5',
		title: 'Final Interview & Calibration',
		passRate: '~80% pass',
		desc: 'A structured interview covering work style, availability, timezone overlap commitment, and calibration against our placement standards. We confirm the candidate is ready to be embedded in a US team.',
		criteria: ['Work style and collaboration fit', 'Timezone overlap commitment', 'Long-term availability confirmation', 'Final quality calibration'],
	},
];

const faqs = [
	{
		q: 'What percentage of applicants make it through the full vetting process?',
		a: 'Less than 3% of applicants are ultimately placed with clients. Our 5-stage process is intentionally rigorous – we\'d rather present fewer, higher-quality options than flood you with unvetted candidates.',
	},
	{
		q: 'How long does the vetting process take for each candidate?',
		a: 'The full vetting pipeline takes 2–4 weeks per candidate. However, we maintain a pre-vetted bench of specialists, so when you submit a request, we can typically present matched options within 48 hours from our existing vetted pool.',
	},
	{
		q: 'Are technical assessments customized by role?',
		a: 'Yes. A BIM coordinator receives a Navisworks clash detection exercise. A UX designer gets a Figma prototyping challenge. An SEO specialist demonstrates keyword strategy and audit capability. Every assessment mirrors real-world deliverables for the specific role.',
	},
	{
		q: 'Do you re-vet specialists who have been in your pool for a while?',
		a: 'We conduct periodic re-evaluations and monitor ongoing client feedback. Specialists who receive consistent positive feedback maintain their vetted status. Anyone who falls below our standards is removed from the active bench.',
	},
	{
		q: 'Can I see the vetting results for a specific candidate?',
		a: 'Yes. When we present candidates, we include a summary of their vetting scores, relevant work samples, and our assessment notes. You always have full visibility into why we recommend someone.',
	},
];

const webPageJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'WebPage',
	name: meta.title,
	description: meta.description,
	url: canonical,
	isPartOf: { '@type': 'WebSite', name: brand, url: baseUrl },
};

const faqJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'FAQPage',
	mainEntity: faqs.map((f) => ({
		'@type': 'Question',
		name: f.q,
		acceptedAnswer: { '@type': 'Answer', text: f.a },
	})),
};
---

<Layout>
	<MetaHead slot="head" title={meta.title} description={meta.description} canonical={canonical} jsonLd={[webPageJsonLd, faqJsonLd]} />

	<main>

		<!-- Hero -->
		<section class="relative overflow-hidden bg-slate-950 py-16 sm:py-24" aria-labelledby="hero-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in">
					<p class="text-sm font-semibold uppercase tracking-widest text-sky-300">How we vet</p>
					<h1 id="hero-heading" class="mt-4 text-4xl font-semibold leading-tight tracking-tight text-white sm:text-5xl lg:text-[3.25rem]">
						5-Stage Vetting – Why Less Than 3% of Applicants Make It Through
					</h1>
					<p class="mt-5 max-w-xl text-base leading-relaxed text-slate-300 sm:text-lg">
						Every specialist we present to US teams has passed a rigorous, multi-stage screening process. We invest the time upfront so you don't have to.
					</p>

					<div class="mt-8 flex flex-wrap gap-3">
						<a
							href={bookingUrl}
							{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
							class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-6 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
							data-book-call
						>
							Book a 30-Minute Call
						</a>
						<a
							href="/get-started/"
							class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/40 px-6 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
						>
							Get Started &rarr;
						</a>
					</div>
				</div>
			</div>
		</section>

		<!-- Funnel overview -->
		<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="funnel-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="funnel-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						The Vetting Funnel
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						From thousands of applicants to the specialists we present to your team – here's how the funnel narrows at each stage.
					</p>
				</div>

				<!-- Visual funnel -->
				<div class="js-fade-in mt-10 flex flex-col items-center gap-2">
					<div class="flex w-full max-w-2xl items-center gap-4 rounded-2xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
						<div class="flex h-10 w-10 shrink-0 items-center justify-center rounded-full bg-slate-800 text-sm font-bold text-slate-300">100%</div>
						<div>
							<p class="text-sm font-semibold text-slate-100">All applicants</p>
							<p class="text-xs text-slate-400">Thousands of applications received per quarter</p>
						</div>
					</div>
					<div class="h-6 w-0.5 bg-slate-700"></div>
					<div class="flex w-full max-w-xl items-center gap-4 rounded-2xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
						<div class="flex h-10 w-10 shrink-0 items-center justify-center rounded-full bg-slate-800 text-sm font-bold text-slate-300">40%</div>
						<div>
							<p class="text-sm font-semibold text-slate-100">Pass screening</p>
							<p class="text-xs text-slate-400">Experience and background verified</p>
						</div>
					</div>
					<div class="h-6 w-0.5 bg-slate-700"></div>
					<div class="flex w-full max-w-lg items-center gap-4 rounded-2xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
						<div class="flex h-10 w-10 shrink-0 items-center justify-center rounded-full bg-slate-800 text-sm font-bold text-slate-300">24%</div>
						<div>
							<p class="text-sm font-semibold text-slate-100">Pass language & culture</p>
							<p class="text-xs text-slate-400">C1+ English, US business readiness</p>
						</div>
					</div>
					<div class="h-6 w-0.5 bg-slate-700"></div>
					<div class="flex w-full max-w-md items-center gap-4 rounded-2xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
						<div class="flex h-10 w-10 shrink-0 items-center justify-center rounded-full bg-slate-800 text-sm font-bold text-slate-300">12%</div>
						<div>
							<p class="text-sm font-semibold text-slate-100">Pass technical evaluation</p>
							<p class="text-xs text-slate-400">Role-specific skills validated</p>
						</div>
					</div>
					<div class="h-6 w-0.5 bg-slate-700"></div>
					<div class="flex w-full max-w-sm items-center gap-4 rounded-2xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
						<div class="flex h-10 w-10 shrink-0 items-center justify-center rounded-full bg-slate-800 text-sm font-bold text-slate-300">8%</div>
						<div>
							<p class="text-sm font-semibold text-slate-100">Pass portfolio review</p>
							<p class="text-xs text-slate-400">Work quality and references verified</p>
						</div>
					</div>
					<div class="h-6 w-0.5 bg-slate-700"></div>
					<div class="flex w-full max-w-xs items-center gap-4 rounded-2xl border border-sky-600/30 bg-sky-600/10 p-4 shadow-lg shadow-black/20">
						<div class="flex h-10 w-10 shrink-0 items-center justify-center rounded-full bg-sky-600 text-sm font-bold text-white">&lt;3%</div>
						<div>
							<p class="text-sm font-semibold text-sky-300">Placed with clients</p>
							<p class="text-xs text-slate-400">Ready to integrate into your team</p>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Stage details -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="stages-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="stages-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Inside Each Stage
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						What we evaluate, how we evaluate it, and what percentage of candidates advance.
					</p>
				</div>

				<div class="mt-10 grid gap-6">
					{stages.map((stage) => (
						<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
							<div class="flex flex-col gap-4 md:flex-row md:items-start md:justify-between">
								<div class="max-w-2xl">
									<div class="flex items-center gap-3">
										<div class="flex h-10 w-10 items-center justify-center rounded-xl border border-slate-800 bg-slate-950/40">
											<span class="text-sm font-semibold text-sky-300">{stage.num}</span>
										</div>
										<div>
											<h3 class="text-base font-semibold text-slate-100">{stage.title}</h3>
											<p class="text-xs font-semibold text-sky-300/70">{stage.passRate}</p>
										</div>
									</div>
									<p class="mt-3 text-sm leading-relaxed text-slate-400">{stage.desc}</p>
								</div>
								<div class="w-full md:max-w-xs">
									<p class="text-xs font-semibold uppercase tracking-wide text-slate-400">What we evaluate</p>
									<ul class="mt-3 space-y-2">
										{stage.criteria.map((c) => (
											<li class="flex items-start gap-2 text-sm text-slate-400">
												<span class="text-sky-300" aria-hidden="true">&#x2713;</span>
												{c}
											</li>
										))}
									</ul>
								</div>
							</div>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- Category-specific vetting -->
		<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="category-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="category-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Vetting by Category
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Technical evaluations are tailored to each discipline. Here's what specialists face in each category.
					</p>
				</div>

				<div class="mt-10 grid gap-5 md:grid-cols-3">
					<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
						<p class="text-xs font-semibold uppercase tracking-wide text-aec">AEC</p>
						<h3 class="mt-3 text-base font-semibold text-slate-100">Architecture, Engineering & Construction</h3>
						<ul class="mt-4 space-y-2 text-sm text-slate-400">
							<li>Revit modeling proficiency test</li>
							<li>Navisworks clash detection exercise</li>
							<li>AutoCAD drafting standards check</li>
							<li>BEP compliance evaluation</li>
							<li>US construction documentation standards</li>
						</ul>
					</div>
					<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
						<p class="text-xs font-semibold uppercase tracking-wide text-design">Design</p>
						<h3 class="mt-3 text-base font-semibold text-slate-100">Creative & Design</h3>
						<ul class="mt-4 space-y-2 text-sm text-slate-400">
							<li>Figma design challenge (UI/UX)</li>
							<li>Adobe Creative Cloud proficiency</li>
							<li>Brand guideline interpretation</li>
							<li>Design system understanding</li>
							<li>Responsive design principles</li>
						</ul>
					</div>
					<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
						<p class="text-xs font-semibold uppercase tracking-wide text-marketing">Marketing</p>
						<h3 class="mt-3 text-base font-semibold text-slate-100">Marketing & Operations</h3>
						<ul class="mt-4 space-y-2 text-sm text-slate-400">
							<li>Platform-specific certifications verified</li>
							<li>Campaign setup and audit exercises</li>
							<li>Analytics and attribution knowledge</li>
							<li>CRM and automation proficiency</li>
							<li>US market strategy understanding</li>
						</ul>
					</div>
				</div>
			</div>
		</section>

		<!-- FAQ -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="faq-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="faq-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Frequently Asked Questions
					</h2>
				</div>

				<div class="mt-10 grid gap-3">
					{faqs.map((item) => (
						<details class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
							<summary class="cursor-pointer list-none text-sm font-semibold text-slate-100 [&::-webkit-details-marker]:hidden">
								{item.q}
							</summary>
							<p class="mt-4 pt-4 text-sm leading-relaxed text-slate-400 border-t border-slate-800">{item.a}</p>
						</details>
					))}
				</div>
			</div>
		</section>

		<!-- CTA -->
		<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="cta-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-8 text-center shadow-xl sm:p-12">
					<h2 id="cta-heading" class="text-3xl font-semibold tracking-tight text-white sm:text-4xl">
						Work With Pre-Vetted Specialists
					</h2>
					<p class="mx-auto mt-4 max-w-xl text-base leading-relaxed text-slate-300">
						Every specialist we present has passed all 5 stages. Book a call to discuss your needs – we'll match you from our vetted bench.
					</p>
					<div class="mt-8 flex flex-wrap items-center justify-center gap-4">
						<a
							href={bookingUrl}
							{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
							class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-8 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
							data-book-call
						>
							Book a 30-Minute Call
						</a>
						<a
							href="/get-started/"
							class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/40 px-8 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
						>
							Get Started
						</a>
					</div>
					<p class="mt-5 text-xs text-slate-400">Less than 3% placement rate · 5-stage process · Free replacement guarantee</p>
				</div>
			</div>
		</section>

		<!-- Contact -->
		<section id="contact" class="bg-slate-950 pb-20 pt-16 sm:pb-24 sm:pt-20" aria-labelledby="contact-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<p class="text-sm font-semibold uppercase tracking-widest text-sky-300">Get in touch</p>
					<h2 id="contact-heading" class="mt-3 text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Ready to See Vetted Candidates?
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Share your requirements and we'll present pre-vetted specialists matched to your tools, standards, and timeline.
					</p>
				</div>

				<ContactHub subject="${brand} – vetting inquiry" />
			</div>
		</section>

	</main>

	<style>
		.js-fade-in {
			opacity: 0;
			transform: translateY(20px);
			transition: opacity 0.35s ease-out, transform 0.35s ease-out;
		}
		.js-fade-in.is-visible {
			opacity: 1;
			transform: translateY(0);
		}
	</style>

	<script is:inline>
		(function () {
			var els = document.querySelectorAll('.js-fade-in');
			if (!els.length) return;
			var io = new IntersectionObserver(function (entries) {
				entries.forEach(function (e) {
					if (e.isIntersecting) {
						e.target.classList.add('is-visible');
						io.unobserve(e.target);
					}
				});
			}, { threshold: 0.1, rootMargin: '0px 0px -40px 0px' });
			els.forEach(function (el) { io.observe(el); });
		})();
	</script>
</Layout>

