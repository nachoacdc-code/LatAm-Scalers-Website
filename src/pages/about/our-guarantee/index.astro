---
import Layout from '../../../layouts/Layout.astro';
import MetaHead from '../../../components/MetaHead.astro';
import ContactHub from '../../../components/ContactHub.astro';
import { BOOKING_URL, isExternalUrl } from '../../../lib/cta';

const brand = 'LatAm Scalers';

const meta = {
	title: 'Our Guarantee – Risk-Free Engagement for US Teams | LatAm Scalers',
	description:
		'LatAm Scalers offers a dual-model guarantee for US companies: 90-day replacement for direct hire and anytime replacement for month-to-month engagements. No long-term contracts required.',
};

const baseUrl = Astro.site ?? 'https://latam-scalers-website.vercel.app';
const canonical = new URL('/about/our-guarantee/', baseUrl).toString();

const bookingUrl = BOOKING_URL;
const bookingExternal = isExternalUrl(bookingUrl);
const calendlyUrl = import.meta.env.PUBLIC_CALENDLY_URL ?? import.meta.env.PUBLIC_BOOKING_URL ?? 'https://calendly.com/your-org/15min';

const competitors = [
	{ name: 'HireLATAM', guarantee: '90-day replacement', contracts: 'Placement fee upfront', flexibility: 'Limited – find-and-leave model', ongoing: 'None' },
	{ name: 'South', guarantee: '120-day replacement', contracts: 'Monthly subscription', flexibility: 'Cancel anytime', ongoing: 'Basic account management' },
	{ name: 'Near', guarantee: 'Varies by plan', contracts: 'Monthly + placement fee', flexibility: 'Varies', ongoing: 'Limited' },
	{ name: 'Somewhere', guarantee: '90-day guarantee', contracts: 'Monthly fee', flexibility: 'Cancel anytime', ongoing: 'HR support' },
	{ name: 'LatAm Scalers', guarantee: '90-day (direct) / Anytime (monthly)', contracts: 'No placement fee, no lock-in', flexibility: 'Full – scale up or down monthly', ongoing: 'Dedicated account management + free replacement' },
];

const replacementSteps = [
	{ step: '1', title: 'Flag the issue', desc: "Tell us what's not working – performance, fit, availability, anything. No justification hoops." },
	{ step: '2', title: 'We source a replacement', desc: 'We immediately begin sourcing from our pre-vetted bench. Typical turnaround: 48–72 hours for a vetted shortlist.' },
	{ step: '3', title: 'Seamless transition', desc: 'We handle onboarding the replacement and coordinate knowledge transfer so your workflow stays uninterrupted.' },
];

const faqs = [
	{
		q: 'What exactly does "free replacement guarantee" mean?',
		a: 'If a specialist isn\'t meeting expectations – for any reason – we replace them at no additional cost. For month-to-month engagements, this applies at any time during the engagement. For direct-hire placements, the guarantee covers the first 90 days.',
	},
	{
		q: 'Is there a limit on how many replacements I can request?',
		a: 'No hard limit. Our goal is your satisfaction. If the first replacement doesn\'t work either, we\'ll keep matching until you\'re happy. In practice, our vetting process means replacements are rare – less than 5% of placements need a swap.',
	},
	{
		q: 'Do I need to sign a long-term contract?',
		a: 'No. Month-to-month engagements have no lock-in period. You can scale up, scale down, or end the engagement at the end of any month with 30 days notice. Direct-hire placements are a one-time placement with a 90-day guarantee period.',
	},
	{
		q: 'What if I need to pause an engagement temporarily?',
		a: 'We offer flexibility for pauses. Talk to your account manager and we\'ll work out an arrangement – whether that\'s a temporary pause, reduced hours, or reassigning the specialist to a different scope.',
	},
	{
		q: 'How does the direct-hire guarantee differ from month-to-month?',
		a: 'Direct hire: you pay a one-time placement fee, the specialist joins your payroll, and we guarantee a free replacement within 90 days if it doesn\'t work out. Month-to-month: no placement fee, the specialist works through us, and you get an anytime replacement guarantee with full flexibility to scale.',
	},
];

const webPageJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'WebPage',
	name: meta.title,
	description: meta.description,
	url: canonical,
	isPartOf: { '@type': 'WebSite', name: brand, url: baseUrl },
};

const faqJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'FAQPage',
	mainEntity: faqs.map((f) => ({
		'@type': 'Question',
		name: f.q,
		acceptedAnswer: { '@type': 'Answer', text: f.a },
	})),
};
---

<Layout>
	<MetaHead slot="head" title={meta.title} description={meta.description} canonical={canonical} jsonLd={[webPageJsonLd, faqJsonLd]} />

	<main>

		<!-- Hero -->
		<section class="relative overflow-hidden bg-slate-950 py-16 sm:py-24" aria-labelledby="hero-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in">
					<p class="text-sm font-semibold uppercase tracking-widest text-sky-300">Our guarantee</p>
					<h1 id="hero-heading" class="mt-4 text-4xl font-semibold leading-tight tracking-tight text-white sm:text-5xl lg:text-[3.25rem]">
						Zero Risk, Full Flexibility – Our Guarantee to US Teams
					</h1>
					<p class="mt-5 max-w-xl text-base leading-relaxed text-slate-300 sm:text-lg">
						We stand behind every specialist we place. If someone isn't the right fit, we replace them – free, fast, and without friction. No long-term contracts. No placement fees on month-to-month engagements.
					</p>

					<div class="mt-8 flex flex-wrap gap-3">
						<a
							href={bookingUrl}
							{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
							class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-6 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
							data-book-call
						>
							Book a 30-Minute Call
						</a>
						<a
							href="/about/how-we-vet/"
							class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/40 px-6 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
						>
							See How We Vet &rarr;
						</a>
					</div>
				</div>
			</div>
		</section>

		<!-- Dual-model guarantee -->
		<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="dual-model-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="dual-model-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Two Models, One Promise
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Whether you choose month-to-month flexibility or a direct-hire placement, you're covered by our replacement guarantee.
					</p>
				</div>

				<div class="mt-10 grid gap-5 md:grid-cols-2">
					<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
						<div class="flex h-12 w-12 items-center justify-center rounded-xl border border-slate-800 bg-slate-950/40">
							<svg class="h-6 w-6 text-sky-300" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12a7.5 7.5 0 0015 0m-15 0a7.5 7.5 0 1115 0m-15 0H3m16.5 0H21m-1.5 0H12m-8.457 3.077l1.41-.513m14.095-5.13l1.41-.513M5.106 17.785l1.15-.964m11.49-9.642l1.149-.964M7.501 19.795l.75-1.3m7.5-12.99l.75-1.3m-6.063 16.658l.26-1.477m2.605-14.772l.26-1.477m0 17.726l-.26-1.477M10.698 4.614l-.26-1.477M16.5 19.794l-.75-1.299M7.5 4.205L12 12" /></svg>
						</div>
						<p class="mt-4 text-xs font-semibold uppercase tracking-wide text-sky-300">Month-to-Month</p>
						<h3 class="mt-2 text-lg font-semibold text-slate-100">Anytime Replacement Guarantee</h3>
						<p class="mt-3 text-sm leading-relaxed text-slate-400">
							No placement fees. No lock-in. If a specialist isn't meeting expectations at any point during the engagement, we replace them – free. Scale up, scale down, or end the engagement at the end of any month.
						</p>
						<ul class="mt-5 space-y-2">
							<li class="flex items-start gap-2 text-sm text-slate-400"><span class="text-sky-300" aria-hidden="true">&#x2713;</span> Free replacement at any time</li>
							<li class="flex items-start gap-2 text-sm text-slate-400"><span class="text-sky-300" aria-hidden="true">&#x2713;</span> No placement fees</li>
							<li class="flex items-start gap-2 text-sm text-slate-400"><span class="text-sky-300" aria-hidden="true">&#x2713;</span> 30-day notice to scale or end</li>
							<li class="flex items-start gap-2 text-sm text-slate-400"><span class="text-sky-300" aria-hidden="true">&#x2713;</span> Dedicated account management</li>
						</ul>
					</div>

					<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
						<div class="flex h-12 w-12 items-center justify-center rounded-xl border border-slate-800 bg-slate-950/40">
							<svg class="h-6 w-6 text-sky-300" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" /></svg>
						</div>
						<p class="mt-4 text-xs font-semibold uppercase tracking-wide text-sky-300">Direct Hire</p>
						<h3 class="mt-2 text-lg font-semibold text-slate-100">90-Day Replacement Guarantee</h3>
						<p class="mt-3 text-sm leading-relaxed text-slate-400">
							One-time placement fee. The specialist joins your payroll directly. If they don't work out within 90 days, we find a replacement at no extra cost. You get full control over the employment relationship.
						</p>
						<ul class="mt-5 space-y-2">
							<li class="flex items-start gap-2 text-sm text-slate-400"><span class="text-sky-300" aria-hidden="true">&#x2713;</span> 90-day replacement guarantee</li>
							<li class="flex items-start gap-2 text-sm text-slate-400"><span class="text-sky-300" aria-hidden="true">&#x2713;</span> Specialist joins your payroll</li>
							<li class="flex items-start gap-2 text-sm text-slate-400"><span class="text-sky-300" aria-hidden="true">&#x2713;</span> One-time placement fee</li>
							<li class="flex items-start gap-2 text-sm text-slate-400"><span class="text-sky-300" aria-hidden="true">&#x2713;</span> Full employment control</li>
						</ul>
					</div>
				</div>
			</div>
		</section>

		<!-- 3-Step replacement process -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="replacement-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="replacement-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						How Replacement Works
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Three steps. No bureaucracy. We prioritize keeping your workflow moving.
					</p>
				</div>

				<div class="mt-10 grid gap-5 md:grid-cols-3">
					{replacementSteps.map((item) => (
						<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
							<div class="flex h-10 w-10 items-center justify-center rounded-xl border border-slate-800 bg-slate-950/40">
								<span class="text-sm font-semibold text-sky-300">{item.step}</span>
							</div>
							<h3 class="mt-4 text-base font-semibold text-slate-100">{item.title}</h3>
							<p class="mt-3 text-sm leading-relaxed text-slate-400">{item.desc}</p>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- Competitor comparison -->
		<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="compare-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="compare-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						How We Compare on Guarantees
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						An honest look at how our guarantee stacks up against other LATAM talent providers.
					</p>
				</div>

				<div class="js-fade-in mt-10 overflow-x-auto">
					<table class="w-full min-w-[640px] rounded-2xl border border-slate-800 bg-slate-900/40 shadow-lg shadow-black/20 overflow-hidden">
						<thead>
							<tr class="border-b border-slate-800 bg-slate-900/60">
								<th class="px-6 py-4 text-left text-sm font-semibold text-slate-100">Provider</th>
								<th class="px-6 py-4 text-left text-sm font-semibold text-slate-100">Guarantee</th>
								<th class="px-6 py-4 text-left text-sm font-semibold text-slate-100">Contracts</th>
								<th class="px-6 py-4 text-left text-sm font-semibold text-slate-100">Flexibility</th>
								<th class="px-6 py-4 text-left text-sm font-semibold text-slate-100">Ongoing Support</th>
							</tr>
						</thead>
						<tbody class="text-sm">
							{competitors.map((row) => (
								<tr class:list={['border-b border-slate-800 last:border-b-0', row.name === 'LatAm Scalers' && 'bg-sky-600/10']}>
									<td class:list={['px-6 py-4 font-semibold', row.name === 'LatAm Scalers' ? 'text-sky-300' : 'text-slate-100']}>{row.name}</td>
									<td class="px-6 py-4 text-slate-400">{row.guarantee}</td>
									<td class="px-6 py-4 text-slate-400">{row.contracts}</td>
									<td class="px-6 py-4 text-slate-400">{row.flexibility}</td>
									<td class="px-6 py-4 text-slate-400">{row.ongoing}</td>
								</tr>
							))}
						</tbody>
					</table>
				</div>
			</div>
		</section>

		<!-- Why this matters -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="why-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="why-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Why This Matters
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Hiring remote talent from Latin America shouldn't require a leap of faith. Our guarantee exists because we've invested heavily in vetting – and we're confident enough in the quality to back it financially.
					</p>
				</div>

				<div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
					<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
						<p class="text-2xl font-semibold text-sky-300">&lt;5%</p>
						<p class="mt-2 text-sm text-slate-400">Replacement rate – over 95% of placements are long-term fits</p>
					</div>
					<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
						<p class="text-2xl font-semibold text-sky-300">48–72h</p>
						<p class="mt-2 text-sm text-slate-400">Average time to present a vetted replacement shortlist</p>
					</div>
					<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
						<p class="text-2xl font-semibold text-sky-300">$0</p>
						<p class="mt-2 text-sm text-slate-400">Additional cost for replacement – it's included in every engagement</p>
					</div>
				</div>
			</div>
		</section>

		<!-- FAQ -->
		<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="faq-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="faq-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Frequently Asked Questions
					</h2>
				</div>

				<div class="mt-10 grid gap-3">
					{faqs.map((item) => (
						<details class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
							<summary class="cursor-pointer list-none text-sm font-semibold text-slate-100 [&::-webkit-details-marker]:hidden">
								{item.q}
							</summary>
							<p class="mt-4 pt-4 text-sm leading-relaxed text-slate-400 border-t border-slate-800">{item.a}</p>
						</details>
					))}
				</div>
			</div>
		</section>

		<!-- CTA -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="cta-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-8 text-center shadow-xl sm:p-12">
					<h2 id="cta-heading" class="text-3xl font-semibold tracking-tight text-white sm:text-4xl">
						Ready to Start Risk-Free?
					</h2>
					<p class="mx-auto mt-4 max-w-xl text-base leading-relaxed text-slate-300">
						Book a call to discuss your needs. Every engagement comes with our replacement guarantee – no exceptions.
					</p>
					<div class="mt-8 flex flex-wrap items-center justify-center gap-4">
						<a
							href={bookingUrl}
							{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
							class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-8 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
							data-book-call
						>
							Book a 30-Minute Call
						</a>
						<a
							href="/how-pricing-works/"
							class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/40 px-8 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
						>
							See How Pricing Works
						</a>
					</div>
					<p class="mt-5 text-xs text-slate-400">Month-to-month · Free replacement guarantee · No long-term contracts</p>
				</div>
			</div>
		</section>

		<!-- Contact -->
		<section id="contact" class="bg-slate-950 pb-20 pt-16 sm:pb-24 sm:pt-20" aria-labelledby="contact-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<p class="text-sm font-semibold uppercase tracking-widest text-sky-300">Get in touch</p>
					<h2 id="contact-heading" class="mt-3 text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Let's Discuss Your Needs
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Tell us about your team, timeline, and goals – we'll explain exactly how the guarantee applies to your situation.
					</p>
				</div>

				<ContactHub subject="${brand} – guarantee inquiry" />
			</div>
		</section>

	</main>

	<style>
		.js-fade-in {
			opacity: 0;
			transform: translateY(20px);
			transition: opacity 0.35s ease-out, transform 0.35s ease-out;
		}
		.js-fade-in.is-visible {
			opacity: 1;
			transform: translateY(0);
		}
	</style>

	<script is:inline>
		(function () {
			var els = document.querySelectorAll('.js-fade-in');
			if (!els.length) return;
			var io = new IntersectionObserver(function (entries) {
				entries.forEach(function (e) {
					if (e.isIntersecting) {
						e.target.classList.add('is-visible');
						io.unobserve(e.target);
					}
				});
			}, { threshold: 0.1, rootMargin: '0px 0px -40px 0px' });
			els.forEach(function (el) { io.observe(el); });
		})();
	</script>
</Layout>

