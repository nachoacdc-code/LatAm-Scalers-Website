---
import Layout from '../../../layouts/Layout.astro';
import MetaHead from '../../../components/MetaHead.astro';
import { BOOKING_URL, isExternalUrl } from '../../../lib/cta';

const brand = 'LatAm Scalers';

const meta = {
	title: 'Remote Staffing Agency Alternative — Dedicated LATAM Specialists for US Teams | LatAm Scalers',
	description:
		'Looking for a remote staffing agency? LatAm Scalers provides dedicated, pre-vetted LATAM specialists for US teams — AEC, design, and marketing. Not a staffing agency, but a better alternative.',
};

const baseUrl = Astro.site ?? 'https://latam-scalers-website.vercel.app';
const canonical = new URL('/resources/remote-staffing-agency/', baseUrl).toString();

const bookingUrl = BOOKING_URL;
const bookingExternal = isExternalUrl(bookingUrl);

const categories = [
	{
		title: 'Architecture, Engineering & Construction',
		abbr: 'AEC',
		color: 'text-aec',
		borderColor: 'border-aec/30',
		bgColor: 'bg-aec/5',
		desc: 'BIM coordinators, Revit drafters, CAD technicians, MEP modelers — dedicated specialists for US architecture and engineering firms.',
		roles: ['BIM Coordinators', 'CAD Drafters', 'Revit Specialists', 'MEP Modelers', 'Architectural Designers'],
		starting: 'From ~$3,500/mo',
		href: '/aec/',
	},
	{
		title: 'Creative & Design',
		abbr: 'Design',
		color: 'text-design',
		borderColor: 'border-design/30',
		bgColor: 'bg-design/5',
		desc: 'UI/UX designers, brand designers, motion designers — dedicated individuals or PM-led managed creative teams.',
		roles: ['UI/UX Designers', 'Brand/Visual Designers', 'Motion Designers', 'Managed Creative Teams'],
		starting: 'Managed teams from $2,800/mo',
		href: '/design/',
	},
	{
		title: 'Marketing & Operations',
		abbr: 'Marketing',
		color: 'text-marketing',
		borderColor: 'border-marketing/30',
		bgColor: 'bg-marketing/5',
		desc: 'SEO specialists, PPC managers, HubSpot operators, content marketers — revenue-focused operators embedded in your team.',
		roles: ['SEO Specialists', 'PPC Managers', 'HubSpot/MarOps', 'Content Marketers'],
		starting: 'From ~$2,500/mo',
		href: '/marketing/',
	},
];

const differentiators = [
	{ title: 'Dedicated, not rotating', desc: 'The same specialist works exclusively on your projects — not a different contractor every week.' },
	{ title: '5-stage vetting', desc: 'Less than 3% of applicants are placed. Technical assessments, not just resume checks.', link: '/about/how-we-vet/' },
	{ title: 'Month-to-month flexibility', desc: 'No long-term contracts. Scale up, scale down, or replace — anytime.' },
	{ title: 'Free replacement guarantee', desc: 'If a specialist isn\'t the right fit, we replace them at no extra cost.' },
	{ title: 'US timezone overlap', desc: '0–3 hour timezone difference. Real-time collaboration during your business hours.' },
	{ title: '50–70% cost savings', desc: 'Compared to equivalent US-based talent. No staffing agency markup.', link: '/how-pricing-works/' },
];

const webPageJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'WebPage',
	name: meta.title,
	description: meta.description,
	url: canonical,
	isPartOf: { '@type': 'WebSite', name: brand, url: baseUrl },
};
---

<Layout>
	<MetaHead slot="head" title={meta.title} description={meta.description} canonical={canonical} jsonLd={[webPageJsonLd]} />

	<main>

		<!-- Hero -->
		<section class="relative overflow-hidden bg-slate-950 py-16 sm:py-24" aria-labelledby="hero-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in text-center">
					<p class="text-sm font-semibold uppercase tracking-widest text-sky-300">Remote staffing alternative</p>
					<h1 id="hero-heading" class="mt-4 text-4xl font-semibold leading-tight tracking-tight text-white sm:text-5xl lg:text-[3.25rem]">
						Not a Staffing Agency — A Better Way to Add Remote Talent
					</h1>
					<p class="mx-auto mt-5 max-w-2xl text-base leading-relaxed text-slate-300 sm:text-lg">
						Traditional staffing agencies send rotating contractors from broad pools. We provide dedicated, pre-vetted LATAM specialists who embed into your US team — in AEC, design, or marketing.
					</p>

					<div class="mt-8 flex flex-wrap items-center justify-center gap-3">
						<a
							href={bookingUrl}
							{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
							class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-6 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
							data-book-call
						>
							Book a 30-Minute Call
						</a>
						<a
							href="/get-started/"
							class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/40 px-6 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
						>
							Get Started →
						</a>
					</div>
				</div>
			</div>
		</section>

		<!-- Why we're different (brief) -->
		<section class="bg-slate-900/40 py-12 sm:py-16" aria-label="Key differentiators">
			<div class="mx-auto max-w-6xl px-6">
				<div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
					{differentiators.map((d) => (
						<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-5 shadow-lg shadow-black/20">
							<h3 class="text-sm font-semibold text-slate-100">{d.title}</h3>
							<p class="mt-2 text-xs leading-relaxed text-slate-400">{d.desc}</p>
							{d.link && (
								<a href={d.link} class="mt-2 inline-flex text-xs font-semibold text-sky-300 transition hover:text-sky-200/80">
									Learn more →
								</a>
							)}
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- Category routing cards -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="categories-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in text-center">
					<h2 id="categories-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						What Kind of Talent Are You Looking For?
					</h2>
					<p class="mx-auto mt-4 max-w-2xl text-base leading-relaxed text-slate-400">
						We specialize in three categories. Choose the one that matches your needs and we'll show you exactly what's available.
					</p>
				</div>

				<div class="mt-12 grid gap-6 md:grid-cols-3">
					{categories.map((cat) => (
						<a
							href={cat.href}
							class:list={['js-fade-in group rounded-2xl border p-6 shadow-lg shadow-black/20 transition hover:-translate-y-1 hover:shadow-xl', cat.borderColor, cat.bgColor]}
						>
							<p class:list={['text-xs font-semibold uppercase tracking-wide', cat.color]}>{cat.abbr}</p>
							<h3 class="mt-3 text-lg font-semibold text-slate-100 group-hover:text-white">{cat.title}</h3>
							<p class="mt-3 text-sm leading-relaxed text-slate-400">{cat.desc}</p>

							<ul class="mt-4 space-y-1">
								{cat.roles.map((role) => (
									<li class="flex items-center gap-2 text-xs text-slate-400">
										<span class={cat.color} aria-hidden="true">·</span>
										{role}
									</li>
								))}
							</ul>

							<p class:list={['mt-5 text-sm font-semibold', cat.color]}>{cat.starting}</p>
							<p class:list={['mt-1 text-xs font-semibold', cat.color]}>Explore {cat.abbr} solutions →</p>
						</a>
					))}
				</div>
			</div>
		</section>

		<!-- CTA -->
		<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="cta-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-8 text-center shadow-xl sm:p-12">
					<h2 id="cta-heading" class="text-3xl font-semibold tracking-tight text-white sm:text-4xl">
						Not Sure Where to Start?
					</h2>
					<p class="mx-auto mt-4 max-w-xl text-base leading-relaxed text-slate-300">
						Book a 15-minute call. Tell us what you need and we'll point you to the right solution — no obligation.
					</p>
					<div class="mt-8 flex flex-wrap items-center justify-center gap-4">
						<a
							href={bookingUrl}
							{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
							class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-8 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
							data-book-call
						>
							Book a 30-Minute Call
						</a>
						<a
							href="/get-started/"
							class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/40 px-8 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
						>
							Tell Us Your Needs
						</a>
					</div>
					<p class="mt-5 text-xs text-slate-400">Pre-vetted specialists · Month-to-month · Free replacement guarantee</p>
				</div>
			</div>
		</section>

	</main>

	<style>
		.js-fade-in {
			opacity: 0;
			transform: translateY(20px);
			transition: opacity 0.35s ease-out, transform 0.35s ease-out;
		}
		.js-fade-in.is-visible {
			opacity: 1;
			transform: translateY(0);
		}
	</style>

	<script is:inline>
		(function () {
			var els = document.querySelectorAll('.js-fade-in');
			if (!els.length) return;
			var io = new IntersectionObserver(function (entries) {
				entries.forEach(function (e) {
					if (e.isIntersecting) {
						e.target.classList.add('is-visible');
						io.unobserve(e.target);
					}
				});
			}, { threshold: 0.1, rootMargin: '0px 0px -40px 0px' });
			els.forEach(function (el) { io.observe(el); });
		})();
	</script>
</Layout>
