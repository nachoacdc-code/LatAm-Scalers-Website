---
import Layout from '../../layouts/Layout.astro';
import MetaHead from '../../components/MetaHead.astro';
import Footer from '../../components/Footer.astro';

const brand = 'LatAm Scalers';

const meta = {
	title: `Terms & Conditions | ${brand}`,
	description:
		'Terms and conditions for using LatAm Scalers services and website. Review key policies on usage, payments, liability, and more.',
};

const baseUrl = Astro.site ?? 'https://latam-scalers-website.vercel.app';
const canonical = new URL('/terms/', baseUrl).toString();
---

<Layout>
	<MetaHead slot="head" title={meta.title} description={meta.description} canonical={canonical} />

	<main class="mx-auto max-w-6xl px-6 py-12 sm:py-14">
		<header class="max-w-3xl">
			<p class="text-sm font-semibold tracking-wide text-accent">Legal</p>
			<h1 class="mt-4 text-4xl font-semibold tracking-tight text-text-primary sm:text-5xl">Terms &amp; Conditions</h1>
			<p class="mt-4 text-sm leading-relaxed text-text-secondary sm:text-base">
				{/* NOTE: Placeholder content. Replace with your counsel-approved terms. */}
				Effective date: <span class="text-text-primary">TODO</span>
			</p>
		</header>

		<div class="mt-10 grid gap-4">
		<section class="rounded-2xl border border-border bg-slate-900/40 shadow-sm p-6">
			<h2 class="text-lg font-semibold text-text-primary">Overview</h2>
				<p class="mt-3 text-sm leading-relaxed text-text-secondary">
					TODO: Describe the services, who the terms apply to, and how updates are communicated.
				</p>
			</section>

		<section class="rounded-2xl border border-border bg-slate-900/40 shadow-sm p-6">
			<h2 class="text-lg font-semibold text-text-primary">Services</h2>
				<p class="mt-3 text-sm leading-relaxed text-text-secondary">
					TODO: Define offerings (individuals, teams, PM-led delivery), scope boundaries, and deliverable expectations.
				</p>
			</section>

		<section class="rounded-2xl border border-border bg-slate-900/40 shadow-sm p-6">
			<h2 class="text-lg font-semibold text-text-primary">Payments, billing, and refunds</h2>
				<p class="mt-3 text-sm leading-relaxed text-text-secondary">
					TODO: Include billing cadence, invoices, late fees, refunds/credits, and month-to-month terms.
				</p>
			</section>

		<section class="rounded-2xl border border-border bg-slate-900/40 shadow-sm p-6">
			<h2 class="text-lg font-semibold text-text-primary">Confidentiality and IP</h2>
				<p class="mt-3 text-sm leading-relaxed text-text-secondary">
					TODO: Address confidentiality, ownership of work product, and permitted use.
				</p>
			</section>

		<section class="rounded-2xl border border-border bg-slate-900/40 shadow-sm p-6">
			<h2 class="text-lg font-semibold text-text-primary">Acceptable use</h2>
