---
import Layout from '../../../layouts/Layout.astro';
import MetaHead from '../../../components/MetaHead.astro';
import ContactHub from '../../../components/ContactHub.astro';
import { BOOKING_URL, isExternalUrl } from '../../../lib/cta';

const brand = 'LatAm Scalers';

const meta = {
	title: 'LatAm Scalers vs Superside — Honest Comparison for US Teams | LatAm Scalers',
	description:
		'How does LatAm Scalers compare to Superside? An honest breakdown across 8 dimensions: model, pricing, quality, speed, flexibility, scope, guarantees, and commitment. Find the right fit for your US team.',
};

const baseUrl = Astro.site ?? 'https://latamscalers.com';
const canonical = new URL('/compare/vs-superside/', baseUrl).toString();

const bookingUrl = BOOKING_URL;
const bookingExternal = isExternalUrl(bookingUrl);
const calendlyUrl = import.meta.env.PUBLIC_CALENDLY_URL ?? import.meta.env.PUBLIC_BOOKING_URL ?? 'https://calendly.com/your-org/15min';

const comparisonRows = [
	{
		dimension: 'Engagement Model',
		superside: 'Subscription-based creative service. You submit briefs, their team delivers assets. Rotating designers assigned per project.',
		latam: 'Dedicated specialists embedded in your team. Same person, same tools, same workflow — exclusively on your projects.',
	},
	{
		dimension: 'Pricing',
		superside: 'Monthly subscription plans starting ~$10,000+/mo. Enterprise plans significantly higher.',
		latam: 'PM-Led Managed Creative Teams: $2,800–$8,000/mo (flagship). Dedicated Individual Designers: from ~$2,500–$3,500/mo.',
	},
	{
		dimension: 'Quality Control',
		superside: 'Platform QA with project managers. Quality depends on which designer is assigned — can vary between projects.',
		latam: 'You work with the same vetted specialist consistently. Quality is predictable because the person knows your brand, standards, and preferences.',
	},
	{
		dimension: 'Speed & Turnaround',
		superside: 'Structured turnaround times (24–72h for most deliverables). Queue-based — your project is in a pipeline.',
		latam: 'Real-time collaboration. Specialists are embedded in your team during US business hours. No queue, no ticket system.',
	},
	{
		dimension: 'Flexibility',
		superside: 'Subscription tiers with predefined hours/credits. Scaling means upgrading your plan tier.',
		latam: 'Month-to-month with 30-day notice. Add or remove specialists as needed. No tiers, no credit systems.',
	},
	{
		dimension: 'Scope',
		superside: 'Primarily design (graphic, motion, presentation). Some web development and marketing creative.',
		latam: 'Design (UI/UX, brand, product, motion), marketing creative (social, email, landing pages), and presentation design. Full creative coverage.',
	},
	{
		dimension: 'Guarantee',
		superside: 'Unlimited revisions within project scope. Satisfaction guarantee varies by plan.',
		latam: 'Free replacement guarantee — anytime for monthly engagements, 90 days for direct hire. No revision limits because you manage the specialist directly.',
	},
	{
		dimension: 'Commitment',
		superside: '1-year annual contract.',
		latam: 'Month-to-month, cancel anytime with 30-day notice.',
	},
];

const supersideExcels = [
	'High-volume, brief-based design output (e.g., 50+ social ads per month)',
	'Teams that prefer a "submit and receive" workflow over managing individuals',
	'Companies that need diverse design skills per project (illustration one day, motion the next)',
	'Organizations with existing creative direction who need execution capacity only',
];

const latamDiffers = [
	'You want a dedicated specialist who learns your brand, tools, and standards over time',
	'You need deep brand, product, or marketing design — not just generic creative output',
	'You want real-time collaboration during US business hours, not queue-based turnaround',
	'You prefer managing the specialist directly as part of your team, not through a platform',
	'Cost is a factor — dedicated specialists provide more hours at a lower monthly rate',
	'You need consistent quality from the same person, not rotating assignments',
];

const faqs = [
	{
		q: 'Can I use both Superside and LatAm Scalers?',
		a: 'Yes. Some companies use Superside for high-volume production work (social ads, presentations) and LatAm Scalers for dedicated, embedded specialists who handle core brand and product design. The two models complement each other.',
	},
	{
		q: 'Is LatAm Scalers cheaper than Superside?',
		a: 'For dedicated specialist coverage, typically yes. Superside\'s plans start around $10,000+/month. A PM-led managed creative team through LatAm Scalers starts from ~$2,800/month, and individual dedicated designers from ~$2,500/month. However, the models serve different needs — Superside provides breadth of design skills, while we provide depth through dedicated individuals.',
	},
	{
		q: 'Does LatAm Scalers offer design subscription services like Superside?',
		a: 'Not exactly. We provide dedicated specialists (individuals or PM-led managed teams), not a subscription box where you submit briefs. If you want a dedicated designer working 40 hours/week exclusively on your brand, that\'s us. If you want a platform to submit varied design briefs to a rotating pool, that\'s more Superside\'s model.',
	},
	{
		q: 'What about Superside\'s unlimited revisions?',
		a: 'Since our specialists are embedded in your team and work under your direction, revisions are part of the natural workflow — there\'s no concept of "revision limits" because you manage the specialist directly. You get unlimited iterations within their working hours.',
	},
	{
		q: 'Does LatAm Scalers cover more than basic graphic design?',
		a: 'Yes. We cover the full range of design and creative work: UI/UX, brand identity, product design, motion graphics, marketing creative (social, email, landing pages), and presentation design. Superside focuses primarily on production-level graphic design and some web development.',
	},
];

const webPageJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'WebPage',
	name: meta.title,
	description: meta.description,
	url: canonical,
	isPartOf: { '@type': 'WebSite', name: brand, url: baseUrl },
};

const faqJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'FAQPage',
	mainEntity: faqs.map((f) => ({
		'@type': 'Question',
		name: f.q,
		acceptedAnswer: { '@type': 'Answer', text: f.a },
	})),
};
---

<Layout>
	<MetaHead slot="head" title={meta.title} description={meta.description} canonical={canonical} jsonLd={[webPageJsonLd, faqJsonLd]} />

	<main>

		<!-- Hero -->
		<section class="relative overflow-hidden bg-slate-950 py-16 sm:py-24" aria-labelledby="hero-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in">
					<p class="text-sm font-semibold uppercase tracking-widest text-sky-300">Comparison</p>
					<h1 id="hero-heading" class="mt-4 text-4xl font-semibold leading-tight tracking-tight text-white sm:text-5xl lg:text-[3.25rem]">
						LatAm Scalers vs Superside — Which Model Fits Your Team?
					</h1>
					<p class="mt-5 max-w-xl text-base leading-relaxed text-slate-300 sm:text-lg">
						An honest comparison across 8 dimensions. Both are legitimate options — the right choice depends on your team's workflow, needs, and preferences.
					</p>

					<div class="mt-8 flex flex-wrap gap-3">
						<a
							href={bookingUrl}
							{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
							class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-6 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
							data-book-call
						>
							Book a 30-Minute Call
						</a>
						<a
							href="/how-pricing-works/"
							class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/40 px-6 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
						>
							See How Pricing Works &rarr;
						</a>
					</div>
				</div>
			</div>
		</section>

		<!-- Quick comparison table -->
		<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="table-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="table-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Side-by-Side Comparison
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Eight dimensions that matter most when choosing between a creative subscription platform and dedicated embedded specialists.
					</p>
				</div>

				<div class="js-fade-in mt-10 overflow-x-auto">
					<table class="w-full min-w-[640px] rounded-2xl border border-slate-800 bg-slate-900/40 shadow-lg shadow-black/20 overflow-hidden">
						<thead>
							<tr class="border-b border-slate-800 bg-slate-900/60">
								<th class="px-6 py-4 text-left text-sm font-semibold text-slate-100">Dimension</th>
								<th class="px-6 py-4 text-left text-sm font-semibold text-slate-400">Superside</th>
								<th class="px-6 py-4 text-left text-sm font-semibold text-sky-300">LatAm Scalers</th>
							</tr>
						</thead>
						<tbody class="text-sm">
							{comparisonRows.map((row) => (
								<tr class="border-b border-slate-800 last:border-b-0">
									<td class="px-6 py-4 font-semibold text-slate-100 align-top">{row.dimension}</td>
									<td class="px-6 py-4 text-slate-400 align-top">{row.superside}</td>
									<td class="px-6 py-4 text-slate-300 align-top">{row.latam}</td>
								</tr>
							))}
						</tbody>
					</table>
				</div>
			</div>
		</section>

		<!-- Three-way comparison: Design Pickle vs Superside vs LatAm Scalers -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="threeway-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="threeway-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						How We Compare: Design Pickle vs Superside vs LatAm Scalers
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Three popular options for scaling creative work. Here's how they stack up across the dimensions that matter.
					</p>
				</div>

				<div class="js-fade-in mt-10 overflow-x-auto">
					<table class="w-full min-w-[720px] rounded-2xl border border-slate-800 bg-slate-900/40 shadow-lg shadow-black/20 overflow-hidden">
						<thead>
							<tr class="border-b border-slate-800 bg-slate-900/60">
								<th class="px-5 py-4 text-left text-sm font-semibold text-slate-100">Dimension</th>
								<th class="px-5 py-4 text-left text-sm font-semibold text-slate-400">Design Pickle</th>
								<th class="px-5 py-4 text-left text-sm font-semibold text-slate-400">Superside</th>
								<th class="px-5 py-4 text-left text-sm font-semibold text-sky-300">LatAm Scalers</th>
							</tr>
						</thead>
						<tbody class="text-sm">
							<tr class="border-b border-slate-800">
								<td class="px-5 py-4 font-semibold text-slate-100 align-top">Price</td>
								<td class="px-5 py-4 text-slate-400 align-top">$1,918/mo</td>
								<td class="px-5 py-4 text-slate-400 align-top">$10,000+/mo</td>
								<td class="px-5 py-4 text-slate-300 align-top">$2,800–$8,000/mo</td>
							</tr>
							<tr class="border-b border-slate-800">
								<td class="px-5 py-4 font-semibold text-slate-100 align-top">Commitment</td>
								<td class="px-5 py-4 text-slate-400 align-top">Monthly</td>
								<td class="px-5 py-4 text-slate-400 align-top">1-year annual</td>
								<td class="px-5 py-4 text-slate-300 align-top">Month-to-month</td>
							</tr>
							<tr class="border-b border-slate-800">
								<td class="px-5 py-4 font-semibold text-slate-100 align-top">Your designer</td>
								<td class="px-5 py-4 text-slate-400 align-top">Rotating pool</td>
								<td class="px-5 py-4 text-slate-400 align-top">Pooled queue</td>
								<td class="px-5 py-4 text-slate-300 align-top">Dedicated to your brand</td>
							</tr>
							<tr class="border-b border-slate-800">
								<td class="px-5 py-4 font-semibold text-slate-100 align-top">PM / Coordination</td>
								<td class="px-5 py-4 text-slate-400 align-top">None</td>
								<td class="px-5 py-4 text-slate-400 align-top">Enterprise only</td>
								<td class="px-5 py-4 text-slate-300 align-top">PM included</td>
							</tr>
							<tr class="border-b border-slate-800">
								<td class="px-5 py-4 font-semibold text-slate-100 align-top">Client time</td>
								<td class="px-5 py-4 text-slate-400 align-top">10–15 hrs/week</td>
								<td class="px-5 py-4 text-slate-400 align-top">Varies</td>
								<td class="px-5 py-4 text-slate-300 align-top">3–5 hrs/week</td>
							</tr>
							<tr class="border-b border-slate-800">
								<td class="px-5 py-4 font-semibold text-slate-100 align-top">Capacity</td>
								<td class="px-5 py-4 text-slate-400 align-top">~40 hrs/mo</td>
								<td class="px-5 py-4 text-slate-400 align-top">Varies by plan</td>
								<td class="px-5 py-4 text-slate-300 align-top">160+ hrs/mo dedicated</td>
							</tr>
							<tr class="border-b border-slate-800 last:border-b-0">
								<td class="px-5 py-4 font-semibold text-slate-100 align-top">Specialization</td>
								<td class="px-5 py-4 text-slate-400 align-top">General graphic design</td>
								<td class="px-5 py-4 text-slate-400 align-top">Enterprise creative</td>
								<td class="px-5 py-4 text-slate-300 align-top">Brand, product, marketing design</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</section>

		<!-- Where Superside excels -->
		<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="superside-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="superside-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Where Superside Excels
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Superside is a strong choice in specific scenarios. We're honest about when their model may fit better.
					</p>
				</div>

				<ul class="mt-8 grid gap-3 sm:grid-cols-2">
					{supersideExcels.map((item) => (
						<li class="js-fade-in flex items-start gap-3 rounded-2xl border border-slate-800 bg-slate-900/40 p-5 shadow-lg shadow-black/20">
							<span class="text-slate-500" aria-hidden="true">&rarr;</span>
							<span class="text-sm leading-relaxed text-slate-400">{item}</span>
						</li>
					))}
				</ul>
			</div>
		</section>

		<!-- Where LatAm Scalers differs -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="latam-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="latam-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Where LatAm Scalers Is the Better Fit
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Our model is built for teams that want dedicated, embedded specialists — not a subscription service.
					</p>
				</div>

				<ul class="mt-8 grid gap-3 sm:grid-cols-2">
					{latamDiffers.map((item) => (
						<li class="js-fade-in flex items-start gap-3 rounded-2xl border border-slate-800 bg-slate-900/40 p-5 shadow-lg shadow-black/20">
							<span class="text-sky-300" aria-hidden="true">&#x2713;</span>
							<span class="text-sm leading-relaxed text-slate-400">{item}</span>
						</li>
					))}
				</ul>
			</div>
		</section>

		<!-- Pricing comparison -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="pricing-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="pricing-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Pricing Comparison
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Different models, different pricing structures. Here's how they compare for design work.
					</p>
				</div>

				<div class="mt-10 grid gap-5 md:grid-cols-2">
					<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
						<p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Superside</p>
						<p class="mt-3 text-2xl font-semibold text-slate-100">~$10,000+/mo</p>
						<p class="mt-1 text-xs text-slate-400">Starting subscription tier</p>
						<ul class="mt-4 space-y-2 text-sm text-slate-400">
							<li>Rotating designers per project</li>
							<li>Queue-based turnaround</li>
							<li>Platform-managed workflow</li>
							<li>Unlimited revisions (within scope)</li>
						</ul>
					</div>
					<div class="js-fade-in rounded-2xl border border-sky-600/30 bg-sky-600/5 p-6 shadow-lg shadow-black/20">
						<p class="text-xs font-semibold uppercase tracking-wide text-sky-300">LatAm Scalers</p>
						<p class="mt-3 text-2xl font-semibold text-slate-100">From ~$2,800/mo</p>
						<p class="mt-1 text-xs text-slate-400">PM-Led Managed Teams: $2,800–$8,000/mo · Individual Designers: $2,500–$3,500/mo</p>
						<ul class="mt-4 space-y-2 text-sm text-slate-400">
							<li>Same specialist, exclusively yours</li>
							<li>Real-time US timezone collaboration</li>
							<li>You manage workflow directly</li>
							<li>Free replacement guarantee</li>
						</ul>
						<a
							href="/how-pricing-works/"
							class="mt-4 inline-flex items-center gap-1.5 text-sm font-semibold text-sky-300 transition hover:text-sky-200/80 focus:outline-none focus-visible:underline"
						>
							See full pricing details <span aria-hidden="true">&rarr;</span>
						</a>
					</div>
				</div>
			</div>
		</section>

		<!-- FAQ -->
		<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="faq-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="faq-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Frequently Asked Questions
					</h2>
				</div>

				<div class="mt-10 grid gap-3">
					{faqs.map((item) => (
						<details class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
							<summary class="cursor-pointer list-none text-sm font-semibold text-slate-100 [&::-webkit-details-marker]:hidden">
								{item.q}
							</summary>
							<p class="mt-4 pt-4 text-sm leading-relaxed text-slate-400 border-t border-slate-800">{item.a}</p>
						</details>
					))}
				</div>
			</div>
		</section>

		<!-- CTA -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="cta-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-8 text-center shadow-xl sm:p-12">
					<h2 id="cta-heading" class="text-3xl font-semibold tracking-tight text-white sm:text-4xl">
						Still Deciding? Let's Talk.
					</h2>
					<p class="mx-auto mt-4 max-w-xl text-base leading-relaxed text-slate-300">
						Book a 15-minute call and we'll help you determine whether dedicated specialists or a subscription model is the right fit for your team.
					</p>
					<div class="mt-8 flex flex-wrap items-center justify-center gap-4">
						<a
							href={bookingUrl}
							{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
							class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-8 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
							data-book-call
						>
							Book a 30-Minute Call
						</a>
						<a
							href="/get-started/"
							class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/40 px-8 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
						>
							Get Started
						</a>
					</div>
					<p class="mt-5 text-xs text-slate-400">No obligation · Honest assessment · We'll tell you if Superside is the better fit</p>
				</div>
			</div>
		</section>

		<!-- Contact -->
		<section id="contact" class="bg-slate-950 pb-20 pt-16 sm:pb-24 sm:pt-20" aria-labelledby="contact-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<p class="text-sm font-semibold uppercase tracking-widest text-sky-300">Get in touch</p>
					<h2 id="contact-heading" class="mt-3 text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Let's Find the Right Model for You
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Share your requirements and we'll provide a personalized recommendation — including when another provider might be the better fit.
					</p>
				</div>

				<ContactHub subject="${brand} — comparison inquiry (vs Superside)" defaultCategory="design" />
			</div>
		</section>

	</main>

	<style>
		.js-fade-in {
			opacity: 0;
			transform: translateY(20px);
			transition: opacity 0.35s ease-out, transform 0.35s ease-out;
		}
		.js-fade-in.is-visible {
			opacity: 1;
			transform: translateY(0);
		}
	</style>

	<script is:inline>
		(function () {
			var els = document.querySelectorAll('.js-fade-in');
			if (!els.length) return;
			var io = new IntersectionObserver(function (entries) {
				entries.forEach(function (e) {
					if (e.isIntersecting) {
						e.target.classList.add('is-visible');
						io.unobserve(e.target);
					}
				});
			}, { threshold: 0.1, rootMargin: '0px 0px -40px 0px' });
			els.forEach(function (el) { io.observe(el); });
		})();
	</script>
</Layout>

