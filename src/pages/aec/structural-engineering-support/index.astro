---
import Layout from '../../../layouts/Layout.astro';
import MetaHead from '../../../components/MetaHead.astro';
import ContactHub from '../../../components/ContactHub.astro';
import { BOOKING_URL, isExternalUrl } from '../../../lib/cta';

const brand = 'LatAm Scalers';

const meta = {
	title: 'Structural Engineering Support – Dedicated LATAM Drafters & Modelers for US Firms | LatAm Scalers',
	description:
		'Structural engineering support for US firms. Dedicated LATAM structural drafters and modelers using Revit Structure, ETABS, SAP2000, and AutoCAD. Structural drawings, connections, analysis support. From ~$4,000/mo.',
};

const baseUrl = Astro.site ?? 'https://latam-scalers-website.vercel.app';
const canonical = new URL('/aec/structural-engineering-support/', baseUrl).toString();

const bookingUrl = BOOKING_URL;
const bookingExternal = isExternalUrl(bookingUrl);

const tools = [
	{ name: 'Revit Structure', desc: 'Structural modeling, framing plans, foundation details, and construction documentation.' },
	{ name: 'ETABS', desc: 'Multi-story building analysis, lateral force systems, and frame design.' },
	{ name: 'SAP2000', desc: 'General structural analysis, bridges, and complex geometry modeling.' },
	{ name: 'AutoCAD', desc: '2D structural drafting, connection details, and reinforcement layouts.' },
	{ name: 'RAM Structural System', desc: 'Steel and concrete design, gravity analysis, and member sizing.' },
	{ name: 'Bluebeam', desc: 'Markup workflows, structural redline cycles, and QTO for structural scopes.' },
];

const deliverables = [
	'Structural framing plans and foundation layouts',
	'Steel connection details and reinforcement drawings',
	'Revit Structure models with analytical data',
	'Structural calculation support packages',
	'Shop drawing review markups and RFI responses',
	'As-built documentation and structural record sets',
];

const responsibilityMatrix = [
	{ you: 'Engineering judgment, design decisions, PE stamping', we: 'Structural drafting, modeling, and calculation support' },
	{ you: 'Code compliance (IBC, ASCE 7), load criteria, design standards', we: 'Production execution within your criteria and standards' },
	{ you: 'Redlines, markup direction, design revisions', we: 'Iterative model/drawing updates, version control, detail development' },
	{ you: 'Client communication, project management', we: 'Vetting, matching, onboarding, replacement guarantee' },
];

const faqs = [
	{
		q: 'What structural engineering support do you provide?',
		a: 'Our structural specialists handle drafting (framing plans, connection details, reinforcement layouts), Revit Structure modeling, calculation support packages, shop drawing review markups, and as-built documentation. All work is performed under the direction and review of your licensed Structural Engineer of Record.',
	},
	{
		q: 'How quickly can we get a structural specialist?',
		a: 'We typically present vetted structural drafters and modelers within 48 hours. For specialty roles like ETABS analysts, precision-matching may take up to two weeks to ensure the right fit.',
	},
	{
		q: 'Do your specialists understand US structural codes?',
		a: 'Yes. We screen for familiarity with IBC, ASCE 7, ACI 318, AISC, and common state-level amendments. Our specialists produce code-referenced deliverables under your SEOR\'s direction. All documents require review and stamping by your PE.',
	},
	{
		q: 'Can they work with our existing Revit Structure models?',
		a: 'Absolutely. Our modelers integrate into your existing Revit Structure environment — your families, templates, view standards, and naming conventions. We align on your BEP and structural modeling standards during onboarding.',
	},
	{
		q: 'What about analysis support in ETABS or SAP2000?',
		a: 'Our specialists can build and maintain analytical models, run load combinations, and prepare calculation support packages. Engineering judgment and final sign-off remain with your PE. We provide the production support that frees your engineers to focus on design decisions.',
	},
	{
		q: 'What does pricing look like?',
		a: 'Dedicated structural drafters start at approximately $4,000/month for full-time (40h/week). Specialists with ETABS/SAP2000 analysis experience may be higher. Part-time and pod configurations are custom-quoted.',
	},
];

const serviceJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'Service',
	name: 'Structural Engineering Support',
	description: meta.description,
	provider: { '@type': 'Organization', name: brand, url: baseUrl },
};

const faqJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'FAQPage',
	mainEntity: faqs.map((f) => ({
		'@type': 'Question',
		name: f.q,
		acceptedAnswer: { '@type': 'Answer', text: f.a },
	})),
};
---

<Layout>
	<MetaHead slot="head" title={meta.title} description={meta.description} canonical={canonical} jsonLd={[serviceJsonLd, faqJsonLd]} />

	<main>

	<!-- Hero -->
	<section class="relative overflow-hidden bg-slate-950 py-16 sm:py-24" aria-labelledby="hero-heading">
		<div class="mx-auto max-w-6xl px-6">
		<div class="js-fade-in">
		<p class="text-sm font-semibold uppercase tracking-widest text-aec">Structural Engineering</p>
	<h1 id="hero-heading" class="mt-4 text-4xl font-semibold leading-tight tracking-tight text-white sm:text-5xl lg:text-[3.25rem]">
		Structural Engineering Support – Dedicated LATAM Specialists for US Firms
	</h1>
	<p class="mt-5 max-w-xl text-base leading-relaxed text-slate-300 sm:text-lg">
		Dedicated structural drafters and modelers for US engineering firms. Revit Structure, ETABS, SAP2000, AutoCAD. 92% of structural firms have open positions — add production capacity in under a week.
	</p>

	<div class="mt-8 flex flex-wrap gap-3">
	<a
		href={bookingUrl}
		{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
		class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-6 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
		data-book-call
	>
		Book a Structural Engineering Call
	</a>
	<a
		href="/#contact"
		class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/40 px-6 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
		data-open-tell-us="structural-hero"
	>
		Tell Us What You Need
	</a>
	</div>
	</div>
	</div>
	</section>

	<!-- AEC micro-clarifier -->
	<div class="bg-slate-950 border-b border-slate-800">
	<div class="mx-auto max-w-6xl px-6 py-4">
	<p class="text-xs leading-relaxed text-slate-400 text-center sm:text-sm">
		Our specialists produce work under the direction of your Structural Engineer of Record. All documents require review and stamping by your PE.
	</p>
	</div>
	</div>

	<!-- Service overview -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="overview-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="overview-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Your Dedicated Structural Production Specialists
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		92% of civil and structural engineering firms have unfilled positions. Hiring a structural Revit specialist locally takes 12+ weeks in major metros. Meanwhile, your backlog grows and deadlines tighten.
	</p>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		Our dedicated LATAM structural specialists handle drafting, modeling, and calculation support so your licensed engineers can focus on design decisions, code compliance, and client relationships. The Structural Engineer of Record establishes performance criteria and retains full liability — our specialists execute production under that framework.
	</p>
	<ul class="mt-6 grid gap-3 sm:grid-cols-2">
	<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
		<span class="text-aec" aria-hidden="true">✓</span>
		<span class="text-sm text-slate-400"><strong class="text-slate-100">Structural drafting</strong> – framing, connections, details</span>
	</li>
	<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
		<span class="text-aec" aria-hidden="true">✓</span>
		<span class="text-sm text-slate-400"><strong class="text-slate-100">Revit + ETABS</strong> – modeling and analysis support</span>
	</li>
	<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
		<span class="text-aec" aria-hidden="true">✓</span>
		<span class="text-sm text-slate-400"><strong class="text-slate-100">US timezone</strong> – real-time collaboration</span>
	</li>
	<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
		<span class="text-aec" aria-hidden="true">✓</span>
		<span class="text-sm text-slate-400"><strong class="text-slate-100">Month-to-month</strong> – scale up or down anytime</span>
	</li>
	</ul>
	</div>
	</div>
	</section>

	<!-- Scope & deliverables -->
	<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="scope-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="scope-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Scope &amp; Deliverables
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		From structural modeling and drafting through calculation support and shop drawing review — our specialists handle the production scope that frees your engineers.
	</p>
	</div>

	<div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
	{deliverables.map((item) => (
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<p class="text-sm font-semibold text-slate-100">{item}</p>
	</div>
	))}
	</div>

	<div class="js-fade-in mt-10 overflow-x-auto">
	<h3 class="text-lg font-semibold text-slate-100">Responsibility Matrix</h3>
	<table class="mt-4 w-full min-w-[480px] rounded-2xl border border-slate-800 bg-slate-900/40 shadow-lg shadow-black/20 overflow-hidden">
	<thead>
		<tr class="border-b border-slate-800 bg-slate-900/40">
		<th class="px-6 py-4 text-left text-sm font-semibold text-slate-100">Your Licensed Team Retains</th>
		<th class="px-6 py-4 text-left text-sm font-semibold text-slate-100">Your Dedicated LATAM Specialist Handles</th>
		</tr>
	</thead>
	<tbody class="text-sm">
	{responsibilityMatrix.map((row) => (
		<tr class="border-b border-slate-800 last:border-b-0">
		<td class="px-6 py-4 text-slate-400">{row.you}</td>
		<td class="px-6 py-4 text-slate-400">{row.we}</td>
		</tr>
	))}
	</tbody>
	</table>
	</div>
	</div>
	</section>

	<!-- Tools section -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="tools-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="tools-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Tools We Use
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		Our structural specialists work in Revit Structure, ETABS, SAP2000, and AutoCAD — whatever your project and firm standards require.
	</p>
	</div>

	<div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
	{tools.map((tool) => (
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<p class="text-sm font-semibold text-slate-100">{tool.name}</p>
		<p class="mt-2 text-sm leading-relaxed text-slate-400">{tool.desc}</p>
	</div>
	))}
	</div>
	</div>
	</section>

	<!-- Engagement options -->
	<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="engagement-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="engagement-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Engagement Options
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		Dedicated structural specialists on a full-time or part-time basis — or scalable production pods for firms managing multiple concurrent projects.
	</p>
	</div>

	<div class="mt-10 grid gap-5 md:grid-cols-2">
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<p class="text-xs font-semibold uppercase tracking-wide text-aec">Individual Specialist</p>
		<h3 class="mt-3 text-lg font-semibold text-slate-100">Dedicated Structural Drafter / Modeler</h3>
		<p class="mt-3 text-sm leading-relaxed text-slate-400">
		Full-time (40h/week) or part-time (20h/week) structural specialists — embedded in your team, working in your Revit Structure environment and standards.
		</p>
		<p class="mt-4 text-sm font-semibold text-aec">From ~$4,000/mo</p>
	</div>
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<p class="text-xs font-semibold uppercase tracking-wide text-aec">Production Pod</p>
		<h3 class="mt-3 text-lg font-semibold text-slate-100">Structural Production Team</h3>
		<p class="mt-3 text-sm leading-relaxed text-slate-400">
		Multiple specialists — drafter + modeler + calculation support — for higher throughput and parallel project execution.
		</p>
		<p class="mt-4 text-sm font-semibold text-aec">Custom pricing</p>
	</div>
	</div>
	</div>
	</section>

	<!-- Pricing guidance -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="pricing-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="pricing-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Pricing Guidance
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		Individual structural specialists start at approximately <strong class="text-slate-100">$4,000/month</strong> for full-time engagement — 40–60% less than comparable US hires. Part-time and production pod configurations are custom-quoted based on scope and tool requirements.
	</p>
	<a
		href="/how-pricing-works/"
		class="mt-4 inline-flex items-center gap-1.5 text-sm font-semibold text-sky-300 transition hover:text-sky-200/80 focus:outline-none focus-visible:underline"
	>
		See how pricing works <span aria-hidden="true">&rarr;</span>
	</a>
	</div>
	</div>
	</section>

	<!-- FAQ -->
	<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="faq-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="faq-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Frequently Asked Questions
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		Common questions about our structural engineering support services for US firms.
	</p>
	</div>

	<div class="mt-10 grid gap-3">
	{faqs.map((item) => (
	<details class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<summary class="cursor-pointer list-none text-sm font-semibold text-slate-100 [&::-webkit-details-marker]:hidden">
		{item.q}
		</summary>
		<p class="mt-4 pt-4 text-sm leading-relaxed text-slate-400 border-t border-slate-800">{item.a}</p>
	</details>
	))}
	</div>
	</div>
	</section>

	<!-- CTA -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="cta-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-8 text-center shadow-xl sm:p-12">
	<h2 id="cta-heading" class="text-3xl font-semibold tracking-tight text-white sm:text-4xl">
		Ready for Structural Engineering Support?
	</h2>
	<p class="mx-auto mt-4 max-w-xl text-base leading-relaxed text-slate-300">
		Book a call to discuss your structural scope, tools, and project pipeline — or share your needs and we'll propose the best-fit engagement.
	</p>
	<div class="mt-8 flex flex-wrap items-center justify-center gap-4">
	<a
		href={bookingUrl}
		{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
		class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-8 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
		data-book-call
	>
		Book a Structural Engineering Call
	</a>
	<a
		href="/#contact"
		class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/40 px-8 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
		data-open-tell-us="structural-cta"
	>
		Tell Us What You Need
	</a>
	</div>
	<p class="mt-5 text-xs text-slate-400">Month-to-month · Free replacement guarantee · No long-term contracts</p>
	</div>
	</div>
	</section>

	<!-- Contact -->
	<section id="contact" class="bg-slate-950 pb-20 pt-16 sm:pb-24 sm:pt-20" aria-labelledby="contact-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
		<p class="text-sm font-semibold uppercase tracking-widest text-sky-300">Get in touch</p>
		<h2 id="contact-heading" class="mt-3 text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Let's Talk Structural Engineering Support
		</h2>
		<p class="mt-4 text-base leading-relaxed text-slate-400">
		Share your structural scope, tools, and timeline — we'll match you with a vetted structural specialist.
		</p>
	</div>

	<ContactHub subject="${brand} – Structural engineering inquiry" defaultCategory="aec" defaultMessage="I'm interested in structural engineering support." />
	</div>
	</section>

	</main>

	<style>
	.js-fade-in {
		opacity: 0;
		transform: translateY(20px);
		transition: opacity 0.35s ease-out, transform 0.35s ease-out;
	}
	.js-fade-in.is-visible {
		opacity: 1;
		transform: translateY(0);
	}
	</style>

	<script is:inline>
	(function () {
		var els = document.querySelectorAll('.js-fade-in');
		if (!els.length) return;
		var io = new IntersectionObserver(function (entries) {
		entries.forEach(function (e) {
			if (e.isIntersecting) {
			e.target.classList.add('is-visible');
			io.unobserve(e.target);
			}
		});
		}, { threshold: 0.1, rootMargin: '0px 0px -40px 0px' });
		els.forEach(function (el) { io.observe(el); });
	})();
	</script>
</Layout>
