---
import Layout from '../../../layouts/Layout.astro';
import MetaHead from '../../../components/MetaHead.astro';
import ContactHub from '../../../components/ContactHub.astro';
import { BOOKING_URL, isExternalUrl } from '../../../lib/cta';

const brand = 'LatAm Scalers';

const meta = {
	title: 'AEC Talent for Architecture Firms – Dedicated LATAM Drafters & BIM Specialists | LatAm Scalers',
	description:
		'Dedicated LATAM specialists for US architecture firms. Revit production specialists, BIM coordinators, visualization specialists, and permit-set producers. From ~$3,500/mo.',
};

const baseUrl = Astro.site ?? 'https://latamscalers.com';
const canonical = new URL('/aec/for-architecture-firms/', baseUrl).toString();

const bookingUrl = BOOKING_URL;
const bookingExternal = isExternalUrl(bookingUrl);

const roles = [
	{ title: 'Revit Architecture Specialist', desc: 'Floor plans, elevations, sections, schedules, Revit families, and full construction documentation.', href: '/roles/architectural-designer/' },
	{ title: 'Visualization Specialist', desc: 'Photorealistic renderings, animations, walkthroughs, and client presentation materials using Enscape, Lumion, and V-Ray.', href: '/roles/visualization-specialist/' },
	{ title: 'BIM Coordinator', desc: 'Multi-discipline model coordination, clash detection, and BEP compliance across architectural, structural, and MEP models.', href: '/roles/bim-coordinator/' },
	{ title: 'Permit Set Producer', desc: 'CD production, sheet organization, code-referenced documentation, and permit-ready document sets in Revit and Bluebeam.', href: '/roles/revit-drafter/' },
	{ title: 'Interior Documentation Specialist', desc: 'FF&E schedules, finish plans, reflected ceiling plans, and interior detail sets.', href: '/roles/architectural-designer/' },
];

const useCases = [
	{ label: 'Production backlog', desc: 'Your principals are doing production instead of design. Add a dedicated Revit specialist to clear the CD backlog while your architects focus on what they do best.' },
	{ label: 'Competition presentations', desc: 'Visualization specialists who produce photorealistic renderings and animations — so you win the project, not just document it.' },
	{ label: 'Permit set production', desc: 'Code-referenced document sets, sheet organization, and annotation schedules produced under the direction of your AOR/RA.' },
	{ label: 'Multi-project scaling', desc: 'Managing multiple projects simultaneously? Add production seats that flex with your workload — month-to-month, no long-term commitment.' },
];

const tools = [
	{ name: 'Revit Architecture', desc: 'Floor plans, elevations, sections, schedules, families, and full construction documentation.' },
	{ name: 'AutoCAD', desc: '2D architectural plans, site layouts, detail sheets, and legacy project support.' },
	{ name: 'Enscape / Lumion / V-Ray', desc: 'Photorealistic renderings, real-time walkthroughs, and client presentation visuals.' },
	{ name: 'SketchUp', desc: 'Conceptual massing, interior layouts, and early-phase design studies.' },
	{ name: 'Bluebeam', desc: 'Markups, redline cycles, QTO, and document review workflows.' },
	{ name: 'ACC / BIM 360', desc: 'Cloud-based model coordination, document management, and collaboration.' },
];

const faqs = [
	{
		q: 'What kind of architecture firms do you serve?',
		a: 'We serve architecture firms across building types — healthcare, data centers, multifamily, mixed-use, commercial, and institutional. Our specialists are vetted for your specific building type experience and tool proficiency.',
	},
	{
		q: 'Can your specialists produce permit-ready document sets?',
		a: 'Yes. Our permit set producers create code-referenced construction document sets including title sheets, plans, elevations, sections, details, and annotation schedules. Your licensed AOR/RA reviews, approves, and stamps the final set.',
	},
	{
		q: 'Do you provide visualization specialists?',
		a: 'Absolutely. We place visualization specialists proficient in Enscape, Lumion, and V-Ray for photorealistic renderings, animations, and client presentation materials. This can be bundled with Revit production or engaged as a standalone service.',
	},
	{
		q: 'How do your specialists integrate with our Revit standards?',
		a: 'During onboarding, we align on your Revit templates, family libraries, naming conventions, and BEP requirements. Your specialist works within your existing standards — not their own.',
	},
	{
		q: 'What does pricing look like for architecture firm specialists?',
		a: 'Dedicated architectural specialists start at approximately $3,500/month for full-time (40h/week). That\'s 50–60% less than a comparable US hire. Part-time and multi-seat configurations are available.',
	},
	{
		q: 'How fast can we get started?',
		a: 'We typically present vetted candidates within 48 hours. Once Revit access and scope are confirmed, onboarding is designed to get production moving within the first week.',
	},
];

const serviceJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'Service',
	name: 'AEC Talent for Architecture Firms',
	description: meta.description,
	provider: { '@type': 'Organization', name: brand, url: baseUrl },
};

const faqJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'FAQPage',
	mainEntity: faqs.map((f) => ({
		'@type': 'Question',
		name: f.q,
		acceptedAnswer: { '@type': 'Answer', text: f.a },
	})),
};
---

<Layout>
	<MetaHead slot="head" title={meta.title} description={meta.description} canonical={canonical} jsonLd={[serviceJsonLd, faqJsonLd]} />

	<main>

	<!-- Hero -->
	<section class="relative overflow-hidden bg-slate-950 py-16 sm:py-24" aria-labelledby="hero-heading">
		<div class="mx-auto max-w-6xl px-6">
		<div class="js-fade-in">
		<p class="text-sm font-semibold uppercase tracking-widest text-aec">For Architecture Firms</p>
	<h1 id="hero-heading" class="mt-4 text-4xl font-semibold leading-tight tracking-tight text-white sm:text-5xl lg:text-[3.25rem]">
		Dedicated Production Specialists for US Architecture Firms
	</h1>
	<p class="mt-5 max-w-xl text-base leading-relaxed text-slate-300 sm:text-lg">
		73% of architecture firms offer telecommuting. Your production bottleneck isn't about location — it's about finding vetted Revit specialists, visualization talent, and permit-set producers. We match them in under a week.
	</p>

	<div class="mt-8 flex flex-wrap gap-3">
	<a
		href={bookingUrl}
		{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
		class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-6 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
		data-book-call
	>
		Book an Architecture Scoping Call
	</a>
	<a
		href="/#contact"
		class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/40 px-6 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
		data-open-tell-us="arch-firms-hero"
	>
		Tell Us What You Need
	</a>
	</div>
	</div>
	</div>
	</section>

	<!-- Problem -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="problem-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="problem-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Your Architects Should Be Designing — Not Producing CDs
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		When your principals spend 60% of their time on production instead of design leadership, client relationships, and business development, your firm suffers. The talent pipeline isn't keeping up with demand.
	</p>
	</div>

	<div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<p class="text-3xl font-semibold text-slate-100">12.1K</p>
		<p class="mt-2 text-sm font-semibold text-slate-100">monthly searches</p>
		<p class="mt-2 text-sm leading-relaxed text-slate-400">for architectural roles and services nationally.</p>
	</div>
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<p class="text-3xl font-semibold text-slate-100">73%</p>
		<p class="mt-2 text-sm font-semibold text-slate-100">remote-ready</p>
		<p class="mt-2 text-sm leading-relaxed text-slate-400">of architecture firms already offer telecommuting.</p>
	</div>
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<p class="text-3xl font-semibold text-slate-100">720/mo</p>
		<p class="mt-2 text-sm font-semibold text-slate-100">services searches</p>
		<p class="mt-2 text-sm leading-relaxed text-slate-400">highest services-first keyword traffic in AEC.</p>
	</div>
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<p class="text-3xl font-semibold text-slate-100">15%</p>
		<p class="mt-2 text-sm font-semibold text-slate-100">of AEC targeting</p>
		<p class="mt-2 text-sm leading-relaxed text-slate-400">Architecture is a core AEC outsourcing segment.</p>
	</div>
	</div>
	</div>
	</section>

	<!-- Use Cases -->
	<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="use-cases-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="use-cases-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		How Architecture Firms Use LatAm Scalers
	</h2>
	</div>

	<div class="mt-10 grid gap-5 sm:grid-cols-2">
	{useCases.map((uc) => (
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<p class="text-xs font-semibold uppercase tracking-wide text-aec">{uc.label}</p>
		<p class="mt-3 text-sm leading-relaxed text-slate-400">{uc.desc}</p>
	</div>
	))}
	</div>
	</div>
	</section>

	<!-- Roles -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="roles-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="roles-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Roles We Place for Architecture Firms
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		From Revit production to visualization — every candidate vetted for tool proficiency and production workflow experience.
	</p>
	</div>

	<div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
	{roles.map((role) => (
	<a
		href={role.href}
		class="js-fade-in group rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20 transition hover:border-aec/30 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
	>
		<h3 class="text-sm font-semibold text-slate-100 group-hover:text-aec">{role.title}</h3>
		<p class="mt-2 text-sm leading-relaxed text-slate-400">{role.desc}</p>
		<p class="mt-3 text-xs font-semibold text-sky-300 group-hover:text-sky-200">View role &#8594;</p>
	</a>
	))}
	</div>
	</div>
	</section>

	<!-- Tools -->
	<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="tools-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="tools-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Tools Your Specialist Will Use
	</h2>
	</div>

	<div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
	{tools.map((tool) => (
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<p class="text-sm font-semibold text-slate-100">{tool.name}</p>
		<p class="mt-2 text-sm leading-relaxed text-slate-400">{tool.desc}</p>
	</div>
	))}
	</div>
	</div>
	</section>

	<!-- Responsibility Matrix -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="matrix-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="matrix-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Your AOR Retains Authority. We Handle Production.
	</h2>
	</div>

	<div class="js-fade-in mt-10 overflow-x-auto">
	<table class="w-full min-w-[480px] rounded-2xl border border-slate-800 bg-slate-900/40 shadow-lg shadow-black/20 overflow-hidden">
	<thead>
		<tr class="border-b border-slate-800 bg-slate-900/40">
		<th class="px-6 py-4 text-left text-sm font-semibold text-slate-100">Your Licensed Team Retains</th>
		<th class="px-6 py-4 text-left text-sm font-semibold text-slate-100">Your Dedicated Specialist Handles</th>
		</tr>
	</thead>
	<tbody class="text-sm">
		<tr class="border-b border-slate-800">
		<td class="px-6 py-4 text-slate-400">Design intent, conceptual direction, client approvals</td>
		<td class="px-6 py-4 text-slate-400">Revit/CAD production — plans, elevations, sections, details</td>
		</tr>
		<tr class="border-b border-slate-800">
		<td class="px-6 py-4 text-slate-400">Code compliance decisions, AOR stamping, sign-off</td>
		<td class="px-6 py-4 text-slate-400">Code-referenced annotations, keynote schedules, permit set assembly</td>
		</tr>
		<tr class="border-b border-slate-800">
		<td class="px-6 py-4 text-slate-400">Redlines, markups, design revisions direction</td>
		<td class="px-6 py-4 text-slate-400">Iterative updates, version control, sheet organization</td>
		</tr>
		<tr>
		<td class="px-6 py-4 text-slate-400">Client-facing communication, project management</td>
		<td class="px-6 py-4 text-slate-400">Vetting, matching, onboarding, replacement guarantee</td>
		</tr>
	</tbody>
	</table>
	</div>
	</div>
	</section>

	<!-- Engagement Options -->
	<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="engagement-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="engagement-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Engagement Options
	</h2>
	</div>

	<div class="mt-10 grid gap-5 md:grid-cols-2">
	<a href="/aec/individuals/" class="js-fade-in group rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20 transition hover:border-aec/30 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300">
		<p class="text-xs font-semibold uppercase tracking-wide text-aec">Individual Specialist</p>
		<h3 class="mt-3 text-lg font-semibold text-slate-100">Dedicated Architectural Specialist</h3>
		<p class="mt-3 text-sm leading-relaxed text-slate-400">
		Full-time or part-time — a Revit production specialist, visualization specialist, or permit-set producer embedded in your team.
		</p>
		<p class="mt-4 text-sm font-semibold text-aec">From ~$3,500/mo</p>
		<p class="mt-3 text-xs font-semibold text-sky-300 group-hover:text-sky-200">Learn more &#8594;</p>
	</a>
	<a href="/aec/teams/" class="js-fade-in group rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20 transition hover:border-aec/30 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300">
		<p class="text-xs font-semibold uppercase tracking-wide text-aec">Production Pod</p>
		<h3 class="mt-3 text-lg font-semibold text-slate-100">Architectural Production Team</h3>
		<p class="mt-3 text-sm leading-relaxed text-slate-400">
		Drafter + visualization specialist + documentation support for firms managing multiple projects or large CD sets.
		</p>
		<p class="mt-4 text-sm font-semibold text-aec">Custom pricing</p>
		<p class="mt-3 text-xs font-semibold text-sky-300 group-hover:text-sky-200">Learn more &#8594;</p>
	</a>
	</div>
	</div>
	</section>

	<!-- Pricing -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="pricing-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="pricing-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Pricing Guidance
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		Dedicated architectural specialists start at approximately <strong class="text-slate-100">$3,500/month</strong> for full-time engagement — 50–60% less than comparable US hires. Multi-seat pods are custom-quoted.
	</p>
	<a
		href="/how-pricing-works/"
		class="mt-4 inline-flex items-center gap-1.5 text-sm font-semibold text-sky-300 transition hover:text-sky-200/80 focus:outline-none focus-visible:underline"
	>
		See how pricing works <span aria-hidden="true">&rarr;</span>
	</a>
	</div>
	</div>
	</section>

	<!-- FAQ -->
	<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="faq-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="faq-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Frequently Asked Questions
	</h2>
	</div>

	<div class="mt-10 grid gap-3">
	{faqs.map((item) => (
	<details class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<summary class="cursor-pointer list-none text-sm font-semibold text-slate-100 [&::-webkit-details-marker]:hidden">
		{item.q}
		</summary>
		<p class="mt-4 pt-4 text-sm leading-relaxed text-slate-400 border-t border-slate-800">{item.a}</p>
	</details>
	))}
	</div>
	</div>
	</section>

	<!-- CTA -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="cta-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-8 text-center shadow-xl sm:p-12">
	<h2 id="cta-heading" class="text-3xl font-semibold tracking-tight text-white sm:text-4xl">
		Ready to Scale Your Architectural Production?
	</h2>
	<p class="mx-auto mt-4 max-w-xl text-base leading-relaxed text-slate-300">
		Book a call to discuss your production needs, Revit standards, and project pipeline.
	</p>
	<div class="mt-8 flex flex-wrap items-center justify-center gap-4">
	<a
		href={bookingUrl}
		{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
		class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-8 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
		data-book-call
	>
		Book a Scoping Call
	</a>
	<a
		href="/#contact"
		class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/40 px-8 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
		data-open-tell-us="arch-firms-cta"
	>
		Tell Us What You Need
	</a>
	</div>
	<p class="mt-5 text-xs text-slate-400">Month-to-month · Free replacement guarantee · No long-term contracts</p>
	</div>
	</div>
	</section>

	<!-- Contact -->
	<section id="contact" class="bg-slate-950 pb-20 pt-16 sm:pb-24 sm:pt-20" aria-labelledby="contact-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
		<p class="text-sm font-semibold uppercase tracking-widest text-sky-300">Get in touch</p>
		<h2 id="contact-heading" class="mt-3 text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Let's Talk Architectural Production Talent
		</h2>
		<p class="mt-4 text-base leading-relaxed text-slate-400">
		Tell us your Revit standards, building types, and project timeline — we'll match you with vetted specialists.
		</p>
	</div>

	<ContactHub subject="${brand} – Architecture firm inquiry" defaultCategory="aec" defaultMessage="We're an architecture firm looking for dedicated production specialists." />
	</div>
	</section>

	</main>

	<style>
	.js-fade-in {
		opacity: 0;
		transform: translateY(20px);
		transition: opacity 0.35s ease-out, transform 0.35s ease-out;
	}
	.js-fade-in.is-visible {
		opacity: 1;
		transform: translateY(0);
	}
	</style>

	<script is:inline>
	(function () {
		var els = document.querySelectorAll('.js-fade-in');
		if (!els.length) return;
		var io = new IntersectionObserver(function (entries) {
		entries.forEach(function (e) {
			if (e.isIntersecting) {
			e.target.classList.add('is-visible');
			io.unobserve(e.target);
			}
		});
		}, { threshold: 0.1, rootMargin: '0px 0px -40px 0px' });
		els.forEach(function (el) { io.observe(el); });
	})();
	</script>
</Layout>
