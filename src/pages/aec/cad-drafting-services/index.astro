---
import Layout from '../../../layouts/Layout.astro';
import MetaHead from '../../../components/MetaHead.astro';
import ContactHub from '../../../components/ContactHub.astro';
import { BOOKING_URL, isExternalUrl } from '../../../lib/cta';

const brand = 'LatAm Scalers';

const meta = {
	title: 'CAD Drafting Services – Dedicated Drafters for US Architecture & Engineering Firms | LatAm Scalers',
	description:
		'Professional CAD drafting for US architecture and engineering firms. Dedicated LATAM drafters for AutoCAD, Revit, and production workflows. Construction documents, details, and deliverables. From ~$3,500/mo.',
};

const baseUrl = Astro.site ?? 'https://latam-scalers-website.vercel.app';
const canonical = new URL('/aec/cad-drafting-services/', baseUrl).toString();

const bookingUrl = BOOKING_URL;
const bookingExternal = isExternalUrl(bookingUrl);
const calendlyUrl = import.meta.env.PUBLIC_CALENDLY_URL ?? import.meta.env.PUBLIC_BOOKING_URL ?? 'https://calendly.com/your-org/15min';

const tools = [
	{ name: 'AutoCAD', desc: '2D drafting, detailing, construction documents, and CAD standards compliance.' },
	{ name: 'Revit', desc: '3D BIM modeling, construction documentation, families, and design development.' },
	{ name: 'AutoCAD Civil 3D', desc: 'Civil drafting, grading, utility layouts, and site documentation.' },
	{ name: 'Bluebeam', desc: 'PDF markups, takeoffs, and construction document review workflows.' },
];

const deliverables = [
	'Construction documents (CD sets) to your firm standards',
	'Plan, section, elevation, and detail production',
	'Schedule and drawing coordination',
	'Redline revisions and iterative updates',
	'Export-ready deliverables in your format',
];

const faqs = [
	{
		q: 'What CAD and Revit work do you handle?',
		a: 'Your dedicated drafter handles full production workflows: construction documents, plan/section/elevation development, details, schedules, redline revisions, and BIM modeling in Revit — in AutoCAD, Revit, Civil 3D, and Bluebeam per your project needs.',
	},
	{
		q: 'Is this suitable for outsourcing drafting work?',
		a: 'Yes. Our CAD drafting services are designed for US firms who want to outsource production work – whether ongoing support or surge capacity. Dedicated drafters integrate into your workflow, use your templates and standards, and work under your direction.',
	},
	{
		q: 'How do drafters adapt to our standards?',
		a: 'We align on your BEP, templates, layer standards, annotation styles, and deliverable checklists during onboarding. Drafters work inside your workflow with clear handoff protocols and QA to your specifications.',
	},
	{
		q: 'What formats and tools do you support?',
		a: 'We support AutoCAD (DWG), Revit (RVT), PDF, and common AEC formats. Drafters work in the tools you use – AutoCAD, Revit, Civil 3D, Bluebeam – and deliver in your preferred format.',
	},
	{
		q: 'Who owns design authority and stamping?',
		a: 'You retain full design authority and stamping responsibility. Our drafters produce work under your direction. We screen for IBC, ASCE 7, NFPA familiarity and code-specific experience. All deliverables require review and approval by your licensed professionals.',
	},
	{
		q: 'What does pricing look like?',
		a: 'Dedicated drafters start at approximately $3,500/month for full-time. Part-time and project-based engagements are available. Custom quotes provided based on scope and volume.',
	},
];

const serviceJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'Service',
	name: 'CAD Drafting Services',
	description: meta.description,
	provider: { '@type': 'Organization', name: brand, url: baseUrl },
};

const faqJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'FAQPage',
	mainEntity: faqs.map((f) => ({
		'@type': 'Question',
		name: f.q,
		acceptedAnswer: { '@type': 'Answer', text: f.a },
	})),
};
---

<Layout>
	<MetaHead slot="head" title={meta.title} description={meta.description} canonical={canonical} jsonLd={[serviceJsonLd, faqJsonLd]} />

	<main>

		<!-- Hero (bg-slate-950, white text) -->
		<section class="relative overflow-hidden bg-slate-950 py-16 sm:py-24" aria-labelledby="hero-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in">
					<p class="text-sm font-semibold uppercase tracking-widest text-aec">CAD Drafting</p>
					<h1 id="hero-heading" class="mt-4 text-4xl font-semibold leading-tight tracking-tight text-white sm:text-5xl lg:text-[3.25rem]">
						CAD Drafting Services – Dedicated Drafters for US Architecture &amp; Engineering Firms
					</h1>
					<p class="mt-5 max-w-xl text-base leading-relaxed text-slate-300 sm:text-lg">
						Professional CAD drafting for US architecture and engineering firms. Dedicated LATAM drafters in AutoCAD and Revit – construction documents, details, and production workflows. US timezone overlap. Vetted. Month-to-month flexibility.
					</p>

					<div class="mt-8 flex flex-wrap gap-3">
						<a
							href={bookingUrl}
							{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
							class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-6 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
							data-book-call
						>
							Book a CAD Drafting Call
						</a>
						<a
							href="/#contact"
							class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/40 px-6 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
							data-open-tell-us="cad-hero"
						>
							Tell Us What You Need
						</a>
					</div>
				</div>
			</div>
		</section>

		<!-- Service overview (bg-slate-950) -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="overview-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="overview-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Your Dedicated CAD Drafting Specialists
				</h2>
				<p class="mt-4 text-base leading-relaxed text-slate-400">
					Professional CAD drafting services for US architecture and engineering firms. Whether you need ongoing drafting support or want to outsource production work, your dedicated drafter integrates into your workflow.
					</p>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Your dedicated drafter produces construction documents, plans, sections, elevations, details, and schedules in AutoCAD and Revit — aligned to your BEP, templates, and deliverable standards under the direction of your licensed professionals. Ideal for firms scaling production without adding overhead or for outsourcing drafting to a reliable partner.
					</p>
					<ul class="mt-6 grid gap-3 sm:grid-cols-2">
						<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
							<span class="text-aec" aria-hidden="true">&#x2713;</span>
							<span class="text-sm text-slate-400"><strong class="text-slate-100">AutoCAD &amp; Revit</strong> – 2D and 3D production</span>
						</li>
						<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
							<span class="text-aec" aria-hidden="true">&#x2713;</span>
							<span class="text-sm text-slate-400"><strong class="text-slate-100">Dedicated drafters</strong> – your team, not freelancers</span>
						</li>
						<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
							<span class="text-aec" aria-hidden="true">&#x2713;</span>
							<span class="text-sm text-slate-400"><strong class="text-slate-100">US timezone</strong> – real-time collaboration</span>
						</li>
						<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
							<span class="text-aec" aria-hidden="true">&#x2713;</span>
							<span class="text-sm text-slate-400"><strong class="text-slate-100">Month-to-month</strong> – scale up or down anytime</span>
						</li>
					</ul>
				</div>
			</div>
		</section>

		<!-- Scope & deliverables (bg-slate-900/40) -->
		<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="scope-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="scope-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Scope &amp; Deliverables
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Your dedicated drafter's scope covers full production workflows – from early design development through construction documents. Deliverables align with your firm standards and formats.
					</p>
				</div>

				<div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
					{deliverables.map((item) => (
						<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
							<p class="text-sm font-semibold text-slate-100">{item}</p>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- Tools section (bg-slate-950) -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="tools-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="tools-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Tools Your Specialist Will Use
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Your dedicated drafter works in AutoCAD, Revit, Civil 3D, and Bluebeam – aligned with your production workflow.
					</p>
				</div>

				<div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
					{tools.map((tool) => (
						<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
							<p class="text-sm font-semibold text-slate-100">{tool.name}</p>
							<p class="mt-2 text-sm leading-relaxed text-slate-400">{tool.desc}</p>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- Engagement options (bg-slate-900/40) -->
		<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="engagement-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="engagement-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Engagement Options
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Dedicated drafters on a full-time or part-time basis – ideal for ongoing services or outsourcing production capacity.
					</p>
				</div>

				<div class="mt-10 grid gap-5 md:grid-cols-2">
					<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
						<p class="text-xs font-semibold uppercase tracking-wide text-aec">Individual Specialist</p>
						<h3 class="mt-3 text-lg font-semibold text-slate-100">Dedicated CAD / Revit Drafter</h3>
						<p class="mt-3 text-sm leading-relaxed text-slate-400">
							Full-time (40h/week) or part-time (20h/week) drafters – AutoCAD, Revit, or both – embedded into your production workflow.
						</p>
						<p class="mt-4 text-sm font-semibold text-aec">From ~$3,500/mo</p>
					</div>
					<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
						<p class="text-xs font-semibold uppercase tracking-wide text-aec">Production Team</p>
						<h3 class="mt-3 text-lg font-semibold text-slate-100">Scalable Drafting Pod</h3>
						<p class="mt-3 text-sm leading-relaxed text-slate-400">
							Multiple drafters for high-volume projects or a mix of disciplines (architectural, structural, civil).
						</p>
						<p class="mt-4 text-sm font-semibold text-aec">Custom pricing</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Pricing guidance (bg-slate-950) -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="pricing-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="pricing-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Pricing Guidance
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Individual drafters start at approximately <strong class="text-slate-100">$3,500/month</strong> for full-time. Part-time and production-team engagements are custom-quoted based on scope and volume.
					</p>
					<a
						href="/how-pricing-works/"
						class="mt-4 inline-flex items-center gap-1.5 text-sm font-semibold text-sky-300 transition hover:text-sky-200/80 focus:outline-none focus-visible:underline"
					>
						See how pricing works <span aria-hidden="true">&rarr;</span>
					</a>
				</div>
			</div>
		</section>

		<!-- FAQ (bg-slate-900/40) -->
		<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="faq-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="faq-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Frequently Asked Questions
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Common questions about our CAD drafting services and outsourcing for US firms.
					</p>
				</div>

				<div class="mt-10 grid gap-3">
					{faqs.map((item) => (
						<details class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
							<summary class="cursor-pointer list-none text-sm font-semibold text-slate-100 [&::-webkit-details-marker]:hidden">
								{item.q}
							</summary>
							<p class="mt-4 pt-4 text-sm leading-relaxed text-slate-400 border-t border-slate-800">{item.a}</p>
						</details>
					))}
				</div>
			</div>
		</section>

		<!-- CTA (bg-slate-950) -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="cta-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-8 text-center shadow-xl sm:p-12">
					<h2 id="cta-heading" class="text-3xl font-semibold tracking-tight text-white sm:text-4xl">
						Ready for CAD Drafting Support?
					</h2>
					<p class="mx-auto mt-4 max-w-xl text-base leading-relaxed text-slate-300">
						Book a call to discuss your drafting needs – ongoing services or outsourcing production – or share your workflow and we'll propose the best-fit engagement.
					</p>
					<div class="mt-8 flex flex-wrap items-center justify-center gap-4">
						<a
							href={bookingUrl}
							{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
							class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-8 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
							data-book-call
						>
							Book a CAD Drafting Call
						</a>
						<a
							href="/#contact"
							class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/40 px-8 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
							data-open-tell-us="cad-cta"
						>
							Tell Us What You Need
						</a>
					</div>
					<p class="mt-5 text-xs text-slate-400">Month-to-month · Free replacement guarantee · No long-term contracts</p>
				</div>
			</div>
		</section>

		<!-- Contact (bg-slate-950) -->
		<section id="contact" class="bg-slate-950 pb-20 pt-16 sm:pb-24 sm:pt-20" aria-labelledby="contact-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<p class="text-sm font-semibold uppercase tracking-widest text-sky-300">Get in touch</p>
					<h2 id="contact-heading" class="mt-3 text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Let's Talk CAD Drafting
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Share your drafting needs – ongoing services or outsourcing – and we'll match you with a vetted drafter.
					</p>
				</div>

				<div class="mt-10">
					<ContactHub subject={`${brand} — CAD drafting inquiry`} defaultCategory="aec" defaultMessage="I'm interested in CAD drafting services / outsourcing drafting work." />
				</div>
			</div>
		</section>

	</main>

	<style>
		.js-fade-in {
			opacity: 0;
			transform: translateY(20px);
			transition: opacity 0.35s ease-out, transform 0.35s ease-out;
		}
		.js-fade-in.is-visible {
			opacity: 1;
			transform: translateY(0);
		}
	</style>

	<script is:inline>
		(function () {
			var els = document.querySelectorAll('.js-fade-in');
			if (!els.length) return;
			var io = new IntersectionObserver(function (entries) {
				entries.forEach(function (e) {
					if (e.isIntersecting) {
						e.target.classList.add('is-visible');
						io.unobserve(e.target);
					}
				});
			}, { threshold: 0.1, rootMargin: '0px 0px -40px 0px' });
			els.forEach(function (el) { io.observe(el); });
		})();
	</script>
</Layout>

