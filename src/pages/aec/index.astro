---
import Layout from '../../layouts/Layout.astro';
import MetaHead from '../../components/MetaHead.astro';
import ContactHub from '../../components/ContactHub.astro';
import { BOOKING_URL, isExternalUrl } from '../../lib/cta';

const brand = 'LatAm Scalers';

const meta = {
	title: 'AEC Talent Solutions | Dedicated BIM, Revit, CAD Specialists | LatAm Scalers',
	description:
		'Dedicated AEC specialists for US architecture and engineering firms. BIM coordinators, Revit drafters, CAD technicians – vetted, US timezone-aligned, month-to-month flexibility.',
};

const baseUrl = Astro.site ?? 'https://latam-scalers-website.vercel.app';
const canonical = new URL('/aec/', baseUrl).toString();

const bookingUrl = BOOKING_URL;
const bookingExternal = isExternalUrl(bookingUrl);
const calendlyUrl = import.meta.env.PUBLIC_CALENDLY_URL ?? import.meta.env.PUBLIC_BOOKING_URL ?? 'https://calendly.com/your-org/15min';

const aecRoles = [
	{ label: 'BIM Coordinator', href: '/roles/bim-coordinator/' },
	{ label: 'Revit Drafter', href: '/roles/revit-drafter/' },
	{ label: 'Architectural Designer', href: '/roles/architectural-designer/' },
	{ label: 'CAD Technician', href: '/roles/?category=aec' },
	{ label: 'MEP Modeler', href: '/roles/?category=aec' },
	{ label: 'Structural Drafter', href: '/roles/?category=aec' },
	{ label: 'Civil 3D Specialist', href: '/roles/?category=aec' },
	{ label: 'Construction Admin Support', href: '/roles/?category=aec' },
];

const tools = [
	{ name: 'Revit', desc: '3D BIM modeling, families, coordination sets, and construction documentation.' },
	{ name: 'Navisworks', desc: 'Clash detection, 4D scheduling, and multi-model coordination.' },
	{ name: 'AutoCAD', desc: '2D drafting, detailing, and construction document production.' },
	{ name: 'ACC', desc: 'Autodesk Construction Cloud – project management, document control, design collaboration.' },
	{ name: 'BIM 360', desc: 'Cloud-based collaboration, model coordination, and document management.' },
];

const faqs = [
	{
		q: 'How do remote AEC specialists adapt to our firm standards?',
		a: 'We align on your BEP, templates, deliverable standards, and QA cadence during onboarding. Specialists work inside your workflow with redlines, markups, and checklists – all documents require review and stamping by your PE/RA.',
	},
	{
		q: 'How quickly can we start?',
		a: 'We typically present vetted AEC options in 48 hours. Once access and scope are confirmed, onboarding is designed to be fast so you can start production quickly.',
	},
	{
		q: 'What tools and file formats do you support?',
		a: 'We support Revit, AutoCAD, Navisworks, ACC, BIM 360, and common rendering tools. Specialists work in your preferred file formats and handoff standards.',
	},
	{
		q: 'Are specialists licensed? Who stamps documents?',
		a: 'Our specialists produce work under the direction of your licensed professionals. All documents require review and stamping by your PE/RA – we never provide stamps or assume sign-off responsibility.',
	},
	{
		q: 'What if the fit is not right?',
		a: 'Engagements are month-to-month. We offer a free replacement guarantee to keep delivery moving if the fit isn\'t right.',
	},
];

const serviceJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'Service',
	name: 'AEC Talent Solutions',
	description: meta.description,
	provider: { '@type': 'Organization', name: brand, url: baseUrl },
};

const faqJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'FAQPage',
	mainEntity: faqs.map((f) => ({
		'@type': 'Question',
		name: f.q,
		acceptedAnswer: { '@type': 'Answer', text: f.a },
	})),
};
---

<Layout>
	<MetaHead slot="head" title={meta.title} description={meta.description} canonical={canonical} jsonLd={[serviceJsonLd, faqJsonLd]} />

	<main>

		<!-- SECTION 1 – HERO (bg-slate-950, white text) -->
		<section class="relative overflow-hidden bg-slate-950 py-16 sm:py-24" aria-labelledby="aec-hero-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in">
					<p class="text-sm font-semibold uppercase tracking-widest text-aec">AEC Talent Solutions</p>
					<h1 id="aec-hero-heading" class="mt-4 text-4xl font-semibold leading-tight tracking-tight text-white sm:text-5xl lg:text-[3.25rem]">
						Accept More Projects Without Adding Overhead
					</h1>
					<p class="mt-5 max-w-xl text-base leading-relaxed text-slate-300 sm:text-lg">
						Dedicated LATAM AEC specialists – BIM coordinators, Revit drafters, CAD technicians – pre-vetted, US-code fluent, timezone-aligned. Starting in under a week. Month-to-month flexibility.
					</p>

					<div class="mt-8 flex flex-wrap gap-3">
						<a
							href={bookingUrl}
							{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
							class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-6 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
							data-book-call
						>
							Book an AEC Scoping Call
						</a>
						<a
							href="/#contact"
							class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/60 px-6 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
							data-open-tell-us="aec-hero"
						>
							Tell Us What You Need
						</a>
					</div>
				</div>
			</div>
		</section>

		<!-- SECTION 2 – AEC MICRO-CLARIFIER (bg-slate-950) -->
		<section class="bg-slate-950 py-8 sm:py-10" aria-label="AEC clarification">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 px-6 py-5 text-center sm:px-8 sm:py-6">
					<p class="text-sm leading-relaxed text-white/90 sm:text-base">
						Our specialists produce work under the direction of your licensed professionals. All documents require review and stamping by your PE/RA.
					</p>
				</div>
			</div>
		</section>

		<!-- SECTION 3 – PROBLEM (bg-slate-950) -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="aec-problem-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="aec-problem-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						The AEC Workforce Crisis Is Getting Worse
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Firms are turning down work they can't staff. Demand is growing; the local talent pipeline isn't keeping up.
					</p>
				</div>

				<div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
					<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
						<p class="text-3xl font-semibold text-slate-100">94%</p>
						<p class="mt-2 text-sm font-semibold text-slate-100">unfilled positions</p>
						<p class="mt-2 text-sm leading-relaxed text-slate-400">
							of AEC firms have unfilled engineering and design positions.
						</p>
					</div>
					<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
						<p class="text-3xl font-semibold text-slate-100">51%</p>
						<p class="mt-2 text-sm font-semibold text-slate-100">turning down work</p>
						<p class="mt-2 text-sm leading-relaxed text-slate-400">
							of firms are declining projects due to staffing shortages.
						</p>
					</div>
					<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
						<p class="text-3xl font-semibold text-slate-100">62%</p>
						<p class="mt-2 text-sm font-semibold text-slate-100">BIM talent gap</p>
						<p class="mt-2 text-sm leading-relaxed text-slate-400">
							specifically struggle with BIM and digital documentation talent.
						</p>
					</div>
					<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
						<p class="text-3xl font-semibold text-slate-100">26%</p>
						<p class="mt-2 text-sm font-semibold text-slate-100">declining profitable work</p>
						<p class="mt-2 text-sm leading-relaxed text-slate-400">
							of firms are turning away profitable projects they could execute with more capacity.
						</p>
					</div>
				</div>
			</div>
		</section>

		<!-- SECTION 4 – SOLUTION OVERVIEW (bg-slate-900/40) -->
		<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="aec-solution-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="aec-solution-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Your Dedicated AEC Specialists
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Dedicated AEC specialists integrated into your workflow. <strong class="text-slate-100">NOT</strong> a staffing agency. <strong class="text-slate-100">NOT</strong> a freelancer marketplace.
					</p>
					<ul class="mt-6 grid gap-3 sm:grid-cols-2">
						<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
							<span class="text-aec" aria-hidden="true">âœ“</span>
							<span class="text-sm text-slate-400"><strong class="text-slate-100">Dedicated</strong> – one specialist, your team</span>
						</li>
						<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
							<span class="text-aec" aria-hidden="true">âœ“</span>
							<span class="text-sm text-slate-400"><strong class="text-slate-100">Vetted</strong> – production-ready, aligned to your standards</span>
						</li>
						<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
							<span class="text-aec" aria-hidden="true">âœ“</span>
							<span class="text-sm text-slate-400"><strong class="text-slate-100">US timezone</strong> – real-time collaboration</span>
						</li>
						<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
							<span class="text-aec" aria-hidden="true">âœ“</span>
							<span class="text-sm text-slate-400"><strong class="text-slate-100">Month-to-month</strong> – scale up or down anytime</span>
						</li>
					</ul>
				</div>
			</div>
		</section>

		<!-- SECTION 5 – ENGAGEMENT OPTIONS (bg-slate-950) -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="aec-engagement-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="aec-engagement-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Engagement Options
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Start with a single specialist or scale a production pod for peak workloads.
					</p>
				</div>

				<div class="mt-10 grid gap-5 md:grid-cols-2 lg:grid-cols-4">
					<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
						<p class="text-xs font-semibold uppercase tracking-wide text-aec">Individual Specialists</p>
						<h3 class="mt-3 text-lg font-semibold text-slate-100">Dedicated AEC Talent</h3>
						<p class="mt-3 text-sm leading-relaxed text-slate-400">
							Full-time (40h/week) or part-time (20h/week) BIM coordinators, Revit drafters, CAD technicians, and more – embedded into your team.
						</p>
						<p class="mt-4 text-sm font-semibold text-aec">From ~$3,500/mo</p>
					</div>
					<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
						<p class="text-xs font-semibold uppercase tracking-wide text-aec">Production Pods</p>
						<h3 class="mt-3 text-lg font-semibold text-slate-100">Scalable AEC Teams</h3>
						<p class="mt-3 text-sm leading-relaxed text-slate-400">
							Custom pod configurations – BIM + MEP + structural, or other combinations – for higher throughput and parallel execution.
						</p>
						<p class="mt-4 text-sm font-semibold text-aec">Custom pricing</p>
					</div>
					<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
						<p class="text-xs font-semibold uppercase tracking-wide text-aec">Pre-Paid Hourly Blocks</p>
						<h3 class="mt-3 text-lg font-semibold text-slate-100">Flexible Hour Packages</h3>
						<p class="mt-3 text-sm leading-relaxed text-slate-400">
							40, 80, 120, or 160+ hour blocks for overflow, audits, or one-off deliverables without a monthly commitment.
						</p>
						<p class="mt-4 text-sm font-semibold text-aec">Flexible pricing</p>
					</div>
					<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
						<p class="text-xs font-semibold uppercase tracking-wide text-aec">Direct Hire Placement</p>
						<h3 class="mt-3 text-lg font-semibold text-slate-100">Hire Directly</h3>
						<p class="mt-3 text-sm leading-relaxed text-slate-400">
							We source and vet — you hire directly. Ideal for firms that prefer to bring talent in-house.
						</p>
						<p class="mt-4 text-sm font-semibold text-aec">Placement fee</p>
					</div>
				</div>
			</div>
		</section>

		<!-- SECTION 6 – ROLE SHOWCASE (bg-slate-900/40) -->
		<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="aec-roles-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="aec-roles-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						AEC Roles We Place
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Browse role pages for details – or tell us what you need and we'll match accordingly.
					</p>
				</div>

				<div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
					{aecRoles.map((role) => (
						<a
							href={role.href}
							class="js-fade-in group rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20 transition hover:border-aec/30 hover:shadow-md focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
						>
							<p class="text-sm font-semibold text-slate-100 group-hover:text-aec">{role.label}</p>
							<p class="mt-1 text-xs font-semibold text-aec">View role â†’</p>
						</a>
					))}
				</div>
			</div>
		</section>

		<!-- SECTION 7 – TOOLS & DELIVERABLES (bg-slate-950) -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="aec-tools-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="aec-tools-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Tools &amp; Deliverables
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Our specialists work in the tools you use. We align on your BEP, templates, and handoff standards.
					</p>
				</div>

				<div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
					{tools.map((tool) => (
						<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
							<p class="text-sm font-semibold text-slate-100">{tool.name}</p>
							<p class="mt-2 text-sm leading-relaxed text-slate-400">{tool.desc}</p>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- SECTION 8 – RESPONSIBILITY MATRIX (bg-slate-900/40) -->
		<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="aec-matrix-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="aec-matrix-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Your Licensed Team Retains vs. Your Dedicated LATAM Specialist Handles
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Clear roles mean better trust and smoother delivery. This is how we operate.
					</p>
				</div>

				<div class="js-fade-in mt-10 overflow-x-auto">
					<table class="w-full min-w-[480px] rounded-2xl border border-slate-800 bg-slate-900/40 shadow-lg shadow-black/20 overflow-hidden">
						<thead>
							<tr class="border-b border-slate-800 bg-slate-900/40">
								<th class="px-6 py-4 text-left text-sm font-semibold text-slate-100">Your Licensed Team Retains</th>
								<th class="px-6 py-4 text-left text-sm font-semibold text-slate-100">Your Dedicated LATAM Specialist Handles</th>
							</tr>
						</thead>
						<tbody class="text-sm">
							<tr class="border-b border-slate-800">
								<td class="px-6 py-4 text-slate-400">Design authority, sign-off, stamping</td>
								<td class="px-6 py-4 text-slate-400">Production, modeling, drafting, coordination support</td>
							</tr>
							<tr class="border-b border-slate-800">
								<td class="px-6 py-4 text-slate-400">BEP, templates, standards</td>
								<td class="px-6 py-4 text-slate-400">Execution within your standards, QA to your checklist</td>
							</tr>
							<tr class="border-b border-slate-800">
								<td class="px-6 py-4 text-slate-400">Redlines, markups, direction</td>
								<td class="px-6 py-4 text-slate-400">Iterative updates, version control, handoff</td>
							</tr>
							<tr>
								<td class="px-6 py-4 text-slate-400">Client communication, project management</td>
								<td class="px-6 py-4 text-slate-400">Vetting, matching, onboarding, replacement guarantee</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</section>

		<!-- SECTION 9 – WHY LATAM FOR AEC (bg-slate-950, white text) -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="aec-why-latam-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="aec-why-latam-heading" class="text-3xl font-semibold tracking-tight text-white sm:text-4xl">
						Why LATAM for AEC
					</h2>
					<p class="mt-4 text-base leading-relaxed text-white/80">
						LATAM specialists deliver the quality and alignment US firms need – without the cost and hiring friction.
					</p>
				</div>

				<div class="mt-10 grid gap-6 sm:grid-cols-3">
					<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-8 text-center">
						<p class="text-sm font-semibold uppercase tracking-wide text-aec">Time-zone overlap</p>
						<p class="mt-4 text-base leading-relaxed text-slate-300">
							LATAM time zones align with the US – real-time collaboration, same-day feedback loops, no overnight handoffs.
						</p>
					</div>
					<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-8 text-center">
						<p class="text-sm font-semibold uppercase tracking-wide text-aec">Cost savings</p>
						<p class="mt-4 text-base leading-relaxed text-slate-300">
							50–70% lower than a comparable US hire – without sacrificing quality or commitment.
						</p>
					</div>
					<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-8 text-center">
						<p class="text-sm font-semibold uppercase tracking-wide text-aec">English proficiency</p>
						<p class="mt-4 text-base leading-relaxed text-slate-300">
							Fluent English for clear communication, redline review, and seamless integration into your team.
						</p>
					</div>
				</div>
			</div>
		</section>

		<!-- SECTION 10 – PRICING GUIDANCE (bg-slate-950) -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="aec-pricing-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="aec-pricing-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Pricing Guidance
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Individual specialists start at approximately <strong class="text-slate-100">$3,500/month</strong>. Production pods are custom-quoted based on your roles and volume.
					</p>
					<a
						href="/how-pricing-works/"
						class="mt-4 inline-flex items-center gap-1.5 text-sm font-semibold text-sky-300 transition hover:text-sky-200/80 focus:outline-none focus-visible:underline"
					>
						See how pricing works <span aria-hidden="true">&rarr;</span>
					</a>
				</div>
			</div>
		</section>

		<!-- SECTION 11 – FAQ (bg-slate-900/40) -->
		<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="aec-faq-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="aec-faq-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Frequently Asked Questions
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						AEC-specific answers to the questions we hear most.
					</p>
				</div>

				<div class="mt-10 grid gap-3">
					{faqs.map((item) => (
						<details class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
							<summary class="cursor-pointer list-none text-sm font-semibold text-slate-100 [&::-webkit-details-marker]:hidden">
								{item.q}
							</summary>
							<p class="mt-4 pt-4 text-sm leading-relaxed text-slate-400 border-t border-slate-800">{item.a}</p>
						</details>
					))}
				</div>
			</div>
		</section>

		<!-- SECTION 12 – CTA (bg-slate-950) -->
