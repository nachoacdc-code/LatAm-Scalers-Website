---
import Layout from '../../../layouts/Layout.astro';
import MetaHead from '../../../components/MetaHead.astro';
import ContactHub from '../../../components/ContactHub.astro';
import { BOOKING_URL, isExternalUrl } from '../../../lib/cta';

const brand = 'LatAm Scalers';

const meta = {
	title: 'AEC Talent for Civil & Structural Engineering Firms – Dedicated LATAM Specialists | LatAm Scalers',
	description:
		'Dedicated LATAM specialists for US civil and structural engineering firms. Civil 3D designers, structural drafters, Revit Structure modelers. 92% of firms have open positions. From ~$3,500/mo.',
};

const baseUrl = Astro.site ?? 'https://latam-scalers-website.vercel.app';
const canonical = new URL('/aec/for-civil-structural/', baseUrl).toString();

const bookingUrl = BOOKING_URL;
const bookingExternal = isExternalUrl(bookingUrl);

const roles = [
	{ title: 'Civil 3D Specialist', desc: 'Site plans, grading, drainage, utility coordination, and corridor modeling in Civil 3D.', href: '/roles/civil-3d-specialist/' },
	{ title: 'Structural Drafter', desc: 'Structural drawings, connection details, framing plans, and foundation layouts in Revit Structure and AutoCAD.', href: '/roles/structural-drafter/' },
	{ title: 'Revit Structure Modeler', desc: 'Analytical models, frame layouts, rebar detailing, and construction documentation in Revit Structure.', href: '/roles/structural-drafter/' },
	{ title: 'BIM Coordinator', desc: 'Multi-discipline coordination, clash detection, and model audits between structural, MEP, and architectural trades.', href: '/roles/bim-coordinator/' },
	{ title: 'CAD Production Specialist', desc: 'Sheet sets, structural details, permit documents, and construction drawing production in AutoCAD.', href: '/roles/revit-drafter/' },
];

const useCases = [
	{ label: 'Infrastructure backlog', desc: 'IIJA-driven demand is surging. Add dedicated Civil 3D specialists to handle site plans, grading, and utility layouts without the 3–6 month US hiring cycle.' },
	{ label: 'Structural documentation', desc: 'Your SEOR sets performance criteria. Your dedicated structural drafter produces framing plans, connection details, and permit-set documents under that framework.' },
	{ label: 'Open positions crisis', desc: '92% of civil/structural firms have open positions. Stop turning down profitable work — add production capacity in under a week.' },
	{ label: 'BIM transition', desc: 'Moving from 2D to Revit Structure? Our modelers bridge the transition — producing BIM deliverables while your team builds internal capability.' },
];

const tools = [
	{ name: 'Civil 3D', desc: 'Site plans, grading, corridors, drainage, pipe networks, and quantity takeoffs.' },
	{ name: 'Revit Structure', desc: 'Structural framing, foundations, rebar, analytical models, and construction documentation.' },
	{ name: 'AutoCAD', desc: '2D structural details, sheet sets, permit drawings, and legacy project support.' },
	{ name: 'ETABS / SAP2000', desc: 'Structural analysis models, frame layouts, and lateral system design support.' },
	{ name: 'Navisworks', desc: 'Multi-discipline clash detection and coordination with MEP and architectural models.' },
	{ name: 'Bluebeam', desc: 'Markup cycles, redlines, QTO, and structural document review workflows.' },
];

const faqs = [
	{
		q: 'What civil engineering work can your specialists handle?',
		a: 'Our Civil 3D specialists produce site plans, grading designs, drainage layouts, utility coordination, corridor models, and permit-set documentation. All work is produced under the direction of your licensed Professional Engineer.',
	},
	{
		q: 'What structural work is delegable to remote specialists?',
		a: 'The SEOR (Structural Engineer of Record) establishes performance criteria and retains liability. Your dedicated specialist executes production — structural drawings, connection details, framing plans, rebar schedules, and Revit Structure models — under that established framework. This is institutionalized AEC practice, not a novel model.',
	},
	{
		q: 'Do your specialists work with ETABS and SAP2000?',
		a: 'Yes. We screen for proficiency in structural analysis tools including ETABS, SAP2000, and Revit Structure. Specialists can build and update analytical models under the direction of your structural engineers.',
	},
	{
		q: 'How do you handle infrastructure projects with Civil 3D?',
		a: 'Our Civil 3D specialists produce site plans, grading surfaces, pipe networks, corridors, and associated plan-profile sheets. They work within your coordinate systems, surface data, and survey point databases.',
	},
	{
		q: 'What does pricing look like?',
		a: 'Individual civil/structural specialists start at approximately $3,500/month for full-time (40h/week). Multi-seat configurations are custom-quoted. That represents 50–60% savings versus comparable US civil/structural talent.',
	},
	{
		q: 'How fast can we get started?',
		a: 'We typically present vetted candidates within 48 hours. Once tool access and project scope are confirmed, onboarding is designed to get production moving within the first week.',
	},
];

const serviceJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'Service',
	name: 'AEC Talent for Civil & Structural Engineering Firms',
	description: meta.description,
	provider: { '@type': 'Organization', name: brand, url: baseUrl },
};

const faqJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'FAQPage',
	mainEntity: faqs.map((f) => ({
		'@type': 'Question',
		name: f.q,
		acceptedAnswer: { '@type': 'Answer', text: f.a },
	})),
};
---

<Layout>
	<MetaHead slot="head" title={meta.title} description={meta.description} canonical={canonical} jsonLd={[serviceJsonLd, faqJsonLd]} />

	<main>

	<!-- Hero -->
	<section class="relative overflow-hidden bg-slate-950 py-16 sm:py-24" aria-labelledby="hero-heading">
		<div class="mx-auto max-w-6xl px-6">
		<div class="js-fade-in">
		<p class="text-sm font-semibold uppercase tracking-widest text-aec">For Civil &amp; Structural Firms</p>
	<h1 id="hero-heading" class="mt-4 text-4xl font-semibold leading-tight tracking-tight text-white sm:text-5xl lg:text-[3.25rem]">
		Dedicated Specialists for US Civil &amp; Structural Engineering Firms
	</h1>
	<p class="mt-5 max-w-xl text-base leading-relaxed text-slate-300 sm:text-lg">
		92% of civil and structural firms have open positions. Add dedicated Civil 3D specialists, structural drafters, and Revit Structure modelers in under a week. 50–60% less than US hires, same timezone, month-to-month.
	</p>

	<div class="mt-8 flex flex-wrap gap-3">
	<a
		href={bookingUrl}
		{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
		class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-6 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
		data-book-call
	>
		Book a Civil/Structural Scoping Call
	</a>
	<a
		href="/#contact"
		class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/40 px-6 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
		data-open-tell-us="civil-structural-hero"
	>
		Tell Us What You Need
	</a>
	</div>
	</div>
	</div>
	</section>

	<!-- AEC micro-clarifier -->
	<div class="bg-slate-950 border-b border-slate-800">
	<div class="mx-auto max-w-6xl px-6 py-4">
	<p class="text-xs leading-relaxed text-slate-400 text-center sm:text-sm">
		Our specialists produce work under the direction of your licensed Professional Engineers. All documents require PE review and stamping.
	</p>
	</div>
	</div>

	<!-- Problem -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="problem-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="problem-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		The Civil &amp; Structural Talent Shortage Is Accelerating
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		Infrastructure investment is surging. The talent pipeline isn't keeping up. With 17,200 monthly searches for civil/structural roles and 92% of firms reporting open positions, the bottleneck is people — not projects.
	</p>
	</div>

	<div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<p class="text-3xl font-semibold text-slate-100">92%</p>
		<p class="mt-2 text-sm font-semibold text-slate-100">open positions</p>
		<p class="mt-2 text-sm leading-relaxed text-slate-400">of civil/structural firms have unfilled engineering positions.</p>
	</div>
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<p class="text-3xl font-semibold text-slate-100">17.2K</p>
		<p class="mt-2 text-sm font-semibold text-slate-100">monthly searches</p>
		<p class="mt-2 text-sm leading-relaxed text-slate-400">for civil and structural engineering roles nationally.</p>
	</div>
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<p class="text-3xl font-semibold text-slate-100">20%</p>
		<p class="mt-2 text-sm font-semibold text-slate-100">of AEC targeting</p>
		<p class="mt-2 text-sm leading-relaxed text-slate-400">Civil/structural is the second largest AEC outsourcing segment.</p>
	</div>
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<p class="text-3xl font-semibold text-slate-100">IIJA</p>
		<p class="mt-2 text-sm font-semibold text-slate-100">infrastructure boom</p>
		<p class="mt-2 text-sm leading-relaxed text-slate-400">Federal investment driving sustained demand for civil engineering capacity.</p>
	</div>
	</div>
	</div>
	</section>

	<!-- Use Cases -->
	<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="use-cases-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="use-cases-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		How Civil &amp; Structural Firms Use LatAm Scalers
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		From infrastructure design to structural documentation — these are the patterns we see most.
	</p>
	</div>

	<div class="mt-10 grid gap-5 sm:grid-cols-2">
	{useCases.map((uc) => (
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<p class="text-xs font-semibold uppercase tracking-wide text-aec">{uc.label}</p>
		<p class="mt-3 text-sm leading-relaxed text-slate-400">{uc.desc}</p>
	</div>
	))}
	</div>
	</div>
	</section>

	<!-- Roles -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="roles-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="roles-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Civil &amp; Structural Roles We Place
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		Specialists vetted for tool proficiency, US code awareness, and production workflow integration.
	</p>
	</div>

	<div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
	{roles.map((role) => (
	<a
		href={role.href}
		class="js-fade-in group rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20 transition hover:border-aec/30 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
	>
		<h3 class="text-sm font-semibold text-slate-100 group-hover:text-aec">{role.title}</h3>
		<p class="mt-2 text-sm leading-relaxed text-slate-400">{role.desc}</p>
		<p class="mt-3 text-xs font-semibold text-sky-300 group-hover:text-sky-200">View role &#8594;</p>
	</a>
	))}
	</div>
	</div>
	</section>

	<!-- Tools -->
	<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="tools-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="tools-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Tools Your Specialist Will Use
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		We match tool proficiency to your firm's stack — Civil 3D, Revit Structure, ETABS, and your preferred platforms.
	</p>
	</div>

	<div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
	{tools.map((tool) => (
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<p class="text-sm font-semibold text-slate-100">{tool.name}</p>
		<p class="mt-2 text-sm leading-relaxed text-slate-400">{tool.desc}</p>
	</div>
	))}
	</div>
	</div>
	</section>

	<!-- Responsibility Matrix -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="matrix-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="matrix-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Your SEOR Retains Authority. We Handle Production.
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		The Structural Engineer of Record establishes performance criteria and retains liability. Your dedicated specialist executes production under that framework — this is institutionalized AEC practice.
	</p>
	</div>

	<div class="js-fade-in mt-10 overflow-x-auto">
	<table class="w-full min-w-[480px] rounded-2xl border border-slate-800 bg-slate-900/40 shadow-lg shadow-black/20 overflow-hidden">
	<thead>
		<tr class="border-b border-slate-800 bg-slate-900/40">
		<th class="px-6 py-4 text-left text-sm font-semibold text-slate-100">Your Licensed PE/SE Team Retains</th>
		<th class="px-6 py-4 text-left text-sm font-semibold text-slate-100">Your Dedicated LATAM Specialist Handles</th>
		</tr>
	</thead>
	<tbody class="text-sm">
		<tr class="border-b border-slate-800">
		<td class="px-6 py-4 text-slate-400">Structural design authority, performance criteria, PE/SE stamping</td>
		<td class="px-6 py-4 text-slate-400">Structural drawings, framing plans, connection details, Revit models</td>
		</tr>
		<tr class="border-b border-slate-800">
		<td class="px-6 py-4 text-slate-400">Civil design standards, grading criteria, PE sign-off</td>
		<td class="px-6 py-4 text-slate-400">Civil 3D production — site plans, drainage, corridor models, permit docs</td>
		</tr>
		<tr class="border-b border-slate-800">
		<td class="px-6 py-4 text-slate-400">Redlines, markups, engineering direction</td>
		<td class="px-6 py-4 text-slate-400">Iterative updates, version control, sheet organization</td>
		</tr>
		<tr>
		<td class="px-6 py-4 text-slate-400">Client communication, project management</td>
		<td class="px-6 py-4 text-slate-400">Vetting, matching, onboarding, replacement guarantee</td>
		</tr>
	</tbody>
	</table>
	</div>
	</div>
	</section>

	<!-- Engagement Options -->
	<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="engagement-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="engagement-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Engagement Options
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		Start with one specialist and scale as your project pipeline grows.
	</p>
	</div>

	<div class="mt-10 grid gap-5 md:grid-cols-2">
	<a href="/aec/individuals/" class="js-fade-in group rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20 transition hover:border-aec/30 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300">
		<p class="text-xs font-semibold uppercase tracking-wide text-aec">Individual Specialist</p>
		<h3 class="mt-3 text-lg font-semibold text-slate-100">Dedicated Civil or Structural Specialist</h3>
		<p class="mt-3 text-sm leading-relaxed text-slate-400">
		Full-time (40h/week) or part-time (20h/week) — a Civil 3D designer, structural drafter, or Revit modeler embedded in your team.
		</p>
		<p class="mt-4 text-sm font-semibold text-aec">From ~$3,500/mo</p>
		<p class="mt-3 text-xs font-semibold text-sky-300 group-hover:text-sky-200">Learn more &#8594;</p>
	</a>
	<a href="/aec/teams/" class="js-fade-in group rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20 transition hover:border-aec/30 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300">
		<p class="text-xs font-semibold uppercase tracking-wide text-aec">Production Pod</p>
		<h3 class="mt-3 text-lg font-semibold text-slate-100">Civil/Structural Production Team</h3>
		<p class="mt-3 text-sm leading-relaxed text-slate-400">
		Multi-seat configurations for firms managing multiple infrastructure or structural projects simultaneously.
		</p>
		<p class="mt-4 text-sm font-semibold text-aec">Custom pricing</p>
		<p class="mt-3 text-xs font-semibold text-sky-300 group-hover:text-sky-200">Learn more &#8594;</p>
	</a>
	</div>
	</div>
	</section>

	<!-- Pricing -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="pricing-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="pricing-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Pricing Guidance
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		Individual civil/structural specialists start at approximately <strong class="text-slate-100">$3,500/month</strong> for full-time engagement — 50–60% less than comparable US hires. Multi-seat pods are custom-quoted.
	</p>
	<a
		href="/how-pricing-works/"
		class="mt-4 inline-flex items-center gap-1.5 text-sm font-semibold text-sky-300 transition hover:text-sky-200/80 focus:outline-none focus-visible:underline"
	>
		See how pricing works <span aria-hidden="true">&rarr;</span>
	</a>
	</div>
	</div>
	</section>

	<!-- FAQ -->
	<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="faq-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="faq-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Frequently Asked Questions
	</h2>
	</div>

	<div class="mt-10 grid gap-3">
	{faqs.map((item) => (
	<details class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<summary class="cursor-pointer list-none text-sm font-semibold text-slate-100 [&::-webkit-details-marker]:hidden">
		{item.q}
		</summary>
		<p class="mt-4 pt-4 text-sm leading-relaxed text-slate-400 border-t border-slate-800">{item.a}</p>
	</details>
	))}
	</div>
	</div>
	</section>

	<!-- CTA -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="cta-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-8 text-center shadow-xl sm:p-12">
	<h2 id="cta-heading" class="text-3xl font-semibold tracking-tight text-white sm:text-4xl">
		Ready to Scale Your Civil &amp; Structural Capacity?
	</h2>
	<p class="mx-auto mt-4 max-w-xl text-base leading-relaxed text-slate-300">
		Book a call to discuss your disciplines, tools, and pipeline — or share your scope and we'll match you with vetted specialists.
	</p>
	<div class="mt-8 flex flex-wrap items-center justify-center gap-4">
	<a
		href={bookingUrl}
		{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
		class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-8 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
		data-book-call
	>
		Book a Scoping Call
	</a>
	<a
		href="/#contact"
		class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/40 px-8 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
		data-open-tell-us="civil-structural-cta"
	>
		Tell Us What You Need
	</a>
	</div>
	<p class="mt-5 text-xs text-slate-400">Month-to-month · Free replacement guarantee · No long-term contracts</p>
	</div>
	</div>
	</section>

	<!-- Contact -->
	<section id="contact" class="bg-slate-950 pb-20 pt-16 sm:pb-24 sm:pt-20" aria-labelledby="contact-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
		<p class="text-sm font-semibold uppercase tracking-widest text-sky-300">Get in touch</p>
		<h2 id="contact-heading" class="mt-3 text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Let's Talk Civil &amp; Structural Talent
		</h2>
		<p class="mt-4 text-base leading-relaxed text-slate-400">
		Tell us your disciplines, tools, and project timeline — we'll match you with vetted specialists.
		</p>
	</div>

	<ContactHub subject="${brand} – Civil/structural inquiry" defaultCategory="aec" defaultMessage="We're a civil/structural firm looking for dedicated specialists." />
	</div>
	</section>

	</main>

	<style>
	.js-fade-in {
		opacity: 0;
		transform: translateY(20px);
		transition: opacity 0.35s ease-out, transform 0.35s ease-out;
	}
	.js-fade-in.is-visible {
		opacity: 1;
		transform: translateY(0);
	}
	</style>

	<script is:inline>
	(function () {
		var els = document.querySelectorAll('.js-fade-in');
		if (!els.length) return;
		var io = new IntersectionObserver(function (entries) {
		entries.forEach(function (e) {
			if (e.isIntersecting) {
			e.target.classList.add('is-visible');
			io.unobserve(e.target);
			}
		});
		}, { threshold: 0.1, rootMargin: '0px 0px -40px 0px' });
		els.forEach(function (el) { io.observe(el); });
	})();
	</script>
</Layout>
