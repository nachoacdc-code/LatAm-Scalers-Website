---
import Layout from '../../../layouts/Layout.astro';
import MetaHead from '../../../components/MetaHead.astro';
import ContactHub from '../../../components/ContactHub.astro';
import { BOOKING_URL, isExternalUrl } from '../../../lib/cta';

const brand = 'LatAm Scalers';

const meta = {
	title: 'Architectural Drafting Services – Dedicated LATAM Drafters for US Firms | LatAm Scalers',
	description:
		'Architectural drafting services for US architecture firms. Dedicated LATAM drafters using Revit, AutoCAD, and SketchUp. Floor plans, permit sets, construction documents, and visualization. From ~$3,500/mo.',
};

const baseUrl = Astro.site ?? 'https://latamscalers.com';
const canonical = new URL('/aec/architectural-drafting-services/', baseUrl).toString();

const bookingUrl = BOOKING_URL;
const bookingExternal = isExternalUrl(bookingUrl);

const tools = [
	{ name: 'Revit Architecture', desc: 'Floor plans, elevations, sections, schedules, families, and full construction documentation.' },
	{ name: 'AutoCAD', desc: '2D detailing, architectural plans, site layouts, and permit-set production.' },
	{ name: 'SketchUp', desc: 'Conceptual massing, interior layouts, and early-phase design studies.' },
	{ name: 'Bluebeam', desc: 'Markups, redline cycles, QTO, and document review workflows.' },
	{ name: 'Enscape / Lumion / V-Ray', desc: 'Photorealistic rendering, walkthroughs, and client presentation visuals.' },
];

const deliverables = [
	'Floor plans, elevations, and building sections',
	'Permit-ready construction document sets',
	'Interior documentation – finish plans, RCPs, FF&E schedules',
	'Revit families and detail components',
	'Code-referenced annotations and keynote schedules',
	'3D renderings, walkthroughs, and presentation boards',
];

const responsibilityMatrix = [
	{ you: 'Design intent, conceptual direction, client approvals', we: 'Revit/CAD production – plans, elevations, sections, details' },
	{ you: 'Code compliance decisions, stamping, sign-off', we: 'Code-referenced annotations, keynote schedules, permit set assembly' },
	{ you: 'Redlines, markups, design revisions direction', we: 'Iterative updates, version control, sheet organization' },
	{ you: 'Client-facing communication, project management', we: 'Vetting, matching, onboarding, replacement guarantee' },
];

const faqs = [
	{
		q: 'What is included in architectural drafting services?',
		a: 'Our architectural drafting services cover floor plans, elevations, sections, details, permit-set assembly, interior documentation (finish plans, RCPs, FF&E schedules), Revit family creation, and visualization. All deliverables are produced in your preferred software and aligned to your firm standards.',
	},
	{
		q: 'How quickly can we get a drafter started?',
		a: 'We typically present vetted architectural drafters within 48 hours. Once access and scope are confirmed, onboarding is designed to get production moving within the first week.',
	},
	{
		q: 'Do your drafters understand US building codes?',
		a: 'Yes. We screen for IBC, local amendment familiarity, and code-referenced documentation experience. Our specialists produce code-annotated drawings under the direction of your licensed professionals. All documents require review and stamping by your AOR/RA.',
	},
	{
		q: 'Can you handle permit set production?',
		a: 'Absolutely. Our drafters produce permit-ready document sets including title sheets, plans, elevations, sections, details, and code-referenced schedules. Your licensed architect reviews, approves, and stamps the final set.',
	},
	{
		q: 'What about renderings and visualization?',
		a: 'We match you with visualization specialists proficient in Enscape, Lumion, and V-Ray for photorealistic renderings, animations, and client presentation materials. This can be bundled with drafting or engaged as a standalone service.',
	},
	{
		q: 'What does pricing look like?',
		a: 'Dedicated architectural drafters start at approximately $3,500/month for full-time (40h/week). Part-time, project-based, and production pod options are available. Custom quotes are provided based on scope and deliverables.',
	},
];

const serviceJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'Service',
	name: 'Architectural Drafting Services',
	description: meta.description,
	provider: { '@type': 'Organization', name: brand, url: baseUrl },
};

const faqJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'FAQPage',
	mainEntity: faqs.map((f) => ({
		'@type': 'Question',
		name: f.q,
		acceptedAnswer: { '@type': 'Answer', text: f.a },
	})),
};
---

<Layout>
	<MetaHead slot="head" title={meta.title} description={meta.description} canonical={canonical} jsonLd={[serviceJsonLd, faqJsonLd]} />

	<main>

	<!-- Hero -->
	<section class="relative overflow-hidden bg-slate-950 py-16 sm:py-24" aria-labelledby="hero-heading">
		<div class="mx-auto max-w-6xl px-6">
		<div class="js-fade-in">
		<p class="text-sm font-semibold uppercase tracking-widest text-aec">Architectural Drafting</p>
	<h1 id="hero-heading" class="mt-4 text-4xl font-semibold leading-tight tracking-tight text-white sm:text-5xl lg:text-[3.25rem]">
		Architectural Drafting Services – Dedicated LATAM Drafters for US Firms
	</h1>
	<p class="mt-5 max-w-xl text-base leading-relaxed text-slate-300 sm:text-lg">
		Dedicated architectural drafters who produce permit sets, construction documents, and visualizations in Revit and AutoCAD. US-code fluent, timezone-aligned, month-to-month. Stop turning down projects because your team is at capacity.
	</p>

	<div class="mt-8 flex flex-wrap gap-3">
	<a
		href={bookingUrl}
		{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
		class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-6 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
		data-book-call
	>
		Book an Architectural Drafting Call
	</a>
	<a
		href="/#contact"
		class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/40 px-6 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
		data-open-tell-us="arch-drafting-hero"
	>
		Tell Us What You Need
	</a>
	</div>
	</div>
	</div>
	</section>

	<!-- Service overview -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="overview-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="overview-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Your Dedicated Architectural Production Team
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		Architecture firms across the US are turning down work they could execute — if they had the production capacity. 94% of AEC firms have unfilled positions, and 51% are declining projects because of it.
	</p>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		Your dedicated LATAM architectural drafter integrates into your workflow, produces in your Revit templates and CAD standards, and delivers construction documents, permit sets, and visualizations under the direction of your licensed architects. Same team, same person, every day.
	</p>
	<ul class="mt-6 grid gap-3 sm:grid-cols-2">
	<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
		<span class="text-aec" aria-hidden="true">✓</span>
		<span class="text-sm text-slate-400"><strong class="text-slate-100">Permit sets</strong> – CD production, code annotations</span>
	</li>
	<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
		<span class="text-aec" aria-hidden="true">✓</span>
		<span class="text-sm text-slate-400"><strong class="text-slate-100">Revit + AutoCAD</strong> – your templates, your standards</span>
	</li>
	<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
		<span class="text-aec" aria-hidden="true">✓</span>
		<span class="text-sm text-slate-400"><strong class="text-slate-100">US timezone</strong> – real-time redline cycles</span>
	</li>
	<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
		<span class="text-aec" aria-hidden="true">✓</span>
		<span class="text-sm text-slate-400"><strong class="text-slate-100">Month-to-month</strong> – scale up or down anytime</span>
	</li>
	</ul>
	</div>
	</div>
	</section>

	<!-- Scope & deliverables -->
	<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="scope-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="scope-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Common Scope &amp; Deliverable Examples
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		You define the scope and deliverables — your dedicated architectural drafter executes. Here are examples of what specialists in this role typically handle:
	</p>
	</div>

	<div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
	{deliverables.map((item) => (
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<p class="text-sm font-semibold text-slate-100">{item}</p>
	</div>
	))}
	</div>

	<div class="js-fade-in mt-10 overflow-x-auto">
	<h3 class="text-lg font-semibold text-slate-100">Responsibility Matrix</h3>
	<table class="mt-4 w-full min-w-[480px] rounded-2xl border border-slate-800 bg-slate-900/40 shadow-lg shadow-black/20 overflow-hidden">
	<thead>
		<tr class="border-b border-slate-800 bg-slate-900/40">
		<th class="px-6 py-4 text-left text-sm font-semibold text-slate-100">Your Licensed Team Retains</th>
		<th class="px-6 py-4 text-left text-sm font-semibold text-slate-100">Your Dedicated LATAM Specialist Handles</th>
		</tr>
	</thead>
	<tbody class="text-sm">
	{responsibilityMatrix.map((row) => (
		<tr class="border-b border-slate-800 last:border-b-0">
		<td class="px-6 py-4 text-slate-400">{row.you}</td>
		<td class="px-6 py-4 text-slate-400">{row.we}</td>
		</tr>
	))}
	</tbody>
	</table>
	</div>
	</div>
	</section>

	<!-- Tools section -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="tools-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="tools-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Tools Your Specialist Will Use
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		Your dedicated architectural drafter works in Revit, AutoCAD, and your preferred design and visualization tools — aligned to your firm's templates and standards.
	</p>
	</div>

	<div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
	{tools.map((tool) => (
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<p class="text-sm font-semibold text-slate-100">{tool.name}</p>
		<p class="mt-2 text-sm leading-relaxed text-slate-400">{tool.desc}</p>
	</div>
	))}
	</div>
	</div>
	</section>

	<!-- Engagement options -->
	<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="engagement-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="engagement-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Engagement Options
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		Dedicated architectural drafters on a full-time or part-time basis — or a production pod for higher-volume project loads.
	</p>
	</div>

	<div class="mt-10 grid gap-5 md:grid-cols-2">
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<p class="text-xs font-semibold uppercase tracking-wide text-aec">Individual Specialist</p>
		<h3 class="mt-3 text-lg font-semibold text-slate-100">Dedicated Architectural Drafter</h3>
		<p class="mt-3 text-sm leading-relaxed text-slate-400">
		Full-time (40h/week) or part-time (20h/week) architectural drafters — embedded in your team, producing in your Revit templates and CAD standards.
		</p>
		<p class="mt-4 text-sm font-semibold text-aec">From ~$3,500/mo</p>
	</div>
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<p class="text-xs font-semibold uppercase tracking-wide text-aec">Production Pod</p>
		<h3 class="mt-3 text-lg font-semibold text-slate-100">Architectural Production Team</h3>
		<p class="mt-3 text-sm leading-relaxed text-slate-400">
		Drafter + visualization specialist + documentation support for firms managing multiple projects or large CD sets simultaneously.
		</p>
		<p class="mt-4 text-sm font-semibold text-aec">Custom pricing</p>
	</div>
	</div>
	</div>
	</section>

	<!-- Pricing guidance -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="pricing-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="pricing-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Pricing Guidance
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		Individual architectural drafters start at approximately <strong class="text-slate-100">$3,500/month</strong> for full-time engagement — 50–60% less than comparable US hires. Part-time and production pod configurations are custom-quoted based on scope and deliverables.
	</p>
	<a
		href="/how-pricing-works/"
		class="mt-4 inline-flex items-center gap-1.5 text-sm font-semibold text-sky-300 transition hover:text-sky-200/80 focus:outline-none focus-visible:underline"
	>
		See how pricing works <span aria-hidden="true">&rarr;</span>
	</a>
	</div>
	</div>
	</section>

	<!-- FAQ -->
	<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="faq-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="faq-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Frequently Asked Questions
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		Common questions about architectural drafting services for US firms.
	</p>
	</div>

	<div class="mt-10 grid gap-3">
	{faqs.map((item) => (
	<details class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<summary class="cursor-pointer list-none text-sm font-semibold text-slate-100 [&::-webkit-details-marker]:hidden">
		{item.q}
		</summary>
		<p class="mt-4 pt-4 text-sm leading-relaxed text-slate-400 border-t border-slate-800">{item.a}</p>
	</details>
	))}
	</div>
	</div>
	</section>

	<!-- CTA -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="cta-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-8 text-center shadow-xl sm:p-12">
	<h2 id="cta-heading" class="text-3xl font-semibold tracking-tight text-white sm:text-4xl">
		Ready to Scale Your Architectural Production?
	</h2>
	<p class="mx-auto mt-4 max-w-xl text-base leading-relaxed text-slate-300">
		Book a call to discuss your drafting needs, Revit standards, and project pipeline — or share your scope and we'll propose the best-fit engagement.
	</p>
	<div class="mt-8 flex flex-wrap items-center justify-center gap-4">
	<a
		href={bookingUrl}
		{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
		class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-8 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
		data-book-call
	>
		Book an Architectural Drafting Call
	</a>
	<a
		href="/#contact"
		class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/40 px-8 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
		data-open-tell-us="arch-drafting-cta"
	>
		Tell Us What You Need
	</a>
	</div>
	<p class="mt-5 text-xs text-slate-400">Month-to-month · Free replacement guarantee · No long-term contracts</p>
	</div>
	</div>
	</section>

	<!-- Contact -->
	<section id="contact" class="bg-slate-950 pb-20 pt-16 sm:pb-24 sm:pt-20" aria-labelledby="contact-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
		<p class="text-sm font-semibold uppercase tracking-widest text-sky-300">Get in touch</p>
		<h2 id="contact-heading" class="mt-3 text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Let's Talk Architectural Drafting
		</h2>
		<p class="mt-4 text-base leading-relaxed text-slate-400">
		Share your project scope, Revit templates, and timeline — we'll match you with a vetted architectural drafter.
		</p>
	</div>

	<ContactHub subject="${brand} – Architectural drafting inquiry" defaultCategory="aec" defaultMessage="I'm interested in architectural drafting services." />
	</div>
	</section>

	</main>

	<style>
	.js-fade-in {
		opacity: 0;
		transform: translateY(20px);
		transition: opacity 0.35s ease-out, transform 0.35s ease-out;
	}
	.js-fade-in.is-visible {
		opacity: 1;
		transform: translateY(0);
	}
	</style>

	<script is:inline>
	(function () {
		var els = document.querySelectorAll('.js-fade-in');
		if (!els.length) return;
		var io = new IntersectionObserver(function (entries) {
		entries.forEach(function (e) {
			if (e.isIntersecting) {
			e.target.classList.add('is-visible');
			io.unobserve(e.target);
			}
		});
		}, { threshold: 0.1, rootMargin: '0px 0px -40px 0px' });
		els.forEach(function (el) { io.observe(el); });
	})();
	</script>
</Layout>
