---
import Layout from '../../../layouts/Layout.astro';
import MetaHead from '../../../components/MetaHead.astro';
import ContactHub from '../../../components/ContactHub.astro';
import { BOOKING_URL, isExternalUrl } from '../../../lib/cta';

const brand = 'LatAm Scalers';

const meta = {
	title: 'Revit Specialists – Dedicated LATAM Revit Experts for US Firms | LatAm Scalers',
	description:
		'Dedicated Revit specialists for US architecture and engineering firms. MEP, structural, and architectural Revit production. Modeling, families, coordination sets, construction documents. From ~$3,500/mo.',
};

const baseUrl = Astro.site ?? 'https://latam-scalers-website.vercel.app';
const canonical = new URL('/aec/revit-specialists/', baseUrl).toString();

const bookingUrl = BOOKING_URL;
const bookingExternal = isExternalUrl(bookingUrl);

const disciplines = [
	{
		name: 'Revit MEP',
		desc: 'Ductwork routing, piping systems, electrical layouts, equipment placement, and MEP coordination across trades.',
		roles: 'MEP Modelers, HVAC Designers, Electrical Designers, Plumbing Designers',
	},
	{
		name: 'Revit Structure',
		desc: 'Structural framing, foundation modeling, connection details, and structural documentation with analytical model integration.',
		roles: 'Structural Modelers, Structural Drafters',
	},
	{
		name: 'Revit Architecture',
		desc: 'Floor plans, elevations, sections, schedules, family creation, and full construction document production.',
		roles: 'Architectural Designers, Permit Set Producers, Interior Documentation Specialists',
	},
];

const tools = [
	{ name: 'Revit (All Disciplines)', desc: '3D BIM modeling, families, coordination sets, sheets, schedules, and construction documentation.' },
	{ name: 'Dynamo', desc: 'Visual programming for Revit automation — batch operations, parameter management, and custom workflows.' },
	{ name: 'Navisworks', desc: 'Clash detection and coordination across Revit models from multiple disciplines.' },
	{ name: 'Autodesk Construction Cloud', desc: 'Cloud-based collaboration, design review, and model coordination.' },
	{ name: 'BIM 360', desc: 'Document management, issue tracking, and model hosting for project teams.' },
	{ name: 'Enscape / Lumion', desc: 'Real-time rendering and visualization directly from Revit models.' },
];

const deliverables = [
	'Production-ready Revit models (LOD 200–400)',
	'Construction document sets from Revit',
	'Custom Revit families and detail components',
	'Coordination sets and clash-free deliverables',
	'Dynamo scripts for workflow automation',
	'Renderings and visualizations from Revit',
];

const responsibilityMatrix = [
	{ you: 'Design intent, engineering judgment, stamping', we: 'Revit production — modeling, documentation, families, coordination' },
	{ you: 'BEP, LOD requirements, firm standards', we: 'Execution within your standards, QA to your checklist' },
	{ you: 'Redlines, markups, design direction', we: 'Iterative Revit updates, sheet management, version control' },
	{ you: 'Client communication, project management', we: 'Vetting, matching, onboarding, replacement guarantee' },
];

const faqs = [
	{
		q: 'What Revit disciplines do your specialists cover?',
		a: 'Our Revit specialists cover all three core disciplines: Architecture (plans, elevations, CDs), Structure (framing, foundations, analytical models), and MEP (mechanical, electrical, plumbing systems). We match by discipline expertise and project requirements.',
	},
	{
		q: 'How quickly can we get a Revit specialist?',
		a: 'We typically present vetted Revit specialists within 48 hours. Most start within one week of scope confirmation. Revit is our highest-supply discipline across LATAM.',
	},
	{
		q: 'What LOD levels do your specialists produce?',
		a: 'Your dedicated Revit Specialist produces at LOD 200 through LOD 400 depending on project phase and BEP requirements. We align on LOD expectations, model element standards, and naming conventions during onboarding.',
	},
	{
		q: 'Can they create custom Revit families?',
		a: 'Yes. Our Revit specialists create parametric families, detail components, annotation families, and adaptive components. Whether you need MEP equipment families, structural connections, or architectural millwork, we match the right specialist.',
	},
	{
		q: 'Do they know Dynamo for automation?',
		a: 'Many of our Revit specialists are proficient in Dynamo for batch operations, parameter management, schedule automation, and custom workflow scripts. If Dynamo proficiency is required, we screen specifically for it.',
	},
	{
		q: 'What does pricing look like?',
		a: 'Dedicated Revit specialists start at approximately $3,500/month for full-time (40h/week). Specialists with advanced skills (Dynamo, coordination, specific disciplines) may be higher. Part-time and multi-specialist pod options are available.',
	},
];

const serviceJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'Service',
	name: 'Revit Specialists',
	description: meta.description,
	provider: { '@type': 'Organization', name: brand, url: baseUrl },
};

const faqJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'FAQPage',
	mainEntity: faqs.map((f) => ({
		'@type': 'Question',
		name: f.q,
		acceptedAnswer: { '@type': 'Answer', text: f.a },
	})),
};
---

<Layout>
	<MetaHead slot="head" title={meta.title} description={meta.description} canonical={canonical} jsonLd={[serviceJsonLd, faqJsonLd]} />

	<main>

	<!-- Hero -->
	<section class="relative overflow-hidden bg-slate-950 py-16 sm:py-24" aria-labelledby="hero-heading">
		<div class="mx-auto max-w-6xl px-6">
		<div class="js-fade-in">
		<p class="text-sm font-semibold uppercase tracking-widest text-aec">Revit Specialists</p>
	<h1 id="hero-heading" class="mt-4 text-4xl font-semibold leading-tight tracking-tight text-white sm:text-5xl lg:text-[3.25rem]">
		Dedicated Revit Specialists for US Architecture &amp; Engineering Firms
	</h1>
	<p class="mt-5 max-w-xl text-base leading-relaxed text-slate-300 sm:text-lg">
		Dedicated LATAM Revit experts across MEP, Structure, and Architecture. Production-ready modeling, construction documents, and coordination — in your templates, your standards, your timezone.
	</p>

	<div class="mt-8 flex flex-wrap gap-3">
	<a
		href={bookingUrl}
		{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
		class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-6 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
		data-book-call
	>
		Book a Revit Specialist Call
	</a>
	<a
		href="/#contact"
		class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/40 px-6 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
		data-open-tell-us="revit-hero"
	>
		Tell Us What You Need
	</a>
	</div>
	</div>
	</div>
	</section>

	<!-- Service overview -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="overview-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="overview-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Revit Expertise Across Every Discipline
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		BIM proficiency requires 3–5+ years of project experience. Local Revit specialists take 12+ weeks to hire in major metros. Your projects can't wait that long.
	</p>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		Our dedicated LATAM Revit specialists bring deep platform expertise across architecture, structure, and MEP. They work in your Revit environment — your families, your templates, your view standards — and produce under the direction of your licensed professionals. 60–70% of daily AEC production is location-agnostic under PE oversight.
	</p>
	<ul class="mt-6 grid gap-3 sm:grid-cols-2">
	<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
		<span class="text-aec" aria-hidden="true">✓</span>
		<span class="text-sm text-slate-400"><strong class="text-slate-100">All disciplines</strong> – Architecture, Structure, MEP</span>
	</li>
	<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
		<span class="text-aec" aria-hidden="true">✓</span>
		<span class="text-sm text-slate-400"><strong class="text-slate-100">Your environment</strong> – families, templates, standards</span>
	</li>
	<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
		<span class="text-aec" aria-hidden="true">✓</span>
		<span class="text-sm text-slate-400"><strong class="text-slate-100">US timezone</strong> – real-time collaboration</span>
	</li>
	<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
		<span class="text-aec" aria-hidden="true">✓</span>
		<span class="text-sm text-slate-400"><strong class="text-slate-100">Month-to-month</strong> – scale up or down anytime</span>
	</li>
	</ul>
	</div>
	</div>
	</section>

	<!-- Disciplines breakdown -->
	<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="disciplines-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="disciplines-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Revit Disciplines We Cover
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		We match Revit specialists by discipline expertise — not generic BIM experience. Tell us your discipline and project type and we'll find the right fit.
	</p>
	</div>

	<div class="mt-10 grid gap-5 lg:grid-cols-3">
	{disciplines.map((disc) => (
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<p class="text-xs font-semibold uppercase tracking-wide text-aec">{disc.name}</p>
		<p class="mt-3 text-sm leading-relaxed text-slate-400">{disc.desc}</p>
		<p class="mt-4 text-xs text-slate-500"><strong class="text-slate-400">Roles:</strong> {disc.roles}</p>
	</div>
	))}
	</div>
	</div>
	</section>

	<!-- Scope & deliverables -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="scope-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="scope-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Deliverables
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		Production-ready Revit output aligned to your project phase and BEP requirements.
	</p>
	</div>

	<div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
	{deliverables.map((item) => (
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<p class="text-sm font-semibold text-slate-100">{item}</p>
	</div>
	))}
	</div>

	<div class="js-fade-in mt-10 overflow-x-auto">
	<h3 class="text-lg font-semibold text-slate-100">Responsibility Matrix</h3>
	<table class="mt-4 w-full min-w-[480px] rounded-2xl border border-slate-800 bg-slate-900/40 shadow-lg shadow-black/20 overflow-hidden">
	<thead>
		<tr class="border-b border-slate-800 bg-slate-900/40">
		<th class="px-6 py-4 text-left text-sm font-semibold text-slate-100">Your Licensed Team Retains</th>
		<th class="px-6 py-4 text-left text-sm font-semibold text-slate-100">Your Dedicated LATAM Specialist Handles</th>
		</tr>
	</thead>
	<tbody class="text-sm">
	{responsibilityMatrix.map((row) => (
		<tr class="border-b border-slate-800 last:border-b-0">
		<td class="px-6 py-4 text-slate-400">{row.you}</td>
		<td class="px-6 py-4 text-slate-400">{row.we}</td>
		</tr>
	))}
	</tbody>
	</table>
	</div>
	</div>
	</section>

	<!-- Tools section -->
	<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="tools-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="tools-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Tools &amp; Platform Ecosystem
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		Revit is the core — but our specialists are proficient across the surrounding ecosystem that makes BIM production work.
	</p>
	</div>

	<div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
	{tools.map((tool) => (
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<p class="text-sm font-semibold text-slate-100">{tool.name}</p>
		<p class="mt-2 text-sm leading-relaxed text-slate-400">{tool.desc}</p>
	</div>
	))}
	</div>
	</div>
	</section>

	<!-- Engagement options -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="engagement-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="engagement-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Engagement Options
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		Dedicated Revit specialists on a full-time or part-time basis — or multi-discipline Revit pods for larger project loads.
	</p>
	</div>

	<div class="mt-10 grid gap-5 md:grid-cols-2">
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<p class="text-xs font-semibold uppercase tracking-wide text-aec">Individual Specialist</p>
		<h3 class="mt-3 text-lg font-semibold text-slate-100">Dedicated Revit Specialist</h3>
		<p class="mt-3 text-sm leading-relaxed text-slate-400">
		Full-time (40h/week) or part-time (20h/week) Revit specialists — matched by discipline (Architecture, Structure, or MEP), embedded in your team.
		</p>
		<p class="mt-4 text-sm font-semibold text-aec">From ~$3,500/mo</p>
	</div>
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<p class="text-xs font-semibold uppercase tracking-wide text-aec">Multi-Discipline Pod</p>
		<h3 class="mt-3 text-lg font-semibold text-slate-100">Revit Production Team</h3>
		<p class="mt-3 text-sm leading-relaxed text-slate-400">
		Multiple Revit specialists across disciplines — Architecture + MEP + Structure — for coordination-heavy projects or multi-project throughput.
		</p>
		<p class="mt-4 text-sm font-semibold text-aec">Custom pricing</p>
	</div>
	</div>
	</div>
	</section>

	<!-- Pricing guidance -->
	<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="pricing-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="pricing-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Pricing Guidance
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		Dedicated Revit specialists start at approximately <strong class="text-slate-100">$3,500/month</strong> for full-time engagement. Specialists with advanced skills (Dynamo automation, multi-discipline coordination) or senior experience may be higher. Part-time and pod options are available.
	</p>
	<a
		href="/how-pricing-works/"
		class="mt-4 inline-flex items-center gap-1.5 text-sm font-semibold text-sky-300 transition hover:text-sky-200/80 focus:outline-none focus-visible:underline"
	>
		See how pricing works <span aria-hidden="true">&rarr;</span>
	</a>
	</div>
	</div>
	</section>

	<!-- FAQ -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="faq-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
	<h2 id="faq-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Frequently Asked Questions
	</h2>
	<p class="mt-4 text-base leading-relaxed text-slate-400">
		Common questions about dedicated Revit specialists for US firms.
	</p>
	</div>

	<div class="mt-10 grid gap-3">
	{faqs.map((item) => (
	<details class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
		<summary class="cursor-pointer list-none text-sm font-semibold text-slate-100 [&::-webkit-details-marker]:hidden">
		{item.q}
		</summary>
		<p class="mt-4 pt-4 text-sm leading-relaxed text-slate-400 border-t border-slate-800">{item.a}</p>
	</details>
	))}
	</div>
	</div>
	</section>

	<!-- CTA -->
	<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="cta-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-8 text-center shadow-xl sm:p-12">
	<h2 id="cta-heading" class="text-3xl font-semibold tracking-tight text-white sm:text-4xl">
		Ready for a Dedicated Revit Specialist?
	</h2>
	<p class="mx-auto mt-4 max-w-xl text-base leading-relaxed text-slate-300">
		Book a call to discuss your Revit discipline, project scope, and BEP — or share your requirements and we'll propose the best-fit specialist.
	</p>
	<div class="mt-8 flex flex-wrap items-center justify-center gap-4">
	<a
		href={bookingUrl}
		{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
		class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-8 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
		data-book-call
	>
		Book a Revit Specialist Call
	</a>
	<a
		href="/#contact"
		class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/40 px-8 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
		data-open-tell-us="revit-cta"
	>
		Tell Us What You Need
	</a>
	</div>
	<p class="mt-5 text-xs text-slate-400">Month-to-month · Free replacement guarantee · No long-term contracts</p>
	</div>
	</div>
	</section>

	<!-- Contact -->
	<section id="contact" class="bg-slate-950 pb-20 pt-16 sm:pb-24 sm:pt-20" aria-labelledby="contact-heading">
	<div class="mx-auto max-w-6xl px-6">
	<div class="js-fade-in max-w-2xl">
		<p class="text-sm font-semibold uppercase tracking-widest text-sky-300">Get in touch</p>
		<h2 id="contact-heading" class="mt-3 text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
		Let's Talk Revit Specialists
		</h2>
		<p class="mt-4 text-base leading-relaxed text-slate-400">
		Share your Revit discipline needs, project types, and timeline — we'll match you with a vetted Revit specialist.
		</p>
	</div>

	<ContactHub subject="${brand} – Revit specialist inquiry" defaultCategory="aec" defaultMessage="I'm interested in dedicated Revit specialists." />
	</div>
	</section>

	</main>

	<style>
	.js-fade-in {
		opacity: 0;
		transform: translateY(20px);
		transition: opacity 0.35s ease-out, transform 0.35s ease-out;
	}
	.js-fade-in.is-visible {
		opacity: 1;
		transform: translateY(0);
	}
	</style>

	<script is:inline>
	(function () {
		var els = document.querySelectorAll('.js-fade-in');
		if (!els.length) return;
		var io = new IntersectionObserver(function (entries) {
		entries.forEach(function (e) {
			if (e.isIntersecting) {
			e.target.classList.add('is-visible');
			io.unobserve(e.target);
			}
		});
		}, { threshold: 0.1, rootMargin: '0px 0px -40px 0px' });
		els.forEach(function (el) { io.observe(el); });
	})();
	</script>
</Layout>
