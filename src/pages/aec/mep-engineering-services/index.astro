---
import Layout from '../../../layouts/Layout.astro';
import MetaHead from '../../../components/MetaHead.astro';
import ContactHub from '../../../components/ContactHub.astro';
import { BOOKING_URL, isExternalUrl } from '../../../lib/cta';

const brand = 'LatAm Scalers';

const meta = {
	title: 'MEP Engineering Services – Dedicated Revit MEP Modelers for US Firms | LatAm Scalers',
	description:
		'Professional MEP engineering services for US firms. Dedicated LATAM Revit MEP modelers for HVAC, electrical, and plumbing. Production-ready models and coordination support. From ~$3,500/mo.',
};

const baseUrl = Astro.site ?? 'https://latamscalers.com';
const canonical = new URL('/aec/mep-engineering-services/', baseUrl).toString();

const bookingUrl = BOOKING_URL;
const bookingExternal = isExternalUrl(bookingUrl);
const calendlyUrl = import.meta.env.PUBLIC_CALENDLY_URL ?? import.meta.env.PUBLIC_BOOKING_URL ?? 'https://calendly.com/your-org/15min';

const specializations = [
	{ name: 'HVAC', desc: 'Ductwork, equipment, air terminals, and mechanical systems modeling in Revit.' },
	{ name: 'Electrical', desc: 'Power distribution, lighting, panels, and electrical systems in Revit.' },
	{ name: 'Plumbing', desc: 'Piping, fixtures, equipment, and plumbing systems modeling in Revit.' },
];

const tools = [
	{ name: 'Revit MEP', desc: 'MEP systems modeling, parameter-driven families, and coordination workflows.' },
	{ name: 'Navisworks', desc: 'MEP clash detection and coordination with architectural and structural.' },
	{ name: 'ACC / BIM 360', desc: 'Cloud collaboration and model coordination for MEP disciplines.' },
];

const deliverables = [
	'MEP Revit models to your LOD and firm standards',
	'Schedule coordination and equipment tagging',
	'Clash resolution support with architectural/structural',
	'Construction documentation and drawing sets',
	'As-built and record model updates',
];

const faqs = [
	{
		q: 'What MEP disciplines do you support?',
		a: 'We support HVAC, electrical, and plumbing modeling in Revit MEP. Specialists can focus on one discipline or work across MEP depending on your project needs. All work is produced under the direction of your licensed MEP engineers.',
	},
	{
		q: 'Do your modelers use Revit MEP?',
		a: 'Yes. Our specialists work in Revit MEP for ductwork, piping, electrical systems, equipment, and parameter-driven families. They align with your templates, shared parameters, and deliverable standards.',
	},
	{
		q: 'How do they integrate with our MEP engineers?',
		a: "Modelers work under your engineers' direction – redlines, markups, and design intent. You retain design authority and stamping. Your dedicated MEP specialist handles production, modeling, and coordination support to accelerate your team.",
	},
	{
		q: 'Do you support coordination with architectural and structural?',
		a: 'Yes. Our MEP modelers coordinate with architectural and structural models via Navisworks, ACC, or BIM 360. We participate in clash detection and resolution workflows per your project setup.',
	},
	{
		q: 'How do you screen specialists for US code familiarity?',
		a: 'We screen for IBC, ASCE 7, NFPA familiarity and code-specific experience. Our MEP modelers produce work under the direction of your licensed professionals, and all deliverables require review and approval by your PE/RA.',
	},
	{
		q: 'What does pricing look like?',
		a: 'Dedicated MEP modelers start at approximately $3,500/month for full-time. Part-time and multi-discipline MEP pod options are available. Custom quotes based on discipline mix and volume.',
	},
];

const serviceJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'Service',
	name: 'MEP Engineering Services',
	description: meta.description,
	provider: { '@type': 'Organization', name: brand, url: baseUrl },
};

const faqJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'FAQPage',
	mainEntity: faqs.map((f) => ({
		'@type': 'Question',
		name: f.q,
		acceptedAnswer: { '@type': 'Answer', text: f.a },
	})),
};
---

<Layout>
	<MetaHead slot="head" title={meta.title} description={meta.description} canonical={canonical} jsonLd={[serviceJsonLd, faqJsonLd]} />

	<main>

		<!-- Hero (bg-slate-950, white text) -->
		<section class="relative overflow-hidden bg-slate-950 py-16 sm:py-24" aria-labelledby="hero-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in">
					<p class="text-sm font-semibold uppercase tracking-widest text-aec">MEP Engineering</p>
					<h1 id="hero-heading" class="mt-4 text-4xl font-semibold leading-tight tracking-tight text-white sm:text-5xl lg:text-[3.25rem]">
						MEP Engineering Support – Dedicated Revit MEP Modelers for US Firms
					</h1>
					<p class="mt-5 max-w-xl text-base leading-relaxed text-slate-300 sm:text-lg">
						Professional MEP engineering services for US firms. Dedicated LATAM Revit MEP modelers for HVAC, electrical, and plumbing – production-ready models and coordination support. US timezone overlap. Vetted. Month-to-month flexibility.
					</p>

					<div class="mt-8 flex flex-wrap gap-3">
						<a
							href={bookingUrl}
							{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
							class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-6 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
							data-book-call
						>
							Book an MEP Scoping Call
						</a>
						<a
							href="/#contact"
							class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/40 px-6 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
							data-open-tell-us="mep-hero"
						>
							Tell Us What You Need
						</a>
					</div>
				</div>
			</div>
		</section>

		<!-- Service overview (bg-slate-950) -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="overview-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="overview-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Your Dedicated MEP Engineering Specialists
				</h2>
				<p class="mt-4 text-base leading-relaxed text-slate-400">
					Professional MEP engineering support for US architecture and engineering firms. Your dedicated MEP Modeler handles Revit MEP modeling – HVAC, electrical, and plumbing – so your MEP engineers can focus on design decisions and engineering sign-off.
					</p>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Whether you need ongoing MEP modeling capacity or surge support for project deadlines, we provide vetted LATAM modelers who work in Revit MEP, align with your templates and standards, and integrate into your coordination workflows. All work is produced under the direction of your licensed MEP professionals.
					</p>
					<ul class="mt-6 grid gap-3 sm:grid-cols-2">
						<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
							<span class="text-aec" aria-hidden="true">&#x2713;</span>
							<span class="text-sm text-slate-400"><strong class="text-slate-100">HVAC, electrical, plumbing</strong> – Revit MEP</span>
						</li>
						<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
							<span class="text-aec" aria-hidden="true">&#x2713;</span>
							<span class="text-sm text-slate-400"><strong class="text-slate-100">Dedicated modelers</strong> – your team</span>
						</li>
						<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
							<span class="text-aec" aria-hidden="true">&#x2713;</span>
							<span class="text-sm text-slate-400"><strong class="text-slate-100">US timezone</strong> – real-time collaboration</span>
						</li>
						<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
							<span class="text-aec" aria-hidden="true">&#x2713;</span>
							<span class="text-sm text-slate-400"><strong class="text-slate-100">Month-to-month</strong> – scale up or down anytime</span>
						</li>
					</ul>
				</div>
			</div>
		</section>

		<!-- Scope & deliverables (bg-slate-900/40) -->
		<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="scope-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="scope-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Common Scope &amp; Deliverable Examples
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						You define the scope and deliverables — your dedicated MEP specialist executes. Here are examples of what specialists in this role typically handle:
					</p>
				</div>

				<div class="mt-10 grid gap-4 sm:grid-cols-3">
					{specializations.map((spec) => (
						<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
							<p class="text-sm font-semibold text-slate-100">{spec.name}</p>
							<p class="mt-2 text-sm leading-relaxed text-slate-400">{spec.desc}</p>
						</div>
					))}
				</div>

				<div class="js-fade-in mt-10 max-w-2xl">
					<h3 class="text-lg font-semibold text-slate-100">Deliverables</h3>
					<ul class="mt-4 grid gap-3 sm:grid-cols-2">
						{deliverables.map((item) => (
							<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
								<span class="text-aec" aria-hidden="true">&#x2713;</span>
								<span class="text-sm text-slate-400">{item}</span>
							</li>
						))}
					</ul>
				</div>
			</div>
		</section>

		<!-- Tools section (bg-slate-950) -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="tools-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="tools-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Tools Your Specialist Will Use
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Your dedicated MEP modeler works in Revit MEP, Navisworks, and ACC/BIM 360 for coordination workflows.
					</p>
				</div>

				<div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
					{tools.map((tool) => (
						<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
							<p class="text-sm font-semibold text-slate-100">{tool.name}</p>
							<p class="mt-2 text-sm leading-relaxed text-slate-400">{tool.desc}</p>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- Engagement options (bg-slate-900/40) -->
		<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="engagement-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="engagement-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Engagement Options
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Dedicated MEP modelers on a full-time or part-time basis – single discipline or multi-discipline teams.
					</p>
				</div>

				<div class="mt-10 grid gap-5 md:grid-cols-2">
					<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
						<p class="text-xs font-semibold uppercase tracking-wide text-aec">Individual Specialist</p>
						<h3 class="mt-3 text-lg font-semibold text-slate-100">Dedicated Revit MEP Modeler</h3>
						<p class="mt-3 text-sm leading-relaxed text-slate-400">
							Full-time (40h/week) or part-time (20h/week) modelers – HVAC, electrical, or plumbing – embedded into your team.
						</p>
						<p class="mt-4 text-sm font-semibold text-aec">From ~$3,500/mo</p>
					</div>
					<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
						<p class="text-xs font-semibold uppercase tracking-wide text-aec">MEP Pod</p>
						<h3 class="mt-3 text-lg font-semibold text-slate-100">Multi-Discipline MEP Team</h3>
						<p class="mt-3 text-sm leading-relaxed text-slate-400">
							HVAC + electrical + plumbing modelers for full MEP coverage and higher throughput.
						</p>
						<p class="mt-4 text-sm font-semibold text-aec">Custom pricing</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Pricing guidance (bg-slate-950) -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="pricing-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="pricing-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Pricing Guidance
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Individual MEP modelers start at approximately <strong class="text-slate-100">$3,500/month</strong> for full-time. Part-time and multi-discipline MEP pod engagements are custom-quoted based on scope and volume.
					</p>
					<a
						href="/how-pricing-works/"
						class="mt-4 inline-flex items-center gap-1.5 text-sm font-semibold text-sky-300 transition hover:text-sky-200/80 focus:outline-none focus-visible:underline"
					>
						See how pricing works <span aria-hidden="true">&rarr;</span>
					</a>
				</div>
			</div>
		</section>

		<!-- FAQ (bg-slate-900/40) -->
		<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="faq-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="faq-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Frequently Asked Questions
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Common questions about our MEP engineering services for US firms.
					</p>
				</div>

				<div class="mt-10 grid gap-3">
					{faqs.map((item) => (
						<details class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
							<summary class="cursor-pointer list-none text-sm font-semibold text-slate-100 [&::-webkit-details-marker]:hidden">
								{item.q}
							</summary>
							<p class="mt-4 pt-4 text-sm leading-relaxed text-slate-400 border-t border-slate-800">{item.a}</p>
						</details>
					))}
				</div>
			</div>
		</section>

		<!-- CTA (bg-slate-950) -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="cta-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-8 text-center shadow-xl sm:p-12">
					<h2 id="cta-heading" class="text-3xl font-semibold tracking-tight text-white sm:text-4xl">
						Ready for MEP Modeling Support?
					</h2>
					<p class="mx-auto mt-4 max-w-xl text-base leading-relaxed text-slate-300">
						Book a call to discuss your MEP needs, disciplines, and timeline – or share your project details and we'll propose the best-fit engagement.
					</p>
					<div class="mt-8 flex flex-wrap items-center justify-center gap-4">
						<a
							href={bookingUrl}
							{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
							class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-8 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
							data-book-call
						>
							Book an MEP Scoping Call
						</a>
						<a
							href="/#contact"
							class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/40 px-8 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
							data-open-tell-us="mep-cta"
						>
							Tell Us What You Need
						</a>
					</div>
					<p class="mt-5 text-xs text-slate-400">Month-to-month · Free replacement guarantee · No long-term contracts</p>
				</div>
			</div>
		</section>

		<!-- Contact (bg-slate-950) -->
		<section id="contact" class="bg-slate-950 pb-20 pt-16 sm:pb-24 sm:pt-20" aria-labelledby="contact-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<p class="text-sm font-semibold uppercase tracking-widest text-sky-300">Get in touch</p>
					<h2 id="contact-heading" class="mt-3 text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Let's Talk MEP Engineering
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Share your MEP scope, disciplines, and timeline – we'll match you with a vetted Revit MEP modeler.
					</p>
				</div>

				<ContactHub subject="${brand} – MEP engineering inquiry" defaultCategory="aec" defaultMessage="I'm interested in MEP engineering services." />
			</div>
		</section>

	</main>

	<style>
		.js-fade-in {
			opacity: 0;
			transform: translateY(20px);
			transition: opacity 0.35s ease-out, transform 0.35s ease-out;
		}
		.js-fade-in.is-visible {
			opacity: 1;
			transform: translateY(0);
		}
	</style>

	<script is:inline>
		(function () {
			var els = document.querySelectorAll('.js-fade-in');
			if (!els.length) return;
			var io = new IntersectionObserver(function (entries) {
				entries.forEach(function (e) {
					if (e.isIntersecting) {
						e.target.classList.add('is-visible');
						io.unobserve(e.target);
					}
				});
			}, { threshold: 0.1, rootMargin: '0px 0px -40px 0px' });
			els.forEach(function (el) { io.observe(el); });
		})();
	</script>
</Layout>

