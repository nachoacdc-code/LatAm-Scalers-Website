---
import Layout from '../../../layouts/Layout.astro';
import MetaHead from '../../../components/MetaHead.astro';
import ContactHub from '../../../components/ContactHub.astro';
import { BOOKING_URL, isExternalUrl } from '../../../lib/cta';

const brand = 'LatAm Scalers';

const meta = {
	title: 'BIM Coordination Services – Dedicated LATAM Specialists for US Firms | LatAm Scalers',
	description:
		'Professional BIM coordination services for US firms. Dedicated LATAM specialists using Navisworks, ACC, and BIM 360. Clash detection, model coordination, and federated deliverables. From ~$3,500/mo.',
};

const baseUrl = Astro.site ?? 'https://latam-scalers-website.vercel.app';
const canonical = new URL('/aec/bim-coordination-services/', baseUrl).toString();

const bookingUrl = BOOKING_URL;
const bookingExternal = isExternalUrl(bookingUrl);
const calendlyUrl = import.meta.env.PUBLIC_CALENDLY_URL ?? import.meta.env.PUBLIC_BOOKING_URL ?? 'https://calendly.com/your-org/15min';

const tools = [
	{ name: 'Navisworks', desc: 'Clash detection, 4D scheduling, and multi-model coordination across disciplines.' },
	{ name: 'Autodesk Construction Cloud (ACC)', desc: 'Document control, design collaboration, and model coordination in the cloud.' },
	{ name: 'BIM 360', desc: 'Cloud-based collaboration, issue tracking, and federated model management.' },
	{ name: 'Revit', desc: '3D BIM modeling, coordination sets, and construction documentation.' },
];

const deliverables = [
	'Clash detection reports with prioritized resolution tracking',
	'Federated models organized by discipline and phase',
	'Coordination meeting minutes and issue logs',
	'Updated models reflecting resolved clashes',
	'As-built documentation for handover',
];

const responsibilityMatrix = [
	{ you: 'Design intent, sign-off, stamping', we: 'Clash detection runs, report generation, resolution tracking' },
	{ you: 'BEP, coordination matrix, tolerance standards', we: 'Execution within your standards, QA to your checklist' },
	{ you: 'Redlines, markups, direction on priority', we: 'Model updates, issue coordination, handoff documentation' },
	{ you: 'Client communication, project management', we: 'Vetting, matching, onboarding, replacement guarantee' },
];

const faqs = [
	{
		q: 'What is included in BIM coordination services?',
		a: 'Our BIM coordination services include clash detection across architectural, structural, and MEP models; federated model management; prioritized clash reports; resolution tracking; and updated deliverables reflecting resolved issues. We work in Navisworks, ACC, and BIM 360 depending on your setup.',
	},
	{
		q: 'How quickly can we get a coordination specialist?',
		a: 'We typically present vetted BIM coordinators within 48 hours. Once access and scope are confirmed, onboarding is fast so you can start coordination workflows quickly.',
	},
	{
		q: 'Do you support Navisworks, ACC, and BIM 360?',
		a: 'Yes. Our specialists are proficient in Navisworks Manage for clash detection and 4D scheduling, Autodesk Construction Cloud for document and model coordination, and BIM 360 for cloud-based collaboration. We align with your preferred platform.',
	},
	{
		q: 'Who owns design authority and stamping?',
		a: 'You retain full design authority and stamping responsibility. Our specialists produce coordination support and deliverables under your direction. We screen for IBC, ASCE 7, NFPA familiarity and code-specific experience. All work requires review and approval by your licensed professionals.',
	},
	{
		q: 'What does pricing typically look like?',
		a: 'Dedicated BIM coordinators start at approximately $3,500/month for full-time (40h/week). Part-time and production-pod options are available. Custom quotes are provided based on scope and volume.',
	},
];

const serviceJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'Service',
	name: 'BIM Coordination Services',
	description: meta.description,
	provider: { '@type': 'Organization', name: brand, url: baseUrl },
};

const faqJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'FAQPage',
	mainEntity: faqs.map((f) => ({
		'@type': 'Question',
		name: f.q,
		acceptedAnswer: { '@type': 'Answer', text: f.a },
	})),
};
---

<Layout>
	<MetaHead slot="head" title={meta.title} description={meta.description} canonical={canonical} jsonLd={[serviceJsonLd, faqJsonLd]} />

	<main>

		<!-- Hero (bg-slate-950, white text) -->
		<section class="relative overflow-hidden bg-slate-950 py-16 sm:py-24" aria-labelledby="hero-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in">
					<p class="text-sm font-semibold uppercase tracking-widest text-aec">BIM Coordination</p>
					<h1 id="hero-heading" class="mt-4 text-4xl font-semibold leading-tight tracking-tight text-white sm:text-5xl lg:text-[3.25rem]">
						BIM Coordination Services – Dedicated LATAM Specialists for US Firms
					</h1>
					<p class="mt-5 max-w-xl text-base leading-relaxed text-slate-300 sm:text-lg">
						Dedicated BIM coordinators who integrate into your workflow. Clash detection, federated model coordination, and issue resolution using Navisworks, ACC, and BIM 360. US timezone overlap. Vetted. Month-to-month flexibility.
					</p>

					<div class="mt-8 flex flex-wrap gap-3">
						<a
							href={bookingUrl}
							{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
							class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-6 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
							data-book-call
						>
							Book a BIM Coordination Call
						</a>
						<a
							href="/#contact"
							class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/40 px-6 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
							data-open-tell-us="bim-hero"
						>
							Tell Us What You Need
						</a>
					</div>
				</div>
			</div>
		</section>

		<!-- Service overview (bg-slate-950) -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="overview-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="overview-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
					Your Dedicated BIM Coordination Specialists
				</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Professional BIM coordination support for US architecture and engineering firms. Your dedicated BIM Coordinator handles clash detection, federated model management, and coordination workflows so your team can focus on design decisions and client relationships.
					</p>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Whether you need ongoing coordination support for multi-disciplinary projects or surge capacity for deadlines, your dedicated coordinator works in your preferred tools and aligns with your BEP. All deliverables are produced under the direction of your licensed professionals.
					</p>
					<ul class="mt-6 grid gap-3 sm:grid-cols-2">
						<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
							<span class="text-aec" aria-hidden="true">&#x2713;</span>
							<span class="text-sm text-slate-400"><strong class="text-slate-100">Clash detection</strong> – Navisworks, ACC, BIM 360</span>
						</li>
						<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
							<span class="text-aec" aria-hidden="true">&#x2713;</span>
							<span class="text-sm text-slate-400"><strong class="text-slate-100">Federated models</strong> – organized by discipline</span>
						</li>
						<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
							<span class="text-aec" aria-hidden="true">&#x2713;</span>
							<span class="text-sm text-slate-400"><strong class="text-slate-100">US timezone</strong> – real-time collaboration</span>
						</li>
						<li class="flex items-start gap-2 rounded-xl border border-slate-800 bg-slate-900/40 p-4 shadow-lg shadow-black/20">
							<span class="text-aec" aria-hidden="true">&#x2713;</span>
							<span class="text-sm text-slate-400"><strong class="text-slate-100">Month-to-month</strong> – scale up or down anytime</span>
						</li>
					</ul>
				</div>
			</div>
		</section>

		<!-- Scope & deliverables (bg-slate-900/40) -->
		<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="scope-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="scope-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Common Scope &amp; Deliverable Examples
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						You define the scope and deliverables — your dedicated BIM coordinator executes. Here are examples of what specialists in this role typically handle:
					</p>
				</div>

				<div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
					{deliverables.map((item) => (
						<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
							<p class="text-sm font-semibold text-slate-100">{item}</p>
						</div>
					))}
				</div>

				<div class="js-fade-in mt-10 overflow-x-auto">
					<h3 class="text-lg font-semibold text-slate-100">Responsibility Matrix</h3>
					<table class="mt-4 w-full min-w-[480px] rounded-2xl border border-slate-800 bg-slate-900/40 shadow-lg shadow-black/20 overflow-hidden">
						<thead>
							<tr class="border-b border-slate-800 bg-slate-900/40">
								<th class="px-6 py-4 text-left text-sm font-semibold text-slate-100">Your Licensed Team Retains</th>
								<th class="px-6 py-4 text-left text-sm font-semibold text-slate-100">Your Dedicated LATAM Specialist Handles</th>
							</tr>
						</thead>
						<tbody class="text-sm">
							{responsibilityMatrix.map((row) => (
								<tr class="border-b border-slate-800 last:border-b-0">
									<td class="px-6 py-4 text-slate-400">{row.you}</td>
									<td class="px-6 py-4 text-slate-400">{row.we}</td>
								</tr>
							))}
						</tbody>
					</table>
				</div>
			</div>
		</section>

		<!-- Tools section (bg-slate-950) -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="tools-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="tools-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Tools Your Specialist Will Use
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Your dedicated BIM coordinator works in Navisworks, Autodesk Construction Cloud, and BIM 360 – whatever your project and firm standards require.
					</p>
				</div>

				<div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
					{tools.map((tool) => (
						<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
							<p class="text-sm font-semibold text-slate-100">{tool.name}</p>
							<p class="mt-2 text-sm leading-relaxed text-slate-400">{tool.desc}</p>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- Engagement options (bg-slate-900/40) -->
		<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="engagement-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="engagement-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Engagement Options
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Dedicated BIM coordinators on a full-time or part-time basis – or scalable coordination pods for larger project loads.
					</p>
				</div>

				<div class="mt-10 grid gap-5 md:grid-cols-2">
					<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
						<p class="text-xs font-semibold uppercase tracking-wide text-aec">Individual Specialist</p>
						<h3 class="mt-3 text-lg font-semibold text-slate-100">Dedicated BIM Coordinator</h3>
						<p class="mt-3 text-sm leading-relaxed text-slate-400">
							Full-time (40h/week) or part-time (20h/week) BIM coordinators – embedded into your team, using your tools and standards.
						</p>
						<p class="mt-4 text-sm font-semibold text-aec">From ~$3,500/mo</p>
					</div>
					<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
						<p class="text-xs font-semibold uppercase tracking-wide text-aec">Coordination Pod</p>
						<h3 class="mt-3 text-lg font-semibold text-slate-100">Scalable Coordination Team</h3>
						<p class="mt-3 text-sm leading-relaxed text-slate-400">
							Multiple coordinators for high-volume projects or parallel coordination workflows across several jobs.
						</p>
						<p class="mt-4 text-sm font-semibold text-aec">Custom pricing</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Pricing guidance (bg-slate-950) -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="pricing-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="pricing-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Pricing Guidance
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Individual BIM coordinators start at approximately <strong class="text-slate-100">$3,500/month</strong> for full-time engagement. Part-time and pod configurations are custom-quoted based on hours and scope.
					</p>
					<a
						href="/how-pricing-works/"
						class="mt-4 inline-flex items-center gap-1.5 text-sm font-semibold text-sky-300 transition hover:text-sky-200/80 focus:outline-none focus-visible:underline"
					>
						See how pricing works <span aria-hidden="true">&rarr;</span>
					</a>
				</div>
			</div>
		</section>

		<!-- FAQ (bg-slate-900/40) -->
		<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="faq-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="faq-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Frequently Asked Questions
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Common questions about our BIM coordination services for US firms.
					</p>
				</div>

				<div class="mt-10 grid gap-3">
					{faqs.map((item) => (
						<details class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
							<summary class="cursor-pointer list-none text-sm font-semibold text-slate-100 [&::-webkit-details-marker]:hidden">
								{item.q}
							</summary>
							<p class="mt-4 pt-4 text-sm leading-relaxed text-slate-400 border-t border-slate-800">{item.a}</p>
						</details>
					))}
				</div>
			</div>
		</section>

		<!-- CTA (bg-slate-950) -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="cta-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-8 text-center shadow-xl sm:p-12">
					<h2 id="cta-heading" class="text-3xl font-semibold tracking-tight text-white sm:text-4xl">
						Ready for BIM Coordination Support?
					</h2>
					<p class="mx-auto mt-4 max-w-xl text-base leading-relaxed text-slate-300">
						Book a call to discuss your coordination needs, tools, and timeline – or share your project details and we'll propose the best-fit engagement.
					</p>
					<div class="mt-8 flex flex-wrap items-center justify-center gap-4">
						<a
							href={bookingUrl}
							{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
							class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-8 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
							data-book-call
						>
							Book a BIM Coordination Call
						</a>
						<a
							href="/#contact"
							class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/40 px-8 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
							data-open-tell-us="bim-cta"
						>
							Tell Us What You Need
						</a>
					</div>
					<p class="mt-5 text-xs text-slate-400">Month-to-month · Free replacement guarantee · No long-term contracts</p>
				</div>
			</div>
		</section>

		<!-- Contact (bg-slate-950) -->
		<section id="contact" class="bg-slate-950 pb-20 pt-16 sm:pb-24 sm:pt-20" aria-labelledby="contact-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<p class="text-sm font-semibold uppercase tracking-widest text-sky-300">Get in touch</p>
					<h2 id="contact-heading" class="mt-3 text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Let's Talk BIM Coordination
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Share your coordination scope, tools, and timeline – we'll match you with a vetted BIM coordinator.
					</p>
				</div>

				<ContactHub subject="${brand} – BIM coordination inquiry" defaultCategory="aec" defaultMessage="I'm interested in BIM coordination services." />
			</div>
		</section>

	</main>

	<style>
		.js-fade-in {
			opacity: 0;
			transform: translateY(20px);
			transition: opacity 0.35s ease-out, transform 0.35s ease-out;
		}
		.js-fade-in.is-visible {
			opacity: 1;
			transform: translateY(0);
		}
	</style>

	<script is:inline>
		(function () {
			var els = document.querySelectorAll('.js-fade-in');
			if (!els.length) return;
			var io = new IntersectionObserver(function (entries) {
				entries.forEach(function (e) {
					if (e.isIntersecting) {
						e.target.classList.add('is-visible');
						io.unobserve(e.target);
					}
				});
			}, { threshold: 0.1, rootMargin: '0px 0px -40px 0px' });
			els.forEach(function (el) { io.observe(el); });
		})();
	</script>
</Layout>

