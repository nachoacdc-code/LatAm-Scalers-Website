---
import Layout from '../../../layouts/Layout.astro';
import MetaHead from '../../../components/MetaHead.astro';
import ContactForm from '../../../components/ContactForm.astro';
import CalendlyEmbed from '../../../components/CalendlyEmbed.astro';
import { BOOKING_URL, isExternalUrl } from '../../../lib/cta';

const brand = 'LatAm Scalers';

const meta = {
	title: 'BIM Coordination Services — Dedicated LATAM Specialists for US Firms | LatAm Scalers',
	description:
		'Professional BIM coordination services for US firms. Dedicated LATAM specialists using Navisworks, ACC, and BIM 360. Clash detection, model coordination, and federated deliverables. From ~$3,500/mo.',
};

const baseUrl = Astro.site ?? 'https://latam-scalers-website.vercel.app';
const canonical = new URL('/aec/bim-coordination-services/', baseUrl).toString();

const bookingUrl = BOOKING_URL;
const bookingExternal = isExternalUrl(bookingUrl);
const calendlyUrl = import.meta.env.PUBLIC_CALENDLY_URL ?? import.meta.env.PUBLIC_BOOKING_URL ?? 'https://calendly.com/your-org/15min';

const tools = [
	{ name: 'Navisworks', desc: 'Clash detection, 4D scheduling, and multi-model coordination across disciplines.' },
	{ name: 'Autodesk Construction Cloud (ACC)', desc: 'Document control, design collaboration, and model coordination in the cloud.' },
	{ name: 'BIM 360', desc: 'Cloud-based collaboration, issue tracking, and federated model management.' },
	{ name: 'Revit', desc: '3D BIM modeling, coordination sets, and construction documentation.' },
];

const deliverables = [
	'Clash detection reports with prioritized resolution tracking',
	'Federated models organized by discipline and phase',
	'Coordination meeting minutes and issue logs',
	'Updated models reflecting resolved clashes',
	'As-built documentation for handover',
];

const responsibilityMatrix = [
	{ you: 'Design intent, sign-off, stamping', we: 'Clash detection runs, report generation, resolution tracking' },
	{ you: 'BEP, coordination matrix, tolerance standards', we: 'Execution within your standards, QA to your checklist' },
	{ you: 'Redlines, markups, direction on priority', we: 'Model updates, issue coordination, handoff documentation' },
	{ you: 'Client communication, project management', we: 'Vetting, matching, onboarding, replacement guarantee' },
];

const faqs = [
	{
		q: 'What is included in BIM coordination services?',
		a: 'Our BIM coordination services include clash detection across architectural, structural, and MEP models; federated model management; prioritized clash reports; resolution tracking; and updated deliverables reflecting resolved issues. We work in Navisworks, ACC, and BIM 360 depending on your setup.',
	},
	{
		q: 'How quickly can we get a coordination specialist?',
		a: 'We typically present vetted BIM coordinators within 48 hours. Once access and scope are confirmed, onboarding is fast so you can start coordination workflows quickly.',
	},
	{
		q: 'Do you support Navisworks, ACC, and BIM 360?',
		a: 'Yes. Our specialists are proficient in Navisworks Manage for clash detection and 4D scheduling, Autodesk Construction Cloud for document and model coordination, and BIM 360 for cloud-based collaboration. We align with your preferred platform.',
	},
	{
		q: 'Who owns design authority and stamping?',
		a: 'You retain full design authority and stamping responsibility. Our specialists produce coordination support and deliverables under your direction — all work requires review and approval by your licensed professionals.',
	},
	{
		q: 'What does pricing typically look like?',
		a: 'Dedicated BIM coordinators start at approximately $3,500/month for full-time (40h/week). Part-time and production-pod options are available. Custom quotes are provided based on scope and volume.',
	},
];

const serviceJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'Service',
	name: 'BIM Coordination Services',
	description: meta.description,
	provider: { '@type': 'Organization', name: brand, url: baseUrl },
};

const faqJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'FAQPage',
	mainEntity: faqs.map((f) => ({
		'@type': 'Question',
		name: f.q,
		acceptedAnswer: { '@type': 'Answer', text: f.a },
	})),
};
---

<Layout>
	<MetaHead slot="head" title={meta.title} description={meta.description} canonical={canonical} jsonLd={[serviceJsonLd, faqJsonLd]} />

	<main>

		<!-- Hero (bg-primary, white text) -->
		<section class="relative overflow-hidden bg-primary py-16 sm:py-24" aria-labelledby="hero-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in">
					<p class="text-sm font-semibold uppercase tracking-widest text-aec">BIM Coordination</p>
					<h1 id="hero-heading" class="mt-4 text-4xl font-semibold leading-tight tracking-tight text-white sm:text-5xl lg:text-[3.25rem]">
						BIM Coordination Services — Dedicated LATAM Specialists for US Firms
					</h1>
					<p class="mt-5 max-w-xl text-base leading-relaxed text-white/80 sm:text-lg">
						Dedicated BIM coordinators who integrate into your workflow. Clash detection, federated model coordination, and issue resolution using Navisworks, ACC, and BIM 360. US timezone overlap. Vetted. Month-to-month flexibility.
					</p>

					<div class="mt-8 flex flex-wrap gap-3">
						<a
							href={bookingUrl}
							{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
							class="inline-flex min-h-[48px] items-center justify-center rounded bg-accent px-6 py-3 text-sm font-semibold text-white transition hover:bg-accent/90 focus:outline-none focus-visible:ring-2 focus-visible:ring-white"
							data-book-call
						>
							Book a BIM Coordination Call
						</a>
						<a
							href="/#contact"
							class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-white/30 bg-white/5 px-6 py-3 text-sm font-semibold text-white transition hover:bg-white/10 focus:outline-none focus-visible:ring-2 focus-visible:ring-white"
							data-open-tell-us="bim-hero"
						>
							Tell Us What You Need
						</a>
					</div>
				</div>
			</div>
		</section>

		<!-- Service overview (bg-bg-light) -->
		<section class="bg-bg-light py-16 sm:py-20" aria-labelledby="overview-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="overview-heading" class="text-3xl font-semibold tracking-tight text-text-primary sm:text-4xl">
						What We Provide
					</h2>
					<p class="mt-4 text-base leading-relaxed text-text-secondary">
						Professional BIM coordination services for US architecture and engineering firms. Our specialists handle clash detection, federated model management, and coordination workflows so your team can focus on design decisions and client relationships.
					</p>
					<p class="mt-4 text-base leading-relaxed text-text-secondary">
						Whether you need ongoing coordination support for multi-disciplinary projects or surge capacity for deadlines, we provide dedicated LATAM coordinators who work in your preferred tools and align with your BEP. All deliverables are produced under the direction of your licensed professionals.
					</p>
					<ul class="mt-6 grid gap-3 sm:grid-cols-2">
						<li class="flex items-start gap-2 rounded-xl border border-border bg-white p-4 shadow-sm">
							<span class="text-aec" aria-hidden="true">✓</span>
							<span class="text-sm text-text-secondary"><strong class="text-text-primary">Clash detection</strong> — Navisworks, ACC, BIM 360</span>
						</li>
						<li class="flex items-start gap-2 rounded-xl border border-border bg-white p-4 shadow-sm">
							<span class="text-aec" aria-hidden="true">✓</span>
							<span class="text-sm text-text-secondary"><strong class="text-text-primary">Federated models</strong> — organized by discipline</span>
						</li>
						<li class="flex items-start gap-2 rounded-xl border border-border bg-white p-4 shadow-sm">
							<span class="text-aec" aria-hidden="true">✓</span>
							<span class="text-sm text-text-secondary"><strong class="text-text-primary">US timezone</strong> — real-time collaboration</span>
						</li>
						<li class="flex items-start gap-2 rounded-xl border border-border bg-white p-4 shadow-sm">
							<span class="text-aec" aria-hidden="true">✓</span>
							<span class="text-sm text-text-secondary"><strong class="text-text-primary">Month-to-month</strong> — scale up or down anytime</span>
						</li>
					</ul>
				</div>
			</div>
		</section>

		<!-- Scope & deliverables (bg-bg-alt) -->
		<section class="bg-bg-alt py-16 sm:py-20" aria-labelledby="scope-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="scope-heading" class="text-3xl font-semibold tracking-tight text-text-primary sm:text-4xl">
						Scope &amp; Deliverables
					</h2>
					<p class="mt-4 text-base leading-relaxed text-text-secondary">
						Our BIM coordination scope covers model federation, clash detection, and resolution support. We produce clear deliverables aligned with your project phases.
					</p>
				</div>

				<div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
					{deliverables.map((item) => (
						<div class="js-fade-in rounded-2xl border border-border bg-white p-6 shadow-sm">
							<p class="text-sm font-semibold text-text-primary">{item}</p>
						</div>
					))}
				</div>

				<div class="js-fade-in mt-10 overflow-x-auto">
					<h3 class="text-lg font-semibold text-text-primary">Responsibility Matrix</h3>
					<table class="mt-4 w-full min-w-[480px] rounded-2xl border border-border bg-white shadow-sm overflow-hidden">
						<thead>
							<tr class="border-b border-border bg-bg-alt">
								<th class="px-6 py-4 text-left text-sm font-semibold text-text-primary">You Keep</th>
								<th class="px-6 py-4 text-left text-sm font-semibold text-text-primary">We Handle</th>
							</tr>
						</thead>
						<tbody class="text-sm">
							{responsibilityMatrix.map((row) => (
								<tr class="border-b border-border last:border-b-0">
									<td class="px-6 py-4 text-text-secondary">{row.you}</td>
									<td class="px-6 py-4 text-text-secondary">{row.we}</td>
								</tr>
							))}
						</tbody>
					</table>
				</div>
			</div>
		</section>

		<!-- Tools section (bg-bg-light) -->
		<section class="bg-bg-light py-16 sm:py-20" aria-labelledby="tools-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="tools-heading" class="text-3xl font-semibold tracking-tight text-text-primary sm:text-4xl">
						Tools We Use
					</h2>
					<p class="mt-4 text-base leading-relaxed text-text-secondary">
						Our coordinators work in Navisworks, Autodesk Construction Cloud, and BIM 360 — whatever your project and firm standards require.
					</p>
				</div>

				<div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
					{tools.map((tool) => (
						<div class="js-fade-in rounded-2xl border border-border bg-white p-6 shadow-sm">
							<p class="text-sm font-semibold text-text-primary">{tool.name}</p>
							<p class="mt-2 text-sm leading-relaxed text-text-secondary">{tool.desc}</p>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- Engagement options (bg-bg-alt) -->
		<section class="bg-bg-alt py-16 sm:py-20" aria-labelledby="engagement-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="engagement-heading" class="text-3xl font-semibold tracking-tight text-text-primary sm:text-4xl">
						Engagement Options
					</h2>
					<p class="mt-4 text-base leading-relaxed text-text-secondary">
						Dedicated BIM coordinators on a full-time or part-time basis — or scalable coordination pods for larger project loads.
					</p>
				</div>

				<div class="mt-10 grid gap-5 md:grid-cols-2">
					<div class="js-fade-in rounded-2xl border border-border bg-white p-6 shadow-sm">
						<p class="text-xs font-semibold uppercase tracking-wide text-aec">Individual Specialist</p>
						<h3 class="mt-3 text-lg font-semibold text-text-primary">Dedicated BIM Coordinator</h3>
						<p class="mt-3 text-sm leading-relaxed text-text-secondary">
							Full-time (40h/week) or part-time (20h/week) BIM coordinators — embedded into your team, using your tools and standards.
						</p>
						<p class="mt-4 text-sm font-semibold text-aec">From ~$3,500/mo</p>
					</div>
					<div class="js-fade-in rounded-2xl border border-border bg-white p-6 shadow-sm">
						<p class="text-xs font-semibold uppercase tracking-wide text-aec">Coordination Pod</p>
						<h3 class="mt-3 text-lg font-semibold text-text-primary">Scalable Coordination Team</h3>
						<p class="mt-3 text-sm leading-relaxed text-text-secondary">
							Multiple coordinators for high-volume projects or parallel coordination workflows across several jobs.
						</p>
						<p class="mt-4 text-sm font-semibold text-aec">Custom pricing</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Pricing guidance (bg-bg-light) -->
		<section class="bg-bg-light py-16 sm:py-20" aria-labelledby="pricing-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="pricing-heading" class="text-3xl font-semibold tracking-tight text-text-primary sm:text-4xl">
						Pricing Guidance
					</h2>
					<p class="mt-4 text-base leading-relaxed text-text-secondary">
						Individual BIM coordinators start at approximately <strong class="text-text-primary">$3,500/month</strong> for full-time engagement. Part-time and pod configurations are custom-quoted based on hours and scope.
					</p>
					<a
						href="/how-pricing-works/"
						class="mt-4 inline-flex items-center gap-1.5 text-sm font-semibold text-accent transition hover:text-accent/80 focus:outline-none focus-visible:underline"
					>
						See how pricing works <span aria-hidden="true">&rarr;</span>
					</a>
				</div>
			</div>
		</section>

		<!-- FAQ (bg-bg-alt) -->
		<section class="bg-bg-alt py-16 sm:py-20" aria-labelledby="faq-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="faq-heading" class="text-3xl font-semibold tracking-tight text-text-primary sm:text-4xl">
						Frequently Asked Questions
					</h2>
					<p class="mt-4 text-base leading-relaxed text-text-secondary">
						Common questions about our BIM coordination services for US firms.
					</p>
				</div>

				<div class="mt-10 grid gap-3">
					{faqs.map((item) => (
						<details class="js-fade-in rounded-2xl border border-border bg-white p-6 shadow-sm">
							<summary class="cursor-pointer list-none text-sm font-semibold text-text-primary [&::-webkit-details-marker]:hidden">
								{item.q}
							</summary>
							<p class="mt-4 pt-4 text-sm leading-relaxed text-text-secondary border-t border-border">{item.a}</p>
						</details>
					))}
				</div>
			</div>
		</section>

		<!-- CTA (bg-primary) -->
		<section class="bg-primary py-16 sm:py-20" aria-labelledby="cta-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in rounded-2xl border border-white/10 bg-white/5 p-8 text-center shadow-xl backdrop-blur-sm sm:p-12">
					<h2 id="cta-heading" class="text-3xl font-semibold tracking-tight text-white sm:text-4xl">
						Ready for BIM Coordination Support?
					</h2>
					<p class="mx-auto mt-4 max-w-xl text-base leading-relaxed text-white/80">
						Book a call to discuss your coordination needs, tools, and timeline — or share your project details and we'll propose the best-fit engagement.
					</p>
					<div class="mt-8 flex flex-wrap items-center justify-center gap-4">
						<a
							href={bookingUrl}
							{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
							class="inline-flex min-h-[48px] items-center justify-center rounded bg-accent px-8 py-3 text-sm font-semibold text-white transition hover:bg-accent/90 focus:outline-none focus-visible:ring-2 focus-visible:ring-white"
							data-book-call
						>
							Book a BIM Coordination Call
						</a>
						<a
							href="/#contact"
							class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-white/30 bg-white/5 px-8 py-3 text-sm font-semibold text-white transition hover:bg-white/10 focus:outline-none focus-visible:ring-2 focus-visible:ring-white"
							data-open-tell-us="bim-cta"
						>
							Tell Us What You Need
						</a>
					</div>
					<p class="mt-5 text-xs text-white/50">Month-to-month · Free replacement guarantee · No long-term contracts</p>
				</div>
			</div>
		</section>

		<!-- Contact (bg-bg-light) -->
		<section id="contact" class="bg-bg-light pb-20 pt-16 sm:pb-24 sm:pt-20" aria-labelledby="contact-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<p class="text-sm font-semibold uppercase tracking-widest text-accent">Get in touch</p>
					<h2 id="contact-heading" class="mt-3 text-3xl font-semibold tracking-tight text-text-primary sm:text-4xl">
						Let's Talk BIM Coordination
					</h2>
					<p class="mt-4 text-base leading-relaxed text-text-secondary">
						Share your coordination scope, tools, and timeline — we'll match you with a vetted BIM coordinator.
					</p>
				</div>

				<div class="mt-10 grid gap-6 lg:grid-cols-2">
					<ContactForm subject={`${brand} — BIM coordination inquiry`} defaultInterest="aec" defaultMessage="I'm interested in BIM coordination services." />
					<CalendlyEmbed url={calendlyUrl} title="Book a BIM Coordination Call" />
				</div>
			</div>
		</section>

	</main>

	<style>
		.js-fade-in {
			opacity: 0;
			transform: translateY(20px);
			transition: opacity 0.35s ease-out, transform 0.35s ease-out;
		}
		.js-fade-in.is-visible {
			opacity: 1;
			transform: translateY(0);
		}
	</style>

	<script is:inline>
		(function () {
			var els = document.querySelectorAll('.js-fade-in');
			if (!els.length) return;
			var io = new IntersectionObserver(function (entries) {
				entries.forEach(function (e) {
					if (e.isIntersecting) {
						e.target.classList.add('is-visible');
						io.unobserve(e.target);
					}
				});
			}, { threshold: 0.1, rootMargin: '0px 0px -40px 0px' });
			els.forEach(function (el) { io.observe(el); });
		})();
	</script>
</Layout>
