---
import Layout from '../../layouts/Layout.astro';
import MetaHead from '../../components/MetaHead.astro';
import ContactHub from '../../components/ContactHub.astro';
import { BOOKING_URL, isExternalUrl } from '../../lib/cta';

const brand = 'LatAm Scalers';

const meta = {
	title: 'How Pricing Works â€” Transparent Engagement Models | LatAm Scalers',
	description:
		'Understand how LatAm Scalers pricing works for US companies. Dedicated specialists from ~$2,500/mo. Full-time, part-time, and PM-led options. No hidden fees, no long-term contracts.',
};

const baseUrl = Astro.site ?? 'https://latam-scalers-website.vercel.app';
const canonical = new URL('/how-pricing-works/', baseUrl).toString();

const bookingUrl = BOOKING_URL;
const bookingExternal = isExternalUrl(bookingUrl);
const calendlyUrl = import.meta.env.PUBLIC_CALENDLY_URL ?? import.meta.env.PUBLIC_BOOKING_URL ?? 'https://calendly.com/your-org/15min';

const formats = [
	{
		title: 'Dedicated Individual â€” Full-Time',
		hours: '40 hours/week',
		desc: 'A specialist working exclusively on your projects, fully embedded in your team. Same timezone, same tools, same standards.',
		best: 'Ongoing workload that requires a dedicated resource',
		pricing: 'Varies by role and category',
	},
	{
		title: 'Dedicated Individual â€” Part-Time',
		hours: '20 hours/week',
		desc: 'Half-time coverage with the same quality and dedication. Ideal for steady but not full-capacity workloads.',
		best: 'Consistent but lower-volume needs',
		pricing: 'Varies by role and category',
	},
	{
		title: 'Scaling Pods',
		hours: 'Custom hours/week',
		desc: 'Multiple specialists working as a coordinated team. Ideal for project-based surges or multi-discipline coverage.',
		best: 'Large projects requiring multiple roles',
		pricing: 'Custom based on team composition',
	},
	{
		title: 'PM-Led Managed Teams',
		hours: 'Custom capacity',
		desc: 'A Project Manager coordinates your dedicated team with structured workflows, intake processes, and revision cycles.',
		best: 'Predictable output without managing individuals',
		pricing: 'Custom based on capacity and scope',
	},
];

const categoryPricing = [
	{
		category: 'AEC',
		color: 'text-aec',
		roles: 'BIM Coordinators, Revit Drafters, CAD Technicians, MEP Modelers',
		starting: '~$3,500/mo',
		note: 'Full-time (40h/week). Part-time and pod options available.',
	},
	{
		category: 'Design',
		color: 'text-design',
		roles: 'UI/UX Designers, Brand Designers, Motion Designers',
		starting: '~$2,800/mo',
		note: 'Managed creative teams available. Includes PM coordination.',
	},
	{
		category: 'Marketing',
		color: 'text-marketing',
		roles: 'SEO Specialists, PPC Managers, HubSpot Specialists, Content Marketers',
		starting: '~$2,500/mo',
		note: 'Full-time (40h/week). Platform-certified specialists.',
	},
];

const included = [
	'Vetting and matching â€” no upfront placement fee on monthly engagements',
	'Dedicated account management throughout the engagement',
	'Free replacement guarantee â€” anytime for monthly, 90 days for direct hire',
	'Onboarding support and knowledge transfer coordination',
	'Regular check-ins and performance monitoring',
	'Flexibility to scale up, scale down, or pause',
];

const notIncluded = [
	'Software licenses or tool subscriptions (you provide access)',
	'Hardware or equipment (specialists use their own)',
	'Overtime beyond agreed hours (quoted separately if needed)',
	'Direct employment taxes or benefits (for monthly engagements â€” specialists are independent contractors)',
];

const faqs = [
	{
		q: 'Why don\'t you publish exact rates?',
		a: 'Because rates depend on the specific role, experience level, tools required, and engagement format. We publish "starting at" ranges so you can budget appropriately, and provide exact quotes after understanding your needs. This ensures you get accurate pricing, not a generic rate card that may not reflect your actual scope.',
	},
	{
		q: 'Are there hidden fees or setup costs?',
		a: 'No. For month-to-month engagements, the monthly rate is all-inclusive â€” vetting, matching, account management, and replacement guarantee are included. There are no setup fees, no placement fees, and no exit fees. For direct-hire placements, there is a one-time placement fee disclosed upfront.',
	},
	{
		q: 'How do I get a custom quote?',
		a: 'Book a 30-minute scoping call or submit your requirements through our contact form. We\'ll discuss the role, tools, hours, and timeline â€” then provide a detailed quote within 24 hours. No obligation.',
	},
	{
		q: 'Can I start part-time and scale to full-time?',
		a: 'Absolutely. Many clients start with part-time coverage to test the workflow, then scale to full-time once they see the quality and fit. You can adjust hours at the end of any month.',
	},
	{
		q: 'What\'s the minimum commitment?',
		a: 'Month-to-month engagements have a 30-day notice period. There\'s no multi-month minimum. You can try a month and decide â€” though most clients stay because the ROI is clear from week one.',
	},
];

const webPageJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'WebPage',
	name: meta.title,
	description: meta.description,
	url: canonical,
	isPartOf: { '@type': 'WebSite', name: brand, url: baseUrl },
};

const faqJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'FAQPage',
	mainEntity: faqs.map((f) => ({
		'@type': 'Question',
		name: f.q,
		acceptedAnswer: { '@type': 'Answer', text: f.a },
	})),
};
---

<Layout>
	<MetaHead slot="head" title={meta.title} description={meta.description} canonical={canonical} jsonLd={[webPageJsonLd, faqJsonLd]} />

	<main>

		<!-- Hero -->
		<section class="relative overflow-hidden bg-slate-950 py-16 sm:py-24" aria-labelledby="hero-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in">
					<p class="text-sm font-semibold uppercase tracking-widest text-sky-300">Pricing</p>
					<h1 id="hero-heading" class="mt-4 text-4xl font-semibold leading-tight tracking-tight text-white sm:text-5xl lg:text-[3.25rem]">
						How Pricing Works â€” Transparent, Flexible, No Surprises
					</h1>
					<p class="mt-5 max-w-xl text-base leading-relaxed text-slate-300 sm:text-lg">
						We don't publish a rate card â€” because your quote depends on the role, experience level, and engagement format. Here's how our pricing model works so you can plan with confidence.
					</p>

					<div class="mt-8 flex flex-wrap gap-3">
						<a
							href={bookingUrl}
							{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
							class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-6 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
							data-book-call
						>
							Get a Custom Quote
						</a>
						<a
							href="/about/our-guarantee/"
							class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/40 px-6 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
						>
							See Our Guarantee â†’
						</a>
					</div>
				</div>
			</div>
		</section>

		<!-- Engagement formats -->
		<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="formats-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="formats-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Engagement Formats
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Choose the format that fits your workload and management style. All formats include vetting, matching, and our replacement guarantee.
					</p>
				</div>

				<div class="mt-10 grid gap-5 md:grid-cols-2">
					{formats.map((f) => (
						<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
							<p class="text-xs font-semibold uppercase tracking-wide text-sky-300">{f.hours}</p>
							<h3 class="mt-3 text-lg font-semibold text-slate-100">{f.title}</h3>
							<p class="mt-3 text-sm leading-relaxed text-slate-400">{f.desc}</p>
							<p class="mt-4 text-xs text-slate-400"><strong class="text-slate-300">Best for:</strong> {f.best}</p>
							<p class="mt-2 text-xs text-slate-400"><strong class="text-slate-300">Pricing:</strong> {f.pricing}</p>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- Starting ranges by category -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="ranges-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="ranges-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Starting Ranges by Category
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						These are approximate starting points for full-time (40h/week) dedicated specialists. Actual pricing depends on experience level, specific tools, and engagement format.
					</p>
				</div>

				<div class="mt-10 grid gap-5 md:grid-cols-3">
					{categoryPricing.map((cat) => (
						<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
							<p class:list={['text-xs font-semibold uppercase tracking-wide', cat.color]}>{cat.category}</p>
							<p class="mt-4 text-3xl font-semibold text-slate-100">{cat.starting}</p>
							<p class="mt-1 text-xs text-slate-400">{cat.note}</p>
							<p class="mt-4 text-sm leading-relaxed text-slate-400">{cat.roles}</p>
							<a
								href={`/${cat.category.toLowerCase()}/`}
								class:list={['mt-4 inline-flex items-center gap-1.5 text-sm font-semibold transition hover:opacity-80 focus:outline-none focus-visible:underline', cat.color]}
							>
								Explore {cat.category} solutions <span aria-hidden="true">&rarr;</span>
							</a>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- What's included / not included -->
		<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="included-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="included-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						What's Included (and What's Not)
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Full transparency on what your monthly rate covers.
					</p>
				</div>

				<div class="mt-10 grid gap-6 md:grid-cols-2">
					<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
						<h3 class="text-base font-semibold text-sky-300">Included in your rate</h3>
						<ul class="mt-4 space-y-3">
							{included.map((item) => (
								<li class="flex items-start gap-2 text-sm text-slate-400">
									<span class="text-sky-300" aria-hidden="true">âœ“</span>
									{item}
								</li>
							))}
						</ul>
					</div>
					<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
						<h3 class="text-base font-semibold text-slate-300">Not included</h3>
						<ul class="mt-4 space-y-3">
							{notIncluded.map((item) => (
								<li class="flex items-start gap-2 text-sm text-slate-400">
									<span class="text-slate-500" aria-hidden="true">â€”</span>
									{item}
								</li>
							))}
						</ul>
					</div>
				</div>
			</div>
		</section>

		<!-- Cost savings -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="savings-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="savings-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Typical Cost Savings
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						LATAM-based specialists provide 50â€“70% cost savings compared to equivalent US-based talent â€” without compromising on quality, timezone overlap, or communication standards.
					</p>
				</div>

				<div class="mt-10 grid gap-4 sm:grid-cols-3">
					<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20 text-center">
						<p class="text-3xl font-semibold text-sky-300">50â€“70%</p>
						<p class="mt-2 text-sm text-slate-400">Cost savings vs. US equivalents</p>
					</div>
					<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20 text-center">
						<p class="text-3xl font-semibold text-sky-300">0â€“3 hrs</p>
						<p class="mt-2 text-sm text-slate-400">Timezone overlap with US teams</p>
					</div>
					<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20 text-center">
						<p class="text-3xl font-semibold text-sky-300">$0</p>
						<p class="mt-2 text-sm text-slate-400">Placement fee on monthly engagements</p>
					</div>
				</div>
			</div>
		</section>

		<!-- FAQ -->
		<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="faq-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="faq-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Frequently Asked Questions
					</h2>
				</div>

				<div class="mt-10 grid gap-3">
					{faqs.map((item) => (
						<details class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
							<summary class="cursor-pointer list-none text-sm font-semibold text-slate-100 [&::-webkit-details-marker]:hidden">
								{item.q}
							</summary>
							<p class="mt-4 pt-4 text-sm leading-relaxed text-slate-400 border-t border-slate-800">{item.a}</p>
						</details>
					))}
				</div>
			</div>
		</section>

		<!-- CTA -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="cta-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-8 text-center shadow-xl sm:p-12">
					<h2 id="cta-heading" class="text-3xl font-semibold tracking-tight text-white sm:text-4xl">
						Get a Custom Quote in 24 Hours
					</h2>
					<p class="mx-auto mt-4 max-w-xl text-base leading-relaxed text-slate-300">
						Tell us the role, tools, and hours â€” we'll provide a detailed, no-obligation quote within one business day.
					</p>
					<div class="mt-8 flex flex-wrap items-center justify-center gap-4">
						<a
							href={bookingUrl}
							{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
							class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-8 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
							data-book-call
						>
							Book a 30-Minute Scoping Call
						</a>
						<a
							href="/#contact"
							class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/40 px-8 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
							data-open-tell-us="pricing-cta"
						>
							Tell Us Your Needs
						</a>
					</div>
					<p class="mt-5 text-xs text-slate-400">No placement fees Â· Month-to-month Â· Free replacement guarantee</p>
				</div>
			</div>
		</section>

		<!-- Contact -->
		<section id="contact" class="bg-slate-950 pb-20 pt-16 sm:pb-24 sm:pt-20" aria-labelledby="contact-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<p class="text-sm font-semibold uppercase tracking-widest text-sky-300">Get in touch</p>
					<h2 id="contact-heading" class="mt-3 text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Request a Quote
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Share your requirements â€” role, tools, hours, and timeline â€” and we'll provide a detailed quote within 24 hours.
					</p>
				</div>

				<ContactHub subject="${brand} â€” pricing inquiry" />
			</div>
		</section>

	</main>

	<style>
		.js-fade-in {
			opacity: 0;
			transform: translateY(20px);
			transition: opacity 0.35s ease-out, transform 0.35s ease-out;
		}
		.js-fade-in.is-visible {
			opacity: 1;
			transform: translateY(0);
		}
	</style>

	<script is:inline>
		(function () {
			var els = document.querySelectorAll('.js-fade-in');
			if (!els.length) return;
			var io = new IntersectionObserver(function (entries) {
				entries.forEach(function (e) {
					if (e.isIntersecting) {
						e.target.classList.add('is-visible');
						io.unobserve(e.target);
					}
				});
			}, { threshold: 0.1, rootMargin: '0px 0px -40px 0px' });
			els.forEach(function (el) { io.observe(el); });
		})();
	</script>
</Layout>


