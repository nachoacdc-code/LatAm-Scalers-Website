---
import Layout from '../../../layouts/Layout.astro';
import MetaHead from '../../../components/MetaHead.astro';
import ContactSection from '../../../components/ContactSection.astro';
import Footer from '../../../components/Footer.astro';
import { BOOKING_URL, isExternalUrl } from '../../../lib/cta';

const brand = 'LatAm Scalers';

const meta = {
	title: `Remote Marketing Talent for US Teams | ${brand}`,
	description:
		'Dedicated remote marketing specialists and pods for US teams — SEO, PPC, lifecycle, content, and analytics. Flexible FT/PT or team scaling, vetted and ready fast.',
};

const baseUrl = Astro.site ?? 'https://latam-scalers-website.vercel.app';
const canonical = new URL('/solutions/marketing-talent/', baseUrl).toString();

const roles = [
	'SEO Specialist',
	'Paid Search / PPC Manager',
	'Paid Social Specialist',
	'Lifecycle / Email Marketer',
	'Content Strategist',
	'Analytics / GA4 Specialist',
	'Conversion (CRO) Support',
	'Marketing Ops Support',
];

const faqs = [
	{
		q: 'Should we start with an individual or a pod?',
		a: 'Start with an individual when you need a channel owner (SEO, PPC, lifecycle). Choose a pod when you need multi-channel execution with clear reporting and iteration.',
	},
	{
		q: 'Do you support FT/PT and hourly blocks?',
		a: 'Yes — you can hire full-time or part-time specialists, or use hourly blocks for audits, setups, and focused sprints.',
	},
	{
		q: 'How fast can we receive candidates?',
		a: 'We can typically present vetted options quickly. Once goals and access are confirmed, onboarding is designed to be fast.',
	},
	{
		q: 'What if the fit is not right?',
		a: 'Engagements are month-to-month, and we offer a free replacement guarantee.',
	},
];

const faqStructured = faqs.slice(0, 4);

const serviceJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'Service',
	name: 'Remote Marketing Talent for US Teams',
	description: meta.description,
	provider: {
		'@type': 'Organization',
		name: brand,
		url: baseUrl,
	},
};

const faqJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'FAQPage',
	mainEntity: faqStructured.map((f) => ({
		'@type': 'Question',
		name: f.q,
		acceptedAnswer: { '@type': 'Answer', text: f.a },
	})),
};

const bookingUrl = BOOKING_URL;
const bookingExternal = isExternalUrl(bookingUrl);
---

<Layout>
	<MetaHead slot="head" title={meta.title} description={meta.description} canonical={canonical} jsonLd={[serviceJsonLd, faqJsonLd]} />

	<main class="mx-auto max-w-6xl px-6 py-12 sm:py-14">
		{/* HERO */}
		<section class="relative overflow-hidden">
			<div class="grid items-center gap-10 lg:grid-cols-2">
				<div>
					<p class="text-sm font-semibold tracking-wide text-accent">Solutions</p>
					<h1 class="mt-4 text-4xl font-semibold tracking-tight text-white sm:text-5xl">
						Dedicated Remote Marketing Talent for US Teams
					</h1>
					<p class="mt-4 max-w-prose text-base leading-relaxed text-text-secondary sm:text-lg">
						Scale pipeline, performance, and content with vetted specialists — embedded into your tools and reporting.
						Start with an individual, or build a pod for multi-channel execution.
					</p>

					<div class="mt-8 flex flex-wrap gap-3">
						<a
							href={bookingUrl}
							{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
							class="inline-flex items-center justify-center rounded bg-accent px-5 py-2.5 text-sm font-semibold text-white transition hover:bg-accent focus:outline-none focus-visible:ring-2 focus-visible:ring-accent focus-visible:ring-offset-2 focus-visible:"
							data-book-call
						>
							Book a 15-Min Call
						</a>
						<a
							href="/solutions/marketing-talent/individuals/"
							class="inline-flex items-center justify-center rounded-xl border border-white/20 bg-white/5 px-5 py-2.5 text-sm font-semibold text-text-primary transition hover:bg-bg-alt focus:outline-none focus-visible:ring-2 focus-visible:ring-slate-400 focus-visible:ring-offset-2 focus-visible:"
						>
							View options
						</a>
					</div>

					<p class="mt-4 text-xs leading-relaxed text-text-secondary">
						Timezone-aligned. Vetted specialists. Month-to-month flexibility. Free replacement guarantee.
					</p>
				</div>

				<div class="relative">
					<div class="rounded-2xl border border-primary/10 bg-primary p-6 shadow-sm">
						<p class="text-xs font-semibold uppercase tracking-wide text-text-secondary">Quick wins</p>
						<ul class="mt-4 grid gap-3 sm:grid-cols-2">
							<li class="rounded-xl border border-border bg-white shadow-sm p-4">
								<p class="text-xs font-semibold uppercase tracking-wide text-text-secondary">Performance</p>
								<p class="mt-2 text-sm text-text-secondary">Clean tracking + reporting cadence.</p>
							</li>
							<li class="rounded-xl border border-border bg-white shadow-sm p-4">
								<p class="text-xs font-semibold uppercase tracking-wide text-text-secondary">Execution</p>
								<p class="mt-2 text-sm text-text-secondary">Campaigns shipped consistently.</p>
							</li>
							<li class="rounded-xl border border-border bg-white shadow-sm p-4">
								<p class="text-xs font-semibold uppercase tracking-wide text-text-secondary">Pipeline</p>
								<p class="mt-2 text-sm text-text-secondary">More qualified demand with focused channels.</p>
							</li>
							<li class="rounded-xl border border-border bg-white shadow-sm p-4">
								<p class="text-xs font-semibold uppercase tracking-wide text-text-secondary">Speed</p>
								<p class="mt-2 text-sm text-text-secondary">Vetted options presented fast.</p>
							</li>
						</ul>
					</div>
					<div class="pointer-events-none absolute -right-20 -top-20 h-64 w-64 rounded-full bg-accent/10 blur-3xl" />
					<div class="pointer-events-none absolute -bottom-24 -left-24 h-72 w-72 rounded-full bg-design/5 blur-3xl" />
				</div>
			</div>
		</section>

		{/* OPTIONS */}
		<section class="mt-12" aria-labelledby="options-marketing">
			<h2 id="options-marketing" class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">
				Choose your engagement
			</h2>
			<p class="mt-3 max-w-prose text-sm leading-relaxed text-text-secondary sm:text-base">
				Start with an individual owner for a channel, or build a pod for multi-channel execution.
			</p>

			<div class="mt-6 grid gap-4 md:grid-cols-2">
				<a
					href="/solutions/marketing-talent/individuals/"
					class="rounded-2xl border border-border bg-white shadow-sm p-6 transition hover:bg-bg-alt"
				>
					<p class="text-sm font-semibold text-text-primary">Individuals</p>
					<p class="mt-2 text-sm leading-relaxed text-text-secondary">
						FT/PT channel owners or hourly blocks for audits, setup, and optimization.
					</p>
					<p class="mt-4 text-sm font-semibold text-accent">Explore individuals →</p>
				</a>
				<a
					href="/solutions/marketing-talent/teams/"
					class="rounded-2xl border border-border bg-white shadow-sm p-6 transition hover:bg-bg-alt"
				>
					<p class="text-sm font-semibold text-text-primary">Teams</p>
					<p class="mt-2 text-sm leading-relaxed text-text-secondary">
						Dedicated marketing pods for end-to-end execution, reporting, and iteration.
					</p>
					<p class="mt-4 text-sm font-semibold text-accent">Explore teams →</p>
				</a>
			</div>
		</section>

		{/* ROLES GRID */}
		<section class="mt-12" aria-labelledby="roles-marketing">
			<div class="flex flex-col gap-2">
				<h2 id="roles-marketing" class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">
					Common roles we place
				</h2>
				<p class="max-w-prose text-sm leading-relaxed text-text-secondary sm:text-base">
					These are representative roles — tell us your stack and goals and we’ll match accordingly.
				</p>
			</div>
			<div class="mt-6 grid gap-3 sm:grid-cols-2 lg:grid-cols-4">
				{roles.map((r) => (
					<a
						href="/roles/"
						class="rounded-2xl border border-border bg-white shadow-sm px-5 py-4 transition hover:bg-bg-alt focus:outline-none focus-visible:ring-2 focus-visible:ring-accent"
					>
						<p class="text-sm font-semibold text-text-primary">{r}</p>
						<p class="mt-1 text-xs text-text-secondary">View role →</p>
					</a>
				))}
			</div>
		</section>

		{/* PROOF */}
		<section class="mt-12" aria-labelledby="proof-marketing">
			<h2 id="proof-marketing" class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">Proof</h2>
			<p class="mt-3 max-w-prose text-sm leading-relaxed text-text-secondary sm:text-base">
				{/* TODO: Replace with testimonials carousel. */}
				Testimonials placeholder (to be filled).
			</p>
			<div class="mt-6 grid gap-4 md:grid-cols-3">
				{[1, 2, 3].map((i) => (
					<figure class="rounded-2xl border border-border bg-white shadow-sm p-6">
						<blockquote class="text-sm leading-relaxed text-text-secondary">“TODO testimonial {i}.”</blockquote>
						<figcaption class="mt-3 text-xs text-text-secondary">— TODO, anonymized</figcaption>
					</figure>
				))}
			</div>
		</section>

		{/* FAQ */}
		<section class="mt-12" aria-labelledby="faq-marketing">
			<h2 id="faq-marketing" class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">FAQ</h2>
			<div class="mt-6 grid gap-3">
				{faqs.map((item) => (
					<details class="rounded-2xl border border-border bg-white shadow-sm p-5">
						<summary class="cursor-pointer list-none text-sm font-semibold text-text-primary">{item.q}</summary>
						<p class="mt-3 text-sm leading-relaxed text-text-secondary">{item.a}</p>
					</details>
				))}
			</div>
		</section>

		{/* FINAL CTA */}
		<section class="mt-14 rounded-2xl border border-primary/10 bg-primary p-6 sm:p-8">
			<div class="flex flex-col items-start justify-between gap-6 md:flex-row md:items-center">
				<div>
					<h2 class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">Ready to scale marketing execution?</h2>
					<p class="mt-2 max-w-prose text-sm leading-relaxed text-text-secondary sm:text-base">
						Book a call to outline your goals, stack, and channels — we’ll propose the right engagement model.
					</p>
				</div>
				<div class="flex flex-wrap gap-3">
					<a
						href={bookingUrl}
						{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
						class="inline-flex items-center justify-center rounded bg-accent px-5 py-2.5 text-sm font-semibold text-white transition hover:bg-accent focus:outline-none focus-visible:ring-2 focus-visible:ring-accent focus-visible:ring-offset-2 focus-visible:"
						data-book-call
					>
						Book a 15-Min Call
					</a>
					<a
						href="/solutions/marketing-talent/individuals/"
						class="inline-flex items-center justify-center rounded-xl border border-white/20 bg-white/5 px-5 py-2.5 text-sm font-semibold text-text-primary transition hover:bg-bg-alt focus:outline-none focus-visible:ring-2 focus-visible:ring-slate-400 focus-visible:ring-offset-2 focus-visible:"
					>
						View individuals
					</a>
				</div>
			</div>
		</section>
	</main>

	<div class="mx-auto max-w-6xl px-6">
		<ContactSection subject={`${brand} — new inquiry (marketing solution)`} />
	</div>

	<Footer />
</Layout>

