---
import Layout from '../../../layouts/Layout.astro';
import MetaHead from '../../../components/MetaHead.astro';
import ContactSection from '../../../components/ContactSection.astro';
import { BOOKING_URL, isExternalUrl } from '../../../lib/cta';

const brand = 'LatAm Scalers';

const meta = {
	title: `Hire Marketing Specialists (FT/PT + Hourly) | ${brand}`,
	description:
		'Dedicated remote marketing specialists for US teams — full-time, part-time, or hourly blocks for audits, setups, and optimization. Vetted and ready fast.',
};

const baseUrl = Astro.site ?? 'https://latam-scalers-website.vercel.app';
const canonical = new URL('/solutions/marketing-talent/individuals/', baseUrl).toString();

const faqs = [
	{
		q: 'Should we choose FT/PT or hourly blocks?',
		a: 'FT/PT is best for channel ownership and ongoing execution. Hourly blocks are best for targeted work like audits, setups, migrations, or short sprints.',
	},
	{
		q: 'How fast can someone onboard?',
		a: 'We can typically present vetted options quickly. Once access and goals are confirmed, onboarding is designed to be fast so work can start immediately.',
	},
	{
		q: 'What if the fit is not right?',
		a: 'Engagements are month-to-month, and we offer a free replacement guarantee.',
	},
];

const bookingUrl = BOOKING_URL;
const bookingExternal = isExternalUrl(bookingUrl);
---

<Layout>
	<MetaHead slot="head" title={meta.title} description={meta.description} canonical={canonical} />

	<main class="mx-auto max-w-6xl px-6 py-12 sm:py-14">
		{/* HERO */}
		<section class="relative overflow-hidden">
			<div class="grid items-center gap-10 lg:grid-cols-2">
				<div>
					<p class="text-sm font-semibold tracking-wide text-accent">Marketing Talent</p>
					<h1 class="mt-4 text-4xl font-semibold tracking-tight text-white sm:text-5xl">
						Hire Dedicated Marketing Specialists
					</h1>
					<p class="mt-4 max-w-prose text-base leading-relaxed text-text-secondary sm:text-lg">
						Channel owners who plug into your tools and reporting — full-time, part-time, or hourly blocks for focused
						work. Ideal for teams that need consistent execution without adding headcount risk.
					</p>

					<div class="mt-8 flex flex-wrap gap-3">
						<a
							href={bookingUrl}
							{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
							class="inline-flex items-center justify-center rounded bg-accent px-5 py-2.5 text-sm font-semibold text-white transition hover:bg-accent focus:outline-none focus-visible:ring-2 focus-visible:ring-accent focus-visible:ring-offset-2 focus-visible:"
							data-book-call
						>
							Book a 15-Min Call
						</a>
						<a
							href="/solutions/marketing-talent/"
							class="inline-flex items-center justify-center rounded-xl border border-white/20 bg-white/5 px-5 py-2.5 text-sm font-semibold text-text-primary transition hover:bg-bg-alt focus:outline-none focus-visible:ring-2 focus-visible:ring-slate-400 focus-visible:ring-offset-2 focus-visible:"
						>
							Back to overview
						</a>
					</div>
				</div>

				<div class="relative">
					<div class="rounded-2xl border border-primary/10 bg-primary p-6 shadow-sm">
						<p class="text-xs font-semibold uppercase tracking-wide text-text-secondary">Common outcomes</p>
						<ul class="mt-4 grid gap-3 sm:grid-cols-2">
							<li class="rounded-xl border border-border bg-white shadow-sm p-4">
								<p class="text-xs font-semibold uppercase tracking-wide text-text-secondary">Execution</p>
								<p class="mt-2 text-sm text-text-secondary">More campaigns shipped weekly.</p>
							</li>
							<li class="rounded-xl border border-border bg-white shadow-sm p-4">
								<p class="text-xs font-semibold uppercase tracking-wide text-text-secondary">Measurement</p>
								<p class="mt-2 text-sm text-text-secondary">Cleaner tracking and reporting.</p>
							</li>
							<li class="rounded-xl border border-border bg-white shadow-sm p-4">
								<p class="text-xs font-semibold uppercase tracking-wide text-text-secondary">Optimization</p>
								<p class="mt-2 text-sm text-text-secondary">Better performance through iteration.</p>
							</li>
							<li class="rounded-xl border border-border bg-white shadow-sm p-4">
								<p class="text-xs font-semibold uppercase tracking-wide text-text-secondary">Pipeline</p>
								<p class="mt-2 text-sm text-text-secondary">More qualified demand with focus.</p>
							</li>
						</ul>
					</div>
					<div class="pointer-events-none absolute -right-20 -top-20 h-64 w-64 rounded-full bg-accent/10 blur-3xl" />
					<div class="pointer-events-none absolute -bottom-24 -left-24 h-72 w-72 rounded-full bg-design/5 blur-3xl" />
				</div>
			</div>
		</section>

		{/* FT / PT OFFERINGS */}
		<section class="mt-12" aria-labelledby="ftpt-offerings">
			<h2 id="ftpt-offerings" class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">
				FT / PT offerings
			</h2>
			<div class="mt-6 grid gap-4 md:grid-cols-2">
				<article class="rounded-2xl border border-border bg-white shadow-sm p-6">
					<h3 class="text-base font-semibold text-text-primary">Full-time (40h/week)</h3>
					<p class="mt-3 text-sm leading-relaxed text-text-secondary">
						Best for channel ownership and consistent execution tied to weekly targets.
					</p>
					<ul class="mt-4 grid gap-2 text-sm text-text-secondary">
						<li>Own a channel end-to-end (SEO, PPC, lifecycle)</li>
						<li>Weekly reporting and iteration</li>
					</ul>
				</article>
				<article class="rounded-2xl border border-border bg-white shadow-sm p-6">
					<h3 class="text-base font-semibold text-text-primary">Part-time (20h/week)</h3>
					<p class="mt-3 text-sm leading-relaxed text-text-secondary">
						Ideal for steady support, specialized execution, or a focused scope.
					</p>
					<ul class="mt-4 grid gap-2 text-sm text-text-secondary">
						<li>Support a channel or backlog consistently</li>
						<li>Great for overflow + maintenance</li>
					</ul>
				</article>
			</div>
		</section>

		{/* HOURLY BLOCKS */}
		<section class="mt-12" aria-labelledby="hourly-blocks">
			<h2 id="hourly-blocks" class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">
				Hourly blocks
			</h2>
			<p class="mt-3 max-w-prose text-sm leading-relaxed text-text-secondary sm:text-base">
				For tactical needs and fast sprints — audits, setups, migrations, and optimizations.
			</p>
			<div class="mt-6 grid gap-4 md:grid-cols-3">
				<div class="rounded-2xl border border-border bg-white shadow-sm p-6">
					<p class="text-sm font-semibold text-text-primary">Audit + plan</p>
					<p class="mt-2 text-sm text-text-secondary">SEO/ads/account review + prioritized roadmap.</p>
				</div>
				<div class="rounded-2xl border border-border bg-white shadow-sm p-6">
					<p class="text-sm font-semibold text-text-primary">Setup + launch</p>
					<p class="mt-2 text-sm text-text-secondary">Tracking, dashboards, campaigns, and creative ops.</p>
				</div>
				<div class="rounded-2xl border border-border bg-white shadow-sm p-6">
					<p class="text-sm font-semibold text-text-primary">Optimize + iterate</p>
					<p class="mt-2 text-sm text-text-secondary">Testing, bid/keyword changes, CRO support.</p>
				</div>
			</div>
		</section>

		{/* ONBOARDING */}
		<section class="mt-12" aria-labelledby="onboarding">
			<h2 id="onboarding" class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">
				Onboarding
			</h2>
			<ol class="mt-6 grid gap-4 lg:grid-cols-4">
				{[
					{ title: 'Goals + stack', body: 'Channels, KPIs, tools, access, and reporting cadence.' },
					{ title: 'Vetted matches', body: 'We propose specialists aligned to your needs.' },
					{ title: 'Interview (optional)', body: 'Meet candidates or start immediately.' },
					{ title: 'Execute', body: 'Weekly delivery, iterations, and clear updates.' },
				].map((step, idx) => (
					<li class="rounded-2xl border border-border bg-white shadow-sm p-6">
						<p class="text-xs font-semibold uppercase tracking-wide text-accent">Step {idx + 1}</p>
						<p class="mt-2 text-sm font-semibold text-text-primary">{step.title}</p>
						<p class="mt-2 text-sm leading-relaxed text-text-secondary">{step.body}</p>
					</li>
				))}
			</ol>
		</section>

		{/* PROOF */}
		<section class="mt-12" aria-labelledby="proof-marketing-individuals">
			<h2 id="proof-marketing-individuals" class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">
				Proof
			</h2>
			<p class="mt-3 max-w-prose text-sm leading-relaxed text-text-secondary sm:text-base">
				{/* TODO: Replace with testimonials carousel. */}
				Testimonials placeholder (to be filled).
			</p>
			<div class="mt-6 grid gap-4 md:grid-cols-3">
				{[1, 2, 3].map((i) => (
					<figure class="rounded-2xl border border-border bg-white shadow-sm p-6">
						<blockquote class="text-sm leading-relaxed text-text-secondary">“TODO testimonial {i}.”</blockquote>
						<figcaption class="mt-3 text-xs text-text-secondary">— TODO, anonymized</figcaption>
					</figure>
				))}
			</div>
		</section>

		{/* FAQ */}
		<section class="mt-12" aria-labelledby="faq-marketing-individuals">
			<h2 id="faq-marketing-individuals" class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">
				FAQ
			</h2>
			<div class="mt-6 grid gap-3">
				{faqs.map((item) => (
					<details class="rounded-2xl border border-border bg-white shadow-sm p-5">
						<summary class="cursor-pointer list-none text-sm font-semibold text-text-primary">{item.q}</summary>
						<p class="mt-3 text-sm leading-relaxed text-text-secondary">{item.a}</p>
					</details>
				))}
			</div>
		</section>

		{/* FINAL CTA */}
		<section class="mt-14 rounded-2xl border border-primary/10 bg-primary p-6 sm:p-8">
			<div class="flex flex-col items-start justify-between gap-6 md:flex-row md:items-center">
				<div>
					<h2 class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">Need a marketing specialist?</h2>
					<p class="mt-2 max-w-prose text-sm leading-relaxed text-text-secondary sm:text-base">
						Book a call and we’ll match a specialist aligned to your goals and channels.
					</p>
				</div>
				<div class="flex flex-wrap gap-3">
					<a
						href={bookingUrl}
						{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
						class="inline-flex items-center justify-center rounded bg-accent px-5 py-2.5 text-sm font-semibold text-white transition hover:bg-accent focus:outline-none focus-visible:ring-2 focus-visible:ring-accent focus-visible:ring-offset-2 focus-visible:"
						data-book-call
					>
						Book a 15-Min Call
					</a>
					<a
						href="/solutions/marketing-talent/teams/"
						class="inline-flex items-center justify-center rounded-xl border border-white/20 bg-white/5 px-5 py-2.5 text-sm font-semibold text-text-primary transition hover:bg-bg-alt focus:outline-none focus-visible:ring-2 focus-visible:ring-slate-400 focus-visible:ring-offset-2 focus-visible:"
					>
						Need a pod instead?
					</a>
				</div>
			</div>
		</section>
	</main>

	<div class="mx-auto max-w-6xl px-6">
		<ContactSection subject={`${brand} — new inquiry (marketing individuals)`} />
	</div>
</Layout>

