---
import Layout from '../../../layouts/Layout.astro';
import MetaHead from '../../../components/MetaHead.astro';
import ContactSection from '../../../components/ContactSection.astro';
import { BOOKING_URL, isExternalUrl } from '../../../lib/cta';

const brand = 'LatAm Scalers';

const meta = {
	title: `Dedicated Marketing Pods for Growth | ${brand}`,
	description:
		'Build a dedicated marketing pod to scale execution across channels. Specialists for SEO, PPC, content, lifecycle, and analytics with clear process and month-to-month flexibility.',
};

const baseUrl = Astro.site ?? 'https://latam-scalers-website.vercel.app';
const canonical = new URL('/solutions/marketing-talent/teams/', baseUrl).toString();

const faqs = [
	{
		q: 'What does a marketing pod include?',
		a: 'A pod is a small team of complementary roles (e.g., SEO + PPC + content + analytics) aligned to your goals, tools, and reporting cadence.',
	},
	{
		q: 'Can we start with one channel and add more later?',
		a: 'Yes — many pods start with one or two channels, then add roles as volume increases or priorities shift.',
	},
	{
		q: 'How do you keep quality and consistency?',
		a: 'We align on brand voice, KPIs, workflows, and review checkpoints, then run a structured delivery cadence with clear handoffs.',
	},
	{
		q: 'Do you offer month-to-month engagements?',
		a: 'Yes — pods are month-to-month and can scale up or down. We also offer a free replacement guarantee.',
	},
];

const bookingUrl = BOOKING_URL;
const bookingExternal = isExternalUrl(bookingUrl);
---

<Layout>
	<MetaHead slot="head" title={meta.title} description={meta.description} canonical={canonical} />

	<main class="mx-auto max-w-6xl px-6 py-12 sm:py-14">
		{/* HERO */}
		<section class="relative overflow-hidden">
			<div class="grid items-center gap-10 lg:grid-cols-2">
				<div>
					<p class="text-sm font-semibold tracking-wide text-accent">Marketing Talent</p>
					<h1 class="mt-4 text-4xl font-semibold tracking-tight text-white sm:text-5xl">Dedicated Marketing Pods</h1>
					<p class="mt-4 max-w-prose text-base leading-relaxed text-text-secondary sm:text-lg">
						Scale multi-channel execution with a dedicated pod — SEO, PPC, content, lifecycle, and analytics specialists
						working in a structured cadence. Built for teams that need consistent output and measurable performance.
					</p>

					<div class="mt-8 flex flex-wrap gap-3">
						<a
							href={bookingUrl}
							{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
							class="inline-flex items-center justify-center rounded bg-accent px-5 py-2.5 text-sm font-semibold text-white transition hover:bg-accent focus:outline-none focus-visible:ring-2 focus-visible:ring-accent focus-visible:ring-offset-2 focus-visible:"
							data-book-call
						>
							Book a 15-Min Call
						</a>
						<a
							href="/solutions/marketing-talent/"
							class="inline-flex items-center justify-center rounded-xl border border-white/20 bg-white/5 px-5 py-2.5 text-sm font-semibold text-text-primary transition hover:bg-bg-alt focus:outline-none focus-visible:ring-2 focus-visible:ring-slate-400 focus-visible:ring-offset-2 focus-visible:"
						>
							Back to overview
						</a>
					</div>

					<p class="mt-4 text-xs leading-relaxed text-text-secondary">
						Month-to-month flexibility. Clear cadence. Cross-channel execution. Free replacement guarantee.
					</p>
				</div>

				<div class="relative">
					<div class="rounded-2xl border border-primary/10 bg-primary p-6 shadow-sm">
						<p class="text-xs font-semibold uppercase tracking-wide text-text-secondary">ROI examples</p>
						<p class="mt-3 text-sm leading-relaxed text-text-secondary">
							{/* TODO: Replace with real ROI/savings examples. */}
							Placeholder: ROI examples (to be filled).
						</p>
						<div class="mt-4 grid gap-3 sm:grid-cols-2">
							<div class="rounded-xl border border-border bg-white shadow-sm p-4">
								<p class="text-sm font-semibold text-text-primary">Faster launches</p>
								<p class="mt-2 text-sm text-text-secondary">More campaigns shipped per month.</p>
							</div>
							<div class="rounded-xl border border-border bg-white shadow-sm p-4">
								<p class="text-sm font-semibold text-text-primary">Cleaner reporting</p>
								<p class="mt-2 text-sm text-text-secondary">Better visibility into channel performance.</p>
							</div>
						</div>
					</div>
					<div class="pointer-events-none absolute -right-20 -top-20 h-64 w-64 rounded-full bg-accent/10 blur-3xl" />
					<div class="pointer-events-none absolute -bottom-24 -left-24 h-72 w-72 rounded-full bg-design/5 blur-3xl" />
				</div>
			</div>
		</section>

		{/* POD EXAMPLES */}
		<section class="mt-12" aria-labelledby="pod-examples">
			<h2 id="pod-examples" class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">
				Example pod setups
			</h2>
			<div class="mt-6 grid gap-4 md:grid-cols-3">
				<article class="rounded-2xl border border-border bg-white shadow-sm p-6">
					<h3 class="text-base font-semibold text-text-primary">Demand Gen Pod</h3>
					<ul class="mt-3 grid gap-2 text-sm text-text-secondary">
						<li>PPC / Paid Social</li>
						<li>Landing page CRO support</li>
						<li>Analytics / reporting</li>
					</ul>
					<p class="mt-4 text-sm text-text-secondary">Best for: pipeline growth and performance.</p>
				</article>
				<article class="rounded-2xl border border-border bg-white shadow-sm p-6">
					<h3 class="text-base font-semibold text-text-primary">SEO + Content Pod</h3>
					<ul class="mt-3 grid gap-2 text-sm text-text-secondary">
						<li>SEO specialist</li>
						<li>Content strategist</li>
						<li>Analytics / GA4</li>
					</ul>
					<p class="mt-4 text-sm text-text-secondary">Best for: compounding organic growth.</p>
				</article>
				<article class="rounded-2xl border border-border bg-white shadow-sm p-6">
					<h3 class="text-base font-semibold text-text-primary">Lifecycle Pod</h3>
					<ul class="mt-3 grid gap-2 text-sm text-text-secondary">
						<li>Email / CRM</li>
						<li>Copy + creative ops</li>
						<li>Segmentation + testing</li>
					</ul>
					<p class="mt-4 text-sm text-text-secondary">Best for: retention and LTV.</p>
				</article>
			</div>
		</section>

		{/* PROCESS */}
		<section class="mt-12" aria-labelledby="process-marketing-teams">
			<h2 id="process-marketing-teams" class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">
				Process
			</h2>
			<ol class="mt-6 grid gap-4 lg:grid-cols-4">
				{[
					{ title: 'Define goals', body: 'Channels, KPIs, stack, reporting cadence, and constraints.' },
					{ title: 'Pod design', body: 'We propose the right roles and cadence for execution.' },
					{ title: 'Onboard', body: 'Access, tracking, and workflow alignment — start fast.' },
					{ title: 'Ship + iterate', body: 'Weekly delivery, reporting, and continuous improvements.' },
				].map((step, idx) => (
					<li class="rounded-2xl border border-border bg-white shadow-sm p-6">
						<p class="text-xs font-semibold uppercase tracking-wide text-accent">Step {idx + 1}</p>
						<p class="mt-2 text-sm font-semibold text-text-primary">{step.title}</p>
						<p class="mt-2 text-sm leading-relaxed text-text-secondary">{step.body}</p>
					</li>
				))}
			</ol>
		</section>

		{/* PROOF */}
		<section class="mt-12" aria-labelledby="proof-marketing-teams">
			<h2 id="proof-marketing-teams" class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">Proof</h2>
			<p class="mt-3 max-w-prose text-sm leading-relaxed text-text-secondary sm:text-base">
				{/* TODO: Replace with testimonials carousel. */}
				Testimonials placeholder (to be filled).
			</p>
			<div class="mt-6 grid gap-4 md:grid-cols-3">
				{[1, 2, 3].map((i) => (
					<figure class="rounded-2xl border border-border bg-white shadow-sm p-6">
						<blockquote class="text-sm leading-relaxed text-text-secondary">“TODO testimonial {i}.”</blockquote>
						<figcaption class="mt-3 text-xs text-text-secondary">— TODO, anonymized</figcaption>
					</figure>
				))}
			</div>
		</section>

		{/* FAQ */}
		<section class="mt-12" aria-labelledby="faq-marketing-teams">
			<h2 id="faq-marketing-teams" class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">FAQ</h2>
			<div class="mt-6 grid gap-3">
				{faqs.map((item) => (
					<details class="rounded-2xl border border-border bg-white shadow-sm p-5">
						<summary class="cursor-pointer list-none text-sm font-semibold text-text-primary">{item.q}</summary>
						<p class="mt-3 text-sm leading-relaxed text-text-secondary">{item.a}</p>
					</details>
				))}
			</div>
		</section>

		{/* FINAL CTA */}
		<section class="mt-14 rounded-2xl border border-primary/10 bg-primary p-6 sm:p-8">
			<div class="flex flex-col items-start justify-between gap-6 md:flex-row md:items-center">
				<div>
					<h2 class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">Ready for a marketing pod?</h2>
					<p class="mt-2 max-w-prose text-sm leading-relaxed text-text-secondary sm:text-base">
						Book a call to map a pod to your channels, goals, and reporting cadence.
					</p>
				</div>
				<div class="flex flex-wrap gap-3">
					<a
						href={bookingUrl}
						{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
						class="inline-flex items-center justify-center rounded bg-accent px-5 py-2.5 text-sm font-semibold text-white transition hover:bg-accent focus:outline-none focus-visible:ring-2 focus-visible:ring-accent focus-visible:ring-offset-2 focus-visible:"
						data-book-call
					>
						Book a 15-Min Call
					</a>
					<a
						href="/solutions/marketing-talent/individuals/"
						class="inline-flex items-center justify-center rounded-xl border border-white/20 bg-white/5 px-5 py-2.5 text-sm font-semibold text-text-primary transition hover:bg-bg-alt focus:outline-none focus-visible:ring-2 focus-visible:ring-slate-400 focus-visible:ring-offset-2 focus-visible:"
					>
						Prefer individuals?
					</a>
				</div>
			</div>
		</section>
	</main>

	<div class="mx-auto max-w-6xl px-6">
		<ContactSection subject={`${brand} — new inquiry (marketing teams)`} />
	</div>
</Layout>

