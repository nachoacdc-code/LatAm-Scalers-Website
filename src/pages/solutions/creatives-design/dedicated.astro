---
import Layout from '../../../layouts/Layout.astro';
import MetaHead from '../../../components/MetaHead.astro';
import ContactSection from '../../../components/ContactSection.astro';
import { BOOKING_URL, isExternalUrl } from '../../../lib/cta';

const brand = 'LatAm Scalers';

const meta = {
	title: `Dedicated Remote Designer Seat | ${brand}`,
	description:
		'Hire a dedicated remote designer seat for consistent weekly output. Brand-aligned execution, fast iteration, and month-to-month flexibility.',
};

const baseUrl = Astro.site ?? 'https://latam-scalers-website.vercel.app';
const canonical = new URL('/solutions/creatives-design/dedicated/', baseUrl).toString();

const bookingUrl = BOOKING_URL;
const bookingExternal = isExternalUrl(bookingUrl);
---

<Layout>
	<MetaHead slot="head" title={meta.title} description={meta.description} canonical={canonical} />

	<main class="mx-auto max-w-6xl px-6 py-12 sm:py-14">
		{/* HERO */}
		<section class="relative overflow-hidden">
			<div class="grid items-center gap-10 lg:grid-cols-2">
				<div>
					<p class="text-sm font-semibold tracking-wide text-accent">Creative &amp; Design</p>
					<h1 class="mt-4 text-4xl font-semibold tracking-tight text-white sm:text-5xl">
						Dedicated Remote Designer Seat
					</h1>
					<p class="mt-4 max-w-prose text-base leading-relaxed text-text-secondary sm:text-lg">
						A dedicated designer embedded in your team for consistent weekly output — brand-aligned execution, fast
						iteration, and month-to-month flexibility.
					</p>

					<div class="mt-8 flex flex-wrap gap-3">
						<a
							href={bookingUrl}
							{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
							class="inline-flex items-center justify-center rounded bg-accent px-5 py-2.5 text-sm font-semibold text-white transition hover:bg-accent focus:outline-none focus-visible:ring-2 focus-visible:ring-accent focus-visible:ring-offset-2 focus-visible:"
							data-book-call
						>
							Book a 15-Min Call
						</a>
						<a
							href="/solutions/creatives-design/"
							class="inline-flex items-center justify-center rounded-xl border border-white/20 bg-white/5 px-5 py-2.5 text-sm font-semibold text-text-primary transition hover:bg-bg-alt focus:outline-none focus-visible:ring-2 focus-visible:ring-slate-400 focus-visible:ring-offset-2 focus-visible:"
						>
							Back to overview
						</a>
					</div>
				</div>

				<div class="relative">
					<div class="rounded-2xl border border-primary/10 bg-primary p-6 shadow-sm">
						<p class="text-xs font-semibold uppercase tracking-wide text-text-secondary">Best for</p>
						<ul class="mt-4 grid gap-3 sm:grid-cols-2">
							<li class="rounded-xl border border-border bg-white shadow-sm p-4">
								<p class="text-sm font-semibold text-text-primary">Consistent demand</p>
								<p class="mt-2 text-sm text-text-secondary">Teams shipping weekly and needing steady capacity.</p>
							</li>
							<li class="rounded-xl border border-border bg-white shadow-sm p-4">
								<p class="text-sm font-semibold text-text-primary">Fast iteration</p>
								<p class="mt-2 text-sm text-text-secondary">Rapid feedback loops with fewer handoffs.</p>
							</li>
							<li class="rounded-xl border border-border bg-white shadow-sm p-4">
								<p class="text-sm font-semibold text-text-primary">Brand consistency</p>
								<p class="mt-2 text-sm text-text-secondary">Ongoing work aligned to your system and standards.</p>
							</li>
							<li class="rounded-xl border border-border bg-white shadow-sm p-4">
								<p class="text-sm font-semibold text-text-primary">Embedded support</p>
								<p class="mt-2 text-sm text-text-secondary">Design that feels like an in-house teammate.</p>
							</li>
						</ul>
					</div>
					<div class="pointer-events-none absolute -right-20 -top-20 h-64 w-64 rounded-full bg-accent/10 blur-3xl" />
					<div class="pointer-events-none absolute -bottom-24 -left-24 h-72 w-72 rounded-full bg-design/5 blur-3xl" />
				</div>
			</div>
		</section>

		{/* WEEKLY OUTPUT EXAMPLES */}
		<section class="mt-12" aria-labelledby="weekly-output">
			<h2 id="weekly-output" class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">
				Weekly output examples
			</h2>
			<p class="mt-3 max-w-prose text-sm leading-relaxed text-text-secondary sm:text-base">
				Examples vary by scope and complexity — here are common patterns.
			</p>
			<div class="mt-6 grid gap-4 md:grid-cols-3">
				<div class="rounded-2xl border border-border bg-white shadow-sm p-6">
					<p class="text-sm font-semibold text-text-primary">Marketing</p>
					<ul class="mt-3 grid gap-2 text-sm text-text-secondary">
						<li>Ad creative variations</li>
						<li>Landing page sections</li>
						<li>Email / lifecycle assets</li>
					</ul>
				</div>
				<div class="rounded-2xl border border-border bg-white shadow-sm p-6">
					<p class="text-sm font-semibold text-text-primary">Brand</p>
					<ul class="mt-3 grid gap-2 text-sm text-text-secondary">
						<li>Brand system components</li>
						<li>Social templates</li>
						<li>Pitch deck slides</li>
					</ul>
				</div>
				<div class="rounded-2xl border border-border bg-white shadow-sm p-6">
					<p class="text-sm font-semibold text-text-primary">Product</p>
					<ul class="mt-3 grid gap-2 text-sm text-text-secondary">
						<li>UI support for features</li>
						<li>Design system updates</li>
						<li>UX improvements / flows</li>
					</ul>
				</div>
			</div>
		</section>

		{/* ROLES */}
		<section class="mt-12" aria-labelledby="roles-dedicated">
			<h2 id="roles-dedicated" class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">
				Common roles for a designer seat
			</h2>
			<div class="mt-6 grid gap-3 sm:grid-cols-2 lg:grid-cols-4">
				{['Brand / Visual Designer', 'Marketing / Creative Designer', 'Presentation / Deck Designer', 'Product / UI Support'].map((r) => (
					<div class="rounded-2xl border border-border bg-white shadow-sm px-5 py-4">
						<p class="text-sm font-semibold text-text-primary">{r}</p>
						<p class="mt-1 text-xs text-text-secondary">Role placeholder</p>
					</div>
				))}
			</div>
			<div class="mt-6">
				<a
					href="/roles/"
					class="inline-flex items-center gap-2 text-sm font-semibold text-accent transition hover:text-accent/80 focus:outline-none focus-visible:ring-2 focus-visible:ring-accent focus-visible:ring-offset-2 focus-visible:"
				>
					Browse roles <span aria-hidden="true">→</span>
				</a>
			</div>
		</section>

		{/* MATCHING PROCESS */}
		<section class="mt-12" aria-labelledby="process-dedicated">
			<h2 id="process-dedicated" class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">
				Matching process
			</h2>
			<ol class="mt-6 grid gap-4 lg:grid-cols-4">
				{[
					{ title: 'Scope + standards', body: 'Brand guidelines, tools, stakeholders, cadence, and priorities.' },
					{ title: 'Candidates in 48 hours', body: 'We propose vetted designers aligned to your needs.' },
					{ title: 'Interview (optional)', body: 'Meet top matches or start immediately.' },
					{ title: 'Start shipping', body: 'Fast onboarding + weekly delivery rhythm.' },
				].map((step, idx) => (
					<li class="rounded-2xl border border-border bg-white shadow-sm p-6">
						<p class="text-xs font-semibold uppercase tracking-wide text-accent">Step {idx + 1}</p>
						<p class="mt-2 text-sm font-semibold text-text-primary">{step.title}</p>
						<p class="mt-2 text-sm leading-relaxed text-text-secondary">{step.body}</p>
					</li>
				))}
			</ol>
		</section>

		{/* DESIGN BRIEF KIT */}
		<section class="mt-12 rounded-2xl border border-border bg-white shadow-sm p-6" aria-labelledby="brief-kit">
			<h2 id="brief-kit" class="text-xl font-semibold text-white">Design Brief Kit</h2>
			<p class="mt-3 text-sm leading-relaxed text-text-secondary sm:text-base">
				{/* TODO: Add downloadable brief kit assets. */}
				Placeholder: brief kit template + intake checklist (to be filled).
			</p>
		</section>

		{/* FINAL CTA */}
		<section class="mt-14 rounded-2xl border border-primary/10 bg-primary p-6 sm:p-8">
			<div class="flex flex-col items-start justify-between gap-6 md:flex-row md:items-center">
				<div>
					<h2 class="text-2xl font-semibold tracking-tight text-white sm:text-3xl">Ready to add a designer seat?</h2>
					<p class="mt-2 max-w-prose text-sm leading-relaxed text-text-secondary sm:text-base">
						Book a call and we’ll match a dedicated designer aligned to your brand and workflow.
					</p>
				</div>
				<div class="flex flex-wrap gap-3">
					<a
						href={bookingUrl}
						{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
						class="inline-flex items-center justify-center rounded bg-accent px-5 py-2.5 text-sm font-semibold text-white transition hover:bg-accent focus:outline-none focus-visible:ring-2 focus-visible:ring-accent focus-visible:ring-offset-2 focus-visible:"
						data-book-call
					>
						Book a 15-Min Call
					</a>
					<a
						href="/solutions/creatives-design/pm-led/"
						class="inline-flex items-center justify-center rounded-xl border border-white/20 bg-white/5 px-5 py-2.5 text-sm font-semibold text-text-primary transition hover:bg-bg-alt focus:outline-none focus-visible:ring-2 focus-visible:ring-slate-400 focus-visible:ring-offset-2 focus-visible:"
					>
						Need a team instead?
					</a>
				</div>
			</div>
		</section>
	</main>

	<div class="mx-auto max-w-6xl px-6">
		<ContactSection subject={`${brand} — new inquiry (design dedicated)`} />
	</div>
</Layout>

