---
import Layout from '../../layouts/Layout.astro';
import MetaHead from '../../components/MetaHead.astro';
import ContactHub from '../../components/ContactHub.astro';
import { BOOKING_URL, isExternalUrl } from '../../lib/cta';

const brand = 'LatAm Scalers';

const meta = {
	title: 'Get Started – Book a Scoping Call or Tell Us Your Needs | LatAm Scalers',
	description:
		'Get started with LatAm Scalers. Book a 30-minute scoping call or share your requirements. Pre-vetted LATAM talent for US teams – AEC, design, and marketing specialists matched in under one week.',
};

const baseUrl = Astro.site ?? 'https://latamscalers.com';
const canonical = new URL('/get-started/', baseUrl).toString();

const bookingUrl = BOOKING_URL;
const bookingExternal = isExternalUrl(bookingUrl);
const calendlyUrl = import.meta.env.PUBLIC_CALENDLY_URL ?? import.meta.env.PUBLIC_BOOKING_URL ?? 'https://calendly.com/your-org/15min';

const steps = [
	{ num: '1', title: 'Share your needs', desc: 'Tell us the role, tools, timeline, and what "good" looks like. 30 minutes is all we need.' },
	{ num: '2', title: 'Get vetted options', desc: 'Within 48 hours, we present pre-vetted specialists matched to your requirements.' },
	{ num: '3', title: 'Start working', desc: 'Onboard fast with month-to-month flexibility. Scale up, scale down, or replace – anytime.' },
];

const faqs = [
	{
		q: 'How do you vet your specialists?',
		a: 'Every specialist goes through a 5-stage process: resume and portfolio review, technical skills assessment, English communication evaluation, soft-skills and culture-fit interview, and a live work-sample exercise. Fewer than 3% of applicants are accepted.',
	},
	{
		q: 'What if the specialist isn\'t a good fit?',
		a: 'We offer a free replacement guarantee with no limits. Because our engagements are month-to-month, you can request a replacement at any time — no lock-in contracts, no waiting periods.',
	},
	{
		q: 'How much does it cost?',
		a: 'Dedicated monthly engagements start at roughly $2,500/mo for marketing specialists, $2,800/mo for PM-led design teams, and $3,500/mo for AEC specialists. There are no placement fees, no hidden costs, and no long-term commitments.',
	},
	{
		q: 'How quickly can I have someone working?',
		a: 'We typically present a vetted shortlist within 48 hours and most placements start within one week. If you need someone faster, book a scoping call so we can prioritize your request.',
	},
	{
		q: 'Are these employees or independent contractors?',
		a: 'All specialists are pre-vetted LATAM independent contractors engaged through back-to-back service agreements. LatAm Scalers is not a staffing agency or employer of record — you direct the work while we handle vetting, contracts, and ongoing support.',
	},
];

const webPageJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'WebPage',
	name: meta.title,
	description: meta.description,
	url: canonical,
	isPartOf: { '@type': 'WebSite', name: brand, url: baseUrl },
};

const faqJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'FAQPage',
	mainEntity: faqs.map((f) => ({
		'@type': 'Question',
		name: f.q,
		acceptedAnswer: { '@type': 'Answer', text: f.a },
	})),
};
---

<Layout>
	<MetaHead slot="head" title={meta.title} description={meta.description} canonical={canonical} jsonLd={[webPageJsonLd, faqJsonLd]} />

	<main>

		<!-- Hero -->
		<section class="relative overflow-hidden bg-slate-950 py-16 sm:py-24" aria-labelledby="hero-heading">
			<div class="mx-auto max-w-6xl px-6">
			<div class="js-fade-in text-center">
				<p class="text-sm font-semibold uppercase tracking-widest text-sky-300">Get started</p>
				<h1 id="hero-heading" class="mt-4 text-4xl font-semibold leading-tight tracking-tight text-white sm:text-5xl lg:text-[3.25rem]">
					Vetted LATAM Specialists for Your US Team — Matched in Under One Week
				</h1>
				<p class="mx-auto mt-5 max-w-2xl text-base leading-relaxed text-slate-300 sm:text-lg">
					Book a 30-minute scoping call, or tell us what you need — we'll present a vetted shortlist of AEC, Design, or Marketing specialists within 48 hours. Month-to-month. Free replacement guarantee.
				</p>
			</div>

				<!-- Quick steps -->
				<div class="mt-12 grid gap-4 sm:grid-cols-3">
					{steps.map((s) => (
						<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-5 text-center shadow-lg shadow-black/20">
							<div class="mx-auto flex h-10 w-10 items-center justify-center rounded-xl border border-slate-800 bg-slate-950/40">
								<span class="text-sm font-semibold text-sky-300">{s.num}</span>
							</div>
							<h3 class="mt-3 text-sm font-semibold text-slate-100">{s.title}</h3>
							<p class="mt-2 text-xs leading-relaxed text-slate-400">{s.desc}</p>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- Main content: Form + Calendly side by side -->
		<section class="bg-slate-950 py-16 sm:py-20" id="contact-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in">
					<ContactHub
						subject="LatAm Scalers — get started inquiry"
						heading="Send us your requirements or book a scoping call"
						subheading="Fill out the form and we'll follow up with vetted options within 48 hours — or book a quick call to discuss live."
					/>
				</div>
			</div>
		</section>

		<!-- What to expect -->
		<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="expect-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="expect-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						What to Expect After You Reach Out
					</h2>
				</div>

				<div class="mt-10 grid gap-5 md:grid-cols-2 lg:grid-cols-4">
					<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
						<p class="text-xs font-semibold uppercase tracking-wide text-sky-300">Within a few hours</p>
						<h3 class="mt-3 text-sm font-semibold text-slate-100">Confirmation & scoping</h3>
						<p class="mt-2 text-xs leading-relaxed text-slate-400">We confirm receipt and schedule a brief scoping call (if not already booked) to clarify your requirements.</p>
					</div>
					<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
						<p class="text-xs font-semibold uppercase tracking-wide text-sky-300">Within 48h</p>
						<h3 class="mt-3 text-sm font-semibold text-slate-100">Vetted shortlist</h3>
						<p class="mt-2 text-xs leading-relaxed text-slate-400">We present 1–3 pre-vetted specialists matched to your tools, standards, and timeline.</p>
					</div>
					<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
						<p class="text-xs font-semibold uppercase tracking-wide text-sky-300">Within 1 week</p>
						<h3 class="mt-3 text-sm font-semibold text-slate-100">Interview (optional) & start</h3>
						<p class="mt-2 text-xs leading-relaxed text-slate-400">Meet top matches for a fit check – or skip interviews and start immediately.</p>
					</div>
					<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
						<p class="text-xs font-semibold uppercase tracking-wide text-sky-300">Ongoing</p>
						<h3 class="mt-3 text-sm font-semibold text-slate-100">Dedicated support</h3>
						<p class="mt-2 text-xs leading-relaxed text-slate-400">Your account manager handles check-ins, scaling, and replacements. Month-to-month flexibility, always.</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Return CTA -->
		<section class="bg-slate-950 py-10">
			<div class="mx-auto max-w-6xl px-6 text-center">
				<p class="text-lg font-semibold text-slate-200">Ready to get started?</p>
				<div class="mt-4 flex flex-col items-center gap-3 sm:flex-row sm:justify-center">
					<a href="#contact-heading" class="inline-flex min-h-[44px] items-center justify-center rounded-xl bg-sky-600 px-6 py-2.5 text-sm font-semibold text-white shadow-sm transition hover:bg-sky-500">
						Tell us your needs
					</a>
					<a href="#contact-heading" class="inline-flex min-h-[44px] items-center justify-center rounded-xl border border-slate-700 px-6 py-2.5 text-sm font-semibold text-slate-300 transition hover:border-sky-500 hover:text-white" data-scroll-to-calendly>
						Book a scoping call
					</a>
				</div>
			</div>
		</section>

		<!-- FAQ -->
		<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="faq-heading">
			<div class="mx-auto max-w-3xl px-6">
				<div class="js-fade-in text-center">
					<h2 id="faq-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Common Questions
					</h2>
					<p class="mx-auto mt-4 max-w-xl text-base leading-relaxed text-slate-400">
						Quick answers to what hiring managers ask most before getting started.
					</p>
				</div>

				<div class="mt-10 space-y-3">
					{faqs.map((faq) => (
						<details class="js-fade-in group rounded-2xl border border-slate-800 bg-slate-950/40 shadow-lg shadow-black/20">
							<summary class="flex cursor-pointer items-center justify-between gap-4 px-6 py-5 text-sm font-semibold text-slate-100 transition hover:text-white [&::-webkit-details-marker]:hidden">
								<span>{faq.q}</span>
								<svg class="h-4 w-4 shrink-0 text-slate-500 transition-transform group-open:rotate-45" viewBox="0 0 16 16" fill="currentColor">
									<path d="M8 1a1 1 0 0 1 1 1v5h5a1 1 0 1 1 0 2H9v5a1 1 0 1 1-2 0V9H2a1 1 0 0 1 0-2h5V2a1 1 0 0 1 1-1z"/>
								</svg>
							</summary>
							<div class="px-6 pb-5 text-sm leading-relaxed text-slate-400">
								{faq.a}
							</div>
						</details>
					))}
				</div>
			</div>
		</section>

		<!-- Category quick links -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="explore-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<h2 id="explore-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Not Sure Where to Start?
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Explore our solutions by category to find the right fit for your team.
					</p>
				</div>

				<div class="mt-10 grid gap-5 md:grid-cols-3">
					<a href="/aec/" class="js-fade-in group rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20 transition hover:-translate-y-1 hover:shadow-xl">
						<p class="text-xs font-semibold uppercase tracking-wide text-aec">AEC</p>
						<h3 class="mt-3 text-lg font-semibold text-slate-100 group-hover:text-white">Architecture, Engineering & Construction</h3>
						<p class="mt-3 text-sm leading-relaxed text-slate-400">BIM coordinators, Revit drafters, CAD technicians, MEP modelers – dedicated specialists for US firms.</p>
						<p class="mt-4 text-sm font-semibold text-aec">From ~$3,500/mo &rarr;</p>
					</a>
					<a href="/design/" class="js-fade-in group rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20 transition hover:-translate-y-1 hover:shadow-xl">
						<p class="text-xs font-semibold uppercase tracking-wide text-design">Design</p>
						<h3 class="mt-3 text-lg font-semibold text-slate-100 group-hover:text-white">Creative & Design</h3>
						<p class="mt-3 text-sm leading-relaxed text-slate-400">UI/UX designers, brand designers, motion designers – dedicated individuals or PM-led managed teams.</p>
						<p class="mt-4 text-sm font-semibold text-design">Managed teams from $2,800/mo &rarr;</p>
					</a>
					<a href="/marketing/" class="js-fade-in group rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20 transition hover:-translate-y-1 hover:shadow-xl">
						<p class="text-xs font-semibold uppercase tracking-wide text-marketing">Marketing</p>
						<h3 class="mt-3 text-lg font-semibold text-slate-100 group-hover:text-white">Marketing & Operations</h3>
						<p class="mt-3 text-sm leading-relaxed text-slate-400">SEO specialists, PPC managers, HubSpot operators, content marketers – revenue-focused operators.</p>
						<p class="mt-4 text-sm font-semibold text-marketing">From ~$2,500/mo &rarr;</p>
					</a>
				</div>
			</div>
		</section>

	</main>

	<style>
		.js-fade-in {
			opacity: 0;
			transform: translateY(20px);
			transition: opacity 0.35s ease-out, transform 0.35s ease-out;
		}
		.js-fade-in.is-visible {
			opacity: 1;
			transform: translateY(0);
		}
	</style>

	{/* Sticky mobile CTA bar — appears after 25% scroll, hides when form is in view */}
	<div
		class="fixed inset-x-0 bottom-0 z-50 translate-y-full border-t border-slate-800 bg-slate-950/95 px-4 py-3 backdrop-blur-sm transition-transform duration-300 lg:hidden"
		data-sticky-cta
		aria-label="Quick actions"
	>
		<div class="mx-auto flex max-w-md items-center gap-3">
			<a
				href="#contact-heading"
				class="flex-1 rounded-xl bg-sky-600 py-2.5 text-center text-sm font-semibold text-white shadow-sm transition hover:bg-sky-500"
			>
				Tell us your needs
			</a>
			<a
				href="#contact-heading"
				class="flex-1 rounded-xl border border-slate-700 py-2.5 text-center text-sm font-semibold text-slate-300 transition hover:border-sky-500 hover:text-white"
				data-scroll-to-calendly
			>
				Book a call
			</a>
		</div>
	</div>

	<script is:inline>
		(function () {
			var els = document.querySelectorAll('.js-fade-in');
			if (!els.length) return;
			var io = new IntersectionObserver(function (entries) {
				entries.forEach(function (e) {
					if (e.isIntersecting) {
						e.target.classList.add('is-visible');
						io.unobserve(e.target);
					}
				});
			}, { threshold: 0.1, rootMargin: '0px 0px -40px 0px' });
			els.forEach(function (el) { io.observe(el); });

			document.querySelectorAll('[data-scroll-to-calendly]').forEach(function (link) {
				link.addEventListener('click', function () {
					setTimeout(function () {
						if (window.latamHub && window.latamHub.activateCalendly) {
							window.latamHub.activateCalendly();
						}
					}, 100);
				});
			});

			// Sticky mobile CTA bar
			var stickyBar = document.querySelector('[data-sticky-cta]');
			if (!stickyBar) return;
			var contactSection = document.getElementById('contact-heading');
			var formVisible = false;
			var pastThreshold = false;

			if (contactSection) {
				var formObs = new IntersectionObserver(function (entries) {
					formVisible = entries[0].isIntersecting;
					updateBar();
				}, { rootMargin: '100px' });
				formObs.observe(contactSection);
			}

			function updateBar() {
				if (pastThreshold && !formVisible) {
					stickyBar.classList.remove('translate-y-full');
				} else {
					stickyBar.classList.add('translate-y-full');
				}
			}

			window.addEventListener('scroll', function () {
				var scrollPct = window.scrollY / (document.documentElement.scrollHeight - window.innerHeight);
				pastThreshold = scrollPct > 0.25;
				updateBar();
			}, { passive: true });
		})();
	</script>
</Layout>
