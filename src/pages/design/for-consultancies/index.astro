---
import Layout from '../../../layouts/Layout.astro';
import MetaHead from '../../../components/MetaHead.astro';
import ContactHub from '../../../components/ContactHub.astro';
import { BOOKING_URL, isExternalUrl } from '../../../lib/cta';

const brand = 'LatAm Scalers';

const meta = {
	title: 'Design Talent for Boutique Consultancies – Presentation & Brand Designers | LatAm Scalers',
	description:
		'Dedicated LATAM designers for boutique consultancies. Presentation designers, brand designers, and visual storytellers for pitch decks, investor materials, and client deliverables. From $2,800/mo.',
};

const baseUrl = Astro.site ?? 'https://latam-scalers-website.vercel.app';
const canonical = new URL('/design/for-consultancies/', baseUrl).toString();

const bookingUrl = BOOKING_URL;
const bookingExternal = isExternalUrl(bookingUrl);

const roles = [
	{ title: 'Presentation Designer', desc: 'Pitch decks, investor materials, strategy presentations, and client deliverables at the standard consultancies command — $200–400/hr equivalent quality.', href: '/roles/presentation-designer/' },
	{ title: 'Brand/Visual Designer', desc: 'Visual identity, brand guidelines, and collateral for consultancy brand and client brand projects.', href: '/roles/brand-visual-designer/' },
	{ title: 'Production Designer', desc: 'High-volume document production, templated deliverables, and systematic visual formatting for consulting outputs.', href: '/roles/production-designer/' },
	{ title: 'Motion Graphics Specialist', desc: 'Animated presentations, explainer videos, and digital-first client deliverables.', href: '/roles/motion-graphics-specialist/' },
];

const useCases = [
	{ label: 'Pitch deck production', desc: 'Consultancies command $200–400/hr rates partly on the strength of their visual output. A dedicated presentation designer keeps your decks at the quality level your fees justify.' },
	{ label: 'Investor and fundraising materials', desc: 'Advisory firms supporting clients through fundraising need fast, polished investor materials. A dedicated designer turns around pitch decks in 48–72 hours.' },
	{ label: 'Client deliverable systems', desc: 'Templated deliverables — project reports, strategic frameworks, workshop outputs — that maintain visual consistency across all client work.' },
	{ label: 'Brand and identity work', desc: 'Consultancies building or refreshing their own brand, or supporting client brand projects, need a designer who understands positioning and visual identity principles.' },
];

const tools = [
	{ name: 'PowerPoint / Google Slides', desc: 'Presentation design in the format consultancy clients expect — polished, template-driven, editable.' },
	{ name: 'Figma', desc: 'Digital-first decks, interactive prototypes, and design system work.' },
	{ name: 'Adobe CC', desc: 'Brand identity, print collateral, and high-fidelity visual assets.' },
	{ name: 'Canva Pro', desc: 'Template libraries and branded asset production at scale.' },
	{ name: 'After Effects', desc: 'Animated presentations and motion graphics for digital deliverables.' },
	{ name: 'Notion', desc: 'Documentation design and knowledge management systems.' },
];

const faqs = [
	{
		q: 'What kind of presentation design work do consultancies typically need?',
		a: 'Pitch decks for client business development, strategy frameworks and recommendations, investor materials for fundraising advisory, workshop and facilitation materials, and recurring client reporting. Our presentation designers produce deliverables at the visual standard that consultancy rates justify.',
	},
	{
		q: 'Can your designers maintain our brand standards across all deliverables?',
		a: 'Yes. We establish your visual standards during onboarding — templates, color systems, typography, slide layouts — and your dedicated designer maintains them consistently across all projects. The same person every engagement builds institutional brand knowledge.',
	},
	{
		q: 'How do you handle confidentiality for client work?',
		a: 'We fully support NDA requirements. Our dedicated model means your designer works exclusively within your confidentiality perimeter — not a shared designer who might see work from competing consultancies.',
	},
	{
		q: 'What turnaround times can you support?',
		a: 'Full-time dedicated designers working business hours Eastern can turn around a 20-slide deck in 24–48 hours when properly briefed. Rush production is part of the consultancy reality, and we match US business hours to enable same-day feedback cycles.',
	},
	{
		q: 'What does pricing look like for consultancy design talent?',
		a: 'Dedicated presentation and brand designers start at $2,800–$4,000/month full-time — compared to a US senior presentation designer at $80,000–$100,000/year. Month-to-month with free replacement guarantee.',
	},
];

const serviceJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'Service',
	name: 'Design Talent for Boutique Consultancies',
	description: meta.description,
	provider: { '@type': 'Organization', name: brand, url: baseUrl },
};

const faqJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'FAQPage',
	mainEntity: faqs.map((f) => ({
		'@type': 'Question',
		name: f.q,
		acceptedAnswer: { '@type': 'Answer', text: f.a },
	})),
};
---

<Layout>
	<MetaHead slot="head" title={meta.title} description={meta.description} canonical={canonical} jsonLd={[serviceJsonLd, faqJsonLd]} />

	<main>

	<!-- Hero -->
	<section class="relative overflow-hidden bg-slate-950 py-16 sm:py-24" aria-labelledby="hero-heading">
		<div class="mx-auto max-w-6xl px-6">
		<div class="js-fade-in">
		<p class="text-sm font-semibold uppercase tracking-widest text-design">For Boutique Consultancies</p>
		<h1 id="hero-heading" class="mt-4 text-4xl font-semibold leading-tight tracking-tight text-white sm:text-5xl lg:text-[3.25rem]">
			Presentation &amp; Brand Designers for Boutique Consultancies
		</h1>
		<p class="mt-5 max-w-xl text-base leading-relaxed text-slate-300 sm:text-lg">
			Consultancies command $200–400/hr partly on the quality of their visual output. Dedicated presentation designers who produce pitch decks, investor materials, and client deliverables at the standard your rates justify. From $2,800/mo.
		</p>
		<div class="mt-8 flex flex-wrap gap-3">
		<a
			href={bookingUrl}
			{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
			class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-6 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
			data-book-call
		>
			Book a Consultancy Design Call
		</a>
		<a
			href="/#contact"
			class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/40 px-6 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
			data-open-tell-us="consultancy-design-hero"
		>
			Tell Us What You Need
		</a>
		</div>
		</div>
		</div>
	</section>

	<!-- Problem -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="problem-heading">
		<div class="mx-auto max-w-6xl px-6">
		<div class="js-fade-in max-w-2xl">
		<h2 id="problem-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
			Visual Quality Is Part of Your Value Proposition
		</h2>
		<p class="mt-4 text-base leading-relaxed text-slate-400">
			Consultancy clients judge capability through visual output. A poorly designed deck costs you the room before the content gets heard. Your consultants should be doing consulting — not spending hours reformatting slides.
		</p>
		</div>
		<div class="mt-10 grid gap-4 sm:grid-cols-3">
		<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
			<p class="text-3xl font-semibold text-slate-100">$200–400/hr</p>
			<p class="mt-2 text-sm font-semibold text-slate-100">consultancy billing rates</p>
			<p class="mt-2 text-sm leading-relaxed text-slate-400">The visual standard expected at these rates requires a dedicated designer, not a PowerPoint template.</p>
		</div>
		<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
			<p class="text-3xl font-semibold text-slate-100">48hr</p>
			<p class="mt-2 text-sm font-semibold text-slate-100">deck turnaround</p>
			<p class="mt-2 text-sm leading-relaxed text-slate-400">A dedicated presentation designer delivers polished 20-slide decks in 24–48 hours when properly briefed.</p>
		</div>
		<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
			<p class="text-3xl font-semibold text-slate-100">10%</p>
			<p class="mt-2 text-sm font-semibold text-slate-100">of Design targeting</p>
			<p class="mt-2 text-sm leading-relaxed text-slate-400">Boutique consultancies are a focused but high-value segment of dedicated design demand.</p>
		</div>
		</div>
		</div>
	</section>

	<!-- Use Cases -->
	<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="use-cases-heading">
		<div class="mx-auto max-w-6xl px-6">
		<div class="js-fade-in max-w-2xl">
		<h2 id="use-cases-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
			How Consultancies Use LatAm Scalers
		</h2>
		</div>
		<div class="mt-10 grid gap-5 sm:grid-cols-2">
		{useCases.map((uc) => (
		<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
			<p class="text-xs font-semibold uppercase tracking-wide text-design">{uc.label}</p>
			<p class="mt-3 text-sm leading-relaxed text-slate-400">{uc.desc}</p>
		</div>
		))}
		</div>
		</div>
	</section>

	<!-- Roles -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="roles-heading">
		<div class="mx-auto max-w-6xl px-6">
		<div class="js-fade-in max-w-2xl">
		<h2 id="roles-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
			Consultancy Design Roles We Place
		</h2>
		</div>
		<div class="mt-10 grid gap-4 sm:grid-cols-2">
		{roles.map((role) => (
		<a
			href={role.href}
			class="js-fade-in group rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20 transition hover:border-design/30 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
		>
			<h3 class="text-sm font-semibold text-slate-100 group-hover:text-design">{role.title}</h3>
			<p class="mt-2 text-sm leading-relaxed text-slate-400">{role.desc}</p>
			<p class="mt-3 text-xs font-semibold text-sky-300 group-hover:text-sky-200">View role &#8594;</p>
		</a>
		))}
		</div>
		</div>
	</section>

	<!-- Tools -->
	<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="tools-heading">
		<div class="mx-auto max-w-6xl px-6">
		<div class="js-fade-in max-w-2xl">
		<h2 id="tools-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
			Tools Your Designer Will Use
		</h2>
		</div>
		<div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
		{tools.map((tool) => (
		<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
			<p class="text-sm font-semibold text-slate-100">{tool.name}</p>
			<p class="mt-2 text-sm leading-relaxed text-slate-400">{tool.desc}</p>
		</div>
		))}
		</div>
		</div>
	</section>

	<!-- Pricing -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="pricing-heading">
		<div class="mx-auto max-w-6xl px-6">
		<div class="js-fade-in max-w-2xl">
		<h2 id="pricing-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
			Pricing Guidance
		</h2>
		<p class="mt-4 text-base leading-relaxed text-slate-400">
			Dedicated presentation and brand designers from <strong class="text-slate-100">$2,800–$4,000/month</strong> full-time. Month-to-month, free replacement guarantee.
		</p>
		<a
			href="/how-pricing-works/"
			class="mt-4 inline-flex items-center gap-1.5 text-sm font-semibold text-sky-300 transition hover:text-sky-200/80 focus:outline-none focus-visible:underline"
		>
			See how pricing works <span aria-hidden="true">&rarr;</span>
		</a>
		</div>
		</div>
	</section>

	<!-- FAQ -->
	<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="faq-heading">
		<div class="mx-auto max-w-6xl px-6">
		<div class="js-fade-in max-w-2xl">
		<h2 id="faq-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
			Frequently Asked Questions
		</h2>
		</div>
		<div class="mt-10 grid gap-3">
		{faqs.map((item) => (
		<details class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
			<summary class="cursor-pointer list-none text-sm font-semibold text-slate-100 [&::-webkit-details-marker]:hidden">
			{item.q}
			</summary>
			<p class="mt-4 pt-4 text-sm leading-relaxed text-slate-400 border-t border-slate-800">{item.a}</p>
		</details>
		))}
		</div>
		</div>
	</section>

	<!-- CTA -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="cta-heading">
		<div class="mx-auto max-w-6xl px-6">
		<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-8 text-center shadow-xl sm:p-12">
		<h2 id="cta-heading" class="text-3xl font-semibold tracking-tight text-white sm:text-4xl">
			Elevate Your Consultancy's Visual Output
		</h2>
		<p class="mx-auto mt-4 max-w-xl text-base leading-relaxed text-slate-300">
			Book a call to discuss your deliverable types, brand standards, and turnaround requirements.
		</p>
		<div class="mt-8 flex flex-wrap items-center justify-center gap-4">
		<a
			href={bookingUrl}
			{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
			class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-8 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
			data-book-call
		>
			Book a Design Call
		</a>
		<a
			href="/#contact"
			class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/40 px-8 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
			data-open-tell-us="consultancy-design-cta"
		>
			Tell Us What You Need
		</a>
		</div>
		<p class="mt-5 text-xs text-slate-400">Month-to-month · Free replacement guarantee · No long-term contracts</p>
		</div>
		</div>
	</section>

	<!-- Contact -->
	<section id="contact" class="bg-slate-950 pb-20 pt-16 sm:pb-24 sm:pt-20" aria-labelledby="contact-heading">
		<div class="mx-auto max-w-6xl px-6">
		<div class="js-fade-in max-w-2xl">
			<p class="text-sm font-semibold uppercase tracking-widest text-sky-300">Get in touch</p>
			<h2 id="contact-heading" class="mt-3 text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
			Let's Talk Consultancy Design Talent
			</h2>
		</div>
		<ContactHub subject="${brand} – Consultancy design inquiry" defaultCategory="design" defaultMessage="We're a boutique consultancy looking for a dedicated presentation or brand designer." />
		</div>
	</section>

	</main>

	<style>
	.js-fade-in {
		opacity: 0;
		transform: translateY(20px);
		transition: opacity 0.35s ease-out, transform 0.35s ease-out;
	}
	.js-fade-in.is-visible {
		opacity: 1;
		transform: translateY(0);
	}
	</style>

	<script is:inline>
	(function () {
		var els = document.querySelectorAll('.js-fade-in');
		if (!els.length) return;
		var io = new IntersectionObserver(function (entries) {
		entries.forEach(function (e) {
			if (e.isIntersecting) {
			e.target.classList.add('is-visible');
			io.unobserve(e.target);
			}
		});
		}, { threshold: 0.1, rootMargin: '0px 0px -40px 0px' });
		els.forEach(function (el) { io.observe(el); });
	})();
	</script>
</Layout>
