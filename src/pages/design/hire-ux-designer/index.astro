---
import Layout from '../../../layouts/Layout.astro';
import MetaHead from '../../../components/MetaHead.astro';
import ContactForm from '../../../components/ContactForm.astro';
import CalendlyInline from '../../../components/CalendlyInline.astro';
import { BOOKING_URL, isExternalUrl } from '../../../lib/cta';

const brand = 'LatAm Scalers';

const meta = {
	title: 'Hire a Dedicated UX Designer â€” Pre-Vetted LATAM Talent for US Teams | LatAm Scalers',
	description:
		'Hire a dedicated UX designer for US teams. Pre-vetted LATAM talent: research, wireframing, prototyping, testing. Figma, Maze, Hotjar. SaaS, DTC, agency use cases. From ~$2,800/mo.',
};

const baseUrl = Astro.site ?? 'https://latam-scalers-website.vercel.app';
const canonical = new URL('/design/hire-ux-designer/', baseUrl).toString();

const uxScope = [
	{ phase: 'Research', desc: 'User interviews, surveys, competitive analysis, personas' },
	{ phase: 'Wireframing', desc: 'Low-fi flows, information architecture, task flows' },
	{ phase: 'Prototyping', desc: 'Interactive prototypes, usability testing preparation' },
	{ phase: 'Testing', desc: 'Usability testing, heuristic evaluation, iteration' },
];

const tools = [
	{ name: 'Figma', desc: 'UI design, prototyping, design systems â€” industry standard' },
	{ name: 'Maze', desc: 'Remote usability testing and research synthesis' },
	{ name: 'Hotjar', desc: 'Session recording, heatmaps, feedback collection' },
];

const deliverables = [
	'User research reports and personas',
	'Wireframes and information architecture',
	'Interactive prototypes with annotated handoffs',
	'Usability test reports and recommendations',
	'Design system contributions',
];

const useCases = [
	{
		title: 'SaaS',
		subtitle: 'Product UX + Growth',
		body: 'Product discovery, feature flows, onboarding, and lifecycle UX. Research-driven design for B2B and PLG.',
	},
	{
		title: 'DTC',
		subtitle: 'E-commerce & Conversion',
		body: 'Checkout optimization, landing pages, post-purchase flows. Conversion-focused UX with user feedback loops.',
	},
	{
		title: 'Agencies',
		subtitle: 'White-Label UX Delivery',
		body: 'Client-facing UX research and design. Consistent delivery, your standards. Scale without scaling US headcount.',
	},
];

const faqs = [
	{
		q: 'What does a dedicated UX designer deliver?',
		a: 'Research (user interviews, personas, competitive analysis), wireframes and IA, interactive prototypes, usability testing support, and design handoffs. We align on scope and deliverables during scoping.',
	},
	{
		q: 'Do your UX designers use Figma?',
		a: 'Yes. Our UX designers work in Figma for design and prototyping, plus Maze, Hotjar, and similar tools for research and testing. We match to your stack.',
	},
	{
		q: 'Can we start with research-only or testing-only?',
		a: 'We typically place full-spectrum UX designers who can cover research through handoff. For focused research or testing sprints, we can scope a part-time or project-based engagement.',
	},
	{
		q: 'How much does it cost to hire a UX designer?',
		a: 'Dedicated full-time UX designers start at approximately $2,800/month. Part-time and hybrid UX/UI roles are available. Month-to-month, no long-term contracts, free replacement guarantee.',
	},
	{
		q: 'How fast can we get a vetted UX designer?',
		a: 'We typically present vetted candidates within 48 hours after the scoping call. Once brand standards and tools are confirmed, onboarding is fast.',
	},
];

const serviceJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'Service',
	name: 'Hire a Dedicated UX Designer',
	description: meta.description,
	provider: { '@type': 'Organization', name: brand, url: baseUrl },
};

const faqJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'FAQPage',
	mainEntity: faqs.map((f) => ({
		'@type': 'Question',
		name: f.q,
		acceptedAnswer: { '@type': 'Answer', text: f.a },
	})),
};

const bookingUrl = BOOKING_URL;
const bookingExternal = isExternalUrl(bookingUrl);
const calendlyUrl = import.meta.env.PUBLIC_CALENDLY_URL ?? 'https://calendly.com/your-org/15min';
---

<Layout>
	<MetaHead slot="head" title={meta.title} description={meta.description} canonical={canonical} jsonLd={[serviceJsonLd, faqJsonLd]} />

	<main>
		<!-- Hero (bg-slate-950, white text) -->
		<section class="bg-slate-950 py-16 sm:py-24" aria-labelledby="hero-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in">
					<p class="text-sm font-semibold uppercase tracking-widest text-sky-300">Design â€” UX</p>
					<h1 id="hero-heading" class="mt-4 text-4xl font-semibold leading-tight tracking-tight text-white sm:text-5xl lg:text-[3.25rem]">
						Hire a Dedicated UX Designer â€” Pre-Vetted LATAM Talent for US Teams
					</h1>
					<p class="mt-5 max-w-xl text-base leading-relaxed text-slate-300 sm:text-lg">
						Full-spectrum UX: research, wireframing, prototyping, testing. Figma, Maze, Hotjar. Pre-vetted designers embedded in your team â€” month-to-month, free replacement guarantee.
					</p>
					<div class="mt-8 flex flex-wrap gap-3">
						<a
							href={bookingUrl}
							{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
							class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-6 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
							data-book-call
						>
							Book a Design Scoping Call
						</a>
						<a
							href="#contact"
							class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/40 px-6 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
							data-open-tell-us="ux-hero"
						>
							Tell Us What You Need
						</a>
					</div>
				</div>
			</div>
		</section>

		<!-- Service overview (bg-slate-950) -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="overview-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in">
					<h2 id="overview-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						UX Scope â€” What a Dedicated Designer Covers
					</h2>
					<p class="mt-4 max-w-2xl text-base leading-relaxed text-slate-400">
						End-to-end UX from research through handoff. One designer, your product â€” research, wireframes, prototypes, and usability testing.
					</p>
				</div>
			</div>
		</section>

		<!-- UX scope phases (bg-slate-900/40) -->
		<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="scope-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in">
					<h2 id="scope-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Research, Wireframing, Prototyping, Testing
					</h2>
					<p class="mt-4 max-w-2xl text-base leading-relaxed text-slate-400">
						Full-spectrum UX delivered by one dedicated designer.
					</p>
				</div>
				<div class="mt-10 grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
					{uxScope.map((item) => (
						<div class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
							<h3 class="text-lg font-semibold text-design">{item.phase}</h3>
							<p class="mt-2 text-sm leading-relaxed text-slate-400">{item.desc}</p>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- Tools (bg-slate-950) -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="tools-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in">
					<h2 id="tools-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Tools â€” Figma, Maze, Hotjar
					</h2>
					<p class="mt-4 max-w-2xl text-base leading-relaxed text-slate-400">
						Standard UX tools for design, prototyping, and research.
					</p>
				</div>
				<div class="mt-10 grid gap-6 sm:grid-cols-3">
					{tools.map((t) => (
						<div class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
							<h3 class="text-lg font-semibold text-design">{t.name}</h3>
							<p class="mt-2 text-sm leading-relaxed text-slate-400">{t.desc}</p>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- Deliverables (bg-slate-900/40) -->
		<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="deliverables-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in">
					<h2 id="deliverables-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Deliverables
					</h2>
					<p class="mt-4 max-w-2xl text-base leading-relaxed text-slate-400">
						Clear outputs at each phase of the UX process.
					</p>
				</div>
				<ul class="mt-8 grid gap-4 sm:grid-cols-2">
					{deliverables.map((d) => (
						<li class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20 flex items-start gap-3">
							<span class="text-design font-semibold">âœ“</span>
							<span class="text-sm font-medium text-slate-100">{d}</span>
						</li>
					))}
				</ul>
			</div>
		</section>

		<!-- Use cases: SaaS, DTC, Agency (bg-slate-950) -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="usecases-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in">
					<h2 id="usecases-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						SaaS, DTC & Agency Use Cases
					</h2>
					<p class="mt-4 max-w-2xl text-base leading-relaxed text-slate-400">
						Different contexts, same solution: dedicated UX capacity without agency markup.
					</p>
				</div>
				<div class="mt-10 grid gap-6 md:grid-cols-3">
					{useCases.map((uc) => (
						<div class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
							<p class="text-sm font-semibold uppercase tracking-wide text-design">{uc.subtitle}</p>
							<h3 class="mt-2 text-lg font-semibold text-slate-100">{uc.title}</h3>
							<p class="mt-3 text-sm leading-relaxed text-slate-400">{uc.body}</p>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- Pricing (bg-slate-900/40) -->
		<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="pricing-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in">
					<h2 id="pricing-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Pricing
					</h2>
					<p class="mt-4 max-w-2xl text-base leading-relaxed text-slate-400">
						Dedicated UX designers from <strong class="text-slate-100">~$2,800/mo</strong>. Full-time or part-time. Month-to-month, no long-term contracts. Free replacement guarantee.
					</p>
					<a
						href="/how-it-works/"
						class="mt-6 inline-flex items-center text-sm font-semibold text-sky-300 transition hover:text-sky-200/80"
					>
						How it works â†’
					</a>
				</div>
			</div>
		</section>

		<!-- FAQ (bg-slate-900/40) -->
		<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="faq-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in">
					<h2 id="faq-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						FAQ
					</h2>
				</div>
				<div class="mt-10 grid gap-3">
					{faqs.map((item) => (
						<details class="rounded-2xl border border-slate-800 bg-slate-900/40 p-5 shadow-lg shadow-black/20">
							<summary class="cursor-pointer list-none text-sm font-semibold text-slate-100">{item.q}</summary>
							<p class="mt-3 text-sm leading-relaxed text-slate-400">{item.a}</p>
						</details>
					))}
				</div>
			</div>
		</section>

		<!-- CTA (bg-slate-950) -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="cta-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-8 text-center shadow-xl sm:p-12">
					<h2 id="cta-heading" class="text-3xl font-semibold tracking-tight text-white sm:text-4xl">
						Ready to Hire a UX Designer?
					</h2>
					<p class="mx-auto mt-4 max-w-xl text-base leading-relaxed text-slate-300">
						Book a scoping call â€” we'll match you with a pre-vetted UX designer within 48 hours.
					</p>
					<div class="mt-8 flex flex-wrap items-center justify-center gap-4">
						<a
							href={bookingUrl}
							{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
							class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-8 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
							data-book-call
						>
							Book a Design Scoping Call
						</a>
						<a
							href="#contact"
							class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/40 px-8 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
							data-open-tell-us="ux-cta"
						>
							Tell Us What You Need
						</a>
					</div>
					<p class="mt-5 text-xs text-slate-500">Month-to-month Â· Free replacement guarantee Â· Pre-vetted LATAM talent</p>
				</div>
			</div>
		</section>

		<!-- Contact section -->
		<section id="contact" class="bg-slate-950 pb-20 pt-16 sm:pb-24 sm:pt-20" aria-labelledby="contact-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="js-fade-in max-w-2xl">
					<p class="text-sm font-semibold uppercase tracking-widest text-sky-300">Get in touch</p>
					<h2 id="contact-heading" class="mt-3 text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Let's Talk UX
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Tell us your product, tools, and UX needs â€” we'll suggest the right engagement and match you with a vetted UX designer.
					</p>
				</div>
				<div class="mt-10 grid gap-6 lg:grid-cols-2">
					<ContactForm subject={`${brand} â€” new inquiry (hire UX designer)`} defaultInterest="design" />
					<CalendlyInline url={calendlyUrl} title="Book a Design Scoping Call" />
				</div>
			</div>
		</section>
	</main>

	<style>
		.js-fade-in {
			opacity: 0;
			transform: translateY(20px);
			transition: opacity 0.35s ease-out, transform 0.35s ease-out;
		}
		.js-fade-in.is-visible {
			opacity: 1;
			transform: translateY(0);
		}
	</style>

	<script is:inline>
		(function () {
			var els = document.querySelectorAll('.js-fade-in');
			if (!els.length) return;
			var io = new IntersectionObserver(function (entries) {
				entries.forEach(function (e) {
					if (e.isIntersecting) {
						e.target.classList.add('is-visible');
						io.unobserve(e.target);
					}
				});
			}, { threshold: 0.1, rootMargin: '0px 0px -40px 0px' });
			els.forEach(function (el) { io.observe(el); });
		})();
	</script>
</Layout>

