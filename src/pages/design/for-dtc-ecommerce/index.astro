---
import Layout from '../../../layouts/Layout.astro';
import MetaHead from '../../../components/MetaHead.astro';
import ContactHub from '../../../components/ContactHub.astro';
import { BOOKING_URL, isExternalUrl } from '../../../lib/cta';

const brand = 'LatAm Scalers';

const meta = {
	title: 'Design Talent for DTC & E-commerce Brands – Performance Creative | LatAm Scalers',
	description:
		'Dedicated LATAM designers for DTC and e-commerce brands. Performance creative strategists, video/motion specialists, and packaging designers for weekly ad refresh and brand growth. From $2,800/mo.',
};

const baseUrl = Astro.site ?? 'https://latam-scalers-website.vercel.app';
const canonical = new URL('/design/for-dtc-ecommerce/', baseUrl).toString();

const bookingUrl = BOOKING_URL;
const bookingExternal = isExternalUrl(bookingUrl);

const roles = [
	{ title: 'Performance Creative Strategist', desc: 'Weekly ad refresh cycles, hook testing, creative analysis, and Meta/TikTok format optimization.', href: '/roles/performance-creative-strategist/' },
	{ title: 'Motion Graphics / Video Specialist', desc: 'UGC-style video, Reels/TikTok edits, product demos, and lifestyle creative. 60–80% YoY demand.', href: '/roles/motion-graphics-specialist/' },
	{ title: 'Brand/Visual Designer', desc: 'Brand identity, packaging direction, email templates, and visual system consistency across channels.', href: '/roles/brand-visual-designer/' },
	{ title: 'Packaging Designer', desc: 'DTC-specific packaging design — unboxing experience, retail-ready artwork, and brand extension.', href: '/roles/packaging-designer/' },
	{ title: 'Performance Designer', desc: 'Static ad creative, landing page design, and CRO-focused visual execution under creative strategy direction.', href: '/roles/performance-creative-strategist/' },
];

const useCases = [
	{ label: 'Ad creative fatigue', desc: 'Meta and TikTok throttle ads before CTR visibly drops. A dedicated performance creative team ships new concepts weekly — 30–50 variations per month — to stay ahead of the algorithm.' },
	{ label: 'Revenue plateau at $10–50M', desc: 'At this revenue stage, the creative bottleneck is volume and velocity, not quality. Weekly refresh cadences require dedicated designers who understand performance creative frameworks.' },
	{ label: 'Email/lifecycle design', desc: 'Email drives 20–30% of DTC revenue. Lifecycle designers who produce Klaviyo flows, campaign templates, and A/B testing assets tied to retention metrics.' },
	{ label: 'Brand and packaging scale', desc: 'Growing from DTC-first to retail channels? Packaging designers who understand print specs, retail shelf requirements, and brand consistency across SKUs.' },
];

const tools = [
	{ name: 'Adobe Photoshop / Illustrator', desc: 'Static ad creative, packaging artwork, and brand asset production.' },
	{ name: 'Premiere Pro / After Effects', desc: 'Video editing, motion graphics, UGC-style content, and product reels.' },
	{ name: 'Figma', desc: 'Email template design, landing page wireframes, and digital ad formats.' },
	{ name: 'Klaviyo / Email SP', desc: 'Email and SMS template design with lifecycle flow context.' },
	{ name: 'CapCut / DaVinci Resolve', desc: 'Fast-turnaround short-form video for TikTok, Reels, and Stories.' },
	{ name: 'Canva Pro', desc: 'High-velocity asset production for teams running 100+ variations per month.' },
];

const faqs = [
	{
		q: 'What is a performance creative strategist and why does my DTC brand need one?',
		a: 'A performance creative strategist analyzes ad performance data, develops creative hypotheses (angles, hooks, formats), and directs designers to produce winning variations. They bridge creative and media buying — turning ad account data into a systematic creative refresh process. Without this role, creative decisions are guesswork. With it, you run systematic tests that compound over time.',
	},
	{
		q: 'How many ad variations can your team produce per month?',
		a: 'A dedicated performance creative team (1 strategist + 2 designers) typically produces 30–60+ static and video variations per month. Production volume scales with the team configuration.',
	},
	{
		q: 'Can your designers produce video and UGC-style content?',
		a: 'Yes. Our video/motion specialists produce UGC-style video, product reels, and short-form content in TikTok and Reels formats. Video/motion demand has grown 60–80% YoY in DTC, and it\'s a core part of our placement capacity.',
	},
	{
		q: 'How do your designers integrate with our creative and media teams?',
		a: 'They embed directly in your workflow — receiving creative briefs from your strategist or media buyer, delivering assets in your preferred formats, and participating in creative review cycles. Tool stack: your chosen platforms.',
	},
	{
		q: 'What does a performance creative team cost?',
		a: 'Individual performance designers start at $2,800–$4,000/month. A full Performance Creative Pod (strategist + 2 designers) runs $8,000–$12,000/month — vs. a US-based equivalent team at $200,000+/year. All month-to-month.',
	},
];

const serviceJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'Service',
	name: 'Design Talent for DTC & E-commerce Brands',
	description: meta.description,
	provider: { '@type': 'Organization', name: brand, url: baseUrl },
};

const faqJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'FAQPage',
	mainEntity: faqs.map((f) => ({
		'@type': 'Question',
		name: f.q,
		acceptedAnswer: { '@type': 'Answer', text: f.a },
	})),
};
---

<Layout>
	<MetaHead slot="head" title={meta.title} description={meta.description} canonical={canonical} jsonLd={[serviceJsonLd, faqJsonLd]} />

	<main>

	<!-- Hero -->
	<section class="relative overflow-hidden bg-slate-950 py-16 sm:py-24" aria-labelledby="hero-heading">
		<div class="mx-auto max-w-6xl px-6">
		<div class="js-fade-in">
		<p class="text-sm font-semibold uppercase tracking-widest text-design">For DTC &amp; E-commerce</p>
		<h1 id="hero-heading" class="mt-4 text-4xl font-semibold leading-tight tracking-tight text-white sm:text-5xl lg:text-[3.25rem]">
			Performance Creative &amp; Brand Design for DTC Brands
		</h1>
		<p class="mt-5 max-w-xl text-base leading-relaxed text-slate-300 sm:text-lg">
			Creative fatigue is structural. Meta and TikTok throttle ads before CTR visibly drops — weekly refresh is the minimum. Dedicated performance creative strategists and designers who keep your funnel fed, from $2,800/mo.
		</p>
		<div class="mt-8 flex flex-wrap gap-3">
		<a
			href={bookingUrl}
			{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
			class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-6 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
			data-book-call
		>
			Book a DTC Creative Scoping Call
		</a>
		<a
			href="/#contact"
			class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/40 px-6 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
			data-open-tell-us="dtc-design-hero"
		>
			Tell Us What You Need
		</a>
		</div>
		</div>
		</div>
	</section>

	<!-- Problem -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="problem-heading">
		<div class="mx-auto max-w-6xl px-6">
		<div class="js-fade-in max-w-2xl">
		<h2 id="problem-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
			The DTC Creative Bottleneck Is Killing Paid Performance
		</h2>
		<p class="mt-4 text-base leading-relaxed text-slate-400">
			Algorithm-driven platforms penalize ad fatigue before you see it in CTR. The only solution is a systematic creative refresh operation — not a freelancer on demand.
		</p>
		</div>
		<div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
		<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
			<p class="text-3xl font-semibold text-slate-100">Weekly</p>
			<p class="mt-2 text-sm font-semibold text-slate-100">minimum refresh cadence</p>
			<p class="mt-2 text-sm leading-relaxed text-slate-400">Weekly or bi-weekly creative refresh is now the operational minimum for DTC brands.</p>
		</div>
		<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
			<p class="text-3xl font-semibold text-slate-100">60–80%</p>
			<p class="mt-2 text-sm font-semibold text-slate-100">video demand YoY</p>
			<p class="mt-2 text-sm leading-relaxed text-slate-400">Video/motion creative demand growing 60–80% year-over-year across DTC brands.</p>
		</div>
		<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
			<p class="text-3xl font-semibold text-slate-100">20–30%</p>
			<p class="mt-2 text-sm font-semibold text-slate-100">revenue from email</p>
			<p class="mt-2 text-sm leading-relaxed text-slate-400">Well-run DTC brands generate 20–30% of revenue from email and SMS.</p>
		</div>
		<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
			<p class="text-3xl font-semibold text-slate-100">25%</p>
			<p class="mt-2 text-sm font-semibold text-slate-100">of Design targeting</p>
			<p class="mt-2 text-sm leading-relaxed text-slate-400">DTC/e-commerce is tied with SaaS as the largest design outsourcing segment.</p>
		</div>
		</div>
		</div>
	</section>

	<!-- Use Cases -->
	<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="use-cases-heading">
		<div class="mx-auto max-w-6xl px-6">
		<div class="js-fade-in max-w-2xl">
		<h2 id="use-cases-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
			How DTC Brands Use LatAm Scalers
		</h2>
		</div>
		<div class="mt-10 grid gap-5 sm:grid-cols-2">
		{useCases.map((uc) => (
		<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
			<p class="text-xs font-semibold uppercase tracking-wide text-design">{uc.label}</p>
			<p class="mt-3 text-sm leading-relaxed text-slate-400">{uc.desc}</p>
		</div>
		))}
		</div>
		</div>
	</section>

	<!-- Performance Creative Pod -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="pod-heading">
		<div class="mx-auto max-w-6xl px-6">
		<div class="js-fade-in max-w-2xl">
		<h2 id="pod-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
			The Performance Creative Pod
		</h2>
		<p class="mt-4 text-base leading-relaxed text-slate-400">
			Our DTC-specific team configuration — built to run the systematic creative operation that scaling brands need.
		</p>
		</div>
		<div class="mt-10 grid gap-4 sm:grid-cols-3">
		<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
			<p class="text-xs font-semibold uppercase tracking-wide text-design">Seat 1</p>
			<h3 class="mt-3 text-base font-semibold text-slate-100">Performance Creative Strategist</h3>
			<p class="mt-2 text-sm leading-relaxed text-slate-400">Analyzes ad data, develops creative angles, writes briefs, and owns creative testing framework.</p>
		</div>
		<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
			<p class="text-xs font-semibold uppercase tracking-wide text-design">Seats 2–3</p>
			<h3 class="mt-3 text-base font-semibold text-slate-100">Performance Designers</h3>
			<p class="mt-2 text-sm leading-relaxed text-slate-400">Produce static ads, carousel formats, and landing page creative at high volume under strategist direction.</p>
		</div>
		<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
			<p class="text-xs font-semibold uppercase tracking-wide text-design">Optional</p>
			<h3 class="mt-3 text-base font-semibold text-slate-100">Video/Motion Specialist</h3>
			<p class="mt-2 text-sm leading-relaxed text-slate-400">UGC-style video, Reels/TikTok edits, and product content for video-first ad formats.</p>
		</div>
		</div>
		<div class="js-fade-in mt-6 rounded-2xl border border-slate-800 bg-slate-900/20 p-5 text-center">
			<p class="text-sm text-slate-400">Full pod: <strong class="text-slate-100">$8,000–$12,000/month</strong> — vs. equivalent US-based team at $200,000+/year. <a href="/design/performance-creative-pod/" class="text-sky-300 hover:text-sky-200">See full pod details &#8594;</a></p>
		</div>
		</div>
	</section>

	<!-- Roles -->
	<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="roles-heading">
		<div class="mx-auto max-w-6xl px-6">
		<div class="js-fade-in max-w-2xl">
		<h2 id="roles-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
			DTC Design Roles We Place
		</h2>
		</div>
		<div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
		{roles.map((role) => (
		<a
			href={role.href}
			class="js-fade-in group rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20 transition hover:border-design/30 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
		>
			<h3 class="text-sm font-semibold text-slate-100 group-hover:text-design">{role.title}</h3>
			<p class="mt-2 text-sm leading-relaxed text-slate-400">{role.desc}</p>
			<p class="mt-3 text-xs font-semibold text-sky-300 group-hover:text-sky-200">View role &#8594;</p>
		</a>
		))}
		</div>
		</div>
	</section>

	<!-- Tools -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="tools-heading">
		<div class="mx-auto max-w-6xl px-6">
		<div class="js-fade-in max-w-2xl">
		<h2 id="tools-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
			Tools Your DTC Creative Team Will Use
		</h2>
		</div>
		<div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
		{tools.map((tool) => (
		<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
			<p class="text-sm font-semibold text-slate-100">{tool.name}</p>
			<p class="mt-2 text-sm leading-relaxed text-slate-400">{tool.desc}</p>
		</div>
		))}
		</div>
		</div>
	</section>

	<!-- Pricing -->
	<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="pricing-heading">
		<div class="mx-auto max-w-6xl px-6">
		<div class="js-fade-in max-w-2xl">
		<h2 id="pricing-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
			Pricing Guidance
		</h2>
		<p class="mt-4 text-base leading-relaxed text-slate-400">
			Individual DTC designers from <strong class="text-slate-100">$2,800–$4,000/month</strong>. Full Performance Creative Pod at <strong class="text-slate-100">$8,000–$12,000/month</strong>. All month-to-month with free replacement guarantee.
		</p>
		<a
			href="/how-pricing-works/"
			class="mt-4 inline-flex items-center gap-1.5 text-sm font-semibold text-sky-300 transition hover:text-sky-200/80 focus:outline-none focus-visible:underline"
		>
			See how pricing works <span aria-hidden="true">&rarr;</span>
		</a>
		</div>
		</div>
	</section>

	<!-- FAQ -->
	<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="faq-heading">
		<div class="mx-auto max-w-6xl px-6">
		<div class="js-fade-in max-w-2xl">
		<h2 id="faq-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
			Frequently Asked Questions
		</h2>
		</div>
		<div class="mt-10 grid gap-3">
		{faqs.map((item) => (
		<details class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
			<summary class="cursor-pointer list-none text-sm font-semibold text-slate-100 [&::-webkit-details-marker]:hidden">
			{item.q}
			</summary>
			<p class="mt-4 pt-4 text-sm leading-relaxed text-slate-400 border-t border-slate-800">{item.a}</p>
		</details>
		))}
		</div>
		</div>
	</section>

	<!-- CTA -->
	<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="cta-heading">
		<div class="mx-auto max-w-6xl px-6">
		<div class="js-fade-in rounded-2xl border border-slate-800 bg-slate-900/40 p-8 text-center shadow-xl sm:p-12">
		<h2 id="cta-heading" class="text-3xl font-semibold tracking-tight text-white sm:text-4xl">
			Ready to Build Your DTC Creative Engine?
		</h2>
		<p class="mx-auto mt-4 max-w-xl text-base leading-relaxed text-slate-300">
			Book a call to discuss your ad volumes, platforms, and creative refresh needs.
		</p>
		<div class="mt-8 flex flex-wrap items-center justify-center gap-4">
		<a
			href={bookingUrl}
			{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
			class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-8 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
			data-book-call
		>
			Book a DTC Creative Call
		</a>
		<a
			href="/#contact"
			class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/40 px-8 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
			data-open-tell-us="dtc-design-cta"
		>
			Tell Us What You Need
		</a>
		</div>
		<p class="mt-5 text-xs text-slate-400">Month-to-month · Free replacement guarantee · No long-term contracts</p>
		</div>
		</div>
	</section>

	<!-- Contact -->
	<section id="contact" class="bg-slate-950 pb-20 pt-16 sm:pb-24 sm:pt-20" aria-labelledby="contact-heading">
		<div class="mx-auto max-w-6xl px-6">
		<div class="js-fade-in max-w-2xl">
			<p class="text-sm font-semibold uppercase tracking-widest text-sky-300">Get in touch</p>
			<h2 id="contact-heading" class="mt-3 text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
			Let's Talk DTC Creative Talent
			</h2>
			<p class="mt-4 text-base leading-relaxed text-slate-400">
			Tell us your ad platforms, monthly creative volumes, and team structure — we'll match you with the right designers.
			</p>
		</div>
		<ContactHub subject="${brand} – DTC design inquiry" defaultCategory="design" defaultMessage="We're a DTC/e-commerce brand looking for dedicated creative talent." />
		</div>
	</section>

	</main>

	<style>
	.js-fade-in {
		opacity: 0;
		transform: translateY(20px);
		transition: opacity 0.35s ease-out, transform 0.35s ease-out;
	}
	.js-fade-in.is-visible {
		opacity: 1;
		transform: translateY(0);
	}
	</style>

	<script is:inline>
	(function () {
		var els = document.querySelectorAll('.js-fade-in');
		if (!els.length) return;
		var io = new IntersectionObserver(function (entries) {
		entries.forEach(function (e) {
			if (e.isIntersecting) {
			e.target.classList.add('is-visible');
			io.unobserve(e.target);
			}
		});
		}, { threshold: 0.1, rootMargin: '0px 0px -40px 0px' });
		els.forEach(function (el) { io.observe(el); });
	})();
	</script>
</Layout>
