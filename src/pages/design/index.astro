---
import Layout from '../../layouts/Layout.astro';
import MetaHead from '../../components/MetaHead.astro';
import ContactHub from '../../components/ContactHub.astro';
import { BOOKING_URL, isExternalUrl } from '../../lib/cta';

const brand = 'LatAm Scalers';

const meta = {
	title: 'Creative & Design Talent | Managed Creative Teams & Dedicated Designers | LatAm Scalers',
	description:
		'Dedicated designers or Managed Creative Teams from $2,800/mo. Brand-consistent output, same designer (not a queue), month-to-month. 50–70% savings vs. traditional alternatives.',
};

const baseUrl = Astro.site ?? 'https://latamscalers.com';
const canonical = new URL('/design/', baseUrl).toString();

const problemStats = [
	{ value: '45%', label: 'Longer hiring cycles for UX/UI roles vs. other positions' },
	{ value: '80%', label: 'Of quality design listings require senior-level talent' },
	{ value: 'Rotating', label: 'Designers in subscription queues who never learn your brand' },
];

const roles = [
	{ name: 'UI/UX Designer', slug: 'ui-ux-designer' },
	{ name: 'Brand & Visual Designer', slug: 'brand-visual-designer' },
	{ name: 'Motion Graphics Specialist', slug: 'motion-graphics-specialist' },
	{ name: 'Web Designer', slug: 'web-designer' },
	{ name: 'Growth Product Designer', slug: 'growth-product-designer' },
	{ name: 'Presentation Designer', slug: 'presentation-designer' },
];

const tools = [
	{ name: 'Figma', desc: 'UI design, prototyping, and design systems — industry standard for product and web design.' },
	{ name: 'Adobe Creative Cloud', desc: 'Photoshop, Illustrator, InDesign, and XD for marketing creative, brand assets, print, and UI.' },
	{ name: 'After Effects & Lottie', desc: 'Motion graphics, animated content, micro-interactions, and video post-production.' },
	{ name: 'Webflow & Framer', desc: 'No-code web design and development for marketing sites, landing pages, and interactive prototypes.' },
	{ name: 'PowerPoint, Google Slides & Keynote', desc: 'Pitch decks, investor presentations, sales enablement, and client-facing deliverables.' },
	{ name: 'Canva', desc: 'Rapid social media assets, templates, and brand-consistent marketing materials at scale.' },
	{ name: 'Sketch', desc: 'UI and interface design — common in teams with established Sketch-based design systems.' },
	{ name: 'Miro & FigJam', desc: 'Collaborative whiteboarding, workshops, user journey mapping, and design thinking sessions.' },
];

const faqs = [
	{
		q: 'How are your Managed Creative Teams different from other design subscriptions?',
		a: 'Our Managed Creative Teams are a subscription — a simple monthly retainer with no long-term commitment. The difference is what you get: the same dedicated designers assigned exclusively to your brand, complementary multi-skill teams, one PM as your single point of contact, and flexible engagement options you can scale or pause anytime. No rotating queues, no credit packs, no annual lock-ins. And if you\'d rather bring a dedicated designer directly into your team — full-time, part-time, or hourly — without the management layer, we do that too.',
	},
	{
		q: 'Can we start with one designer and scale to a team?',
		a: 'Yes. Many clients start with a single dedicated designer and add capacity as needs grow. We also offer Managed Creative Teams — a dedicated PM handles intake, routing, and delivery so you get structured output without managing designers directly.',
	},
	{
		q: 'What tools do your designers use?',
		a: 'Our designers work in Figma, Adobe CC, After Effects, Webflow, and other standard design tools. We align on your stack during scoping and ensure handoffs fit your workflow.',
	},
	{
		q: 'How fast can we get started?',
		a: 'Once we confirm scope, brand standards, and access, we can typically present vetted designer options within a few days. Onboarding is designed to be fast so you can start shipping quickly.',
	},
	{
		q: 'What if the designer isn\'t the right fit?',
		a: 'Month-to-month engagements let you request a replacement anytime at no extra cost. For direct hires, we include a 90-day replacement guarantee. Our goal is to get the match right from the start.',
	},
];

const serviceJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'Service',
	name: 'Creative & Design Talent Solutions',
	description: meta.description,
	provider: {
		'@type': 'Organization',
		name: brand,
		url: baseUrl,
	},
};

const faqJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'FAQPage',
	mainEntity: faqs.map((f) => ({
		'@type': 'Question',
		name: f.q,
		acceptedAnswer: { '@type': 'Answer', text: f.a },
	})),
};

const bookingUrl = BOOKING_URL;
const bookingExternal = isExternalUrl(bookingUrl);
const calendlyUrl = import.meta.env.PUBLIC_CALENDLY_URL ?? 'https://calendly.com/your-org/15min';
---

<Layout>
	<MetaHead slot="head" title={meta.title} description={meta.description} canonical={canonical} jsonLd={[serviceJsonLd, faqJsonLd]} />

	<main>

		<!-- SECTION 1 – HERO (bg-slate-950) -->
		<section class="bg-slate-950 py-16 sm:py-24" aria-labelledby="hero-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="grid items-center gap-12 lg:grid-cols-2">
					<div>
						<p class="text-sm font-semibold uppercase tracking-widest text-sky-300">Creative & Design Talent</p>
						<h1 id="hero-heading" class="mt-4 text-4xl font-semibold leading-tight tracking-tight text-white sm:text-5xl lg:text-[3.25rem]">
							Predictable Design Output with Dedicated LATAM Talent
						</h1>
						<p class="mt-5 max-w-xl text-base leading-relaxed text-slate-300 sm:text-lg">
							Dedicated designers or Managed Creative Teams — embedded in your tools, brand standards, and cadence. <strong class="text-white">Month-to-month, starting at $2,800/mo</strong>. Matched in under one week.
						</p>
						<div class="mt-8 flex flex-wrap gap-3">
							<a
								href={bookingUrl}
								{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
								class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-6 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
								data-book-call
							>
								Book a Design Team Scoping Call
							</a>
							<a
								href="#contact"
						class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-slate-700 bg-slate-900/60 px-6 py-3 text-sm font-semibold text-white transition hover:bg-slate-800 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
							data-open-tell-us="design-hero"
							>
								Tell Us What You Need
							</a>
						</div>
					</div>
					<div class="hidden lg:block" aria-hidden="true">
						<div class="rounded-2xl border border-slate-800 bg-gradient-to-br from-slate-900/60 to-slate-950 p-6 shadow-xl">
							<p class="text-xs font-semibold uppercase tracking-wide text-slate-400">What you get</p>
							<ul class="mt-4 grid gap-3 sm:grid-cols-2">
								<li class="rounded-xl border border-slate-800 bg-slate-900/40 p-4">
									<p class="text-sm font-semibold text-white">Dedicated talent</p>
									<p class="mt-1 text-xs text-slate-400">Same designers, your brand only</p>
								</li>
								<li class="rounded-xl border border-slate-800 bg-slate-900/40 p-4">
									<p class="text-sm font-semibold text-white">50–70% savings</p>
									<p class="mt-1 text-xs text-slate-400">Transparent pricing, no hidden markups</p>
								</li>
								<li class="rounded-xl border border-slate-800 bg-slate-900/40 p-4">
									<p class="text-sm font-semibold text-white">Month-to-month</p>
									<p class="mt-1 text-xs text-slate-400">Scale up or down as priorities shift</p>
								</li>
								<li class="rounded-xl border border-slate-800 bg-slate-900/40 p-4">
									<p class="text-sm font-semibold text-white">Free replacement</p>
									<p class="mt-1 text-xs text-slate-400">Guarantee if the fit isn't right</p>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- SECTION 3 – PROBLEM (bg-slate-950) -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="problem-heading">
			<div class="mx-auto max-w-6xl px-6">
				<h2 id="problem-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
					The Design Talent Gap Is Costing You Launches
				</h2>
				<p class="mt-4 max-w-2xl text-base leading-relaxed text-slate-400">
					UX/UI hiring takes 45% longer than other roles. Subscription services hand you rotating designers who never learn your brand. You need predictable output from the same people — with portfolio depth, tool proficiency, and a revision process you can trust.
				</p>
				<div class="mt-10 grid gap-6 sm:grid-cols-3">
					{problemStats.map((stat) => (
						<div class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
							<p class="text-2xl font-bold text-design">{stat.value}</p>
							<p class="mt-2 text-sm font-medium text-slate-100">{stat.label}</p>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- ROUTING SECTION B – CHOOSE YOUR MODEL (bg-slate-900/40) -->
		<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="engagement-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="max-w-2xl">
					<p class="text-sm font-semibold uppercase tracking-widest text-design">How to Engage</p>
					<h2 id="engagement-heading" class="mt-3 text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Choose Your Model
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Embedded dedicated designer or PM-led managed team – both with month-to-month flexibility and a free replacement guarantee.
					</p>
				</div>
				<div class="mt-10 grid gap-6 md:grid-cols-2">
					<a
						href="/design/managed-creative-teams/"
						class="group relative rounded-2xl border border-sky-500/30 bg-gradient-to-br from-slate-900/80 to-slate-950 p-6 shadow-lg shadow-sky-900/10 transition hover:border-sky-400/40 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
					>
						<span class="absolute -top-3 left-5 rounded-full bg-sky-600 px-3 py-0.5 text-[0.65rem] font-bold uppercase tracking-wider text-white">Most Popular</span>
						<p class="text-xs font-semibold uppercase tracking-wide text-sky-300">Managed Creative Teams</p>
						<h3 class="mt-3 text-lg font-semibold text-slate-100">Managed Creative Teams</h3>
						<p class="mt-3 text-sm leading-relaxed text-slate-400">
							A dedicated PM manages intake, prioritization, and delivery. Multiple designers, clear workflow, predictable turnaround — less coordination on your side.
						</p>
						<p class="mt-4 text-sm font-semibold text-sky-300">From $2,800/mo</p>
						<p class="mt-3 text-xs font-semibold text-sky-300 group-hover:text-sky-200">Full details &#8594;</p>
					</a>
					<a
						href="/design/dedicated/"
						class="group rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20 transition hover:border-design/30 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
					>
						<p class="text-xs font-semibold uppercase tracking-wide text-design">Dedicated Designer Seat</p>
						<h3 class="mt-3 text-lg font-semibold text-slate-100">Dedicated Individual Designers</h3>
						<p class="mt-3 text-sm leading-relaxed text-slate-400">
							One designer embedded in your team, working exclusively on your brand. Best for ongoing product, marketing, or brand work with tight collaboration.
						</p>
						<p class="mt-4 text-sm font-semibold text-design">From ~$2,800/mo</p>
						<p class="mt-3 text-xs font-semibold text-sky-300 group-hover:text-sky-200">Full details &#8594;</p>
					</a>
				</div>
				<p class="mt-6 text-sm text-slate-500">Also available: pre-paid hourly blocks (40&#8211;160+ hrs) and direct hire. <a href="/get-started/" class="text-sky-400 transition hover:text-sky-300">Get in touch &#8594;</a></p>
			</div>
		</section>

		<!-- ROUTING SECTION A – DESIGN SERVICES BY NEED (bg-slate-950) -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="design-services-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="max-w-2xl">
					<p class="text-sm font-semibold uppercase tracking-widest text-design">Design Services by Need</p>
					<h2 id="design-services-heading" class="mt-3 text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Explore by Service
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Find the right design capability for your use case – or tell us what you're building and we'll suggest the best fit.
					</p>
				</div>
				<div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
					<a
						href="/design/managed-creative-teams/"
						class="group rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20 transition hover:border-design/30 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
					>
						<p class="text-xs font-semibold uppercase tracking-wide text-design">Managed Teams</p>
						<h3 class="mt-3 text-lg font-semibold text-slate-100">Managed Creative Teams</h3>
						<p class="mt-3 text-sm leading-relaxed text-slate-400">PM-led teams that handle intake, prioritization, and delivery end-to-end.</p>
						<p class="mt-4 text-xs font-semibold text-sky-300 group-hover:text-sky-200">Explore &#8594;</p>
					</a>
					<a
						href="/design/hire-ux-designer/"
						class="group rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20 transition hover:border-design/30 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
					>
						<p class="text-xs font-semibold uppercase tracking-wide text-design">UX / Product Design</p>
						<h3 class="mt-3 text-lg font-semibold text-slate-100">Hire a UX Designer</h3>
						<p class="mt-3 text-sm leading-relaxed text-slate-400">Dedicated UI/UX and product designers for features, flows, and design systems.</p>
						<p class="mt-4 text-xs font-semibold text-sky-300 group-hover:text-sky-200">Explore &#8594;</p>
					</a>
				<a
					href="/design/hire-brand-designer/"
					class="group rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20 transition hover:border-design/30 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
				>
					<p class="text-xs font-semibold uppercase tracking-wide text-design">Brand Design</p>
					<h3 class="mt-3 text-lg font-semibold text-slate-100">Hire a Brand Designer</h3>
					<p class="mt-3 text-sm leading-relaxed text-slate-400">Brand identity, visual systems, and guidelines for growing companies.</p>
					<p class="mt-4 text-xs font-semibold text-sky-300 group-hover:text-sky-200">Explore &#8594;</p>
				</a>
				<a
					href="/design/performance-creative-pod/"
					class="group rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20 transition hover:border-design/30 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
				>
					<p class="text-xs font-semibold uppercase tracking-wide text-design">Performance Creative</p>
					<h3 class="mt-3 text-lg font-semibold text-slate-100">Performance Creative Pod</h3>
					<p class="mt-3 text-sm leading-relaxed text-slate-400">DTC-specific creative pods for weekly ad refresh and performance-first design.</p>
					<p class="mt-4 text-xs font-semibold text-sky-300 group-hover:text-sky-200">Explore &#8594;</p>
				</a>
				<a
					href="/design/white-label-production/"
					class="group rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20 transition hover:border-design/30 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
				>
					<p class="text-xs font-semibold uppercase tracking-wide text-design">White-Label</p>
					<h3 class="mt-3 text-lg font-semibold text-slate-100">White-Label Production</h3>
					<p class="mt-3 text-sm leading-relaxed text-slate-400">Agency white-label design production – your standards, your turnaround, your clients.</p>
					<p class="mt-4 text-xs font-semibold text-sky-300 group-hover:text-sky-200">Explore &#8594;</p>
				</a>
				</div>
			</div>
		</section>

		<!-- ROUTING SECTION C - BUILT FOR YOUR BUSINESS (bg-slate-900/40) -->
		<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="design-icp-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="max-w-2xl">
					<p class="text-sm font-semibold uppercase tracking-widest text-design">Built For Your Business</p>
					<h2 id="design-icp-heading" class="mt-3 text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Design Solutions by Business Type
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Industry-specific pages for the business types we serve most &ndash; covering use cases, team structures, and design priorities unique to your context.
					</p>
				</div>
			<div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
				<a
					href="/design/for-saas/"
					class="js-fade-in group rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20 transition hover:border-design/30 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
				>
					<p class="text-xs font-semibold uppercase tracking-wide text-design">SaaS</p>
					<h3 class="mt-3 text-lg font-semibold text-slate-100">SaaS Growth Teams</h3>
					<p class="mt-3 text-sm leading-relaxed text-slate-400">Product and growth designers who own activation and conversion metrics for SaaS companies.</p>
					<p class="mt-4 text-xs font-semibold text-sky-300 group-hover:text-sky-200">Explore &#8594;</p>
				</a>
				<a
					href="/design/for-dtc-ecommerce/"
					class="js-fade-in group rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20 transition hover:border-design/30 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
				>
					<p class="text-xs font-semibold uppercase tracking-wide text-design">DTC / E-commerce</p>
					<h3 class="mt-3 text-lg font-semibold text-slate-100">DTC / E-commerce</h3>
					<p class="mt-3 text-sm leading-relaxed text-slate-400">Performance creative and brand designers for weekly ad refresh and DTC growth.</p>
					<p class="mt-4 text-xs font-semibold text-sky-300 group-hover:text-sky-200">Explore &#8594;</p>
				</a>
				<a
					href="/design/for-agencies/"
					class="js-fade-in group rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20 transition hover:border-design/30 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
				>
					<p class="text-xs font-semibold uppercase tracking-wide text-design">Agencies</p>
					<h3 class="mt-3 text-lg font-semibold text-slate-100">Agencies</h3>
					<p class="mt-3 text-sm leading-relaxed text-slate-400">White-label production and embedded design capacity for agency overflow.</p>
					<p class="mt-4 text-xs font-semibold text-sky-300 group-hover:text-sky-200">Explore &#8594;</p>
				</a>
				<a
					href="/design/for-startups-marketplaces/"
					class="js-fade-in group rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20 transition hover:border-design/30 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
				>
					<p class="text-xs font-semibold uppercase tracking-wide text-design">Startups &amp; Marketplaces</p>
					<h3 class="mt-3 text-lg font-semibold text-slate-100">Product-Led Startups &amp; Marketplaces</h3>
					<p class="mt-3 text-sm leading-relaxed text-slate-400">Autonomous IC designers for product-led startups scaling their first design function.</p>
					<p class="mt-4 text-xs font-semibold text-sky-300 group-hover:text-sky-200">Explore &#8594;</p>
				</a>
				<a
					href="/design/for-consultancies/"
					class="js-fade-in group rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20 transition hover:border-design/30 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
				>
					<p class="text-xs font-semibold uppercase tracking-wide text-design">Consultancies</p>
					<h3 class="mt-3 text-lg font-semibold text-slate-100">Boutique Consultancies</h3>
					<p class="mt-3 text-sm leading-relaxed text-slate-400">Presentation and brand designers for pitch decks, investor materials, and client deliverables.</p>
					<p class="mt-4 text-xs font-semibold text-sky-300 group-hover:text-sky-200">Explore &#8594;</p>
				</a>
				<a
					href="/design/for-franchise-teams/"
					class="js-fade-in group rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20 transition hover:border-design/30 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
				>
					<p class="text-xs font-semibold uppercase tracking-wide text-design">Franchises</p>
					<h3 class="mt-3 text-lg font-semibold text-slate-100">Franchise &amp; Multi-Location Teams</h3>
					<p class="mt-3 text-sm leading-relaxed text-slate-400">Brand-consistent creative across locations — templates, local adaptations, and campaign production at scale.</p>
					<p class="mt-4 text-xs font-semibold text-sky-300 group-hover:text-sky-200">Explore &#8594;</p>
				</a>
				<a
					href="/design/for-retail-chains/"
					class="js-fade-in group rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20 transition hover:border-design/30 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
				>
					<p class="text-xs font-semibold uppercase tracking-wide text-design">Retail</p>
					<h3 class="mt-3 text-lg font-semibold text-slate-100">Retail &amp; Product Brands</h3>
					<p class="mt-3 text-sm leading-relaxed text-slate-400">High-volume campaign production, seasonal creative, and packaging design for retail and product brands.</p>
					<p class="mt-4 text-xs font-semibold text-sky-300 group-hover:text-sky-200">Explore &#8594;</p>
				</a>
			</div>
			</div>
		</section>

		<!-- SECTION 7 – ROLE SHOWCASE (bg-slate-950) -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="roles-heading">
			<div class="mx-auto max-w-6xl px-6">
				<h2 id="roles-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
					Design Roles We Match
				</h2>
				<p class="mt-4 max-w-2xl text-base leading-relaxed text-slate-400">
					UI/UX, brand, motion, product, web, and presentation design – tell us your needs and we'll match accordingly.
				</p>
				<div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
