---
import Layout from '../../layouts/Layout.astro';
import MetaHead from '../../components/MetaHead.astro';
import ContactForm from '../../components/ContactForm.astro';
import CalendlyEmbed from '../../components/CalendlyEmbed.astro';
import { BOOKING_URL, isExternalUrl } from '../../lib/cta';

const brand = 'LatAm Scalers';

const meta = {
	title: 'Creative & Design Solutions | Dedicated Designers & Managed Teams | LatAm Scalers',
	description:
		'Dedicated designers and PM-led creative teams for US companies. Predictable design output without agency markups. SaaS, DTC, and agency-ready. From $2,800/mo.',
};

const baseUrl = Astro.site ?? 'https://latam-scalers-website.vercel.app';
const canonical = new URL('/design/', baseUrl).toString();

const problemStats = [
	{ value: '45%', label: 'Longer hiring cycles for design talent' },
	{ value: '3–5x', label: 'Agency markups over direct dedicated talent' },
	{ value: 'Variable', label: 'Quality inconsistency with subscription boxes' },
];

const comparisonDimensions = [
	{ dim: 'Model', dp: 'Credit subscription', ss: 'Subscription tiers', ls: 'Dedicated designers' },
	{ dim: 'Who works on your brand', dp: 'Rotating pool', ss: 'Assigned team', ls: 'Same people, exclusively' },
	{ dim: 'Flexibility', dp: 'Monthly credits', ss: 'Monthly plans', ls: 'Month-to-month, scale up/down' },
	{ dim: 'Quality consistency', dp: 'Variable', ss: 'Good', ls: 'High — dedicated to your brand' },
	{ dim: 'Best for', dp: 'High-volume, low-touch', ss: 'Mid-volume marketing', ls: 'Ongoing product + brand work' },
	{ dim: 'Pricing style', dp: 'Per credit', ss: 'Tiered plans', ls: 'Transparent monthly seat' },
	{ dim: 'Replacement', dp: 'Request new designer', ss: 'Varies', ls: 'Free replacement guarantee' },
];

const roles = [
	{ name: 'UI/UX Designer', slug: 'ui-ux-designer' },
	{ name: 'Brand/Visual Designer', slug: 'brand-visual-designer' },
	{ name: 'Motion Designer', slug: null },
	{ name: 'Web Designer', slug: null },
	{ name: 'Product Designer', slug: null },
	{ name: 'Presentation Designer', slug: null },
];

const tools = [
	{ name: 'Figma', desc: 'UI design, prototyping, and design systems — industry standard for product and web design.' },
	{ name: 'Adobe CC', desc: 'Photoshop, Illustrator, InDesign for marketing creative, brand assets, and print.' },
	{ name: 'After Effects', desc: 'Motion graphics, video post-production, and animated content for digital and social.' },
	{ name: 'Webflow', desc: 'No-code web design and development for marketing sites and landing pages.' },
];

const icpCards = [
	{
		title: 'SaaS',
		subtitle: 'Product + Marketing Design',
		body: 'Dedicated UI/UX and product designers for features, plus marketing creative for demand gen and lifecycle.',
	},
	{
		title: 'DTC',
		subtitle: 'Performance Creative + Brand',
		body: 'Performance-first designers for ads and landing pages, with brand systems and visual identity support.',
	},
	{
		title: 'Agencies',
		subtitle: 'White-Label Production',
		body: 'Dedicated designers for overflow and white-label execution — predictable turnaround, your standards.',
	},
];

const faqs = [
	{
		q: 'How is this different from Design Pickle or Superside?',
		a: 'We provide dedicated designers who work exclusively on your brand — not a rotating pool or credit-based subscription. You get the same people every week, with month-to-month flexibility and a free replacement guarantee if the fit isn\'t right.',
	},
	{
		q: 'Can we start with one designer and scale to a team?',
		a: 'Yes. Many clients start with a single dedicated designer and add capacity as needs grow. We also offer PM-led managed creative teams for clients who want structured intake and delivery without managing designers directly.',
	},
	{
		q: 'What tools do your designers use?',
		a: 'Our designers work in Figma, Adobe CC, After Effects, Webflow, and other standard design tools. We align on your stack during scoping and ensure handoffs fit your workflow.',
	},
	{
		q: 'How fast can we get started?',
		a: 'Once we confirm scope, brand standards, and access, we can typically present vetted designer options within a few days. Onboarding is designed to be fast so you can start shipping quickly.',
	},
	{
		q: 'What if the designer isn\'t the right fit?',
		a: 'We offer a free replacement guarantee. Engagements are month-to-month, so you\'re never locked in — but our goal is to get the match right from the start.',
	},
];

const serviceJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'Service',
	name: 'Creative & Design Solutions',
	description: meta.description,
	provider: {
		'@type': 'Organization',
		name: brand,
		url: baseUrl,
	},
};

const faqJsonLd = {
	'@context': 'https://schema.org',
	'@type': 'FAQPage',
	mainEntity: faqs.map((f) => ({
		'@type': 'Question',
		name: f.q,
		acceptedAnswer: { '@type': 'Answer', text: f.a },
	})),
};

const bookingUrl = BOOKING_URL;
const bookingExternal = isExternalUrl(bookingUrl);
const calendlyUrl = import.meta.env.PUBLIC_CALENDLY_URL ?? 'https://calendly.com/your-org/15min';
---

<Layout>
	<MetaHead slot="head" title={meta.title} description={meta.description} canonical={canonical} jsonLd={[serviceJsonLd, faqJsonLd]} />

	<main>

		<!-- SECTION 1 — HERO (bg-slate-950) -->
		<section class="bg-slate-950 py-16 sm:py-24" aria-labelledby="hero-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="grid items-center gap-12 lg:grid-cols-2">
					<div>
						<p class="text-sm font-semibold uppercase tracking-widest text-sky-300">Creative & Design Solutions</p>
						<h1 id="hero-heading" class="mt-4 text-4xl font-semibold leading-tight tracking-tight text-white sm:text-5xl lg:text-[3.25rem]">
							Predictable Design Output Without the Agency Markup
						</h1>
						<p class="mt-5 max-w-xl text-base leading-relaxed text-white/70 sm:text-lg">
							Dedicated designers and managed creative teams — no rotating pools, no credit boxes. Same people on your brand, week after week.
						</p>
						<div class="mt-8 flex flex-wrap gap-3">
							<a
								href={bookingUrl}
								{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
								class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-6 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
								data-book-call
							>
								Book a Design Team Scoping Call
							</a>
							<a
								href="#contact"
								class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-white/20 bg-slate-900/40/5 px-6 py-3 text-sm font-semibold text-white transition hover:bg-slate-900/10 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
								data-open-tell-us="design-hero"
							>
								Tell Us What You Need
							</a>
						</div>
					</div>
					<div class="hidden lg:block" aria-hidden="true">
						<div class="rounded-2xl border border-white/10 bg-slate-900/40/5 p-6 shadow-xl backdrop-blur-sm">
							<p class="text-xs font-semibold uppercase tracking-wide text-white/50">What you get</p>
							<ul class="mt-4 grid gap-3 sm:grid-cols-2">
								<li class="rounded-xl border border-white/10 bg-slate-900/40/5 p-4">
									<p class="text-sm font-semibold text-white">Dedicated talent</p>
									<p class="mt-1 text-xs text-white/60">Same designers, your brand only</p>
								</li>
								<li class="rounded-xl border border-white/10 bg-slate-900/40/5 p-4">
									<p class="text-sm font-semibold text-white">No agency markup</p>
									<p class="mt-1 text-xs text-white/60">Transparent pricing, no 3–5x overhead</p>
								</li>
								<li class="rounded-xl border border-white/10 bg-slate-900/40/5 p-4">
									<p class="text-sm font-semibold text-white">Month-to-month</p>
									<p class="mt-1 text-xs text-white/60">Scale up or down as priorities shift</p>
								</li>
								<li class="rounded-xl border border-white/10 bg-slate-900/40/5 p-4">
									<p class="text-sm font-semibold text-white">Free replacement</p>
									<p class="mt-1 text-xs text-white/60">Guarantee if the fit isn't right</p>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- SECTION 2 — DESIGN MICRO-CLARIFIER (bg-slate-950) -->
		<section class="bg-slate-950 py-12 sm:py-16" aria-label="What we offer">
			<div class="mx-auto max-w-6xl px-6">
				<p class="max-w-3xl text-center text-lg leading-relaxed text-slate-400 sm:text-xl">
					Dedicated designers working exclusively on your brand — <span class="text-slate-100 font-medium">not a marketplace</span>, <span class="text-slate-100 font-medium">not a subscription box</span>.
				</p>
			</div>
		</section>

		<!-- SECTION 3 — PROBLEM (bg-slate-950) -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="problem-heading">
			<div class="mx-auto max-w-6xl px-6">
				<h2 id="problem-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
					The Design Talent Gap Is Costing You Launches
				</h2>
				<p class="mt-4 max-w-2xl text-base leading-relaxed text-slate-400">
					Hiring for design takes longer than ever. Agencies add 3–5x markup. Subscription services hand you rotating designers. You need predictable output from people who know your brand.
				</p>
				<div class="mt-10 grid gap-6 sm:grid-cols-3">
					{problemStats.map((stat) => (
						<div class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
							<p class="text-2xl font-bold text-design">{stat.value}</p>
							<p class="mt-2 text-sm font-medium text-slate-100">{stat.label}</p>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- SECTION 4 — SOLUTION OVERVIEW (bg-slate-900/40) -->
		<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="solution-heading">
			<div class="mx-auto max-w-6xl px-6">
				<h2 id="solution-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
					What We Provide
				</h2>
				<p class="mt-4 max-w-2xl text-base leading-relaxed text-slate-400">
					<strong class="text-slate-100">Dedicated designers</strong> — embedded in your team, working exclusively on your brand. <strong class="text-slate-100">PM-led managed creative teams</strong> — intake, delivery, and iteration handled for you. This is <em>not</em> a design subscription with rotating talent or credit packs.
				</p>
			</div>
		</section>

		<!-- SECTION 5 — ENGAGEMENT OPTIONS (bg-slate-950) -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="engagement-heading">
			<div class="mx-auto max-w-6xl px-6">
				<h2 id="engagement-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
					Engagement Options
				</h2>
				<p class="mt-4 max-w-2xl text-base leading-relaxed text-slate-400">
					Choose a dedicated designer or a PM-led creative team — both with month-to-month flexibility.
				</p>
				<div class="mt-10 grid gap-6 md:grid-cols-2">
					<div class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
						<h3 class="text-lg font-semibold text-slate-100">Dedicated Individual Designers</h3>
						<p class="mt-3 text-sm leading-relaxed text-slate-400">
							One designer embedded in your team, working exclusively on your brand. Best for ongoing product, marketing, or brand work with tight collaboration.
						</p>
						<p class="mt-4 text-sm font-semibold text-design">From ~$2,800/mo</p>
						<a
							href="/solutions/creatives-design/dedicated/"
							class="mt-4 inline-flex items-center text-sm font-semibold text-sky-300 transition hover:text-sky-200/80"
						>
							Explore dedicated designers →
						</a>
					</div>
					<div class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
						<h3 class="text-lg font-semibold text-slate-100">PM-Led Managed Creative Teams</h3>
						<p class="mt-3 text-sm leading-relaxed text-slate-400">
							A dedicated PM manages intake, prioritization, and delivery. Multiple designers, clear workflow, predictable turnaround — less coordination on your side.
						</p>
						<p class="mt-4 text-sm font-semibold text-design">Custom pricing</p>
						<a
							href="/design/managed-creative-teams/"
							class="mt-4 inline-flex items-center text-sm font-semibold text-sky-300 transition hover:text-sky-200/80"
						>
							Explore managed teams →
						</a>
					</div>
				</div>
			</div>
		</section>

		<!-- SECTION 6 — COMPARISON TABLE (bg-slate-900/40) -->
		<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="comparison-heading">
			<div class="mx-auto max-w-6xl px-6">
				<h2 id="comparison-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
					How We Compare
				</h2>
				<p class="mt-4 max-w-2xl text-base leading-relaxed text-slate-400">
					Design Pickle, Superside, and LatAm Scalers — a quick comparison across 7 dimensions.
				</p>
				<div class="mt-10 overflow-x-auto">
					<table class="min-w-full rounded-2xl border border-slate-800 bg-slate-900/40 shadow-lg shadow-black/20 overflow-hidden">
						<thead>
							<tr class="border-b border-slate-800 bg-slate-900/40">
								<th class="px-6 py-4 text-left text-sm font-semibold text-slate-100">Dimension</th>
								<th class="px-6 py-4 text-left text-sm font-semibold text-slate-100">Design Pickle</th>
								<th class="px-6 py-4 text-left text-sm font-semibold text-slate-100">Superside</th>
								<th class="px-6 py-4 text-left text-sm font-semibold text-design">LatAm Scalers</th>
							</tr>
						</thead>
						<tbody>
							{comparisonDimensions.map((row, i) => (
								<tr class={i % 2 === 0 ? 'bg-slate-900/40' : 'bg-slate-950/50'}>
									<td class="px-6 py-4 text-sm font-medium text-slate-100">{row.dim}</td>
									<td class="px-6 py-4 text-sm text-slate-400">{row.dp}</td>
									<td class="px-6 py-4 text-sm text-slate-400">{row.ss}</td>
									<td class="px-6 py-4 text-sm font-medium text-slate-100">{row.ls}</td>
								</tr>
							))}
						</tbody>
					</table>
				</div>
			</div>
		</section>

		<!-- SECTION 7 — ROLE SHOWCASE (bg-slate-950) -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="roles-heading">
			<div class="mx-auto max-w-6xl px-6">
				<h2 id="roles-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
					Design Roles We Place
				</h2>
				<p class="mt-4 max-w-2xl text-base leading-relaxed text-slate-400">
					UI/UX, brand, motion, product, web, and presentation design — tell us your needs and we’ll match accordingly.
				</p>
				<div class="mt-10 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
					{roles.map((r) => (
						<a
							href={r.slug ? `/roles/${r.slug}/` : '/roles/'}
							class="rounded-2xl border border-slate-800 bg-slate-900/40 p-5 shadow-lg shadow-black/20 transition hover:bg-slate-900/40 hover:shadow-md"
						>
							<p class="text-base font-semibold text-slate-100">{r.name}</p>
							<p class="mt-1 text-sm font-medium text-design">View role →</p>
						</a>
					))}
				</div>
			</div>
		</section>

		<!-- SECTION 8 — TOOLS & DELIVERABLES (bg-slate-900/40) -->
		<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="tools-heading">
			<div class="mx-auto max-w-6xl px-6">
				<h2 id="tools-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
					Tools & Deliverables
				</h2>
				<p class="mt-4 max-w-2xl text-base leading-relaxed text-slate-400">
					Our designers work in the tools you use — Figma, Adobe CC, After Effects, Webflow, and more.
				</p>
				<div class="mt-10 grid gap-6 sm:grid-cols-2">
					{tools.map((t) => (
						<div class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
							<h3 class="text-lg font-semibold text-design">{t.name}</h3>
							<p class="mt-2 text-sm leading-relaxed text-slate-400">{t.desc}</p>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- SECTION 9 — ICP SECTIONS (bg-slate-950) -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="icp-heading">
			<div class="mx-auto max-w-6xl px-6">
				<h2 id="icp-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
					Who This Is For
				</h2>
				<p class="mt-4 max-w-2xl text-base leading-relaxed text-slate-400">
					SaaS, DTC, and agencies — different needs, same solution: dedicated design capacity without the agency markup.
				</p>
				<div class="mt-10 grid gap-6 md:grid-cols-3">
					{icpCards.map((card) => (
						<div class="rounded-2xl border border-slate-800 bg-slate-900/40 p-6 shadow-lg shadow-black/20">
							<p class="text-sm font-semibold uppercase tracking-wide text-design">{card.subtitle}</p>
							<h3 class="mt-2 text-lg font-semibold text-slate-100">{card.title}</h3>
							<p class="mt-3 text-sm leading-relaxed text-slate-400">{card.body}</p>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- SECTION 10 — PRICING GUIDANCE (bg-slate-900/40) -->
		<section class="bg-slate-900/40 py-16 sm:py-20" aria-labelledby="pricing-heading">
			<div class="mx-auto max-w-6xl px-6">
				<h2 id="pricing-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
					Pricing
				</h2>
				<p class="mt-4 max-w-2xl text-base leading-relaxed text-slate-400">
					Managed teams from <strong class="text-slate-100">$2,800/mo</strong>. Dedicated individual designers in the same range. Transparent monthly seats — no credit packs, no hidden fees.
				</p>
				<a
					href="/how-pricing-works/"
					class="mt-6 inline-flex items-center text-sm font-semibold text-sky-300 transition hover:text-sky-200/80"
				>
					How pricing works →
				</a>
			</div>
		</section>

		<!-- SECTION 11 — FAQ (bg-slate-950) -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="faq-heading">
			<div class="mx-auto max-w-6xl px-6">
				<h2 id="faq-heading" class="text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
					FAQ
				</h2>
				<div class="mt-10 grid gap-3">
					{faqs.map((item) => (
						<details class="rounded-2xl border border-slate-800 bg-slate-900/40 shadow-lg shadow-black/20 p-5">
							<summary class="cursor-pointer list-none text-sm font-semibold text-slate-100">
								{item.q}
							</summary>
							<p class="mt-3 text-sm leading-relaxed text-slate-400">{item.a}</p>
						</details>
					))}
				</div>
			</div>
		</section>

		<!-- SECTION 12 — CTA (bg-slate-950) -->
		<section class="bg-slate-950 py-16 sm:py-20" aria-labelledby="cta-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="rounded-2xl border border-white/10 bg-slate-900/40/5 p-8 text-center shadow-xl backdrop-blur-sm sm:p-12">
					<h2 id="cta-heading" class="text-3xl font-semibold tracking-tight text-white sm:text-4xl">
						Ready for Predictable Design Output?
					</h2>
					<p class="mx-auto mt-4 max-w-xl text-base leading-relaxed text-white/70">
						Book a scoping call to discuss your priorities — we’ll suggest the best engagement and match you with vetted designers.
					</p>
					<div class="mt-8 flex flex-wrap items-center justify-center gap-4">
						<a
							href={bookingUrl}
							{...(bookingExternal ? { target: '_blank', rel: 'noreferrer' } : {})}
							class="inline-flex min-h-[48px] items-center justify-center rounded bg-sky-600 px-8 py-3 text-sm font-semibold text-white transition hover:bg-sky-500 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
							data-book-call
						>
							Book a Design Team Scoping Call
						</a>
						<a
							href="#contact"
							class="inline-flex min-h-[48px] items-center justify-center rounded-xl border border-white/20 bg-slate-900/40/5 px-8 py-3 text-sm font-semibold text-white transition hover:bg-slate-900/10 focus:outline-none focus-visible:ring-2 focus-visible:ring-sky-300"
							data-open-tell-us="design-cta"
						>
							Tell Us What You Need
						</a>
					</div>
					<p class="mt-5 text-xs text-white/40">Month-to-month · Free replacement guarantee · No long-term contracts</p>
				</div>
			</div>
		</section>

		<!-- CONTACT + CALENDLY -->
		<section id="contact" class="bg-slate-950 pb-20 pt-16 sm:pb-24 sm:pt-20" aria-labelledby="contact-heading">
			<div class="mx-auto max-w-6xl px-6">
				<div class="max-w-2xl">
					<p class="text-sm font-semibold uppercase tracking-widest text-sky-300">Get in touch</p>
					<h2 id="contact-heading" class="mt-3 text-3xl font-semibold tracking-tight text-slate-100 sm:text-4xl">
						Let's Talk About Your Design Needs
					</h2>
					<p class="mt-4 text-base leading-relaxed text-slate-400">
						Tell us your design requirements, tools, and timeline — we'll suggest the best engagement model and match you with vetted designers.
					</p>
				</div>
				<div class="mt-10 grid gap-6 lg:grid-cols-2">
					<ContactForm subject={`${brand} — new inquiry (design hub)`} defaultInterest="design" />
					<CalendlyEmbed url={calendlyUrl} title="Book a Design Team Scoping Call" />
				</div>
			</div>
		</section>

	</main>
</Layout>
